        const searchBoxRoot = document.getElementById("searchbox");
        const searchPageUrl = searchBoxRoot.getAttribute('data-search-page-url').toLowerCase();
        var host = location.protocol + '//' + location.host;
        var searchPage = ((searchPageUrl.match('.com/') ? '' : host) + (searchPageUrl[0] === '/' ? '' : '/')) + searchPageUrl;
