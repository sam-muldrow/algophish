    <script>
        jQuery('.plinkItem').click(function ($event) {
            if ($event.target.href) {
                location.href = $event.target.href;
            }
            else {
                if ($event.target.className == '') {
                    location.href = $event.target.children[0].href;
                }
                else {
                    location.href = jQuery(this).children()[0].href;
                }
            }
        });

        jQuery('.hlinkItem').click(function ($event) {
            if ($event.target.href) {
                location.href = $event.target.href;
            }
            else {
                if ($event.target.className == '') {
                    location.href = $event.target.children[0].href;
                }
                else {
                    location.href = jQuery(this).children()[0].href;
                }
            }
        });
    </script>

