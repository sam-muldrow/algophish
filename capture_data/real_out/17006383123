 video_id = 0; 
                                function toggleModal(val, video_id)
                                {
                                    let body = document.querySelector("body");
                                    if( val && !body.className.includes('modal-open')) {
                                        body.classList.add('modal-open');
                                        document.getElementById('slider-modal').style.display = 'block';
                                        
                                        if(video_id)
                                        {        
                                            let element = document.querySelector('#video-' + video_id)

                                            if(element.getAttribute("data-src") && !element.getAttribute("src"))
                                            {
                                                let storeSRC = element.dataset.src;
                                                delete element.dataset.src;
                                                element.src = storeSRC;
                                            }
                                              
                                            playVideo(video_id);
                                        }
                                                
                                    } else {
                                        body.classList.remove('modal-open');
                                        document.getElementById('slider-modal').style.display = 'none';
                                    }
