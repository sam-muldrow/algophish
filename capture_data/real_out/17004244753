<script type="text/javascript">
	$(function () {

		$('.offer-text .count').on('click', function (e) {
			e.preventDefault();

			$("#timer-popup").popup({
				autoopen: true,
				onopen: function () {
					$('body').addClass('overflow-hidden');
				},
				onclose: function () {
					$('body').removeClass('overflow-hidden');
				},
			});
		});
		 if ($(window).width() < 768) {
                //If width is less or equal to 943px dropdowns are displayed on click
                $(".menu-container .manu ul li a").not("ul li ul li a").click(function() {
                    //$(this).removeAttr("href");
                });
                $(".menu-container .manu ul li").click(function() {
                    $(".sub-menu-items").slideUp('1000');
                    $(".menu-container .manu ul li a").removeClass('active');
                    //$(this).children(".have_dropdown").not(".have_dropdown li a").slideToggle(100);
                    //$(this).children(".sub-menu-items").slideUp('1000');
                    if ($(this).children(".sub-menu-items").is(':hidden') == true) {
                        $(this).children("a").addClass('active');
                        $(this).children(".sub-menu-items").slideDown('1000');
                    } else {
                        $(this).children(".sub-menu-items").slideUp('1000');
                        $(this).children("a").removeClass('active');
                    }
                });

                $(".menu-container .manu ul li").click(function() {
                    //$(this).children(".have_dropdown_n_style").not(".have_dropdown_n_style li a").slideToggle(100);
                });

                //================================================================

                $(".nav_menu_toggler_icon").click(function() {
                    $('.nav-overlay').fadeIn();
                    //$(".menu-container .manu").slideToggle();
                    $('.nav_menu_toggler_icon').toggleClass('cross-icons')
                    $('.menu-container .manu').toggleClass('mobile-menu');
                    //$('body').toggleClass('overflow-hidden');
                });
                $('.close-icon, .nav-overlay').click(function(event) {
                    $('.nav-overlay').fadeOut();
                    $('.nav_menu_toggler_icon').removeClass('cross-icons')
                    $('.menu-container .manu').removeClass('mobile-menu');
                });

            } else {
            	if($('#da-thumbs').length > 0 ){
            		$('#da-thumbs > li').hoverdir();
            	}                
            }
	});
