<script>
	$(window).scroll(function () {

		if ($(window).width() >= 767) {

			if ($(this).scrollTop() > 50) {
				//$(".header-panel").animate({ top: -45, opacity: 1 }, 0);
				$(".header-panel").animate({ top: 0, opacity: 1 }, 0);
				$(".submenupanel").animate({ top: 62, opacity: 1 }, 0);
				$(".features-tabs").animate({ top: 62, opacity: 1 }, 0);
			}
			else {
				$(".header-panel").animate({ top: 0, opacity: 1 }, 0);
				$(".submenupanel").animate({ top: 113, opacity: 1 }, 0);
				$(".features-tabs").animate({ top: 113, opacity: 1 }, 0);
			}
		} else {
			if ($(this).scrollTop() > 50) {
				$(".header-panel").animate({ top: -38, opacity: 1 }, 0);
				$(".submenupanel").animate({ top: 46, opacity: 1 }, 0);
				$(".features-tabs").animate({ top: 47, opacity: 1 }, 0);
			}
			else {
				$(".header-panel").animate({ top: 0, opacity: 1 }, 0);
				$(".submenupanel").animate({ top: 84, opacity: 1 }, 0);
				$(".features-tabs").animate({ top: 84, opacity: 1 }, 0);
			}
		}
		
		if ($(window).width() < 768) {
			// if ($(this).scrollTop() > 30) {
			// 	$(".menu-container .manu").animate({ top: 55, opacity: 1 }, 0);
			// }
			if ($(this).scrollTop() > 30) {
				$(".header-panel").animate({ top: 0, opacity: 1 }, 0);
				//$(".header-panel").animate({ top: -40, opacity: 1 }, 0);
