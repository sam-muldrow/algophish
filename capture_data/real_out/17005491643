                /*************************************** */
                
                var vid = document.getElementById("homeVideo");
                
                function toggleVnewClass(ele){
					$(".btn-play-video").toggleClass("pause");
                    $(ele).find("i").toggleClass("fa-play fa-pause");
                }
                
                if(vid){
                    vid.onended = function() {
                        toggleVnewClass("#homeVideo-playBtn");
                        vid.load();
                    };
                }
                
                $("#homeVideo-playBtn").click(function(){
                    if(!$(".btn-play-video").hasClass('pause')){
                        vid.play();
                        } else {
                        vid.pause();
                    }
                    toggleVnewClass("#homeVideo-playBtn");
                });		
				
				/*************************************** */
                
                var vidG = document.getElementById("videoG");
                
                function toggleVClass(ele){
					$(".btn-play-video2").toggleClass("pause");
                    $(ele).find("i").toggleClass("fa-play fa-pause");
                }
                
                if(vidG){
                    vidG.onended = function() {
                        toggleVClass("#videoG-playBtn");
                        vidG.load();
                    };
                }
                
                $("#videoG-playBtn").click(function(){
                    if(!$(".btn-play-video2").hasClass('pause')){
                        vidG.play();
                        } else {
                        vidG.pause();
