                    if($(this).is(':checked')) { 
                        var getVarientType = $(this).attr('id');
                        $('#phone-color-varients .phone-color > div').addClass('d-none');
                        $('#phone-color-varients div[data-phone-varient="'+ getVarientType +'"]').removeClass('d-none');
                    }
                });
                
                if ( $(window).width() < 865 ) {
                    startCarousel();
                    } else {
                    $('#phone-features .owl-carousel').addClass('off');
                }
                $(document).on("click", ".level-top", function () {
                    if($(this).hasClass("on")){
                        $(this).parents("li.level0").find(".subchildmenu").slideUp();
                        $(this).parents("li.level0").removeClass("active");
                        $(this).removeClass("on");
                    }else{
                        $(this).parents("li.level0").find(".subchildmenu").slideDown();
                        $(this).parents("li.level0").addClass("active");
                        $(this).addClass("on");
                    }
                });
                
            });
            
            $(window).resize(function() {
                if ( $(window).width() < 865 ) {
                    startCarousel();
                    } else {
                    stopCarousel();
                }
                
                if($("#single-page-menu").length)
                var headerHeight = $("#header").innerHeight() + $("#single-page-menu").innerHeight();
                else
                var headerHeight = $("#header").innerHeight() 
                
                $("body").css("padding-top", headerHeight);
            });
            
