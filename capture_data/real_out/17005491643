                var lastScrollTop = 0, delta = 5, delay = 100;
                $(window).scroll(function(){
                    var nowScrollTop = $(this).scrollTop();
                    if(Math.abs(lastScrollTop - nowScrollTop) >= delta){
                        if(nowScrollTop > 50) { 
                            if (nowScrollTop > lastScrollTop){
                                
                                setTimeout(function(){ 
                                    $("#header").removeClass("show-header") ;
                                    
                                    if($("#single-page-menu").length) {  
                                        $("#single-page-menu").removeClass("show-subMenu");
                                    }          
                                },delay);
                                
                                //setTimeout(function(){ $("#header").removeClass("show-header")},delay,removeShowSubMenuClass());
                                //if($("#single-page-menu")) $("#single-page-menu").removeClass("show-subMenu")
                                } else {
                                $("#header").addClass("show-header");
                                if($("#single-page-menu").length) setTimeout(function(){$("#single-page-menu").addClass("show-subMenu")},delay);
                            }
                            } else {
                            $("#header").addClass("show-header");
                            if($("#single-page-menu").length) setTimeout(function(){$("#single-page-menu").addClass("show-subMenu")},delay);
                        }
                        lastScrollTop = nowScrollTop;
                    }
                });
                
                function removeShowSubMenuClass(){
                    $("#single-page-menu").removeClass("show-subMenu")
                }
                
                
                
                
                
                $("#seeall").click(function(){
                    $("a[href='#specifications']").trigger('click');
                    $("#header").addClass("show-header");
                    $(window).scrollTop(0);
                });
                
