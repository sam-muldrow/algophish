    // Initialize Firebase
    firebase.initializeApp(firebaseConfig);
    var firebaseMessaging;
    if(firebase.messaging.isSupported()) {
        firebaseMessaging = firebase.messaging();
    }
    
    window.onload = function () {
        var modal = document.getElementById("notificationConfirmation");
        var confirmBtn = document.getElementById("confirmBtn");
        var denyBtn = document.getElementById("denyBtn");

        if (!getLocalStorageWithExpiry("askAgain") && Notification.permission === 'default' && firebase.messaging.isSupported()) {
            setTimeout(() => {
                modal.style.display = 'block';
            }, 500)
        }

        if (Notification.permission === 'granted') {
            getStartToken();
        }

        confirmBtn.onclick = function () {
            modal.style.display = 'none';
            getStartToken();
        }
    
        denyBtn.onclick = function () {
            modal.style.display = 'none';
            setLocalStorageWithExpiry("askAgain", "seen", 7);
        }
    }

    function getStartToken() {
        if(firebase.messaging.isSupported()) {
            firebaseMessaging.getToken({ vapidKey: vapidKey}).then(function (currentToken) {
                if (currentToken && currentToken != localStorage.getItem("deviceToken")) {
                    sendTokenToServer(currentToken);
                }
            }).catch(function (err) {
                console.error("Push Notification Error: " + err);
            });
        }
    }
    
    function sendTokenToServer(token) {
        var data = "deviceToken="+ token + "&customerId=" + (customerId || "") + "&visitorId=" + visitorId + "&client=WEBSITE"; 
        $.ajax({
            url: GLOBAL_CTX + '/push-notification/subscribe',
            type: 'POST',
            data: data,
            success: function (response) {
                if(!response.hasError) {
                    localStorage.setItem("deviceToken", token)
                }
            },
            error: function (err) {
                console.error("Error: " + err);
            },
        });
        
    }



    function showNotification(title, notificationOptions, clickAction) {
        const notification = new Notification(title, notificationOptions);
        setTimeout(() => {
            notification.close();
        }, 10 * 1000);

        notification.addEventListener('click', function(){
            notification.close();
            window.open(clickAction, '_blank');
        });
    }

    if(firebase.messaging.isSupported()) {
        firebaseMessaging.onMessage(function (payload) {
            var notification = payload.data;
            var notificationTitle = notification.title || "";
            var notificationOptions = {
                body: notification.body || "",
                icon: notification.icon,
                image: notification.image,
            };
    
            if(notificationTitle != "" || notificationOptions.body != "") {
                showNotification(notificationTitle, notificationOptions, notification.click_action);
            }
    
        });
    
        firebaseMessaging.onTokenRefresh(function () {
            firebaseMessaging.getToken()
                .then(function (refreshedToken) {
                    sendTokenToServer(refreshedToken);
                }).catch(function (err) {
                    console.log('Unable to retrieve refreshed token ', err);
                });
        });
    }


