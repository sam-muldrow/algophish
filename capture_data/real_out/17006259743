    <script>
      jQuery(document).ready(function () {
        var owl = $('.books-carousel');

        owl.owlCarousel({
          items: 1,
          loop: $(owl).find('.books__slide').length > 1,
          rtl: $('body').hasClass('is-rtl'),
          nav: true,
          smartSpeed: 900,
          // autoHeight: true,
          lazyLoad: true,
          margin: 10,
          navText: [
            '<span class="icon is-large has-text-primary "><i class="icon-previous-arrow fa-2x"></i></span>',
            '<span class="icon is-large has-text-primary "><i class="icon-next-arrow fa-2x"></i></span>',
          ],
        });

        owl.on('initialized.owl.carousel', function (e) {
          var pdf = $(e.target).find('.owl-item.active').find('.books__slide').data('pdf');
          addSliderLinks(pdf)
        });

        owl.on('translated.owl.carousel', function (e) {
          var pdf = $(e.target).find('.owl-item.active').find('.books__slide').data('pdf');
          addSliderLinks(pdf)
        });

        function addSliderLinks(link) {
          var elemnt = $('.books__attachment').find('.button[download]');
          if (link) {
            $(elemnt).attr('disabled', false).attr('href', link);
          } else {
            $(elemnt).attr('disabled', true);
          }
        }
      })
    </script>



<script>
  $(document).ready(function () {
    var feedBackButton = $('.__feedback-button');
    var feedBackHeight = $(feedBackButton).outerHeight();
    var headerHeight = $('.header-section').outerHeight();
    if ($('body').hasClass('is-rtl')) {
      $(feedBackButton).css({ 'left': feedBackHeight });
      $(feedBackButton).css({ 'top': headerHeight + $(feedBackButton).outerWidth() + 100 });
    } else {
      $(feedBackButton).css({ 'right': feedBackHeight });
      $(feedBackButton).css({ 'top': headerHeight + $(feedBackButton).outerWidth() });
    }
    $(feedBackButton).show();
  });
</script>


