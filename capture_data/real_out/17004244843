<script type="text/javascript">
	var onloadCallback = function() {
		if ( $('#captcha').length ) {
			grecaptcha.render('captcha', {
				'sitekey' : '6LffA0IdAAAAAIEpDtG5mlMZMVjfCOohTXE07rls',
			});
		}
	};

	let markAsInvalid = (e) => {
		$(e).css("box-shadow", "0px 0px 4px 2px #e33");
		$(e).on('focus', (event) => {
			$(event.target).css("box-shadow", "unset");
		});
	}

	let recaptchaClearErrorBorder = () => {
		for(let e of $("#captcha").children()){
			$(e).css("box-shadow", "unset");
			$("#captcha_err").remove();
			if($("#error_box").children().length === 0){
				$("#error_box").css('display', 'none');
			}
		}
	}
	window.recaptchaClearErrorBorder = recaptchaClearErrorBorder;
	
	let sendForm = () => {
		try {
			let form = $("#sendForm");
			let formData = $(form).serializeArray();
			let data = [];
			let isInvalid = false;
			let whatIsInvalid = [];
			for(let d of formData){
				if(d.name == 'sendFormMsg'){
					data.push({
						name: d.name,
						value: d.value,
					})		
				}else  if(d.name != "g-recaptcha-response"){
					if(d.value != ''){
						data.push({
							name: d.name,
							value: d.value,
						})
					}else{
						let parts = d.name.split('_');
						for (let index = 0; index < parts.length; index++) {
							parts[index] = parts[index].charAt(0).toUpperCase() + parts[index].slice(1);
						}
						let name = parts.join(' ');
						whatIsInvalid.push(name);
						isInvalid = true;
						if(d.name != 'message'){
							markAsInvalid($('input[name='+d.name+']')[0]);
						}else{
							markAsInvalid($('textarea[name='+d.name+']')[0]);
						}
					}
				}else{
					if (grecaptcha.getResponse() == ""){
						d.name = "recaptcha";
						whatIsInvalid.push(d.name.charAt(0).toUpperCase() + d.name.slice(1));
						for(let e of $("#captcha").children()){
							markAsInvalid(e);
							isInvalid = true;
						}
					}
				}
			}
			if(isInvalid){
				Swal.fire({
					title: 'Error!',
					text: 'Form contains errors in: '+whatIsInvalid.join(', ').replaceAll('_', ' '),
					icon: 'error',
					confirmButtonText: 'Ok'
				})
				return;
			}else{
				$.post("/sendForm.php", data, function(data, status){
					data = JSON.parse(data);
					$('#contactFormModal').modal('hide');
					for(let e of Array.from($('#contactFormModal').find('input'))){
						$(e).val('');
					}
					for(let e of Array.from($('#contactFormModal').find('textarea'))){
						$(e).val('');
					}
					grecaptcha.reset();
					if(data.status == 'success'){
						Swal.fire({
							title: 'Success!',
							text: 'Message sent successfully',
							icon: 'success',
							confirmButtonText: 'Ok'
						})
					}else{
						Swal.fire({
							title: 'Error!',
							text: 'Form contains errors in: '+data.errors.join(', ').replaceAll('_', ' '),
							icon: 'error',
							confirmButtonText: 'Ok'
						})
					}
				});
			}
		} catch (error) {
		}
	}
</script>
