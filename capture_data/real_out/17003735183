<script>
window.jsReady(function()
{
    let weatherSelect = document.getElementById('weather').querySelector('select');
    let weatherChange = function(value)
    {
        Array.from(document.querySelectorAll('.weatherCard')).forEach(function(element)
        {
            if(element.dataset.city == value)
            {
                element.style.display = 'flex';
            }
            else
            {
                element.style.display = 'none';
            }
        });
    };
    weatherSelect.addEventListener('change', function()
    {
        weatherChange(this.value);
    });
    weatherChange(weatherSelect.value);

    //keyword event
    document.querySelectorAll('.trendsKeyword').forEach(function(element)
    {
        element.addEventListener('click', function()
        {
            location.href = '/?app=search&keyword=' + encodeURIComponent(this.dataset.keyword);
        });
    });

    document.querySelectorAll('.main-news-list-detial').forEach(function(element)
    {
        element.addEventListener('click', function()
        {
            location.href = '/?app=view&no=' + this.dataset.id;
        });
    });
});
</script> </div>

