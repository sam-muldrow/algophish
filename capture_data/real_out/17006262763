        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript">
        function validateEmail(email) {
            var re = /^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i;
            return re.test(email);
        }

        $('#frm_contact').on('submit', function (e) {
            e.preventDefault();  //prevent form from submitting
            var data = $("#frm_contact :input").serializeArray();

            var name = $('[name=name]').val();
            var email = $('[name=email]').val();
            var message = $('[name=message]').val();

            if (name.length < 3) {
                alert("Please fill in a valid contact name.");
            } else if (message.length < 3) {
                alert("Please fill in a enquiry message.");
            } else if (validateEmail(email) == false) {
                alert("Please fill in a valid contact email address.");
            } else {
                grecaptcha.ready(function() {
                grecaptcha.execute('6LcSjSEeAAAAABQwHXPwueYYVkDmOgojfYbCmqUn', {action: 'submit'}).then(function(token) {
                    $.ajax({
                            type: "POST",
                            url: "/",
                            data: {"name": name, "email": email, "message": message,"g-recaptcha-response": token},
                            success: function( response ) {
                                var result = JSON.parse(response);
                                Swal.fire({
                                    title: result.title,
                                    text: result.msg,
                                    icon: result.status == true ? 'success' :'error',
                                    confirmButtonText: 'Dismiss',

                                }).then((data) => {
                                  if (data.isConfirmed && result.status == true) {
                                    $('input.name').val('');
                                    $('input.email').val('');
                                    $('textarea.message').val('');
                                  }
                                })
                            }

                        });
                });
                });


            }
        });
    </script>
