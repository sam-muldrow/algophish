<script>
    //Set these three variables

    //The skin links out to this URL:
    var dmskin_linkout = "https://keithrichardsbmg.lnk.to/mo30!dm";
    //widget samle
    //<iframe width="100%" height="1600" frameborder="0" src="https://umusic.digital/dm-blue-note" allowfullscreen></iframe>

    //SKIN START TIME: year, month, day, hour, min, sec, timezone offset
        //For timezone offset: -4 is Eastern Daylight Savings Time (Spring through mid-Fall), -5 is Eastern Standard Time (Mid-fall through winter)
        //Ex: Begins Midnight April 2, 2018 is: 2018, 4, 2, 0, 0, 0, -4
    var dmskin_started_array = [2022, 3, 18, 0, 0, 0, -4];

    //SKIN END TIME: year, month, day, hour, min, sec, timezone offset
        //Ex: Ends Midnight April 3, 2018 is: 2018, 4, 3, 0, 0, 0, -4
    var dmskin_ended_array = [2022, 3, 19, 0, 0, 0, -4];

    //This options lets you show the skin in staging.  It also allows the date codes above to be set in place.
    //This way you can preview in staging in advance, while also allows production to automatically adjust
    var dmskin_show_in_staging = true;

</script>

