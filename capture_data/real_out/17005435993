        function friendlyExpress(x, legend, power) {
            legend = ' kmbtg';
            power |= 1024;
            var powerLimit = legend.length - 1,
                powerIndex = 0;
            while (x > (power - 1) && powerIndex < powerLimit) {
                x /= power;
                powerIndex++;
            }
            return Math.round(x) + legend[powerIndex];
        }
