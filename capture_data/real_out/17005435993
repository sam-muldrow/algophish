<script>
function createSkin(htmlStr) {
    var frag = document.createDocumentFragment(),
        temp = document.createElement('div');
    temp.innerHTML = htmlStr;
    while (temp.firstChild) {frag.appendChild(temp.firstChild);}
    return frag;
}
Date.prototype.addHours = function(h) {
    this.setTime(this.getTime() + (h*60*60*1000));
    return this;
}
var ee_baseurl = "{base_url}";
function scIsDateReached(yy, mm, dd, h, m, s,hours_timezone_adjust) {
    if (yy===null) yy=1970;
    if (mm===null) mm=1;
    if (dd===null) dd=1;
    if (h===null) h=0;
    if (m===null) m=0;
    if (s===null) s=0;
    mm -=1; //month starts at 0

    var od = new Date(yy, mm, dd,h,m,s);
    var cd = new Date();

    if(hours_timezone_adjust==="undefined" || hours_timezone_adjust===undefined) {hours_timezone_adjust="";}

    if (hours_timezone_adjust !== "") {
        var offset = cd.getTimezoneOffset();
        offset = -1 * (offset/60);  //negative is east of GMT, positive is west of GMT
        offset = offset-hours_timezone_adjust; //our adjust uses the regular with negative for west of GMT
        //alert(offset);
        //8 is LA, 7 without daylight savings

        console.log("Timezone Adjust: " + offset);

        od.addHours(offset);
    }

    //alert(od);
    console.log("Current Date: " + cd);
    console.log("Checkign for Date: " + od);
    if (cd >= od) {
        var ret = true;
    } else {
        var ret = false;
    }
    return ret;
}


//CHANGE THESE

///


//httphost
var skin_show_override = false
if (dmskin_show_in_staging) {
    var thehost = window.location.hostname;
    var is_staging = false;
    if (thehost.indexOf('stage.dangerousminds.net')>-1) {is_staging=true;}
    if (is_staging) {
        console.log('====STAGING OVERRIDE ON');
        skin_show_override = true;//set to true to always show skin, useful in staging
    }
}
var skin_show = false;


var dmskin_started = scIsDateReached(
    dmskin_started_array[0],
    dmskin_started_array[1],
    dmskin_started_array[2],
    dmskin_started_array[3],
    dmskin_started_array[4],
    dmskin_started_array[5],
    dmskin_started_array[6]
);
var dmskin_ended = scIsDateReached(
    dmskin_ended_array[0],
    dmskin_ended_array[1],
    dmskin_ended_array[2],
    dmskin_ended_array[3],
    dmskin_ended_array[4],
    dmskin_ended_array[5],
    dmskin_ended_array[6]
);

if (dmskin_ended ) {
    console.log('====SKIN END');
    skin_show = false;
    //set skin_show_override to false, that way staging will automatically shut off after the date too
    skin_show_override=false;
} else if (dmskin_started ) {
    console.log('====SKIN ON');
    skin_show = true;
} else {
    console.log('====SKIN NOT START');
    skin_show = false;
}
if (skin_show_override) {skin_show=true;}
if (skin_show) {
    setTimeout(function () {
        var fragment = createSkin('<a id="ggskin" href="' + dmskin_linkout + '" target="_blank"></a>');
        document.body.insertBefore(fragment, document.body.childNodes[0]);
        $('body').addClass('bannertime');
    }, 100);

    var tag = document.createElement('script');
    tag.src = "https://ad.doubleclick.net/ddm/adj/N3926.678838DANGEROUSMINDS.NET/B20355325.206252477;sz=1x1;ord=[timestamp];dc_lat=;dc_rdid=;tag_for_child_directed_treatment=?";
    var firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
}
</script>
