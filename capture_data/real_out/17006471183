          // Get all elements with the class 'q-focus-helper'
const helpers = document.querySelectorAll('.q-focus-helper');

// Loop through each helper and add a click event listener
helpers.forEach(helper => {
    helper.addEventListener('click', function() {
        // Get the ID of the associated button from the data attribute
        const buttonId = helper.getAttribute('data-target-button');
        const button = document.getElementById(buttonId);

        if (button) {
            button.click();
        }
