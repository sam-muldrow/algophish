        function openLoginModal() {
 

           
           
            loggedMenu.style.display = "none";

               if (loginModal.style.display === "none" || loginModal.style.display === "") {
                    loginModal.style.display = "block";
                } else {
                    loginModal.style.display = "none";
                }

               checkResolution();
        } 
           
           
           

           
           
       $j(window).resize(function() {
        checkResolution();
       });
           
           
           
        function closeLoginModal() {
            loginModal.style.display = "none";
            loggedMenu.style.display = "none";
           
               let iframeElement = document.getElementById('loginWeb');
    let divElement = document.getElementById('loginModal');

    if (getComputedStyle(iframeElement).display === "none") {
        divElement.style.display = "none";
    } 

        }

