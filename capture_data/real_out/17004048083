function gotop(){
var osTop=document.documentElement.scrollTop ||document.body.scrollTop;
document.documentElement.scrollTop = document.body.scrollTop = -200;
}
$(function(){
load_comment(function(items, item){
for(var i=0;i<items.length;i++){
var item = items[i];
var html = '<li class="tipMain"><a href="'+item.link+'" target="_blank">\
<div class="tipImg"><img src="'+item.img+'"> </div>\
<div class="tipTxt">'+item.info+'</div><a/>\
</li>';
$('#ulComments').append(html);
}
});
});
function AutoScroll(obj) {
$(obj).find("ul:first").animate({
marginTop: "-80px"
}, 1500, function() {
$(this).css({
marginTop: "0px"
}).find("li:first").appendTo(this);
});
}
// 对联广告浮动位置控制
function set_right_bar(){
var right = (document.body.clientWidth-1350)/2 - 60 - 15;
if(right<0) right = 0;
document.getElementById('fixBoxR').style.right = right+80+"px";
document.getElementById('couplet_right').style.right = right+"px";
}
function set_left_bar(){
var left = (document.body.clientWidth-1350)/2 - 60 - 15;
if(left<0) left = 0;
document.getElementById('couplet_left').style.left = left+"px";
document.getElementById('couplet_left').style.display = "block" ;
}
window.onload=function(){
if($(".couplet").length!=0){
set_right_bar();
set_left_bar();
}
}
window.onresize=function(){
if($(".couplet").length!=0){
set_right_bar();
set_left_bar();
}
}
