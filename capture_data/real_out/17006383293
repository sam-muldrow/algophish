        }
    });

    var swiper_head = new Swiper('.swiper_head', {
        loop: true,
        autoplay: {
            delay: 3000, //1ç§åæ¢ä¸æ¬¡
            disableOnInteraction: false,
            waitForTransition: false,
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
    });
    $('.hoverNext').on('mouseenter', function () {
        next()
        mySwiperEstimate.autoplay.stop();
    })

    function next() {
        mySwiperEstimate.slideNext()
        tout = setTimeout(next, 1000)
    }
    $('.hoverPrev').on('mouseenter', function () {
        prev()
        mySwiperEstimate.autoplay.stop();
    })

    function prev() {
        mySwiperEstimate.slidePrev()
        tout = setTimeout(prev, 1000)
    }
    $('.hoverNext,.hoverPrev').on('mouseout', function () {
        clearTimeout(tout);
        mySwiperEstimate.autoplay.start();
    })
    $(".swiper2").hover(
        function () {
            mySwiperEstimate.autoplay.stop()

        },
        function () {
            mySwiperEstimate.autoplay.start()
        }
    )
    $(".swiper-slide").hover(
        function () {
            mySwiperEstimate.autoplay.stop()
        },
        function () {
            mySwiperEstimate.autoplay.start()
        }
    )


    function productPrePage() {
        mySwiperEstimate.slidePrev();
    }

    function productNextPage() {
        mySwiperEstimate.slideNext();
    }

    // function tranlate(number) {
    //     $(".page-d .list p").eq(number).addClass("white").siblings().removeClass("white");
    //     mySwiperEstimate.slideTo(number, 1500, false);
    // }
