    var newsVideoDIv = document.getElementsByClassName("news-video")[0]

    function play() {
        newsVideoDIv.style.display = "block"
        newsVideoDIv.children[0].src =
            "https://kzv.kongzhong.com/zhanhuo/jz.mp4?AWSAccessKeyId=kqt57grjf21wb0zmh6ps&Expires=1617777316&Signature=S%2BxdnHroFC9uUlCak7G88McUKYM%3D"
    }

    function closeVideo() {
        newsVideoDIv.style.display = "none"
    }

    function goNewsDetail(number) {
        window.location.href = "./news.html?newsId=" + number
    }

    function chooseZhLanguage() {
        window.location.href = "./home.html"
    }

    function chooseEnLanguage() {
        window.location.href = "./home-en.html"
    }
