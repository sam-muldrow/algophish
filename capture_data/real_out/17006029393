    if (logged_in) {
      document.getElementById("navMyAccountsLink").innerHTML = "My account";
      document.getElementById("topNavMobileMyAccountsLink").innerHTML =
        "My account";
      document
        .getElementById("topNavMobileMyAccountsLink")
        .removeAttribute("href");
      document.getElementById("mobileNavListLinkMyAccount").innerHTML =
        "My account";
      document
        .getElementById("mobileNavListLinkMyAccount")
        .setAttribute("data-navSub", "16535");
      document.getElementById("watchlistWidget__linkCopy").className +=
        " -is-loggedin";
      document.getElementById("headerTopList__logout").className +=
        " -is-loggedin";
      document.getElementById("headerTopList_register").style.display = "none";
    }
  
