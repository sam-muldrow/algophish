        ? document.location.search
            .split("vt=")[1]
            .split("&")[0]
            .toUpperCase()
        : cTCookie != null
        ? String(unescape(cTCookie[1]))
            .toUpperCase()
            .charAt(0)
        : "P";
    document.body.className += " vt" + cT;
  
    if (window.atob) {
      var vTre = new RegExp("hlVT=([^;]+)");
      var vtCookie = vTre.exec(document.cookie);
      if (vtCookie) {
