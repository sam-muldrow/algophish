  /** markets tabs **/
  whenAvailable("TabComponent", function() {
    var mh = new MarketsHome();
    var marketTabInit = new TabComponent({
      container: document.querySelector(".marketTabs"),
      tabName: document.querySelector(".marketTabs").getAttribute("id"),
      type: "secondary",
      isDynamic: true,
      primaryNoScroll: false,
      onClick: function markLoad(e) {
        var marketType = e.target.getAttribute("data-market");

        if (
          document.getElementById("markets-" + marketType) !== null &&
          !mh.marketTypeInit[marketType]
        ) {
          if (document.getElementById("markets-" + marketType) !== null) {
            document.getElementById("markets-" + marketType).innerHTML +=
              '<div class="contentAreaLoad -greyBorder"></div>';
          }
          mh.dataFetch(marketType)
            .then(function(data) {
              for (var c = 0; c < data.length; c++) {
                mh.buildCard(data[c], marketType);
              }
              if (marketType === "currency") {
                document.getElementById("markets-currency").innerHTML +=
                  '<div class="columns large-10 end"><p class="fontBody2">Sending currency abroad? Transfer 40+ currencies to more than 120 countries with the HL Currency Service. The rates we offer will be different to those shown above.</p><p style="clear:both;"><a class="buttonSecondaryCta" href="https://www.hl.co.uk/investment-services/currency-service">Find out more about the HL Currency Service</a></p></div>';
              }
            })
            .catch(function(error) {
              document
                .getElementById("markets-".concat(marketType))
                .getElementsByClassName("contentAreaLoad")[0].style.display =
                "none";
              document.getElementById("markets-".concat(marketType)).innerHTML =
                '<div class="columns"><p>Sorry, this market information is currently unavailable.</p></div>';
            });
          mh.marketTypeInit[marketType] = true;
        }
      }
    });
  });
