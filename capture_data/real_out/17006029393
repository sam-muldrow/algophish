  <script>
    (function () {
      if (window.atob) {
        var vTre = new RegExp("hlVT=([^;]+)");
        var vtCookie = vTre.exec(document.cookie);
        if (vtCookie) {
          var acStyle = document.createElement('style');
          var acToHide = false;
          var vt = window.atob(String(unescape(vtCookie[1]))).split(/[A-Z]/ig);
          if (vt.indexOf('22') != -1) acToHide = 'isa';
          if (vt.indexOf('98') != -1) acToHide = 'fsa';
          if (vt.indexOf('70') != -1) acToHide = 'sipp';
          if (acToHide && (acToHide == 'isa' || acToHide == 'fsa')) {
            document.getElementById('client-sipp-account').className = "columns medium-4 spacerMedium mediumSpacerBottomNone accountTypeBox";
          }
          if (acToHide) acStyle.innerHTML = '#client-' + acToHide + '-account{display: none !important;} #client-as-account{display:block !important;}';
          document.head.appendChild(acStyle);
        }
      }
    })();
  </script>



