<script>
/** markets **/
var _createClass = function () { function defineProperties(target, props) { for (var i = 0; i < props.length; i++) { var descriptor = props[i]; descriptor.enumerable = descriptor.enumerable || false; descriptor.configurable = true; if ("value" in descriptor) descriptor.writable = true; Object.defineProperty(target, descriptor.key, descriptor); } } return function (Constructor, protoProps, staticProps) { if (protoProps) defineProperties(Constructor.prototype, protoProps); if (staticProps) defineProperties(Constructor, staticProps); return Constructor; }; }();

function _classCallCheck(instance, Constructor) { if (!(instance instanceof Constructor)) { throw new TypeError("Cannot call a class as a function"); } }

var MarketsHome = function () {
  function MarketsHome() {
    _classCallCheck(this, MarketsHome);

    this.baseURL = 'https://' + url_marketing + '/ajax/home';
    this.dataMarket = document.getElementsByClassName('marketType');
    this.marketTypeInit = {
      commodities: false,
      currency: false
    };
    this.init();
  }

  _createClass(MarketsHome, [{
    key: 'init',
    value: function init() {
      var _this = this;

      for (var i = 0; i < this.dataMarket.length; i++) {
        this.dataMarket[i].addEventListener('click', function (e) {
          _this.marketType = e.target.getAttribute('data-market');
          if (!_this.marketTypeInit[_this.marketType]) {
            document.getElementById('markets-' + _this.marketType).innerHTML += '<div class="contentAreaLoad"></div>';
            _this.dataFetch(_this.marketType).then(function (data) {
              for (var c = 0; c < data.length; c++) {
                _this.buildCard(data[c], _this.marketType);
              }
            });
            _this.marketTypeInit[_this.marketType] = true;
          }
          e.preventDefault();
        });
      }
    }
  }, {
    key: 'dataFetch',
    value: function dataFetch(marketTypeIn) {
      var _this2 = this;

      var dataPromise = new Promise(function (resolve, reject) {
        _this2.request = new XMLHttpRequest();
        _this2.request.open('GET', _this2.baseURL + '/' + marketTypeIn + '-json', true);
        _this2.request.onload = function () {
          if (_this2.request.status >= 200 && _this2.request.status < 400) {
            var data = JSON.parse(_this2.request.responseText);
            data = data.list;

            document.getElementById('markets-' + marketTypeIn).getElementsByClassName('contentAreaLoad')[0].style.display = 'none';
            resolve(data);
          } else {
            reject();
          }
        };
        _this2.request.onerror = function () {
          reject();
        };
        _this2.request.send();
      });
      return dataPromise;
    }
  }, {
    key: 'buildCard',
    value: function buildCard(_ref, marketTypeIn) {
      var Name = _ref.Name,
          RateCurrent = _ref.RateCurrent,
          FromISO = _ref.FromISO,
          ToISO = _ref.ToISO,
          RateDayChangeValue = _ref.RateDayChangeValue,
          RateDayChangePercent = _ref.RateDayChangePercent;

      var link = void 0;
      if (marketTypeIn === 'commodities') {
        link = 'https://' + url_marketing + '/shares/trading-commodities/' + Name.toLowerCase().replace(/[\s]+/g,'-');
      }
      var name = marketTypeIn === 'commodities' ? Name : FromISO + '/' + ToISO;
      var current = parseFloat(RateCurrent).toFixed(marketTypeIn === 'commodities' ? 2 : 4);
      var netChg = parseFloat(RateDayChangeValue).toFixed(marketTypeIn === 'currency' ? 4 : 2);
      var pctChg = parseFloat(RateDayChangePercent).toFixed(2);
      var change = netChg > 0 ? 'positive' : netChg < 0 ? 'negative' : 'nochange';
      var changeSymbol = change === 'positive' ? '+' : '';
      var arrow = function arrow(val) {
        return val === 'positive' ? 'https://' + url_marketing + '/__data/assets/image/0011/10088975/positive-arrow.png' : val === 'negative' ? 'https://' +url_marketing + '/__data/assets/image/0004/10088977/negative-arrow.png' : 'https://' + url_marketing + '/__data/assets/image/0005/10088978/nochange-arrow.png';
      };

      var marketItem_col = '<div class="columns small-6 ' + 'medium-4 large-2' + ' spacerSmall">\n      <div class="articleCard ' + (marketTypeIn === 'currency' ? '-noHoverEffect' : '') + '">\n        ' + (marketTypeIn === 'commodities' ? '<a class="articleCard__anchor" href="' + link + '"><h3 class="articleCard__title">' + name + '</h3></a>' : '<h3 class="articleCard__title">' + name + '</h3>') + '\n        <p class="articleCard__marketPrice">' + current + '</p>\n        <div class="articleCard__priceChangeBox">\n          <img src="' + arrow(change) + '" alt="Change" id="img-indices-dir-NMX"/>\n          <span class="articleCard__change ' + change + '">' + changeSymbol + '' + netChg + '</span>\n          <span class="articleCard__change ' + change + '">' + changeSymbol + '' + pctChg + '%</span>\n        </div>\n      </div>\n    </div>';
      document.getElementById('markets-' + marketTypeIn).innerHTML += marketItem_col;
    }
  }]);

  return MarketsHome;
}();
/** end markets **/
</script>








