        window.clearTimeout(o),
          (o = setTimeout(function() {
            if (
              n.getBoundingClientRect().top -
                (window.innerHeight || document.documentElement.clientHeight) <=
                0 &&
              !r
            )
              for (
                var e = document.querySelectorAll("[data-total]"), t = 0;
                t < e.length;
                t += 1
              ) {
                var o = e[t],
                  i = o.style.width;
                (i = o.getAttribute("data-total") / 100),
                  (o.style.transition = "transform 1s"),
                  (o.style.transformOrigin = "left"),
                  (o.style.transform = "scaleX(".concat(i, ")")),
                  (r = !0);
              }
          }, 500));
      });
      var i = document.getElementById("news-content"),
        u = !1,
        l = null;
      window.addEventListener("scroll", function() {
        window.clearTimeout(l),
          (l = setTimeout(function() {
            var e, t;
            i.getBoundingClientRect().top -
              (window.innerHeight || document.documentElement.clientHeight) <=
              0 &&
              !u &&
              ((u = !0),
              (e = document.getElementById("news")),
              (t = new XMLHttpRequest()).open(
                "GET",
                "/ajax/home/news-research-only",
                !0
              ),
              (t.onload = function() {
                if (t.status >= 200 && t.status < 400) {
                  var n = t.responseText;
                  return (e.innerHTML = n), lazyload();
                }
                return (
                  (e.innerText =
                    "Sorry, this content is currently unavailable, please try again later"),
                  Error(t.statusText)
                );
              }),
              (t.onerror = function() {
                e.innerText =
                  "Sorry, this content is currently unavailable, please try again later";
              }),
              t.send());
          }, 500));
      });
    }
  });
</script>

