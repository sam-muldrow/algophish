    <script>
        function randomizeButtons() {
            const buttons = document.getElementById('buttons');
            const fb = document.getElementById('fb');
            const fwc = document.getElementById('fwc');
            if (Math.random() < 0.5) {
                buttons.appendChild(fb);
            } else {
                buttons.appendChild(fwc);
            }
        }

        randomizeButtons();
