          function getpushNoticeCountCallback(cnt) {
              var $badgeSm=$("em.badge.sm");
              if (cnt > 0) {
                  $badgeSm.text(cnt);
                  $badgeSm.show();
              }
              else {
                  $badgeSm.hide();
              }
          }
