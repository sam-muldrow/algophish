                    return '<div data-slider-index="' + currentIndex + '" data-slider-name="slider_810288C1" class="' + className + ' swiper-pagination-bullet--auto"><a class="go-to-link fixed-ratio fixed-ratio__4x3" href="' + links[currentIndex].href + '" target="_blank"   onmouseover="slObj_810288C1.slideTo(' + currentIndex + ')"><img src="' + links[currentIndex].getAttribute('data-thumb-url') + '" class="slider-thumbnail__img" alt="posta"></a></div>';
                },
            },
            
            autoplay: 5000
            
        };

        var slObj_810288C1 = {};



        window.addEventListener('DOMContentLoaded', function(event){

            var slider_810288C1 = new Swiper(container_810288C1, parameters_810288C1);
            slObj_810288C1 = slider_810288C1;

        });

    </script>
</div>


