   <script>

        var container_56356934 = '#slider_56356934 .swiper-container';
    var parameters_56356934 = {
    preloadImages: false,
            lazy: {
        loadPrevNext: true,
            },
            loop: true,
            pagination: {
        el: '#slider_56356934 .swiper-pagination',
                renderBullet: function (index, className) {
                var links = document.querySelectorAll("#slider_56356934  .swiper-slide__link"),
                    currentIndex = index + 1;
                return '<a data-slider-index="' + currentIndex + '" data-slider-name="slider_56356934" class="swiper-pagination-link go-to-link ' + className + '" href="' + links[currentIndex].href + '" target="_blank" onmouseover="slObj_56356934.slideTo(' + currentIndex + ')"  >' + currentIndex + '</a>';
            },
            },
            navigation: {
                nextEl: '#slider_56356934 .swiper-slide__arrow--next',
                prevEl: '#slider_56356934 .swiper-slide__arrow--prev',
            },
            
            autoplay: {
                delay: 10000,
                disableOnInteraction: false
            },
            
        };

        var slObj_56356934 = {};

        function addHomeCarouselItem(item) {
            var swiper = document.querySelector('#slider_56356934 .swiper-container').swiper, isCarouselAd = document.querySelector('#slider_56356934 .swiper-container .carouselAd');
            if (!isCarouselAd && item.url !== "") {

                var newItem = `<div class="swiper-slide carouselAd"><a href="${item.url}" title="${item.title}" class="swiper-slide__link" target="_blank"><img src="${item.image}" title="${item.title}" alt="${item.title}" width="100%" height="100%" class="swiper-slide__image lazyload"></a></div>`;
                swiper.removeSlide(item.index);
                swiper.addSlide(item.index, newItem);

                const slideDot = document.querySelector(`#slider_56356934 .swiper-pagination-bullets a[data-slider-index="${(item.index + 1)}"]`);
                slideDot ? slideDot.href = item.url : null
            }
        }

        window.addEventListener('DOMContentLoaded', function(event) {

            var slider_56356934 = new Swiper(container_56356934, parameters_56356934);
            slObj_56356934 = slider_56356934;


        });


    </script>
