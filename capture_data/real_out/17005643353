                photo: 'http://static4.ithome.com.tw/sites/default/files/bigdata_930_1110_e.gif',
                url: 'bigdataconf.ithome.com.tw',
                title: 'Big Data Innovation Summit 2016'
            }]




             renderAd('hpad930', duration, ads);


            function durationCheck(duration) {
                var today = new Date();
                return today > (new Date(duration.start)) && today <= (new Date(duration.end));
            }

            function renderAd(target, duration, adList) {
                var currentAd = adList[Math.floor(Math.random() * adList.length)];
                var template = '<div width="930" align="center" style="margin: 0 auto 15px"> <a href=http://www.ithome.com.tw/adredirect.php?t=' + currentAd.url + '><img src="' + currentAd.photo + '" target="_blank" alt="' + currentAd.title + '" title="' + currentAd.title + '" /></a> </div>';

                if (durationCheck(duration)) {
                    document.getElementById(target).innerHTML = template;
                }
            }
        </script>
