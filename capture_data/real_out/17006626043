<script src="https://www.youtube.com/iframe_api"></script>
<script>
  var player;
  var playerSp;
  var id = 'R9jnCQRvFC4';
  function onYouTubeIframeAPIReady() {
    player = new YT.Player('movie-gallery-video_player', {
      height: 315,
      videoId: id,
      playerVars: {
        rel: 0,
        playlist: id
      },
    });
    playerSp = new YT.Player('movie-gallery-video_player-sp', {
      height: 315,
      videoId: id,
      playerVars: {
        rel: 0,
        playlist: id
      },
    });
  }
  var playBtn = document.getElementById('movie-gallery-video');
  playBtn.addEventListener('click', function() {
    playBtn.classList.add('is-play');
    player.playVideo();
  });
  var playBtnSp = document.getElementById('movie-gallery-video-sp');
  playBtnSp.addEventListener('click', function() {
    playBtnSp.classList.add('is-play');
    playerSp.playVideo();
  });
</script>
<script>
  (function ($, _) {
    var ytPlayer;
    $('.js-open-modal').on('click', function(){
      var ytId = $(this).data('ytid');
      $('.m-modal').append('<iframe width="840" height="472" src="https://www.youtube.com/embed/' + ytId + '?rel=0&autoplay=1&playsinline=0&playlist=' + ytId + '" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>');
      $('.m-modal-bg').fadeIn();
      $('.m-modal').fadeIn();
    });
    $('.m-modal-bg, .m-close-modal').on('click', function(){
      $('.m-modal iframe').remove();
      $('.m-modal-bg').fadeOut();
      $('.m-modal').fadeOut();
    });
  }(
    window.jQ331,
    window._
  ));
</script>
<script>
  (function ($, _) {
    var announceCount = $('.announce_box_list li').length;
    if (announceCount == 1) {
      $('.announce').addClass('no-icon');
    }
  }(
    window.jQ331,
    window._
  ));
</script>
