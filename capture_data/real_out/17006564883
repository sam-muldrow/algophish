function getURLParameter(name) {
    return decodeURIComponent((new RegExp('[?|&]' + name + '=' + '([^&;]+?)(&|#|;|$)').exec(location.search) || [null, ''])[1].replace(/\+/g, '%20')) || "none";
  }

  function isPaidSearch() {
      if (getURLParameter("gclid") !== "none") {
          return "true"
      }
      else {
          return "false"
      }
  }

