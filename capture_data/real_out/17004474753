    var hostname = window.location.hostname;
    if(hostname.indexOf("netease-inc.com") > -1 || hostname.indexOf("netease.com") > -1){
        document.getElementById("js_yue2").style.display = "block";
        document.getElementById("js_yue18").style.display = "none";
    }else{
        document.getElementById("js_yue2").style.display = "none";
        document.getElementById("js_yue18").style.display = "block";
    }
</script>
</body>
</html>