        (function () {
            refelement = document.querySelector('#refid')
            refid = refelement.innerText.split(': ')[1]
            refemail = 'customercare@mytheresa.com'
            reportbtn = document.querySelector("#repbtn")
            mailSubject = `Access denied: ref ${refid}`
            mailBody = `Unfortunately I am unable to access www.mytheresa.com. Could you kindly provide support?  %0D%0A %0D%0A reference: ${refid}`
            reportbtn.setAttribute('href', `mailto:${refemail}?subject=${mailSubject}&body=${mailBody}`)
