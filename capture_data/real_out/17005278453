		<div x-data="olineVotingController()" class="mb-3">
			<template x-for="(vote,index) in voting" :key="index">
				<div class="onlineVotingBox">
					<img :src="vote.photo">
					<div class="d-flex flex-column align-items-left p-3">
						<p class="voting-text card-text" x-text="vote.name"></p>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" value="yes" :name="'voting_'+index">
							<label class="form-check-label">হ্যাঁ</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" value="no" :name="'voting_'+index">
							<label class="form-check-label">না</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" value="defult"  :name="'voting_'+index">
							<label class="form-check-label">মন্তব্য নেই</label>
						</div>
						<button class="btn btn-primary mt-3" x-on:click="submitVoting(vote.id,'voting_'+index)">ভোট দিন</button>
					</div>
				</div>
			</template>
		</div>
