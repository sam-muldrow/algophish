<script type="text/javascript">
	olineVotingController = () => {
		return {
			baseURL: window.baseURL,
			voting: [{"id":9,"name":"\u09ac\u09bf\u098f\u09a8\u09aa\u09bf\u09b0 \u09b8\u09bf\u09a8\u09bf\u09df\u09b0 \u09af\u09c1\u0997\u09cd\u09ae \u09ae\u09b9\u09be\u09b8\u099a\u09bf\u09ac \u09b0\u09c1\u09b9\u09c1\u09b2 \u0995\u09ac\u09bf\u09b0 \u09b0\u09bf\u099c\u09ad\u09c0 \u09ac\u09b2\u09c7\u099b\u09c7\u09a8, ' \u0986\u0993\u09df\u09be\u09ae\u09c0 \u09b2\u09c0\u0997 \u098f\u0995\u09a4\u09b0\u09ab\u09be \u09a8\u09bf\u09b0\u09cd\u09ac\u09be\u099a\u09a8 \u0986\u09df\u09cb\u099c\u09a8\u09c7 \u0989\u09a8\u09cd\u09ae\u09a4\u09cd\u09a4 \u098f\u0996\u09a8\u0964 \u09a4\u09be\u09b0\u09be \u09b6\u09be\u09a8\u09cd\u09a4\u09bf\u09aa\u09c2\u09b0\u09cd\u09a3 \u0986\u09a8\u09cd\u09a6\u09cb\u09b2\u09a8 \u0993 \u0986\u09a8\u09cd\u09a4\u09b0\u09cd\u099c\u09be\u09a4\u09bf\u0995 \u09ae\u09b9\u09b2\u09c7\u09b0 \u099a\u09be\u09aa\u09c7 \u09a6\u09bf\u09b6\u09c7\u09b9\u09be\u09b0\u09be \u09b9\u09df\u09c7 \u0997\u09c7\u099b\u09c7\u0964' \u0986\u09aa\u09a8\u09bf \u0995\u09bf \u098f\u0987 \u09ae\u09a8\u09cd\u09a4\u09ac\u09cd\u09af \u09b8\u09ae\u09b0\u09cd\u09a5\u09a8 \u0995\u09b0\u09c7\u09a8?","photo":"https:\/\/www.somoyerkonthosor.com\/admin\/post_image\/rijvi n234m265390e25bb86c.webp","status":1,"yes":8,"no":4,"defult":0}],
			init(){
			},
			submitVoting(id,index){
				var value = $('input[name='+index+']:checked').val();
				axios.post(window.baseURL+"/voting/submit", {
					id: id,
					value: value,
				})
                .then((res) => {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'Thanks ! for you voting now counting',
                        showConfirmButton: false,
                        timer: 750
                    });  
                })
                .catch((err) => {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'warning',
                        title: 'Opps ! Some technical issue occured',
                        showConfirmButton: false,
                        timer: 750
                    });
                });

			}
		}
	}
</script>

