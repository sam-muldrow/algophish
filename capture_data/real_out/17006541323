    //节日主题 -- start
    $(function(){
        if(document.cookie.indexOf("themeFlag") == -1) {
            if($(".jr-img").width() < 1000){
                if ($("#bannerAD").length > 0 && document.cookie.indexOf("bannerADFlag") == -1) {
                    $("#bannerAD").show();
                    showAD();
                } else {
                    $("#bannerAD").hide();
                    return;
                }
            }
            showJR();
        }else{
            $("#activity-theme").remove();
            if ($("#bannerAD").length > 0 && document.cookie.indexOf("bannerADFlag") == -1) {
                $("#bannerAD").show();
                showAD();
            } else {
                $("#bannerAD").hide();
            }
        }
    });

    function showJR(){
        $("#activity-theme").fadeIn(1000);
        var imgH = $("#activity-theme").height();
        var p = $(".head-site");
        var paddingTop = p.css("padding-top");
        $(".head-site").css("padding-top", paddingTop + imgH + "px");
        //看帖页浮动 -- start
        var rightData = $(".right-data1").css("top");
        if (rightData) {
            var top = parseInt(rightData.replace("px", ""));
            var top1 = parseInt($(".right-data2").css("top").replace("px", ""));
            $(".right-data1").css("top", top + imgH + "px");
            $(".right-data2").css("top", top1 + imgH + "px");
        }
        //看帖页浮动 -- end
        if(paddingTop){
            var heightP = parseInt(paddingTop.replace("px", ""));
            p.css("padding-top", heightP + imgH + "px");
        }
    }

    function showAD(){
        $("#bannerAD").fadeIn(1000);
        var imgH = $("#bannerAD").height();
        var p = $(".head-site");
        var paddingTop = p.css("padding-top");

        $(".head-site").css("padding-top", paddingTop + imgH + "px");
        //看帖页浮动 -- start
        var rightData = $(".right-data1").css("top");
        if (rightData) {
            var top = parseInt(rightData.replace("px", ""));
            var top1 = parseInt($(".right-data2").css("top").replace("px", ""));
            $(".right-data1").css("top", top + imgH + "px");
            $(".right-data2").css("top", top1 + imgH + "px");
        }
        //看帖页浮动 -- end
        if(paddingTop){
            var heightP = parseInt(paddingTop.replace("px", ""));
            p.css("padding-top", heightP + imgH + "px");
        }
    }
    //关闭节日主题
    function closeTheme(){
        var d = new Date();
        d.setTime(d.getTime() + (24 * 60 * 60 * 1000));
        var expires = "expires=" + d.toGMTString();
        document.cookie = "themeFlag=1;path=/;domain=taoguba.com.cn;" + expires;
        var imgH = $("#activity-theme").height();
        var p = $(".head-site");
        var paddingTop = p.css("padding-top");

        $(".head-site").css("padding-top", paddingTop - imgH + "px");
        //看帖页浮动 -- start
        var rightData = $(".rigzht-data1").css("top");
        if (rightData) {
            var top = parseInt(rightData.replace("px", ""));
            var top1 = parseInt($(".right-data2").css("top").replace("px", ""));
            $(".right-data1").css("top", top - imgH + "px");
            $(".right-data2").css("top", top1 - imgH + "px");
        }
        //看帖页浮动 -- end
        if(paddingTop){
            var heightP = parseInt(paddingTop.replace("px", ""));
            p.css("padding-top", heightP - imgH + "px");
        }
        $("#activity-theme").slideUp(500,"linear",function(){
            $("#activity-theme").remove();
        });
    }
    //节日主题 -- end

    //关闭banner广告
    function closeBannerAD() {
        var d = new Date();
        d.setTime(d.getTime() + (24 * 60 * 60 * 1000));
        var expires = "expires=" + d.toGMTString();
        document.cookie = "bannerADFlag=1;path=/;domain=taoguba.com.cn;" + expires;
        var imgH = $("#bannerAD").height();
        var p = $(".head-site");
        var paddingTop = p.css("padding-top");

        $(".head-site").css("padding-top", paddingTop - imgH + "px");
        //看帖页浮动 -- start
        var rightData = $(".rigzht-data1").css("top");
        if (rightData) {
            var top = parseInt(rightData.replace("px", ""));
            var top1 = parseInt($(".right-data2").css("top").replace("px", ""));
            $(".right-data1").css("top", top - imgH + "px");
            $(".right-data2").css("top", top1 - imgH + "px");
        }
        //看帖页浮动 -- end
        if(paddingTop){
            var heightP = parseInt(paddingTop.replace("px", ""));
            p.css("padding-top", heightP - imgH + "px");
        }

        $("#bannerAD").hide();
        $("#activity-theme").hide();
    }

</script>
