    <script type="text/javascript">
        function AddUseful(rid,num,topic,flag){
            if(flag != 'T'){
                showAlert("您还没有登陆，请登录后再点赞");
                return;
            }
            var url="addUseful?rid=" + rid + "&num=" +num + "&flag=" + topic+"&topicID=" +rid;
            XMLHttp.sendReq("get",url,"",getUseful);
        }
        function getUseful(obj) {
            var insertFlag = obj.dto.root;
            var str = insertFlag.value;
            //alert(str);
            if(str == "999999"){
                showAlert("您投票速度太快了，请休息30秒以后再投票吧！");
            }else if(str == "999998"){
                showAlert("您不能投自己的票，让其他用户帮您投吧！");
            }else if(str == "10000086"){
                showAlert("由于您违反了点赞规则而被禁止发起赞！");
            }
            if (str != "error"){
                if(str != "0"){
                    var topic = insertFlag.flag;
                    if(topic == "T"){
                        var tid = insertFlag.id;
                        document.getElementById("useful_"+tid).innerHTML = str;
                    }
                }else{
                    showAlert("您已经投过票了，一个ID只允许投一票");
                }
            }else{
                showAlert("发生错误，请您联系股天乐");
                return;
            }
        }
        //热门内容样式
        function Json_HTML_HOT(recordJSON){
            var str ="";
            for(var i = 0 ;i<recordJSON.length; i++){
                var mainCon = recordJSON[i].mainCon;
                if(mainCon.feedID != 0 && mainCon.feedID != null){
                    str +='<div class="hot_com">';
                    str +='<a href="https://shuo.taoguba.com.cn//weiboSelf?selfID='+mainCon.userID+'" target="_blank" >';
                    str += '<img alt="'+mainCon.userName+'" src="https://image.taoguba.com.cn/img/';
                    if(mainCon.portrait == null){
                        str += 'user_icon_60.png';
                    }else{
                        str += mainCon.portrait;
                    }
                    str += '_60wh.png" width="45" height="45" />';
                    str+='</a>';
                    str += '<h2 style="text-align:left;">';
                    str += '<a href="https://shuo.taoguba.com.cn//weiboSelf?selfID='+mainCon.userID+'" onmouseover="userTips(this,'+mainCon.userID+');" onmouseout="offTip()" target="_blank" >';
                    str += mainCon.userName;
                    str += '</a></h2><p style="text-overflow: ellipsis;overflow: hidden;height: 40px;">';
                    if(mainCon.content != null && mainCon.content != ""){
                        mainCon.content = videoDisplay(mainCon.content);
                    }
                    var subedCont = ubbHiddenImg(mainCon.content);
                    subedCont =subedCont.substr(0,200);
                    subedCont = ubbAll(subedCont);
                    str += subedCont;
                    str += '</p>';
                    str += '<p><span></span></p>';
                    str += '<a href="https://shuo.taoguba.com.cn//shuo/toViewShuo?shuoID='+mainCon.feedID+'" target="_blank" >';
                    str += '<p><span>评论数（<label style="color:#de8418;">'+mainCon.commentCount+'</label>）</span> <strong style="color: #4793F1;">详情</strong></p></a>';
                    str +='</div>';
                }
            }
            return str ;
        }

        function switchDiv(name,allId,id,obj){
            $("a.abg01").removeClass("abg01");
            $(obj).addClass("abg01");
            for(var i = 1;i<=allId;i++){
                $("#"+name+i).hide();
            }
            $("#"+name+id).show();
        }
        function gotoPage(pageNo){
        }

        function queryString(qs) {
            var s = location.href;
            s = s.replace("?", "?&").split("&");
            var re = "";
            for (i = 1; i < s.length; i++) {
                if (s[i].indexOf(qs + "=") == 0) {
                    re = s[i].replace(qs + "=", "");
                }
            }
            return re;
        }

        function getQueryString(name) {
            let reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
            let r = window.location.search.substr(1).match(reg);
            if (r != null) {
                return decodeURIComponent(r[2]);
            };
            return null;
        }
        var tabType = "0";
        window.onload = function () {
            if ("txsp" == queryString("type")) {
                defaultTab(document.getElementsByClassName("defaultContainer_txsp"),5);
            }
            var regPos = /^[1-6]+.?[1-6]*/;
            if (regPos.test(tabType)) {
                // defaultTab(document.getElementsByClassName("defaultContainer_ggyj"),6);
                changeStockType(document.getElementById("stock-"+tabType));
            }
        };
    </script>
