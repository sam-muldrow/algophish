    <div id="defaultContainer">
        <div class="index-left left">

            <!-- 广告位 -->


























            <div>
                <!-- 栏目选择 -->
                <div class="index-left-nav left">
                    <div class="nav-list cursor act-nav-list classgio"  data-gio="综合推荐" onclick="defaultTab(this,1)">综合推荐</div>
