 <script type="text/javascript">
 $('#compony_info').mouseover(function(){$('#license_info').show()})
 $('#compony_info').mouseout(function(){$('#license_info').hide()})
 var Fislogin = $('.XLD_num2').length;
 var GTBjoin_status = 'false';
 if((window.location.href).indexOf('getDvViewPointNew') > -1){
	 GTBjoin_status = 'false';
 }else{
	 GTBjoin_status = 'true';
 }
 if(Fislogin==0){
	 $('#joinTGB').show();
	 $('#footer').css('margin-top','0px');
 }
 $(window).scroll(function(){
	 var h = document.documentElement.clientHeight || document.body.clientHeight;
if(Fislogin==0 && GTBjoin_status=='true'){
   $('#footer').css('margin-top','0px');
   var h1 = $('.footMD').offset().top -500;
   $('#joinTGB').show();
   if($(window).scrollTop() + 276>h1 ){
       $('#joinTGB').css({'position':'relative',
       'bottom':'0px'});
   }else{
     $('#joinTGB').css({'position':'fixed','bottom':'0px'});
   }
}
 })

function closeTGBjoin(){
     GTBjoin_status='false';
     $('#joinTGB').hide();
     $('#footer').css('margin-top','20px');
 }
  function addLoadEvent(func){
      var oldonload = window.onload;
      if(typeof window.onload != 'function'){
           window.onload = func;
      }else{
           window.onload = function(){
                oldonload();
                func();
           }
      }
 }
   //是否是PC浏览器
   function IsPC(){    
	     var userAgentInfo = navigator.userAgent;  
	     var Agents = new Array("Android", "iPhone", "SymbianOS", "Windows Phone", "iPad", "iPod");    
	     var flag = true;    
	     for (var v = 0; v < Agents.length; v++) {    
	         if (userAgentInfo.indexOf(Agents[v]) > 0) { flag = false; break; }    
	     }    
	     return flag;    
	  }
   function showFooterQrcode(obj){
		  $(obj).find('.img_qrCode').show();
	  }
	  function hideFooterQrcode(obj){
		  $(obj).find('.img_qrCode').hide();
	  }
	  requirejs([minConfig.index_tgbgg,minConfig.report_report], function(index_tgbgg,report){});
   
   function Disclaimer() {
       document.getElementById('disclaimer').innerText = DisclaimerConfig.Message;
   }
   Disclaimer()
</script> 

