    var loginUserID = 0;
    //声明_czc对象:
    var _czc = _czc || [];
    //绑定siteid，请用您的siteid替换下方"XXXXXXXX"部分
    _czc.push(["_setAccount", "1574657"]);
    //初始化gio -- start
    gdp('init', gioAccountID, gioDatasourceID, {
        host: gioHost,
        version: gioVersion,
        enableIdMapping: true,
        autotrack: false
