    $(function () {
        if ($.cookie('cookies-accepted')) {
            // already accepted
            return;
        }
        $('.cookie-consent__button .btn').click(function () {
            $.cookie(
                'cookies-accepted',
                'yes',
                { expires: 365, path: '/', domain: '.actionpay.net' }
            );
            $('.cookie-consent').fadeOut(200);
        });
        $('.cookie-consent').fadeIn(800);
    })
