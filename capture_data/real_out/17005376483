<script>
    $(function () {
        var header = $('header');
        $(window).on('ready scroll', function() {
            var scrollTop = $(window).scrollTop();
            if (scrollTop == 0) {
                header.removeClass('is-scroll');
            } else {
                header.addClass('is-scroll');
            }
        });
        $('.hamb').click(function() {
            if (header.hasClass('is-open')) {
                header.removeClass('is-open');
            } else {
                header.addClass('is-open');
            }
            return false;
        });
    });
</script>


