<script>
/* temporary-script */
(function () {
    var dispSideRegiBoxUnder = function () {
        var pathName = ['/point/pwbBalanceRef/', '/point/siteBalanceRef/'];
        var pageFlag = false;
        for (var j = 0; j < pathName.length; j++) {
            if (new RegExp('^' + pathName[j] + '$').test(location.pathname)) {
                pageFlag = true;
            }
        }
        var gridSub = document.getElementsByClassName('gridSub')[0];
        var sideRegiBoxUnder = null;
        if (gridSub instanceof HTMLElement && gridSub.childNodes.length > 0) {
            for (var i = 0; i < gridSub.childNodes.length; i++) {
                if (gridSub.childNodes[i].nodeName === 'ARTICLE') {
                    if (gridSub.childNodes[i].getAttribute('class') === 'sideRegiBoxUnder') {
                        sideRegiBoxUnder = gridSub.childNodes[i];
                        break;
                    }
                }
            }
        }
        if (pageFlag && sideRegiBoxUnder) {
            sideRegiBoxUnder.style.display = 'block';
        }
        if (!pageFlag && sideRegiBoxUnder) {
            sideRegiBoxUnder.parentNode.removeChild(sideRegiBoxUnder);
        }
    };
    var domContentLoaded = function () {
        dispSideRegiBoxUnder();
    };
    if (window.document.addEventListener) {
        window.document.addEventListener('DOMContentLoaded', domContentLoaded, false);
    }
}).call(this);
</script>
