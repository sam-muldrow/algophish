<script>
    var liveEventData = 0;
    var my_video_player1, my_video_player2;
    $(function(){

        window.fbAsyncInit = function() {
            FB.init({
                appId      : '140490219413038',
                xfbml      : true,
                version    : 'v3.2'
            });

            // Get Embedded Video Player API Instance
            FB.Event.subscribe('xfbml.ready', function (msg) {
                if (msg.type === 'video') {
                    if (msg.id === 'muteVideoPlayer1') {
                        my_video_player1 = msg.instance;
                    }
                    if (msg.id === 'muteVideoPlayer2') {
                        my_video_player2 = msg.instance;
                    }
                }
            });
        };
        if (liveEventData !== 0) {
            loadLive(1);

            $('#videoLive1').html(makeEventHtml(liveEventData[0], 1));
            loadEventIframeMaker();

            clickMaskAndListener(); //點擊和監聽事件
        } else {
            //直播影片
            $.ajax({
                type: "get",
                async: false,
                url: "https://cache.ltn.com.tw/data/getLiveEvent?" + new Date().getTime(),
                dataType: "json",
                success: function (data) {
                    data = data.slice(0, 2);
                    var dataLength = data.length;
                    if (dataLength <= 0) {
                        loadEventIframeMaker(); //載入 VIDEO API
                    } else {
                        for (var i = 1; i <= dataLength; i++) {
                            $('#videoLive' + i).html(makeEventHtml(data[i - 1], i));
                        }
                        loadEventIframeMaker(); //載入 VIDEO API

                        clickMaskAndListener(); //點擊和監聽事件
                    }
                    loadLive(dataLength);
                },
                error: function (e) {
                    console.log('get live failed!');
                    console.log(e);
                }
            });
        }
    });

        function loadLive(idx) {
        if (idx == 1) {             $('.v_container').addClass('hidden');
            $('#videoLive1, .c_container').removeClass(('hidden'));
            $('#videoLive2').addClass('hidden');
        } else if (idx == 2) {             $('.box440').addClass('hidden');
            $('#videoLive1, #videoLive2').removeClass(('hidden'));
        } else {             $('#videoLive1, #videoLive2').addClass(('hidden'));
        }
    }

    function makeEventHtml(data, idx) {
        var html = '';
        html += '<div class="video_rwd">';
        html += makePlayerHtml(data);
        html += '<div class="videoMask boxInput linkMask" data-desc="區塊'+idx+'"></div>';
        html += '</div>';
        html += '<h3 class="videoLiveTit linkMask">' + data['title'] + '</h3>';
        return html;
    }

    // 製作VIDEO影音框
    var videoIndex = 1;
    function makePlayerHtml(data) {
        var html = '';
        switch (data['source']) {
            case 'youtube':
                html += '<div id="muteVideoPlayer' + videoIndex + '" class="mov" data-ytid="' + data['id'] + '"></div>';
                break;
            case 'facebook':
                var url = encodeURI(data['id']);
                html += '<div id="muteVideoPlayer' + videoIndex + '" class="fb-video" data-href="' + url + '" data-width="440" data-height="247" data-allowfullscreen="false" data-autoplay="true" data-show-captions="true"></div>';
                break;
            default:
                break;
        }
        videoIndex++;
        return html;
    }

    // 載入 VIDEO API
    function loadEventIframeMaker() {
        //Facebook API
        var fbHtml = '<div id="fb-root"></div><script async defer src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.2"><\/script>';
        $('.jumbotron').prepend(fbHtml);

        //Youtube API
        var tag = document.createElement('script');
        tag.src = "https://www.youtube.com/iframe_api";
        var firstScriptTag = document.getElementsByTagName('script')[0];
        firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
    }

    function onYouTubeIframeAPIReady() {
        var YTPlayers = [];

        if ($('.mov').length > 0) {
            var list = $('.mov').map(function () {
                var tag_id = $(this).attr('id');
                var YT_id = $(this).data('ytid');
                return {
                    'tag_id': tag_id,
                    'YT_id': YT_id
                };
            });
            jQuery.each(list, function (i, val) {
                YTPlayers.push(newYTPlayer(val['tag_id'], val['YT_id']));
            });
        } else if ($('.mov').length == 0 && $('.fb-video').length == 0) {
            YTPlayers.push(newVideoBoxApi());
        }
        if ($('div.topLiveBox').length > 0) {
            YTPlayers.push(newSpecialLiveBox());
        }
    }

    function newYTPlayer(tag_id, YT_id) {
        return new YT.Player(tag_id, {
            height: '247',
            width: '100%',
            videoId: YT_id,
            playerVars: {
                autoplay: 1, // 自動播放視頻
                controls: 1, // 顯示播放和暫停按鈕
                modestbranding: 1, // 隱藏YouTube LOGO
                loop: 1, // 循環播放
                cc_load_policty: 0, // 隱藏關閉字幕
                iv_load_policy: 3, // 隱藏影片註釋
                autohide: 0, // 播放時隱藏影片控制按鈕
                rel: 0, //不顯示相關影片
                fs: 0, //隱藏全螢幕按鈕
            },
            events: {
                'onReady': function (event) {
                    if (!navigator.userAgent.match(/(iphone|ipad|ipod);?/i)) {
                        event.target.playVideo();
                    } else {
                        //IOS YT Video click event
                        $('#' + tag_id).parents('.box440').find('.linkMask').on('click', function (){
                            event.target.playVideo();
                            event.target.unMute();
                        });
                    }
                    event.target.mute();

                    if (!navigator.userAgent.match(/(iphone|ipad|ipod);?/i)) {
                        //監聽YT全螢幕
                        $('#' + tag_id).on('webkitfullscreenchange mozfullscreenchange fullscreenchange', function () {
                            if (document.fullscreenElement == null && document.mozfullscreenchange == null && document.webkitfullscreenchange == null) {
                                event.target.mute();
                            } else {
                                event.target.unMute();
                            }
                        });
                    }
                },
                'onStateChange': function (event) {
                    if (event.data === 0) {
                        if (!navigator.userAgent.match(/(iphone|ipad|ipod);?/i)) {
                            event.target.playVideo();
                        }
                    }
                }
            }
        })
    }

        function clickMaskAndListener() {
        if (!navigator.userAgent.match(/(iphone|ipad|ipod);?/i)) {
            $('.linkMask').click(function () {
                var iframe = this.parentNode.getElementsByTagName('iframe')[0];
                var requestFullScreen = iframe.requestFullScreen || iframe.mozRequestFullScreen || iframe.webkitRequestFullScreen;
                if (requestFullScreen) {
                    requestFullScreen.bind(iframe)();
                }
            });
        } else {
            //IOS FB Video click event
            $('.fb-video').parents('.box440').on('click', '.linkMask', function () {
                var tag_id = $(this).parents('.box440').find('.fb-video').attr('id');
                if (tag_id == 'muteVideoPlayer1') {
                    my_video_player1.play();
                } else if (tag_id == 'muteVideoPlayer2') {
                    my_video_player2.play();
                }
            })
        }

        if (!navigator.userAgent.match(/(iphone|ipad|ipod);?/i)) {
            // 監聽facebook全螢幕
            $('#videoLive1, #videoLive2').on('webkitfullscreenchange mozfullscreenchange fullscreenchange', 'iframe', function () {
                var isFbIframe = $(this).parents('.fb-video').length;
                var myVideoPlayer = null;
                if (isFbIframe > 0) {
                    var tag_id = $(this).parents('.fb-video').attr('id');
                    if (tag_id == 'muteVideoPlayer1') {
                        myVideoPlayer = my_video_player1;
                    } else if (tag_id == 'muteVideoPlayer2') {
                        myVideoPlayer = my_video_player2;
                    }
                }
                if (myVideoPlayer != null) {
                    if (document.fullscreenElement == null && document.mozfullscreenchange == null && document.webkitfullscreenchange == null) {
                        myVideoPlayer.mute();
                    } else {
                        myVideoPlayer.play();
                        myVideoPlayer.unmute();
                    }
                }
            });
        }
    }

</script>
