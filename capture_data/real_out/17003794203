<!-- Swiper JS -->
<script>
    $(function(){
        var swiper = initSwiper();

        $(window).resize(function(e){
            swiper.destroy();
            swiper = initSwiper();
        });

        $(".L1ad > a").each(function () {
            var adNo = $(this).data('no');
            $(this).after('<img style="display:none" src="https://pv6.ltn.com.tw/impression?ano=' + adNo + '&device=' + adDevice + '&' + new Date().getTime() + '">');
            var adHref = $(this).attr('href');
            $(this).attr('href', adHref + '&device=' + adDevice + '&source=' + document.URL);
        });
    });
    function initSwiper()
    {
        return new Swiper('#ltn_focus', {
            autoplay: {
                delay: 3000, //3秒切换一次
            },
            loop: true,
            pagination: {
                el: '#ltn_focus .swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '#ltn_focus .swiper-button-next',
                prevEl: '#ltn_focus .swiper-button-prev',
            },
        });
    }
</script>
