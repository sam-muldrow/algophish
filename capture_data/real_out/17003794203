    <script>
        $(function(){
            $('#adProject').find('a').each(function () {
                var adNo = $(this).data('no');
                $(this).after('<img style="display:none" src="https://pv6.ltn.com.tw/impression?ano=' + adNo + '&device=' + adDevice + '&' + new Date().getTime() + '">');
                var adHref = $(this).attr('href');
                $(this).attr('href', adHref + '&device=' + adDevice + '&source=' + document.URL);
            });
        });

        // 專題廣告換順序
        var ul = document.querySelector('#adProject ul');
        var adLength = ul.children.length;
        var adMax = 4;
        // 廣告 > 4則才作random
        if (adLength > adMax) {
            for (var i = adLength-1; i > 0; i--) {
                ul.appendChild(ul.children[Math.random() * i | 1]);
            }

            // 保留4則廣告
            for (var adItems = adLength; adMax < adItems; adItems--) {
                ul.removeChild(ul.children[adItems-1]);
            }
        }
    </script>
