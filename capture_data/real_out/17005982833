<script>

	let currentDate = new Date();
	let currentMonth = currentDate.getMonth();

	let privacyPolicyAcceptDate = new Date(localStorage.getItem('privacy-policy-accept-date'));
	let privacyPolicyAcceptDateMonth = privacyPolicyAcceptDate.getMonth();

	if ( (localStorage.getItem('privacy-policy') != 'accept') || (currentMonth != privacyPolicyAcceptDateMonth)) {
		if($('.privacy-policy').length) {
			$('.privacy-policy').css({
				'display': 'flex'
			});

			$('.privacy-policy__button').click(function() {

				localStorage.setItem('privacy-policy', 'accept');
				localStorage.setItem('privacy-policy-accept-date', currentDate);

				const fpPromise = import('https://openfpcdn.io/fingerprintjs/v3')
			    .then(FingerprintJS => FingerprintJS.load());

				fpPromise
				.then(fp => fp.get())
				.then(result => {
					const visitorId = result.visitorId;
					writeIdToFile(visitorId);
				})
				.catch(error => console.error(error));

			    function writeIdToFile(visitorId) {
			    	fetch("collection-privacy-policy.php", { 
							method: "POST",
					    body: "visitorId=" + visitorId,
							headers:{"content-type": "application/x-www-form-urlencoded"} 
						})
						.then((response) => {
					      	if (response.status !== 200) {           
								return Promise.reject();
					      	}   
							return response.text();
						})
						.then(i => console.log(i))
						.catch(() => console.log('Ошибка при записи в файл.'));
			    }

				$('.privacy-policy').css({
					'display': 'none'
				});
			});

		}
	}

</script>

