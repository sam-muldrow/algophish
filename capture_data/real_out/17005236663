   <script>
window.setInterval('heartBeat()',1);

    var lastscroll=0
    function heartBeat(){
        var diffY=0;
        if (document.documentElement && document.documentElement.scrollTop){
            diffY = document.documentElement.scrollTop;
        }else if (document.body){
            diffY = document.body.scrollTop
        }
        // console.log(diffY);

        var percent=diffY-lastscroll;

        document.getElementById("leftDIV1").style.top=parseInt(document.getElementById("leftDIV1").style.top)+percent+"px";
        document.getElementById("rightDIV1").style.top=parseInt(document.getElementById("rightDIV1").style.top)+percent+"px";
        document.getElementById("leftDIV2").style.top=parseInt(document.getElementById("leftDIV2").style.top)+percent+"px";
        document.getElementById("rightDIV2").style.top=parseInt(document.getElementById("rightDIV2").style.top)+percent+"px";
        lastscroll=diffY;
    }

    //下面这段删除后，对联将不跟随屏幕而移动。
    window.setInterval("heartBeat()",1); 
    //
    function closeleft1() 
    { 
    document.getElementById("leftDIV1").style.display='none';  
    }
    function closeleft2() 
    { 
    document.getElementById("leftDIV2").style.display='none';  
    }
    function closeright1() 
    { 
    document.getElementById("rightDIV1").style.display='none'; 
    }
    function closeright2() 
    { 
    document.getElementById("rightDIV2").style.display='none'; 
    }
</script>
