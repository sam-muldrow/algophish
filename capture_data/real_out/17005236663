   <script>
        jQuery(document).ready(function () {
        	 getJson();
             getMessage();
             $(".datetimepicker-days .table-condensed .prev,.datetimepicker-days .table-condensed .next").click(function(){
                getJson();
            });
        });
        
        function initLearning() {
        	if ($('.learning-slider').length) {
    			$('.learning-slider').owlCarousel({
    				items: 2,
                    margin: 0,
                    stagePadding: 0,
                    smartSpeed: 1000,
                    loop: true,
                    autoplay: true,
                    autoplayTimeout: 5000,
                    autoplayHoverPause: true,
                    nav: true,
                    dots: true,
                    responsive: {
                        0:{
                            items:1,
                            nav:true,
                            loop:true
                        },
                        480:{
                            items:1,
                            nav:true,
                            loop:true
                        },
                        768:{
                            items:1,
                            nav:true,
                            loop:true
                        },
                        1000:{
                            items:2
                        },
                        1200:{
                            items:3
                        }
                    }
    			});
    		};
        }
        
        function getMessage() {
        	 var url="https://"+window.location.host+"/";
        	 $.ajax({  
                url : url+"resource/assets/json2/json.txt",
                 datatype: "json",        
                 data :{},  
                 success : function(json) {
                	 json = JSON.parse(json);
                	 var messageArr = sortByDate(json);
                	 var wholeDiv= "";
                	 $("#xsjz").html("");
                	 for (var i=0;i<messageArr.length;i++) {
                    if (messageArr[i].title==="从大创项目到研究型人才培养"  ) {
                			continue ;
                		 }
                		 var jzdd = "";
                		 if (messageArr[i].jzdd && messageArr[i].jzdd!="") {
                			 jzdd = messageArr[i].jzdd;
                		 }
                		 if (messageArr[i].jzddQt && messageArr[i].jzddQt!="") {
                			 jzdd = messageArr[i].jzddQt;
                		 }
                		 jzdd += messageArr[i].jzfj;
                		 var div = i < 3 ? "<div class='item'>" : "<div class='item'>";
                		 div += "<a href='https://news.sjtu.edu.cn"+messageArr[i].url+"' title='' target='_blank'>"+
                		          "<div class='time'><span>"+messageArr[i].jzsjRq+"</span></div>"+
                		          "<div class='des'><p>"+messageArr[i].title+"</p></div>";
                		 div += "<div class='person'><p>"+messageArr[i].zjr+"</p></div>";
                		 
                		 div += jzdd == "" ? "<div class='address'>"+暂无+"</div>" : "<div class='address'>"+jzdd+"</div>";
                         div += "</a></div>";
                         wholeDiv += div;
                	 }
                	 $("#xsjz").append(wholeDiv);
                	 initLearning();
                	 //Main.init();
                 }
        	 });    
        }
        
        function sortByDate(json) {
        	json.sort(function sortJZRQ(a,b){
        		var da = new Date(Date.parse(a.jzsjRq.toString().replace(/-/g,"/"))).getTime();
        		var db = new Date(Date.parse(b.jzsjRq.toString().replace(/-/g,"/"))).getTime();
        		return db - da;
            });
            var minJzRq;
            var newMessageArr = new Array();
        	var oldMessageArr = new Array();
            var newDate = new Date();
        	newDate.setHours(0);
        	newDate.setMinutes(0);
        	newDate.setSeconds(0);
        	newDate.setMilliseconds(0);
            for (var i=0;i<json.length;i++) {
            	var jzsjRq = json[i].jzsjRq;
            	var date = new Date(jzsjRq.toString()).getTime();
            	if (date>=newDate) {
            		newMessageArr.push(json[i]);
            	}else {
            		oldMessageArr.push(json[i]);
            	}
            }
            
            if (newMessageArr.length < 3 && oldMessageArr.length > 0) {
            	for (var j=0;j<oldMessageArr.length;j++) {
            		newMessageArr.push(oldMessageArr[j]);
            		if (newMessageArr.length === 3) {
            			break;
            		}
            	}
            }
        	return newMessageArr;
        }
        
        function findMinJZRQ(json) {
        	var minJzRq = new Date(json[0].jzsjRq.toString()).getTime();
        	for (var i=1;i<json.length;i++) {
        		if(typeof json[i].jzsjRq != 'undefined'){
        			var JzRq = new Date(json[i].jzsjRq.toString()).getTime();
        			if (JzRq < minJzRq) {
        				minJzRq = JzRq;
        			}
        		}
        	}
        	return minJzRq;
        }
        
         function convertMonth(monthStr) {
        	var monthStrAry = ["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"];
        	return monthStrAry.indexOf(monthStr)+1;
        }

        
        function getJson() {
             var url="https://"+window.location.host+"/";
             $.ajax({  
                 url : url+"resource/assets/json2/json.txt",  
                 datatype: "json",        
                 data :{},  
                 success : function(json) {  
                     json = JSON.parse(json);
                     var data = [];
                     var timeArr = getTimeArr(json,data);
                     timeArr = distinctTimeArr(timeArr);
                     eqDate(timeArr);
                  }  
              });  
         }
        
        function getTimeArr(json,data) {
            var timeArr = new Array();
            for(var i = 0; i < json.length; i++) {
            	if(json[i]) {
                    var s = json[i].jzsjRq;
                    var ss = s.split(" ").length > s.split("$nbsp;").length ? s.split(" ") : s.split("$nbsp;");
                    timeArr[i] = ss[0];
                    if(json[i].jzdd.length != 0){
                   	   if (json[i].jzdd.indexOf("徐汇") != -1) {
                           var XuhuiRow = {
                               name : "徐汇校区",
                               value : 1
                           }
                       	   data.push(XuhuiRow);
                       	   var row = {
                       	       name : json[i].jzdd,
                       	       value : 1
                       	   };
                       	   data.push(row);
                       }
                       if (json[i].jzdd.indexOf("闵行") != -1) {
                    	   var MinhangRow = {
                               name : "闵行校区",
                               value : 1
                           }
                           data.push(MinhangRow);
                           var row = {
                               name : json[i].jzdd,
                               value : 1
                           };
                           data.push(row);
                       }
                    }
                }
            }
            return timeArr;
        }
        
        function distinctTimeArr(timeArr) {
           var result = new Array();
           for (var i = 0; i < timeArr.length; i++) {
               var item = timeArr[i];
               if (result.indexOf(item) === -1) {
            	   result.push(item);
               }
           }
           return result;
       }
        
        function eqDate(timeArr){
        	$(".datetimepicker-days .table-condensed tbody td").addClass("disabled");
        	$(".datetimepicker-days .table-condensed tbody td").removeClass("active");
        	var switchTime = $(".switch").html();
            var sYear = switchTime.split(" ")[2];
        	var sMonth = convertMonth(switchTime.split(" ")[1]);
        	
        	var newDate = new Date();
            		var newMonth = newDate.getMonth()+1;
                var newYear = newDate.getFullYear();
                
       if (newYear > sYear) {
    $(".datetimepicker-days .table-condensed .prev").addClass("disabled");    
}

if (newYear == sYear) {
    if (sMonth < newMonth) {
        $(".datetimepicker-days .table-condensed .prev").addClass("disabled");
    }
    if (sMonth > newMonth) {
        $(".datetimepicker-days .table-condensed .next").addClass("disabled");
    }      		
    if (sMonth == newMonth) {
        if ($(".datetimepicker-days .table-condensed .next").hasClass("disabled")) {
            $(".datetimepicker-days .table-condensed .next").removeClass("disabled");
        }
        if ($(".datetimepicker-days .table-condensed .prev").hasClass("disabled")) {
            $(".datetimepicker-days .table-condensed .prev").removeClass("disabled");
        }
    }
}

if (newYear < sYear) {
    $(".datetimepicker-days .table-condensed .next").addClass("disabled");
}

var month = "";
for(var i=0;i<timeArr.length;i++){
        		$(".datetimepicker-days .table-condensed tbody td").each(function(){
        			var sDay = $(this).html();
        			if(sDay.length == 1){
    					sDay = 0 + sDay;
    				}
        			
       				if (sMonth<10) {
       					month="0"+sMonth;
       				} else {
       				  month = sMonth;
       				}
       				sDate = sYear+"-"+month+"-"+sDay;
       			    if (sDate==timeArr[i]){
       			    	$(this).addClass("active");
   						$(this).click(function(event){
		        			var sDay = $(this).html();
		        			if(sDay.length == 1){
		    					sDay = 0 + sDay;
		    				}
		        			if (sMonth<10){
		        				sMonth="0"+sMonth;
		        			}
		        			sDate = sYear+"-"+sMonth+"-"+sDay;
   							var a = $("<a ></a>").get(0);
                            if (document.createEvent) {
                            	 var e = document.createEvent("MouseEvents");
                                 e.initEvent("click", true, true );
                                 a.dispatchEvent(e);
        					     event.stopPropagation();
                            } else {
                            	if (document.getElementById("sjtuTarget")) {
                        			var a = document.getElementById("sjtuTarget");
                        			a.parentNode.removeChild(a);
                        		}
                        		var a = $("<a id='sjtuTarget' style='display:none'><span id='sjtuTarget2'></span></a>");
                        		$(document.body).append(a);
                        		$("#sjtuTarget2").trigger('click');
                            }
   						});
       			    }
        		})
        	}
        }
    </script>
