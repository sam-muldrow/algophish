// GAM ヘッダースクリプト
// トップページ
var googletag = googletag || {};
googletag.cmd = googletag.cmd || [];

var gptAdSlots=[];
var headerBiddingSlots = [];
var nonHeaderBiddingSlots = [];
var lazyloadingSlots = [];
var lazyloadingSlotsLast = [];
var apstagLazyloadingSlots = [];

var pbjs = pbjs || {};
pbjs.que = pbjs.que || [];

var failSafeTimeout;

var apstag_pubID = "3659";


function headAdScriptSp () { // ウィンドウ幅がSPサイズの場合に実行 
  failSafeTimeout = 2000;

  googletag.cmd.push(function(){
    gptAdSlots[0] = googletag.defineSlot("/15055520/sp_lifehacker_2nd_top",[[300,250]],"lifehacker_normal-2").addService(googletag.pubads());
    gptAdSlots[1] = googletag.defineSlot("/15055520/sp_lifehacker_3rd_top",[[300,250],[300,600]],"lifehacker_normal-3").addService(googletag.pubads());
    
    googletag.pubads().setTargeting("category","");
    googletag.pubads().setTargeting("articleType","");
    googletag.pubads().setTargeting("regular","");
    googletag.pubads().setTargeting("feature","");
    googletag.pubads().setTargeting("tag","");
    googletag.pubads().setTargeting("author", "");
    googletag.pubads().setTargeting("articleId", "");
    googletag.pubads().setTargeting("articleSlug", "");
    googletag.pubads().setTargeting("querystring", "");
    googletag.pubads().setTargeting("pagetype", "top");
    googletag.pubads().setTargeting("url", "prd");

    // DemandManager設定
    
    lazyloadingSlots['lifehacker_normal-2'] = gptAdSlots[0]; // lazyloading枠
    lazyloadingSlots['lifehacker_normal-3'] = gptAdSlots[1]; // lazyloading枠
    googletag.pubads().disableInitialLoad();
    googletag.pubads().enableSingleRequest();
    googletag.pubads().collapseEmptyDivs();

    googletag.enableServices();

    // Prebid.js非対象枠は、即時refresh()実行
    if (nonHeaderBiddingSlots.length > 0) {
      googletag.pubads().refresh(nonHeaderBiddingSlots);
    }
  });

  apstag.init({
    pubID: apstag_pubID,
    adServer: 'googletag',
    bidTimeout: 1000
  });

  var apstagSlots = [
  ];
  
  apstagLazyloadingSlots['lifehacker_normal-2'] = {
    slotID: 'lifehacker_normal-2',
    slotName: '/15055520/sp_lifehacker_2nd_top',
    sizes: [[300,250]]
  };
  apstagLazyloadingSlots['lifehacker_normal-3'] = {
    slotID: 'lifehacker_normal-3',
    slotName: '/15055520/sp_lifehacker_3rd_top',
    sizes: [[300,250]]
  };

  fetchHeaderBids(apstagSlots, headerBiddingSlots, failSafeTimeout);
}

function headAdScriptPc () { // ウィンドウ幅がPCサイズの場合に実行 
  failSafeTimeout = 2000;

  googletag.cmd.push(function(){
    gptAdSlots[0] = googletag.defineSlot("/15055520/pc_lifehacker_1st_splashbox",[[300,250]],"lifehacker_normal-2").addService(googletag.pubads());
    gptAdSlots[1] = googletag.defineSlot("/15055520/pc_lifehacker_halfpage",[[300,250],[300,600]],"lifehacker_normal-3").addService(googletag.pubads());
    gptAdSlots[2] = googletag.defineSlot("/15055520/pc_lifehacker_2nd_splashbox",[[300,250],[300,600]],"lifehacker_normal-4").addService(googletag.pubads());
    gptAdSlots[3] = googletag.defineSlot("/15055520/pc_lifehacker_2nd_billboard",[[970,250],[1184,250]],"lifehacker_normal-5").addService(googletag.pubads());
    
    googletag.pubads().setTargeting("category","");
    googletag.pubads().setTargeting("articleType","");
    googletag.pubads().setTargeting("regular","");
    googletag.pubads().setTargeting("feature","");
    googletag.pubads().setTargeting("tag","");
    googletag.pubads().setTargeting("author", "");
    googletag.pubads().setTargeting("articleId", "");
    googletag.pubads().setTargeting("articleSlug", "");
    googletag.pubads().setTargeting("querystring", "");
    googletag.pubads().setTargeting("pagetype", "top");
    googletag.pubads().setTargeting("url", "prd");

    // DemandManager設定
    
    nonHeaderBiddingSlots.push(gptAdSlots[0]); // Prebid.js非対象枠
    lazyloadingSlots['lifehacker_normal-3'] = gptAdSlots[1]; // lazyloading枠
    lazyloadingSlots['lifehacker_normal-4'] = gptAdSlots[2]; // lazyloading枠
    lazyloadingSlots['lifehacker_normal-5'] = gptAdSlots[3]; // lazyloading枠
    googletag.pubads().disableInitialLoad();
    googletag.pubads().enableSingleRequest();
    googletag.pubads().collapseEmptyDivs();

    googletag.enableServices();

    // Prebid.js非対象枠は、即時refresh()実行
    if (nonHeaderBiddingSlots.length > 0) {
      googletag.pubads().refresh(nonHeaderBiddingSlots);
    }
  });

  apstag.init({
    pubID: apstag_pubID,
    adServer: 'googletag',
    bidTimeout: 1000
  });

  var apstagSlots = [
  ];
  
  apstagLazyloadingSlots['lifehacker_normal-3'] = {
    slotID: 'lifehacker_normal-3',
    slotName: '/15055520/pc_lifehacker_halfpage',
    sizes: [[300,250],[300,600]]
  };
  apstagLazyloadingSlots['lifehacker_normal-4'] = {
    slotID: 'lifehacker_normal-4',
    slotName: '/15055520/pc_lifehacker_2nd_splashbox',
    sizes: [[300,250],[300,600]]
  };
  apstagLazyloadingSlots['lifehacker_normal-5'] = {
    slotID: 'lifehacker_normal-5',
    slotName: '/15055520/pc_lifehacker_2nd_billboard',
    sizes: [[970,250]]
  };

  fetchHeaderBids(apstagSlots, headerBiddingSlots, failSafeTimeout);
}

function fetchHeaderBids(apstagSlots, headerBiddingSlots, failSafeTimeout) {

  var bypassA9 = false;
  var bidders = ['a9', 'prebid'];

  var requestManager = {
    adserverRequestSent: false
  };

  bidders.forEach(function(bidder) {
    requestManager[bidder] = false;
  });

  function allBiddersBack() {
    var allBiddersBack = bidders
      .map(function(bidder) {return requestManager[bidder]; })
      .filter(function(bool) {return bool;})
      .length === bidders.length;
    return allBiddersBack;
  }

  function headerBidderBack(bidder) {
    if (requestManager.adserverRequestSent === true) {
      return;
    }
    if (bidder === 'a9') {
      googletag.cmd.push(function() {
        apstag.setDisplayBids();
      });
    } else if (bidder === 'prebid') {
      // DO NOTHING
    }
    requestManager[bidder] = true;

    if (allBiddersBack()) {
      sendAdserverRequest();
    }
  }

  function sendAdserverRequest() {
    if (requestManager.adserverRequestSent === true) {
      return;
    }
    requestManager.adserverRequestSent = true;
    googletag.cmd.push(function() {
      googletag.pubads().refresh(headerBiddingSlots);
    });
  }

  function requestBids() {
    // apstag.fetchBids({
    //   slots: apstagSlots
    // }, function(bids) {
    //   headerBidderBack('a9');
    // });
    if (bypassA9) {
        headerBidderBack("a9");
    } else {
      apstag.fetchBids({
          slots: apstagSlots
      }, function(bids) {
          headerBidderBack('a9');
      });
    }
    
    googletag.cmd.push(function() {
      pbjs.que.push(function() {
        pbjs.rp.requestBids(
          {
            callback: function (bidResponses) {
            headerBidderBack('prebid');
          },
          gptSlotObjects: headerBiddingSlots
        });
      });
    });
  }

  requestBids();

  window.setTimeout(function() {
    sendAdserverRequest();
  }, failSafeTimeout);
};

var scrollObserver = new IntersectionObserver(
  function (entries, observer) {
    entries.forEach(function(entry) {
      if (
        entry.isIntersecting &&
        entry.target.dataset &&
        !entry.target.dataset.adsLoaded
      ) {
        fetchHeaderBids([apstagLazyloadingSlots[entry.target.id]], [lazyloadingSlots[entry.target.id]], failSafeTimeout);
        entry.target.dataset.adsLoaded = true;
      }
    });
  },
  { rootMargin: '90%' }
