  (function($){
    $(window).scroll(function () {
      //remove return false to get this going
      return false;
      if ($(window).scrollTop() > 35 && parseInt($( window ).width()) > 650 ){
        $(".top_navigation").addClass('sticky');
      }else{
        $(".top_navigation").removeClass('sticky');
      }
  
    });
  }(jQuery));
</script>


