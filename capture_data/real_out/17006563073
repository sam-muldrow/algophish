        function TooltipText(cid) { 
            var tbox=null; 
            tbox = HINTS_ITEMS[cid]; 
            if (tbox==null) {  
                tbox = 'Údaje nie sú k dispozícii'; 
            }
            tbox = '<div class="tipmessage_apoc_new">'+tbox+'<\/div>'; 
            return tbox;  
        }
