<script>
    var G = {
        UHOME_URL: "",
        REFFERER_URL: "",
    };
    $(function() {
        $("#J_reg").click(function() {
            if ($("#J_mobileRegWrap").is(":visible"))
            {
                var mobile = $("#J_mobileRegWrap").find("input[name='mobile']").val();
                var code = $("#J_mobileRegWrap").find("input[name='code']").val();
                var password = $("#J_mobileRegWrap").find("input[name='password']").val();
                var rePassword = $("#J_mobileRegWrap").find("input[name='rePassword']").val();
                var passport = $("#J_passport").is(':checked') ? 1 : 0;
                $.ajax({
                    type: 'post',
                    url: "https://www.evolife.cn/index.php?c=Login&a=ajaxMobileReg&is_ajax=1",
                    data: {
                        mobile: mobile,
                        code: code,
                        password: password,
                        rePassword: rePassword,
                        passport: passport
                    },
                    dataType: 'json',
                    success: function(data) {
                        if (data.status == 200) {
                            alert('恭喜你，注册成功！');
                            location.href = G.REFFERER_URL;
                        } else {
                            alert(data.message);
                        }
                    },
                    error: function() {
                        alert('注册失败,请刷新后重试！');
                    },
                });
            }
            else if ($("#J_emailRegWrap").is(":visible"))
            {
                var email = $("#J_emailRegWrap").find("input[name='email']").val();
                var code = $("#J_emailRegWrap").find("input[name='code']").val();
                var password = $("#J_emailRegWrap").find("input[name='password']").val();
                var rePassword = $("#J_emailRegWrap").find("input[name='rePassword']").val();
                var passport = $("#J_passport").is(':checked') ? 1 : 0;
                $.ajax({
                    type: 'post',
                    url: "https://www.evolife.cn/index.php?c=Login&a=ajaxEmailReg&is_ajax=1",
                    data: {
                        email: email,
                        code: code,
                        password: password,
                        rePassword: rePassword,
                        passport: passport
                    },
                    dataType: 'json',
                    success: function(data) {
                        if (data.status == 200) {
                            alert('恭喜你，注册成功！');
                            location.href = G.REFFERER_URL;
                        } else {
                            alert(data.message);
                        }
                    },
                    error: function() {
                        alert('注册失败,请刷新后重试！');
                    },
                });
            }
        });

        $("#J_login").click(function() {
            var user_login = $("#J_loginWrap").find("input[name='user_login']").val();
            var password = $("#J_loginWrap").find("input[name='password']").val();
            var auto_save = $("#J_loginWrap").find("input[name='auto_save']").val();
            $.ajax({
                type: 'post',
                url: "https://www.evolife.cn/index.php?c=Login&a=ajaxLogin&is_ajax=1",
                data: {
                    user_login: user_login,
                    password: password,
                    auto_save: auto_save
                },
                dataType: 'json',
                success: function(data) {
                    if (data.status == 200) {
                        location.href = G.UHOME_URL;
                    } else {
                        alert(data.message);
                    }
                },
                error: function() {
                    alert('登录失败,请刷新后重试！');
                },
            });
        });

        function timeVerify(target, second) {
            if (!second) second = 60;
            second--;
            if (second <= 0) {
                $(target).text("获取验证码");
                return $(target).removeClass("disabled");
            }
            $(target).addClass("disabled")
            $(target).text(second + "秒,重新获取");
            setTimeout(function () {
                timeVerify(target, second)
            }, 1000)
        }

        $(".getVerifyCode").click(function() {
            if ($(this).hasClass("disabled")) return;
            var mobile = $(this).parent().siblings(".J_mobile").val();
            if (mobile == '') {
                alert('手机号不能为空！');
                return false;
            }
            var _this = this;
            $.ajax({
                type: 'post',
                url: "https://www.evolife.cn/index.php?c=Login&a=ajaxGetMobileCode&is_ajax=1",
                data: {
                    mobile: mobile,
                    geetest_challenge:$(".geetest_challenge").val(),
                    geetest_validate:$(".geetest_validate").val(),
                    geetest_seccode:$(".geetest_seccode").val()
                },
                dataType: 'json',
                beforeSend: function(XMLHttpRequest) {
                    timeVerify(_this);
                },
                success: function(data) {
                    if (data.status == 200) {
                        alert('验证码已发送，请注意查收！');
                        $(this).attr("disabled", 'true');
                    } else {
                        alert(data.message);
                    }
                },
                error: function() {
                    alert('发送验证码失败，请重试！');
                },
            });
        });

        $(".getEmailVerifyCode").click(function() {
            if ($(this).hasClass("disabled")) return;
            var email = $(this).parent().siblings(".J_email").val();
            if (email == '') {
                alert('邮箱不能为空！');
                return false;
            }
            var _this = this;
            $.ajax({
                type: 'post',
                url: "https://www.evolife.cn/index.php?c=Login&a=ajaxGetEmailCode&is_ajax=1",
                data: {
                    email: email
                },
                dataType: 'json',
                beforeSend: function(XMLHttpRequest) {
                    timeVerify(_this);
                },
                success: function(data) {
                    if (data.status == 200) {
                        alert('验证码已发送，请注意查收！');
                        $(this).attr("disabled", 'true');
                    } else {
                        alert(data.message);
                    }
                },
                error: function() {
                    alert('发送验证码失败，请重试！');
                },
            });
        });

        $("#J_findPwdBtn").bind('click', function() {
            if ($("#J_findPwdByMobileForm").is(":visible")) {
                var mobile = $("#J_findPwdByMobileForm").find("input[name='mobile']").val();
                var code = $("#J_findPwdByMobileForm").find("input[name='code']").val();
                var password = $("#J_findPwdByMobileForm").find("input[name='password']").val();
                var rePassword = $("#J_findPwdByMobileForm").find("input[name='rePassword']").val();
                $.ajax({
                    type: 'post',
                    url: "https://www.evolife.cn/index.php?c=Login&a=ajaxFindPwdByMobile&is_ajax=1",
                    data: {
                        mobile: mobile,
                        code: code,
                        password: password,
                        rePassword: rePassword
                    },
                    dataType: 'json',
                    success: function(data) {
                        if (data.status == 200) {
                            alert('恭喜你，密码设置成功，请登录！');
                            location.href = G.REFFERER_URL;
                        } else {
                            alert(data.message);
                        }
                    },
                    error: function() {
                        alert('密码找回失败,请刷新后重试！');
                    },
                });
            } else if ($("#J_findPwdByEmailForm").is(":visible")) {
                var email = $("#J_findPwdByEmailForm").find("input[name='email']").val();
                var code = $("#J_findPwdByEmailForm").find("input[name='code']").val();
                var password = $("#J_findPwdByEmailForm").find("input[name='password']").val();
                var rePassword = $("#J_findPwdByEmailForm").find("input[name='rePassword']").val();
                $.ajax({
                    type: 'post',
                    url: "https://www.evolife.cn/index.php?c=Login&a=ajaxFindPwdByEmail&is_ajax=1",
                    data: {
                        email: email,
                        code: code,
                        password: password,
                        rePassword: rePassword
                    },
                    dataType: 'json',
                    success: function(data) {
                        if (data.status == 200) {
                            alert('恭喜你，密码设置成功，请登录！');
                            location.href = G.REFFERER_URL;
                        } else {
                            alert(data.message);
                        }
                    },
                    error: function() {
                        alert('密码找回失败,请刷新后重试！');
                    },
                });
            }
        });
    });
</script>
