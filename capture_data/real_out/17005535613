        <script>
        var load_more = {
            data_box: '.letter-content',
            ajax_url: 'index.php',
            click_btn: '.show-more-btn',
            curr_page: 1,
            page_size: 1,
            total_page: 1,
            params: {'is_ajax': 1},
            load_more_data: function () {
                this.curr_page = this.curr_page + 1;
                var p = this.curr_page;
                this.params.curr_page = p;

                var _this = this;
                $.get(this.ajax_url, this.params, function (result) {
                    if (result.status == 1) {
                        _this.render(result);
                    } else {
                        alert("加载数据失败！");
                    }
                }, "json");
            },
            set_load_end: function () {
                $(this.click_btn).html("已经全部加载").addClass("load_end");
            },
            render: function (result) {

            },
            init: function () {
                var _this = this;

                if (this.curr_page >= this.total_page) {
                    this.set_load_end();
                }

                $(this.click_btn).click(function () {
                    if ($(this).hasClass('load_end')) {
                        return true;
                    }
                    if (_this.curr_page >= _this.total_page) {
                        _this.set_load_end();
                        return true;
                    }
                    _this.load_more_data();
                });
            }
        };

        $(function(){
            load_more.data_box = ".article-list";
            load_more.click_btn = ".show-more-btn";
            load_more.total_page = '843';
            load_more.params.c = 'Home';
            load_more.params.a = 'ajaxGetNewList';
            load_more.render = function(result){
                var html = '';
                for(var i= 0, len = result.data.list.length; i<len; i++){
                    var d = result.data.list[i];
                    var tmpBlock = '';
                    tmpBlock += '<div class="article-item">';
                    tmpBlock += '   <div class="article-item-left">';
                    tmpBlock += '       <div class="label"><a  href="' + d.cat_link + '">' + d.cat_name + '</a></div>';
                    tmpBlock += '       <div class="article-item-left-img"><a  href="' + d.link + '"><img src="' + d.img + '"/></a></div>';
                    tmpBlock += '   </div>';
                    tmpBlock += '   <div class="article-item-right"><a class="title" href="' + d.link + '">' + d.title + '</a>';
                    tmpBlock += '       <div class="content">' + d.excerpt + '</div>';
                    tmpBlock += '       <div class="avatar">';
                    tmpBlock += '           <span class="person-box">';
                                        tmpBlock += '               <a href="' + d.author_img_link + '"><img src="' + d.author_img_url + '" class="z-depth-1"/></a>';
                    tmpBlock += '               <span class="name">' + d.author + '</span>';
                                        tmpBlock += '               <span class="time">' + d.show_time + '</span>';
                    tmpBlock += '           </span>';
                    tmpBlock += '           <div class="foot">';
                    tmpBlock += '               <img src="https://pic.evolife.cn/images/editicon.png"/> ' + d.comment_count;
                    tmpBlock += '               <img src="https://pic.evolife.cn/images/loveicon.png"/> ' + d.like_it_count;
                    tmpBlock += '           </div>';
                    tmpBlock += '       </div>';
                    tmpBlock += '   </div>';
                    tmpBlock += '   <div class="clear_both"></div>';
                    tmpBlock += '</div>';

                    html += tmpBlock;
                }
                $(this.data_box).append(html);
            }

            load_more.init();
        });
    </script>
