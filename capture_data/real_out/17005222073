<div id="rekTracker" style="display:none;"></div>
    <script>

var isFirst = true;
var virgulPlayerAds = '';
var virgulSiteId = 'sinemalar';
var virgulPageId = 'anasayfa';
var virgulCatId = 'sinemalar_anasayfa';
var referrer = "%26%5F%5Fcr%5F";
var virgulVersion = 27;


    function getNoktaId(){
        if(typeof(Profile) == "undefined"){
            return "";
        }
        Profile.init ( { siteId: 2 });
        return Profile.userId;
    }

    function openRoadBlock(click){

        if(click){
            $('#rekTracker').append(virgulPlayerAds.zones[52121].open);
        }
        $(".nb_default").hide();

        if(!isMoviePage){
            $('#roadblock').remove();
            $('.container').css({'background-color': 'white'});
            $('<div id="roadblock" style="margin: 0 auto;"></div>').insertBefore('.container');
            $('.breadcrumb').css({'margin-top': '-5px'});
            $('#content').css({'margin-top': '-20px'});
        }
        else{
            $('#roadblock').empty();
        }
        $("#roadblock").html(virgulPlayerAds.zones[52121].script);
        setCookie('roadblock_closed',0);
    }

    function closeRoadBlock(){
        $("#roadblock").html('').css({'border': 'none'});
        setCookie('roadblock_closed',1);
    }

    window.showRightAd = true;
    window.showLeftAd = true;

    if(document.referrer.match("google") == "google")
        referrer = "google";
    else if(document.referrer.match("facebook") == "facebook")
        referrer = "facebook";
    else if(document.referrer.match("sinemalar") == "sinemalar")
        referrer = "referral";
    else if(document.referrer == "")
        referrer = "direct";

    function virgulAd(){
        (function() {
            var s = document.createElement('script');
            s.type = 'text/javascript';
            s.async = true;
            s.id = "vnetscript";
            s.src = 'https://static.virgul.com/theme/mockups/outside/nokta.js?v='+virgulVersion;
            var x = document.getElementsByTagName('script')[0];
            x.parentNode.insertBefore(s, x);
        })();
    }

    function virgulStatCall(noktaId){
        (function() {
            var s = document.createElement('img');
            if(typeof refUrl != 'undefined') refStr = '&l='+refUrl;
            else refStr='';
            s.id = "vnetscript";
            s.alt = "";
            s.src = '//logger.virgul.com/count?g=h&m=svs&r='+referrer+'&u='+noktaId;
            s.style.width = '0px';
            s.style.height = '0px';
            document.body.appendChild(s);
        })();
    }

    function removePageskin(){
        $('#right-ad,#left-ad').show();
        $('#newAdSkinClickUrl').hide();
        $('#newAdSkinSecondClickUrl').hide();
        $('#container').css('margin-top', '0px');


        $('#pageskin').remove();
        $('#videoPageskinSound').remove();
        $('.content').css({'padding': '15px'});


        if(isMoviePage){
            $('.page-container').css({'margin': '95px auto 0'});
        }
        $('body').css({'background': 'none'});
        $('html').removeClass('defaultSkin');
    }

    function displayPageskin(ad){

        // console.log(ad);

        window.showRightAd = false;
        window.showLeftAd = false;

        $('#feedback_all').hide();

        $('#right-ad,#left-ad').remove();

        if(typeof ad.removeSelector !== 'undefined' && ad.removeSelector !== ''){
            $(ad.removeSelector).remove();
            $("#roadblock").hide();
        }

        $('#newAdSkinClickUrl').show();
        $('#newAdSkinClickUrl').attr('href', ad.click);
        $('#newAdSkinSecondClickUrl').show();
        if(typeof ad.secondClick === 'undefined'){
            $('#newAdSkinSecondClickUrl').attr('href', ad.click);
        }
        else{
            $('#newAdSkinSecondClickUrl').attr('href', ad.secondClick);
        }

        if(typeof ad.view !== 'undefined'){
            $('#newAdSkinClickUrl').append(ad.view);
        }

        if(ad.pageskinType === 'video'){

            $('html').removeClass('defaultSkin');
            $('body').append('<video id="pageskin"><source type="video/mp4" src="'+ad.background+'"></video>');
            if(isMoviePage){
                if(ad.large){
                    var top = '621px';
                    $('.page-container').css({'margin': '456px auto 0'}).find('.content').css({'background': '#fff', 'padding': '0px 15px 0px 15px'});
                }
                else{
                    var top = '616px';
                    $('.page-container').css({'margin': '165px auto 0'});
                }
            }
            else{
                var top = '616px';
                $('#container').css('margin-top', '74px');
            }

            $('#pageskin').css({
                'position': 'absolute',
                'top': top,
                'left': 'calc(50% - 2px)',
                'min-width': '100%',
                'min-height': '100%',
                'width': 'auto',
                'height': 'auto',
                'z-index': '-100',
                'transform': 'translate(-50%, -50%)'
            });

            $('body').css({'overflow-x':'hidden'});


            var pageskinVideo = $('#pageskin').get(0);
            pageskinVideo.muted = true;

            if(ad.loop){
                pageskinVideo.loop = true;
            }

            pageskinVideo.addEventListener('ended', function(){
                if(!ad.loop){
                    $('#videoPageskinSound').hide();
                }
            });

            pageskinVideo.play().then(function(){
                $('body').append('<div id="videoPageskinSound"><img id="videoPageskinSoundOn" src="https://static.virgul.com/theme/mockups/icons/speaker-on.png"><img id="videoPageskinSoundOff" src="https://static.virgul.com/theme/mockups/icons/speaker-off.png" style="display:none"></div>');


                $('#videoPageskinSound > img').css({'width': '100%'});
                $('#videoPageskinSound').css({
                    'position': 'absolute',
                    'top': ($('header').height() + 15) + 'px',
                    'left': '6px',
                    'width': '60px',
                    'cursor': 'pointer'
                }).click(function(){
                    if(pageskinVideo.muted){
                        $('#videoPageskinSoundOn').hide();
                        $('#videoPageskinSoundOff').show();
                        pageskinVideo.muted = false;
                    }
                    else{
                        $('#videoPageskinSoundOff').hide();
                        $('#videoPageskinSoundOn').show();
                        pageskinVideo.muted = true;
                    }
                });
            }).catch(function(e){
                console.log(e.message);
            });
        }
        else{
            $('html').removeClass('defaultSkin');
            $("body").attr("style", "background:#"+ad.color+" url("+ad.background+") no-repeat  center 91px !important");
            $('#container').css('margin-top', '75px');
            if(isMoviePage){
                $('.page-container').css({'margin': '185px auto 0'});
            }
            // $('body').css('background', 'none');
        }

        if(typeof window.pageskinAdView !== 'undefined'){
            $('#newAdSkinClickUrl').append(window.pageskinAdView);
            window.pageskinAdView = undefined;
        }

        if(typeof ad.mastheadId !== 'undefined' && ad.mastheadId.length > 10){
            $('#roadblock').html('<div id="vrgdiv'+ad.mastheadId+'" style="width: 970px; height: 250px; margin: 0 auto;" class="virgul-ad"><iframe allow="autoplay; geolocation; microphone; camera" id="a'+ad.mastheadId+'" width="970" height="250" scrolling="no" frameborder="0" webkitallowfullscreen="true" mozallowfullscreen="true" allowfullscreen="true" allowtransparency="1" src="https://ng2.virgul.com/adview?a='+ad.mastheadId+'&r=52121@sinemalar_video_izlenme@sinemalar:video_izlenme&cs='+new Date().getTime()+'"></iframe></div>');
        }
    }
    /* change ads in a duration */
    function virgulCallbackFunction(response){
        var zoneIds = [];
        removePageskin();

        virgulPlayerAds = response;

        virgulStatCall(response.noktaId);

        if(typeof playerExists === 'undefined'){
            var ad_poll_seen = false;
            if(typeof response.poll != 'undefined' && response.poll != null){
                ad_poll_seen = true;
                $('#ads_poll').append(response.poll.script);
            }
        }

        // roadblock
        if(typeof response.zones[52121] != 'undefined') {
            zoneIds.push(52121);
            openRoadBlock(false);
        }

        if(typeof response.zones[152649] !== 'undefined'){
            zoneIds.push(152649);
            $("#ngVirgul_970x280_alt").html(response.zones[152649].script).show();
        }


        if (typeof response.zones[52473] != 'undefined') {
            zoneIds.push(52473);
            if(typeof isHomePage !== 'undefined' && isHomePage === true){
                if(typeof window.homePageAd === 'undefined'){
                    $($('.news > .item').get($('.news > .item').length - 1)).remove();
                    window.homePageAd = true;
                }
                $('.ad').remove();
                $('<div class="ad">'+response.zones[52473].script+'</div>').insertAfter($('.news > .item').get(0));
            }
            else{
                $('#ngVirgul_300x250').empty().append(response.zones[52473].script);
            }
        }

        if (typeof response.zones[52474] != 'undefined') {
            zoneIds.push(52474);
            $('#ngVirgul_300x250_alt').show();
            $('#ngVirgul_300x250_alt').html(response.zones[52474].script);
            $('#ngVirgul_300x250_alt').css("margin-bottom", "10px");
        }

        if (typeof response.zones[52506] != 'undefined') {
            zoneIds.push(52506);
            $('#ngVirgul_970x285_2').empty().append(response.zones[52506].script).css({'margin': '10px auto'});
        }

        if(typeof response.zones[152769] !== 'undefined'){
            zoneIds.push(152769);
            $('#ngVirgul_970x285').empty().append(response.zones[152769].script).css({'margin-bottom': '10px', 'margin-top': '10px'})
        }

        if (typeof response.zones[153162] != 'undefined') {
            zoneIds.push(152769);
            $('#ngVirgul_970x90').empty().append(response.zones[153162].script).css({'margin': '10px auto'});
        }

        if (typeof response.zones[153163] != 'undefined') {
            zoneIds.push(153163);
            $('#ngVirgul_615x60').empty().append(response.zones[153163].script).css({'margin': '10px auto'});
        }

        if (typeof response.zones[153164] != 'undefined') {
            zoneIds.push(153164);
            $('#ngVirgul_600x150').empty().append(response.zones[153164].script).css({'margin': '10px auto'});
        }

        if (typeof response.zones[152646] !== 'undefined' && window.showRightAd === true){
            zoneIds.push(152646);
            $('#right-ad').remove();
            var w = window.innerWidth < 1500 ? 160 : 300;
            console.log('right tower:' + w);
            var d = $('<div id="right-ad" style="position:absolute; z-index: 1; width:'+w+'px;">');
            $('header').after(d);
            $('#right-ad').append(virgulPlayerAds.zones[152646].script);

            var t = isMoviePage ? 25 : 5;

            $('#right-ad').css({'top': ($('header').height() + t) + 'px', 'left': ($('.container').offset().left +  $('.container').width() +  13) + 'px'});
            $(window).resize(function(){
                $('#right-ad').css({'top': ($('header').height() + t) + 'px', 'left': ($('.container').offset().left +  $('.container').width() +  13) + 'px'});
            });
        }

        if (typeof response.zones[153161] !== 'undefined' && window.showLeftAd === true){
            zoneIds.push(153161);
            $('#left-ad').remove();
            var w = window.innerWidth < 1500 ? 160 : 300;
            var d = $('<div id="left-ad" style="position:absolute; z-index: 1; width:'+w+'px;">');
            $('header').after(d);
            $('#left-ad').append(virgulPlayerAds.zones[153161].script);

            var t = isMoviePage ? 25 : 5;

            $('#left-ad').css({'top': ($('header').height() + t), 'left': $('.container').offset().left - $('#left-ad').width() - 5});
            $(window).resize(function(){
                $('#left-ad').css({'top': ($('header').height() + t), 'left': $('.container').offset().left - $('#left-ad').width() - 5});
            });
        }

        if(typeof response.zones[46] !== 'undefined'){
            zoneIds.push(46);
            $('#feedback_all').hide();
            var ad = response.zones[46];
            window.pageskinAd = ad;


            if(ad.pageskinType === 'banner'){
                displayPageskin(ad);
            }
            else if(ad.pageskinType === 'dfpCode'){
                window.pageskinAdView = ad.view;
                $('#newAdSkinClickUrl').empty().append(ad.script);
            }
            else if(ad.pageskinType === 'htmlCode'){

                $('#newAdSkinClickUrl').empty().append(ad.script).show().css({'width': '100%'});
                displayPageskin(ad);

                if(isMoviePage){
                    $('#newAdSkinClickUrl').show().css({'top': '95px'});
                    $('.page-container').css('background-color','#fff');
                    var nav = $('.nav').get(0) ;
                    $(document).scroll(function(){
                        if(nav.getBoundingClientRect().bottom > 0){
                            $('#newAdSkinClickUrl').show().css({'top': $('header').get(0).getBoundingClientRect().bottom});
                        }
                        else{
                            $('#newAdSkinClickUrl').show().css({'top': 0});
                        }

                    });
                }
                else{
                    $('#newAdSkinClickUrl').show().css({'top': '91px'});
                    $(document).scroll(function(){$('#newAdSkinClickUrl').css('top',Math.max(90-$(window).scrollTop(),38)+'px')})
                }

            }
            else{
                displayPageskin(ad);
            }
        }

        if(isFirst){

            if(typeof response.zones[152676] !== 'undefined'){
                zoneIds.push(152676);
                $('#player_bottom_banner').empty().append(response.zones[152676].script);
                // $('.content-video').css({'margin-bottom': '100px'});
            }

            if(typeof response.zones[152630] !== 'undefined'){
                zoneIds.push(152630);
                $('.page-container').prepend('<div id="topBannerAd" style="margin: 0 auto;"></div>');
                $("#topBannerAd").css({'width':'970px', 'height': '100px', 'margin': '10px auto', 'margin-top': '180px'}).html(virgulPlayerAds.zones[152630].script);
            }

            //splash
            if (typeof response.zones[50] != 'undefined') {
                zoneIds.push(50);
                $('#splashAd').show();
                $('#splashAdScript').html(response.zones[50].script);
            }

            /*fullscreen reklam modeli*/
            if ( typeof response.zones[52486] != 'undefined' ){
                zoneIds.push(52486);
                var div = document.createElement('div');
                div.innerHTML = '';
                div.setAttribute('id', 'fullscreenAd');
                div.style.cssText = 'position: fixed;display: none;width: 100%;height: 100%;z-index: 2147483647;top: 0;left: 0;margin: 0;padding: 0;';
                $(div).append(response.zones[52486].script);
                if(response.zones[52486].script.indexOf("jQuery('#fullscreenAd').show()") > -1){
                    $(div).css({'display': 'block'});
                }
                $('body').append(div);
            }

            isFirst = false;
        }

        $('#extraCalls').append(response.extraCalls);

        if(zoneIds.length > 0){
            noktaZoneRequest(zoneIds.join('@'));
        }
    }

    window.addEventListener('load', function () {
        $('#ngVirgul_300x250').css("margin-bottom", "10px").show();

        virgulAd();

        $(window).scroll(function () {
            if (window.scrollY > 45) {
                $('#right-ad,#left-ad').css({'position':'fixed', 'top': '40px'});
            } else {
                if (isMoviePage) {
                    $('#right-ad,#left-ad').css({'position':'absolute', 'top': '110px'});
                } else {
                    $('#right-ad,#left-ad').css({'position':'absolute', 'top': '100px'});
                }

            }
        });

        setTimeout(function(){
            if(typeof comingAds == "undefined" || comingAds["adblock"] == "undefined"){

                console.log('criteo timeout');
                
                var s = document.createElement('script');
                s.src = 'https://static.criteo.net/js/ld/publishertag.js';

                s.onload = function(){
                    console.log('criteo onload');
                    window.Criteo = window.Criteo || {};
                    window.Criteo.events = window.Criteo.events || [];

                    window.CriteoAdblock = function(containerid, zoneid) {
                        var abp_slot = document.getElementById(containerid);
                        Criteo.events.push(function() {
                            Criteo.DisplayAcceptableAdIfAdblocked({
                                "zoneid": zoneid,
                                "containerid": containerid,
                                "overrideZoneFloor": false
                            });
                            abp_slot.style.width = abp_slot.getAttribute("size").split("x")[0]+"px";
                            abp_slot.style.height = abp_slot.getAttribute("size").split("x")[1]+"px";
                            window.addEventListener("message", function (e) {
                                if (e.data && e.data == "criteo-adblock-passback-" + zoneid){
                                    document.getElementById(containerid).style.display = "none";
                                }
                                else{
                                    return;
                                }
                            }, false);
                        });
                    };

                    $('#roadblock').empty().append('<div id="crt-1755896" size="970x250" style="margin-bottom:10px;"><script type="text/javascript">CriteoAdblock("crt-1755896", 1755896);'+'</scr'+'ipt></div>');

                    
                        var d = $('<div id="criteo-tower" style="position:absolute; z-index: 1; width:160px;"></div>');
                        $('header').after(d);
                        $('#criteo-tower').append('<div id="crt-1755895" size="160x600"><script type="text/javascript">CriteoAdblock("crt-1755895", 1755895);'+'</scr'+'ipt></div>');

                        var t = isMoviePage ? 25 : 5;

                        $('#criteo-tower').css({'top': ($('header').height() + t), 'left': $('.container').offset().left - $('#criteo-tower').width() - 5});
                        $(window).resize(function(){
                            $('#criteo-tower').css({'top': ($('header').height() + t), 'left': $('.container').offset().left - $('#criteo-tower').width() - 5});
                        });

                        var scrollLimit = $('header').outerHeight();
                        $(window).scroll(function(){
                            if (window.scrollY > scrollLimit) {
                                $('#criteo-tower').css({'position':'fixed', 'top': '0px'});
                            } else {
                                if (isMoviePage) {
                                    $('#criteo-tower').css({'position':'absolute', 'top': '110px'});
                                } else {
                                    $('#criteo-tower').css({'position':'absolute', 'top': '100px'});
                                }
                            }
                        });
                }

                document.body.appendChild(s);
            }
        }, 5000);

    });


</script>

<noscript id="deferred-styles">
