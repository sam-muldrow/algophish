<script type="text/javascript">
// 三茅网域名配置 start -----
var getCurrentDomain = function(){
    var _hostname = location.hostname, _damain_arr = _hostname.split('.'), _key = _damain_arr.length-2;
    return _damain_arr[_key];
}
var HOSTNAME = getCurrentDomain();
var DOMAIN = {
    www: location.protocol + '//www.hrloo.com',
    // dev: location.protocol + '//dev.' + HOSTNAME + '.com',
    zl: location.protocol + '//zl.hrloo.com',
    zp: location.protocol + '//zp.hrloo.com',
    zhaopin: location.protocol + '//zhaopin.hrloo.com',
    ios: location.protocol + '//ios.hrloo.com',
    //weixiaobao: location.protocol + '//weixiaobao.' + HOSTNAME + '.com',
    //soft: location.protocol + '//soft.' + HOSTNAME + '.com',
    wx: location.protocol + '//wx.' + HOSTNAME + '.com',
    passport: location.protocol + '//passport.hrloo.com',
    m: location.protocol + '//m.hrloo.com',
    files: location.protocol + '//files.hrloo.com',
   // msg: location.protocol + '//msg.' + HOSTNAME + '.com',
    api: location.protocol + '//api.hrloo.com',
    img: location.protocol + '//img.hrloo.com',
    //apidev: location.protocol + '//apidev.' + HOSTNAME + '.com',
    websocket: 'websocket.hrloo.com',
    static: location.protocol + '//static.hrloo.com',
};

var pos = 0;
for (var j in DOMAIN) {
    pos = DOMAIN[j].indexOf('.');
    DOMAIN[j] = DOMAIN[j].substring(0, pos) + "."  + HOSTNAME + '.com';
}
// console.info(DOMAIN.www);
// 三茅域名替换配置 end -----
</script>
