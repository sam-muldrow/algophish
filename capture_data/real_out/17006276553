		window._taboola = window._taboola || [];
		if (g_ad.get_ad_type() == 'mobile') {
			// mobile
			$('#taboola-mid-mobile-homepage-thumbnails').css('display', 'block');
			$('#taboola-mid-homepage-thumbnails').css('display', 'none');
			_taboola.push({
				mode: 'alternating-rec-reel-hp',
				container: 'taboola-mid-mobile-homepage-thumbnails',
				placement: 'Mid Mobile Homepage Thumbnails',
				target_type: 'mix'
			});
		} else {
			// desktop
			$('#taboola-mid-mobile-homepage-thumbnails').css('display', 'none');
			$('#taboola-mid-homepage-thumbnails').css('display', 'block');
			_taboola.push({
				mode: 'alternating-thumbs-feed-01-5x1-hp-a',
				container: 'taboola-mid-homepage-thumbnails',
				placement: 'Mid Homepage Thumbnails',
				target_type: 'mix'
			});
		}
		_taboola.push({
			mode: 'alternating-thumbnails-a',
			container: 'taboola-below-homepage-thumbnails',
			placement: 'Below Homepage Thumbnails',
			target_type: 'mix'
		});
