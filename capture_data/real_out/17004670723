<script>
	
	(function()
	{
		if ( !csmJs.pageData.jwLoaded )
		{
			csmJs.pageData.jwLoaded = true; // Prevent other player loads ASAP
			
			var jwPlayerSrc = "/extension/csm_base/design/csm_design/javascript/jwplayer/jwplayer.js";
			
			var youboraSrc = 'https://smartplugin.youbora.com/v5/javascript/jwplayer/5.3.2/sp.min.js';
			jQuery.getScript( jwPlayerSrc, function ()
			{
				jwplayer.key = 'StFzmiKyFQjexHHj3nxbiC7hVwCy5nde6zcE5RgbFJ+BqZ9M';
				jQuery.getScript(youboraSrc, function()
				{
					initializeJwPlayer();
					$( window ).trigger( 'jwscriptLoaded' );
				});
			});
		}
		else
		{
			$( window ).on('jwscriptLoaded', initializeJwPlayer);
		}

		function initializeJwPlayer()
		{
			var isSsl = true;
	
			var instance = 'embed-audio-1164711-0';
			var file = 'https://media.csps.com/csm/wwwt/2023/wwwt_2342.mp3';
			var headline = 'Political narratives get loud. How we lower the volume.';
			var remoteId = 'ac9bc9b53ef64d0f7a0dd422d7702ab8';
			var instanceTransactionCode = 'CSM:Audio';
			if ( 'Episode:1164711'.length > 0 )
			{				instanceTransactionCode = instanceTransactionCode.concat(':', 'Episode:1164711');
			}	
			var suppressCookies = true;
			try
				{
					suppressCookies = !csmJs.util.haveConsent('FUNCTIONAL');
				}
			catch(e)
				{
					console.warn( "Consent check failed:" + e.message );
				}


			var player = jwplayer( instance )
				.setup(
					{
						file : file,
						width: '100%',
						height: '30px',
						doNotSaveCookies: suppressCookies,
						skin: {
							name: 'csm-basic'
						},
						youbora: {
							media:
								{
									title: headline,
									resource: file
								},
							properties:
								{
									content_id: remoteId
								}
						}
					})
				.on( 'ready', function()
				{
					var $controlsContainer = $( this.getContainer() ).find( '.jw-controlbar' );
					var $extraGroup = $( this.getContainer() ).parent().find( '.jw-controlbar-extra-group' );

					$controlsContainer.append( $extraGroup );
					$extraGroup.removeClass( 'stash' );

					// forward 30s button
					var $forward30Btn = $( '<div>' )
						.addClass( 'jw-icon jw-icon-inline jw-button-color jw-reset jw-icon-forward icon-jwplayer-forward-30s' )
						.attr({
							'role' 		 : 'button',
							'tabindex' 	 : "0",
							'aria-label' : 'Forward 30s'
						})
						.on( 'click', function(){
							jwplayer( instance ).seek( jwplayer( instance ).getPosition() + 30 );
						});
                    
						
												                            						                    
                    $controlsContainer.find( '.jw-controlbar-right-group' ).append( $forward30Btn );
				});

			if (typeof $YB === "object") {
				var plugin = new $YB.plugins.Jwplayer7( player,
					{
						accountCode: 'firstchurch',
						enableAnalytics: true,
						httpSecure: isSsl,
						transactionCode: instanceTransactionCode
					});
			}
		}
	})();
    
</script>

