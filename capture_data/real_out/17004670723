						<input id="equa" class="newsletter-checkbox" type="checkbox" name="equaled">
						<label for="equa">Culture &amp; Learning</label>
						<p>A weekly update on music, movies, cultural trends, and education solutions.</p>
						<p class="send-day">Every Thursday</p>
					</section>
				</div>
				<div class="small-12 small-centered columns">
					<section class="newsletter-container">
						<input id="cspe" class="newsletter-checkbox" type="checkbox" name="spirituallens">
						<label for="cspe">Christian Science Perspective</label>
						<p>The three most recent Christian Science articles with a spiritual perspective.</p>
						<p class="send-day">Every Monday</p>
					</section>
				</div>
				<div class="text-center">
					<button class="button_link" data-close aria-label="Close modal" type="button">Close</button>
				</div>
			</form>
			<button class="close-button" data-close aria-label="Close modal" type="button">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	</section>

	<script type="text/javascript">
		var sfid;

		try
		{
			sfid = _satellite.getVar('Query String - SFMC Subscriber ID');
		}
		catch ( error )
		{
			console.warn( error );
		}

		function triggerNewsletterModal()
		{
			$( '#newsletter-listing' ).foundation();
			$( '.newsletter-listing-btn' ).on( 'click', function ( event )
			{
				event.preventDefault();
				$( '#newsletter-listing' ).foundation( 'open' );
			});
		}

		function submitForm(thisForm)
		{
			event.preventDefault();
			var newsletterEmail = $(thisForm).find('input[type="email"]').val(),
				rootURL = 'https://christianscience.secure.force.com/freenewslettermonitor?email=',
				newsletterSections = getCheckedNewsletters(),
				trackingParam = getParam(thisForm);

			if ( newsletterEmail != undefined )
			{
				var url = rootURL + encodeURIComponent(newsletterEmail) + newsletterSections + trackingParam;
				window.location = url;
			}
		}

		function getCheckedNewsletters()
		{
			var newsletterSections = '';
			$('#newsletter-listing input[type="checkbox"]').each(function ()
			{
				if( $( this ).prop( 'checked' ) == true )
				{
					newsletterSections = newsletterSections + '&' + $(this).attr('id') + '=True';
				}
			});
			return newsletterSections;
		}

		function getParam( form )
		{
			var param = setDefaultParam();
			var newsletterBannerParent = $(form).parents('.newsletter-banner').parent();
			if (newsletterBannerParent.hasClass('param-added'))
			{
				param = '&icid=mkt:web:' + newsletterBannerParent.attr('data-param');
			}
			return param;
		}

		function setDefaultParam()
		{
			var defaultParam = '&icid=mkt:web:banner',
				$currentSection = $( '.newsletter-banner' );

			if ( $currentSection )
			{
				if ( $currentSection.hasClass( 'books' ) )
				{
					defaultParam = '&icid=mkt:web:books';
				}
				else if ( $currentSection.hasClass( 'politics' ) )
				{
					defaultParam = '&icid=mkt:web:politics';
				}
				else if ( $currentSection.hasClass( 'weekend' ) )
				{
					defaultParam = '&icid=mkt:web:wknd';
				}
				else if ( $currentSection.hasClass( 'culture-learning' ) )
				{
					defaultParam = '&icid=mkt:web:culture-learning';
				}
				else if ( $currentSection.hasClass( 'science' ) )
				{
					defaultParam = '&icid=mkt:web:science-nature';
				}
				else if ( $currentSection.hasClass( 'csperspective' ) )
				{
					defaultParam = '&icid=mkt:web:csp';
				}
				else if ( $currentSection.hasClass( 'commentary' ) )
				{
					defaultParam = '&icid=mkt:web:commentary';
				}
				else if ( $currentSection.hasClass( 'todays-highlights' ) )
				{
					defaultParam = '&icid=mkt:web:todays-highlights';
				}
			}
			if ($('body').hasClass('ezc-frontpage'))
			{
				defaultParam = '&icid=mkt:web:frontpage';
			}
			return defaultParam;
		}

		if ( $( '.newsletter-list' ).length > 1 )
		{
			$( '.newsletter-list' )[1].remove();
		}

		if (window.location.href.indexOf('kwc2c') > -1)
		{
			$(".newsletter-banner").hide();
		}

		$( '#newsletter-listing input[type="checkbox"]' ).on( 'click', function()
		{
			if( $( this ).prop( 'checked' ) === true )
			{
				$( this ).parent().addClass( 'clicked' );
			}
			else
			{
				$( this ).parent().removeClass( 'clicked' );
			}
		});

		$( '.newsletter-banner:not(.subscribe):not(.free-trial) form' ).on( 'submit', function ()
		{
			submitForm( this );
			$('.form-container form').html('<div style="font-weight:600;" class="text-center">Thank you for signing up for a free Monitor Newsletter!</div>');
		});

		$( document ).ready( function()
		{
			triggerNewsletterModal();

		        if( $('body').hasClass('ezn-1156735') )
		        {
			        $('.newsletter-banner').remove();
		        }

			if ( sfid && typeof csmJs.pageData.section === 'object')
			{
				var pagePath = csmJs.pageData.sections;

				if ( pagePath.indexOf( 'Books' ) > -1 )
				{
					csmJs.cta.changeBanner( 'books' );
				}
				else if ( pagePath.indexOf( 'Politics' ) > -1 )
				{
					csmJs.cta.changeBanner( 'politics' );
				}
				else if ( pagePath.indexOf( 'Education' ) > -1 ||
						  pagePath.indexOf( 'The Culture' ) > -1 )
				{
					csmJs.cta.changeBanner( 'culture-learning' );
				}
				else if ( pagePath.indexOf( 'Science' ) > -1 ||
						  pagePath.indexOf( 'Environment' ) > -1 ||
						  pagePath.indexOf( 'Technology' ) > -1 )
				{
					csmJs.cta.changeBanner( 'science' );
				}
				else if ( pagePath.indexOf( 'A Christian Science Perspective' ) > -1 )
				{
					csmJs.cta.changeBanner( 'csperspective' );
				}
				else if ( pagePath.indexOf( 'Commentary' ) > -1 )
				{
					csmJs.cta.changeBanner( 'commentary' );
				}
				else
				{
					csmJs.cta.changeBanner( 'weekend' );
				}
			}
		});
	</script>
</section>
		</div>
</div>

