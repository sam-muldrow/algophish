                function time_range(beginTime,endTime){
                    var t = this;
                    var strb = beginTime.split (":");
                    if (strb.length != 6) {
                        return false;
                    }

                    var stre = endTime.split (":");
                    if (stre.length != 6) {
                        return false;
                    }

                    var b = new Date ();
                    var e = new Date ();
                    var n = new Date ();

