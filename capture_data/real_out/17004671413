                    b.setHours (strb[3]);
                    b.setMinutes (strb[4]);
                    b.setSeconds (strb[5]);

                    e.setFullYear (stre[0],stre[1],stre[2]);
                    e.setHours (stre[3]);
                    e.setMinutes (stre[4]);
                    e.setSeconds (stre[5]);

