var vLang = "cht";

			function bannerPlayVideo(videolink,posterlink){
 				if ( document.readyState == 'complete' ){ 
					if(posterlink != ''){
						$("#div_videoHolder").attr('data-poster', posterlink);
					}else{
						$("#div_videoHolder").attr('data-poster', '');
					}

					$("#div_videoHolder").attr('data-link', videolink);

					$("#div_videoHolder").find(".videoCaption").empty();
					$("#div_videoHolder").find(".videoCaption").html($(this).attr('title'));
					$('.video_popup').popup('show');

					$("#videotbn").unbind("click");
				 }
			}

