<script type="text/javascript" language="javascript">
var ready = false ;
var mainHighlightObj = new Object();
var mainHighlightLoaded = 0;
mainHighlightObj = {
	content:[]
};

for(var i=1; i<=5; i++) {
	var script_EWHPRTxC = document.createElement('script');	
	onLoadBannerScript(script_EWHPRTxC, i);
	script_EWHPRTxC.src = "/bannerad/js/zone/sdceo_zone_EWHPRT" + i + "C_banner.js?date=" + sdceo_util_getNow();
	document.head.appendChild(script_EWHPRTxC);
}

function onLoadBannerScript(mScript, c_i){
	mScript.onload = function () {
		switch(c_i) {		
			case 1: 
				getBanner_object(sdceo_getZoneBanner_EWHPRT1C(1), c_i);
				mainHighlightLoaded++;
				break;
			case 2: 
				getBanner_object(sdceo_getZoneBanner_EWHPRT2C(1), c_i);
				mainHighlightLoaded++;
				break;
			case 3: 
				getBanner_object(sdceo_getZoneBanner_EWHPRT3C(1), c_i);
				mainHighlightLoaded++;
				break;
			case 4: 
				getBanner_object(sdceo_getZoneBanner_EWHPRT4C(1), c_i);
				mainHighlightLoaded++;
				break;
			case 5: 
				getBanner_object(sdceo_getZoneBanner_EWHPRT5C(1), c_i);
				mainHighlightLoaded++;
				break;
		}
	};
	mScript.onerror = function () {
		checkHighlightBox(c_i);
		mainHighlightLoaded++;		
	};
}

function sdceo_bannerAd_EWHPRTxC_transform(sdceoDataObj)
{	
	var zoneObj = {
		startDate: translate_date_format(sdceoDataObj.BannerAdList[0].onlineTime), 
		endDate: translate_date_format(sdceoDataObj.BannerAdList[0].offlineTime), 
		shortTitle:'',
		title: sdceoDataObj.BannerAdList[0].title,
		description: sdceoDataObj.BannerAdList[0].description,
		img: sdceoDataObj.BannerAdList[0].imagePathLarge,
		thumbnail: sdceoDataObj.BannerAdList[0].imagePathSmall,
		imgAlt: sdceoDataObj.BannerAdList[0].imageAltText,
		flv:'',
		link: sdceoDataObj.BannerAdList[0].url, 
		locCode:'', 
		camCode:'', 
		subCamCode:'', 
		target: sdceoDataObj.BannerAdList[0].target,
		parameter: sdceoDataObj.BannerAdList[0].targetWindowParameters
	}
	return zoneObj;
}

function getBanner_object(mObj, mZone) {
	try {
		if(mObj.BannerAdList.length > 0){
			var mCnt = parseInt(mZone-1);
			mainHighlightObj.content[mCnt] = sdceo_bannerAd_EWHPRTxC_transform(mObj);	
			setHighlightBox(mainHighlightObj.content[mCnt], mZone);
		}else{
			checkHighlightBox(mZone);
		}
	}
	catch(err) {
		checkHighlightBox(mZone);
	}
}

function translate_date_format(inDate) {
  // Sample 2019/12/08 17:00 -> 08/12/2019 17:00
	var str_yyyy="", str_MM="", str_dd="", str_hh="", str_mm="", str="";
	if(inDate) {
		if(inDate.split(" ")) {
			if(inDate.split(" ")[0]) {
				str_yyyy = inDate.split(" ")[0].split("/")[0];
				str_MM = inDate.split(" ")[0].split("/")[1];
				str_dd = inDate.split(" ")[0].split("/")[2];
			}
			if(inDate.split(" ")[1]) {
				str_hh = inDate.split(" ")[1].split(":")[0];
				str_mm = inDate.split(" ")[1].split(":")[1];
			}
		}
	}
	if(str_yyyy!="" && str_MM!="" && str_dd!="" && str_hh!="" && str_mm!="")
		str = str_dd + "/" + str_MM + "/" + str_yyyy + " " + str_hh + ":" + str_mm;

	return str;
}

function setHighlightBox(mObj, idx){	
	var indexHighlight = $(".indexHighlightSlider-"+idx);
	try {	
		if(mObj){
			if(mObj.link){
				indexHighlight.find('a').attr('href', mObj.link);
				indexHighlight.find('a').attr('target', mObj.target);
			}else{
				indexHighlight.find('a').attr('href', 'javascript:;');
				indexHighlight.find('a').css('cursor', 'default');
			}
			indexHighlight.find('a').find('img.hidden-xs').attr('src', mObj.img);
			indexHighlight.find('a').find('img.visible-xs').attr('src', mObj.thumbnail);
		}else{			
			checkHighlightBox(idx);
		}	
	}
	catch(err) {
		checkHighlightBox(idx);
	}
}
function checkHighlightBox(mZoneSlide){

	if($("#mainVisual").hasClass("slick-initialized")){
		var sInx = $(".indexHighlightSlider-"+mZoneSlide).last().attr("data-slick-index");
		$("#mainVisual").slick("slickRemove", sInx);
	}else{
		$(".indexHighlightSlider-"+mZoneSlide).remove();  
	} 
}

</script> 
