			<script>
			function sdceo_bannerAd_EWHPSL1C_transform(sdceoDataObj)
			{	
				initSpotlightComingEventCustom(sdceoDataObj);
				if(sdceoDataObj.BannerAdList.length < 1)
					return;
			
				var bannerPromos = document.getElementsByClassName("bannerPromo_EWHPSL1C");
				for (var i=0;i<bannerPromos.length;i++){
					var bannerPromo = bannerPromos[i];
                    var isVideo =sdceoDataObj.BannerAdList[0].url.toString().indexOf("javascript:") > -1;
                    
                    if(isVideo){
                        bannerPromo.setAttribute("onClick", sdceoDataObj.BannerAdList[0].url);                                      
                    }else{
                        bannerPromo.setAttribute("onClick", "openNewWindow(\'"+sdceoDataObj.BannerAdList[0].url+"\',\'"+sdceoDataObj.BannerAdList[0].target+"\',\'"+sdceoDataObj.BannerAdList[0].targetWindowParameters+"\')");
                    }

					
					var img = document.createElement('img'); 
					img.alt =  sdceoDataObj.BannerAdList[0].imageAltText;
					
					var isMobile = bannerPromo.parentNode.classList.toString().indexOf("mobileSpotlightBox") > -1;
					
					img.src =  isMobile ?  
						( sdceoDataObj.BannerAdList[0].imagePathSmall  != "" && sdceoDataObj.BannerAdList[0].imagePathSmall != null ?
						sdceoDataObj.BannerAdList[0].imagePathSmall : sdceoDataObj.BannerAdList[0].imagePathLarge )
						: 
						( sdceoDataObj.BannerAdList[0].imagePathLarge  != "" && sdceoDataObj.BannerAdList[0].imagePathLarge != null ?
						sdceoDataObj.BannerAdList[0].imagePathLarge : sdceoDataObj.BannerAdList[0].imagePathSmall )
					
					var imgWidth = isMobile ?  
						( sdceoDataObj.BannerAdList[0].imageSmallWidth  != "" && sdceoDataObj.BannerAdList[0].imageSmallWidth != null ?
						sdceoDataObj.BannerAdList[0].imageSmallWidth : sdceoDataObj.BannerAdList[0].imageLargeWidth )
						: 
						( sdceoDataObj.BannerAdList[0].imageLargeWidth  != "" && sdceoDataObj.BannerAdList[0].imageLargeWidth != null ?
						sdceoDataObj.BannerAdList[0].imageLargeWidth : sdceoDataObj.BannerAdList[0].imageSmallWidth );
						
					var imgHeight = isMobile ?  
						( sdceoDataObj.BannerAdList[0].imageSmallHeight  != "" && sdceoDataObj.BannerAdList[0].imageSmallHeight != null ?
						sdceoDataObj.BannerAdList[0].imageSmallHeight : sdceoDataObj.BannerAdList[0].imageLargeHeight )
						: 
						(  sdceoDataObj.BannerAdList[0].imageLargeHeight  != "" && sdceoDataObj.BannerAdList[0].imageLargeHeight != null ?
						sdceoDataObj.BannerAdList[0].imageLargeHeight : sdceoDataObj.BannerAdList[0].imageSmallHeight );
					
					var hasCustomWidth = imgWidth != "" && imgWidth != null;
					var hasCustomHeight = imgHeight != "" && imgHeight != null;
					
					if( hasCustomWidth && hasCustomHeight ){
						img.width = imgWidth;
						img.height = imgHeight;
					}
					bannerPromo.appendChild(img); 
					}
			}
			
			var script = document.createElement('script');
			script.onload = function () {
				sdceo_bannerAd_EWHPSL1C_transform(sdceo_getZoneBanner_EWHPSL1C(1));
			};
			script.onerror = function () {
				sdceo_bannerAd_EWHPSL1C_transform(JSON.parse('{"BannerAdList":[]}'));
			};
			script.src = "/bannerad/js/zone/sdceo_zone_EWHPSL1C_banner.js?date=" + sdceo_util_getNow();
			document.head.appendChild(script);
		</script>	
		
