<script>
$(function(){
    var d = document.createElement('div')
    d.style['position'] = 'sticky';
    stickySupported = d.style['position'] === 'sticky'
    if(!stickySupported) {
    $('.boomerang_banner_wrapper').removeClass("sticky");
    $(window).scroll(function() {
    if ($(this).scrollTop() > 325 && $('#boomerang_banner').is(':visible')){
        $('.boomerang_banner_wrapper').addClass("sticky");
        $('#main-container').addClass("bumpDown");

      }
      else{
        $('.boomerang_banner_wrapper').removeClass("sticky");
        $('#main-container').removeClass("bumpDown");
      }
    });
}
});
</script>
<script>
$("#close").click(closeBanner);
showBanner();
function showBanner() {
  $('#boomerang_banner').slideDown(600);
}

function closeBanner(){
    $('#boomerang_banner').slideUp(600);
    $('#main-container').removeClass("bumpDown");
}
$("#bcal_logo").mouseover(boomerang_calendar_logo_mouseover);
$("#b4g_logo").mouseover(boomerang_gmail_logo_mouseover);
$("#b4o_logo").mouseover(boomerang_outlook_logo_mouseover);
$("#emg_logo").mouseover(email_game_logo_mouseover);


function boomerang_calendar_logo_mouseover(){
	highlight_boomerang_calendar_logo();
	display_boomerang_calendar_details();
    $(".prod_headline").css("margin-top", "25px");
}

function boomerang_gmail_logo_mouseover(){
	highlight_boomerang_gmail_logo();
	display_boomerang_gmail_details();
    $(".prod_headline").css("margin-top", "25px");
    $(".bottom_prod_name").css("margin-top", "70px");
}


function boomerang_outlook_logo_mouseover(){
	highlight_boomerang_outlook_logo();
	display_boomerang_outlook_details();
    $(".prod_headline").css("margin-top", "25px");
    $(".bottom_prod_name").css("margin-top", "70px");
}


function email_game_logo_mouseover(){
	highlight_email_game_logo();
	display_email_game_details();
    $(".prod_headline").css("margin-top", "100px");
    $(".bottom_prod_name").css("margin-top", "0px");
}

function unhighlight_all_logos(){
	$("#b4g_logo img").attr("src", "img/Boomerang_mono.png");
	$("#b4o_logo img").attr("src", "img/BoomerangOutlook_mono.png");
	$("#emg_logo img").attr("src", "img/EmailGame_mono.png");
	$("#bcal_logo img").attr("src", "img/BCal_mono.png");
}

function highlight_boomerang_calendar_logo(){
	unhighlight_all_logos();
	$("#bcal_logo img").attr("src", "img/BCal_color.png");
}

function highlight_boomerang_outlook_logo(){
	unhighlight_all_logos();
	$("#b4o_logo img").attr("src", "img/BoomerangOutlook_color.png");
}


function highlight_boomerang_gmail_logo(){
	unhighlight_all_logos();
	$("#b4g_logo img").attr("src", "img/Boomerang_color.png");
}

function highlight_email_game_logo(){
	unhighlight_all_logos();
	$("#emg_logo img").attr("src", "img/EmailGame_color.png");
}

function hide_all_product_details(){
	$("#bcal_prod_details").hide();
	$("#b4g_prod_details").hide();
	$("#b4o_prod_details").hide();
	$("#emg_prod_details").hide();
}

function display_boomerang_calendar_details(){
	hide_all_product_details();
	$("#bcal_prod_details").show();
}


function display_boomerang_gmail_details(){
	hide_all_product_details();
	$("#b4g_prod_details").show();
}
function display_boomerang_outlook_details(){
	hide_all_product_details();
	$("#b4o_prod_details").show();
}
function display_email_game_details(){
	hide_all_product_details();
	$("#emg_prod_details").show();
}

</script>

