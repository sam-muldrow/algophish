    <script type="text/javascript">
        var BaseURL = 'https://www.swiftng.com';

        function showLoader() {
            $('#cover-spin').show();
        }

        $(document).ready(function () {

            $("#loadquick").prop("disabled", true);
            $("#accountid").keyup(function () {

                var username = $(this).val().trim();

                if (username != '') {

                    $.ajax({
                        url: 'https://www.swiftng.com' + '/Account/ValidateQuickrechageLogon?userId=' + username,
                        type: 'get',
                        cache: false,
                        data: { username: username },
                        beforeSend: function () {
                            document.getElementById('loader').style.display = "inline";
                        },

                        success: function (response) {

                            if (response === 'Invalid') {

                                document.getElementById('successhelp').style.display = "none";

                                document.getElementById('invalidhelp').style.display = "block";
                                $("#loadquick").prop("disabled", true);
                            } else if(response === 'Success') {

                                document.getElementById('invalidhelp').style.display = "none";

                                document.getElementById('successhelp').style.display = "block";
                                $("#loadquick").prop("disabled", false);
                            }
                        },

                        complete: function () {
                            document.getElementById('loader').style.display = "none";
                        }
                    });
                } else {

                    document.getElementById('successhelp').style.display = "none";

                    document.getElementById('invalidhelp').style.display = "block";


                    $("#loadquick").prop("disabled", true);
                }

            });

        });



    </script>
