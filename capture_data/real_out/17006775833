    <script>

        $(document).ready(
            $('form').on('submit', function () {

                $(this).find("button[type=submit").empty().append("<span class='spinner-border spinner-border-sm'></span> Loading...");
                $(this).find("button[type=submit").attr('disabled', true);

                if ($('form').attr("id") == "Form1") {

                    $(this).find("button[type=submit").empty().append(" Submit...");
                    $(this).find("button[type=submit").attr('disabled', false);





                    $("#KYCUploadIdCard").change(function () {
                        if (document.getElementById("KYCUploadIdCard").files[0] != undefined) {
                            var idcardsize = document.getElementById("KYCUploadIdCard").files[0].size;
                            var idcardtype = document.getElementById("KYCUploadIdCard").files[0].name;



                            if (idcardsize > 5242880) {

                                $("#idcard").append("Please change File")


                                $(this).find("button[type=submit").attr('disabled', true);
                            }
                        }
                    })


                }
            })

        )

        $('a:contains("Back"), a:contains("Cancel")').on('click', function () {
            $(this).html('Loading...');
            $(this).prepend("<span class='spinner-border spinner-border-sm'></span>  ");
            $(this).addClass("disabled");
        })

        $('.qrclick').on('click', function () {
            var modal1 = document.getElementById('swiftWebsiteModal');
            modal1.style.display = "none";
            var modal2 = document.getElementById('bankTransferModal');
            modal2.style.display = "none";
            $('.quick-recharge-button').cick();
        })

    </script>


    <script>


        var app = new Vue({
            el: "#app",
            data: {

                questionIndex: 0,
                userResponses: [],
                isActive: false,
                questions: [],
                plans: [],
                Question: "",
                selectoption: false,
                increaseModal: "modal-dialog",
                url: "https://www2.swiftng.com:8096/",
                selected: "Please select one",
                urltest:"http://localhost:51505/",
                urlsession: "https://www.swiftng.com",
               // selected: false,
                planexist: false,
                ready :true

            },

            created: function () {


                fetch(this.url + "api/questions").then((data) => data.json()).then((res) => {
                    this.questions = res;

                    this.userResponses = Array(this.questions.length).fill(null);
                //    console.log(this.questions)
                });
            },
            filters: {
                charIndex: function (i) {
                    return String.fromCharCode(97 + i);
                }
            },
			    computed: {
                restplans: function () {
                    if (this.plans.length > 1) {
                        return this.plans.slice(1, this.plans.length)
                    }
                    return null;
                }
            },

            methods: {

			 enablenext: function () {
                    document.getElementById("frontq").disabled = false;
                },

                restart: function () {
                    this.increaseModal = "modal-dialog";
                    this.questionIndex = 0;
                    this.userResponses = Array(this.questions.length).fill(null);
                    this.planexist = false;
					this.selected = "Please select one";

                },
                selectOption: function (index) {


                    Vue.set(this.userResponses, this.questionIndex, index);
                  // console.log(this.userResponses);

                    this.ready= false;
                },
                next: function () {


                   this.ready = true;
                    if (this.questionIndex < this.questions.length) {

                    this.questionIndex++;
                 //      console.log(this.questionIndex)
                    }
                    if (this.questionIndex >= this.questions.length) {

                        this.planexist = true;
                        this.increaseModal = 'modal-dialog modal-lg';
                             if ((this.selected != "Mainland") && (this.selected != "Surulere") && (this.selected != "Lekki")) {
                            this.userResponses[1] = 3;
                        } else {
                            this.userResponses[1] = 4;
                        }
                            let OptionIds = this.userResponses.toString();
                            axios.get(this.url + '/api/suggest', {
                                'params': { optIDs: OptionIds },

                            }).then((res) => {
                              this.plans = res.data;
                            if (this.plans.length > 0) {


                               var plandata = this.plans[0].name.trim() +"("+this.plans[0].Data+")";
                                this.selectplan(plandata, this.plans[0].Amount)
                            } else {
                                this.planexist = false;
                            }
                            });


                    }
                },
                selectplan: function (planname, price) {

                 let coll = document.getElementsByClassName('plan subtitle planselected');
                    if (this.plans.length > 1) {
                        if (coll.length > 0) {
                            for (var i = 0; i < coll.length; i++) {
                                coll[i].className = 'plan subtitle ';
                            }

                            document.getElementById(planname).className += 'planselected';
                        }
                    };

                    axios.post(this.urlsession + '/Home/CreatePlanSession', {
                        name: planname,
                        cost: price
                    },

                    ).then((res) => { });
                },
                prev: function () {
                    if (this.questions.length > 0) this.questionIndex--;
                },
                // Return "true" count in userResponses
                score: function () {
                    if (this.questionIndex >= this.questions.length) {
                        let OptionIds = this.userResponses.toString();

                        axios.get(this.url + 'api/suggest', {
                            'params': { optIDs: '1,2,3' },

                        }).then((res) => {
                            this.plans = res.data;
                            //console.log(this.plans)

                        })
                        return this.plans;
                    }
                }
            }
        });

    </script>
        <script>

            $('#suggestionModal').on('show.bs.modal', function (e) {

                var url = "/Home/LoadWebsiteProducts";
                $.get(url, function (data) {

                    $('#websiteproducts').html(data);

                });
            })
        </script>

