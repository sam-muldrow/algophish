<script type="text/javascript">
  window.onclick = function (event) {
    var unlimitedModal = document.getElementById("unlimitedModal");
    var supportModal = document.getElementById("supportModal");
    var broadbandModal = document.getElementById("broadbandModal");
    if (
      event.target === unlimitedModal ||
      event.target === supportModal ||
      event.target === broadbandModal
    ) {
      unlimitedModal.style.display = "none";
      supportModal.style.display = "none";
      broadbandModal.style.display = "none";
    }
  };

  function showModal(modalToShow) {
    var modal = document.getElementById(modalToShow);
    modal.style.display = "block";
  }
</script>




