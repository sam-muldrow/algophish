							class="bottom-text"
							v-if="'footer_texts' in options['option_' + (selected_index + 1)] && typeof options['option_' + (selected_index + 1)].footer_texts !== 'undefined' && options['option_' + (selected_index + 1)].footer_texts !== undefined"
