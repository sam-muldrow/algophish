					:data-campaign="typeof options['option_' + (selected_index + 1)].campaign !== 'undefined' ? options['option_' + (selected_index + 1)].campaign : '' "
					:data-campaign-marker="typeof options['option_' + (selected_index + 1)].campaignMarker !== 'undefined' ? options['option_' + (selected_index + 1)].campaignMarker : 'WDG~en-us~homepage~~~trSrcCookieValue' "
					data-aswparam-placeholder="">

					<span>Buy&nbsp;now</span>
				</a>
				
