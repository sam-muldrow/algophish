  if($(document).scrollTop()>=$('.wrap_head').height()){
    $('.wrap_head').addClass('head_white');
  }else{
    $('.wrap_head').removeClass('head_white');
  }
  $(window).scroll(function(event){
    if($(document).scrollTop()>=$('.wrap_head').height()){
      $('.wrap_head').addClass('head_white');
    }else{
      $('.wrap_head').removeClass('head_white');
    }
  })
