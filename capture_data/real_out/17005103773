    <script type="text/javascript">
      let mql = window.matchMedia('(min-width: 720px)');
function loadWistia () {
    if( document.querySelectorAll(`script[src="https://fast.wistia.com/assets/external/E-v1.js"]`).length <= 0 && mql.matches) {
        const theScript = document.createElement('script');
        theScript.type = 'text/javascript';
        theScript.src = 'https://fast.wistia.com/assets/external/E-v1.js';
        const container = document.querySelector(".main-banner .container");
        container.appendChild(theScript);
   }
}
 loadWistia ();

mql.addListener(loadWistia);
    </script>
    

