 }

function redirect() {
setTimeout(function () { window.open('https://www.powtoon.com/lp/black-friday/?itp_source=banner&itp_medium=hp&itp_campaign=black_friday_2023', '_blank'); }, 250);
};

setTimeout(createBannerWork(), 500);


// Countdown to event (black friday)
// Set the date we're counting down to
var countDownDate = new Date(Date.UTC(2022, 11, 5, 5, 0, 0)).getTime();


var x = setInterval(function() {

    // Get todays date and time
    var now = new Date().getTime();
    
    // Find the distance between now and the count down date
    var distance = countDownDate - now;
    
    // Time calculations for days, hours, minutes and seconds
    var days = Math.floor(distance / (1000 * 60 * 60 * 24));
    var dayZero = '';
    if (days < 10) {
        var dayZero = "0";
    }
    var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    var hourZero = '';
    if (hours < 10) {
        var hourZero = "0";
    }
    var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    var minutesZero = '';
    if (minutes < 10) {
        var minutesZero = "0";
    }
    var seconds = Math.floor((distance % (1000 * 60)) / 1000);
    
    // Output the result in an element with id="demo"
    document.getElementById("friday-day").innerHTML = dayZero + days + "<br><p>DAY</p>";
    document.getElementById("friday-hour").innerHTML = hourZero + hours + "<br><p>HOUR</p>";
    document.getElementById("friday-min").innerHTML = minutesZero + minutes + "<br><p>MIN</p> ";
    
    // If the count down is over, write some text 
    if (distance < 0) {
        clearInterval(x);
        document.getElementById("friday-count").innerHTML = "";
    }

}, 1000);

// Countdown to event (black friday)
// Set the date we're counting down to
var countDownDate2 = new Date(Date.UTC(2022, 11, 5, 5, 0, 0)).getTime();


var x2 = setInterval(function() {

    // Get todays date and time
    var now2 = new Date().getTime();
    
    // Find the distance between now and the count down date
    var distance2 = countDownDate2 - now2;
    
    // Time calculations for days, hours, minutes and seconds
    var days2 = Math.floor(distance2 / (1000 * 60 * 60 * 24));
    var dayZero2 = '';
    if (days2 < 10) {
        var dayZero2 = "0";
    }
    var hours2 = Math.floor((distance2 % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    var hourZero2 = '';
    if (hours2 < 10) {
        var hourZero2 = "0";
    }
    var minutes2 = Math.floor((distance2 % (1000 * 60 * 60)) / (1000 * 60));
    var minutesZero2 = '';
    if (minutes2 < 10) {
        var minutesZero = "0";
    }
    var seconds2 = Math.floor((distance2 % (1000 * 60)) / 1000);
    
    // Output the result in an element with id="demo"
    document.getElementById("friday-day2").innerHTML = dayZero2 + days2 + "<br><p>DAY</p>";
    document.getElementById("friday-hour2").innerHTML = hourZero2 + hours2 + "<br><p>HOUR</p>";
    document.getElementById("friday-min2").innerHTML = minutesZero2 + minutes2 + "<br><p>MIN</p> ";
    
