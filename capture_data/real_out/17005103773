$( document ).ready(function() {

	// main nav - menu
	$('.mobile-menu').click(function() {
		$('.nav-block').addClass('slide-right');
	});
	$('.close-btn').click(function() {
		$('.nav-block').removeClass('slide-right');
		$('.nav-left ul > li').removeClass('open');
	});
	$('.nav-left ul > li').click(function() {
		if($(this).hasClass('open')){
			$('.nav-left ul > li').removeClass('open');
		} else {
			$('.nav-left ul > li').removeClass('open');
			$(this).addClass('open');
		}
	});
	
        //footer acordion mobile
        $('.click-head').click(function() {
            $(this).next('ul').slideToggle();
            $(this).toggleClass('openFooterLink');
         });

	//tabs
	$('.categories-tabs li').click(function() {
		var tabId  = $(this).attr('data-tab');
		$(this).siblings().removeClass('active');
		$(this).addClass('active')				
		$(this).parents('.tab-wrapper').find('.tabs-content li').removeClass('active');
		$(this).parents('.tab-wrapper').find('[data-tab-content="'+ tabId +'"]').addClass('active');
		if ($(window).width() < 720) {
			$(this).parents('.tab-wrapper').find('.tabs-content').addClass('pop-on-mob');
		}
	});
        $('.tabs-content li').prepend('<span class="mob-close">X</span>');
	$('.tab-wrapper').on( 'click', '.mob-close', function (){
		$('.tabs-content').removeClass('pop-on-mob');
	});

	if ($(window).width() < 720) {	
		$('.switchimage').attr("src","https://res.cloudinary.com/powtoon-dev/image/upload/f_auto,q_auto/v1590064768/site/home%20page/fortune-mob.png");
	}


	// slider dots
	$(".slider-item").each(function(i) {
	  $(".slider-dots").append(`<span data-dot="${i}"/>`);
	  $(this).attr('data-slide', `slide-${i}`);
	});
	$(".slider-dots span[data-dot='0']").addClass('active');

	// slider 
	var intv = null;
	var slideAmount = $('.slider-item').length -1;
	var slideLeft = 0;
	var activeSlide = 0;		
	$(".slider-dots span").click(function() {
		activeSlide = $(this).attr('data-dot');
		slideLeft = - activeSlide * 100;
		$(".slider-dots span").removeClass('active');
		$(this).addClass('active');
		$('.slider-item.active').css({marginLeft: slideLeft + '%'});
		clearTimeout(intv);
		autoSlide();
	});
	function autoSlide(){
		if (intv){
			clearTimeout(intv);
		}
		intv = setTimeout(slideShow, 5000);
	}
	function slideShow(){
			$(".slider-dots span").removeClass('active');
			if (slideAmount*100> - (slideLeft) ){
				slideLeft = slideLeft - 100;
				++activeSlide;
			} else {
				slideLeft = 0;
				activeSlide = 0;
			}
			$(".slider-dots span[data-dot='" + activeSlide + "']").addClass('active');
			$('.slider-item.active').css({marginLeft: slideLeft + '%'});	
		autoSlide();
	}
	autoSlide();


	//BI events --- track class
	$('.track').each(function() {
      $(this).on('click', function(e){
	   trackEvent('click', $(this));
      });
	 });

	function trackEvent(event_type, element){
const category 	= element.data('category') || settings.default_category;
				const action 	= element.data('action') || interaction; 
				const label 	= element.data('label') || ''; // optional
				const value 	= element.data('value') || 1; // optional
				const extradata = element.data('extradata') || ''; // optional
				// for hyperlink with external link send event synchronously
				const sendSynchronously = event_type === 'click' && element.attr('href') && !element.attr('href').startsWith("#");
				trackEventByParams(category, action, label, value, extradata, {sendSynchronously});
	}

	trackEventByParams('campaign', 'Visit', getBiTrackingSMC(), 1131);

        $('.logo-block a').attr("href","https://www.powtoon.com/");
});

