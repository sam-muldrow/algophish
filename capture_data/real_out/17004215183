    if(window.location.protocol != "https:"){window.location.href = "https:" + window.location.href.substring(window.location.protocol.length);}
    
      var absolutePath = 'mighty-website/'; //need this to absolute reference the lazy load of images later.
      var optionalReferralCode = '';//this is a url encoded string
      var optionalReferralCodeStr = '';//this is the plain referral code (everything after the capital R)
      //The function below is being used in both installredirect.js and main.js to determine whether or not the user is loading the prod website on an Android Device, and if so, whether its a phone or tablet. 11/17/14 KL 
      function checkIfUserIsOnMobilePhoneOrTablet()
    	{
    
    		var userAgent = navigator.userAgent;
    		
    		var locOfAndroid = userAgent.indexOf('Android');
    		var locOfMobile = userAgent.indexOf('Mobile');
    		
    		if((locOfAndroid > -1) && (locOfMobile > -1))
    			{
    				return('android-phone');
    			}
    		else if(locOfAndroid > -1)
    			{
    				return('android-tablet');
    			}
    		else
    			{
    				return('non-android');
    			}
    	}
</script>

