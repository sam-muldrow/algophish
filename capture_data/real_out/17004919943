<script type="text/javascript" charset="utf-8" src="https://cdn.huffingtonpost.kr/script/masonry.pkgd.min.js"></script>
<script type="text/javascript" charset="utf-8" src="https://cdn.huffingtonpost.kr/script/imagesloaded.pkgd.min.js"></script>
<script type="text/javascript">

	$(function(){
		var $tileContainer=null
			,offset=5	// 한번 호출에 노출개수
			,limit=0							// offset 개씩 증가
			,moveLink="/news/articleList.html?view_type=sm" // 이동 링크

			,$btnClick=$("#more-14")
			,$box=$("#auto-14")
			,itemsTarget=".targets-14"
			,$itemsTarget=$box.find(itemsTarget)
			,totalItems=$itemsTarget.length
			,totalPage=Math.ceil(totalItems/offset);	// 현재 리스트 개수가 노출양보다 적다면 바로 링크로 이동하려고 미리 계산
			
		$btnClick.click(function(e,param){
			limit+=offset;
		
			if(param!="trigger" && (totalPage==0 || totalPage < Math.ceil(limit/offset))){
				location.href=moveLink;
				return false;
			}

			if(limit > offset) $itemsTarget.filter(":lt("+limit+")").css({"display":"block"});	// 기본 offset 보다 클때 실행

			$tileContainer = $box.imagesLoaded(function() {
				$tileContainer.masonry({
					itemSelector:itemsTarget,
					gutter:0,
					percentPosition: true,
					isOriginLeft:true,
					isOriginTop:true
				});
			});

		}).triggerHandler("click", ["trigger"]);
	});

</script>
</section>
