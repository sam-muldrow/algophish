<script>
$(window).on('scroll',function() {
	if($('#skin-15').length > 0 ) {
		var liefParent = $('#skin-15').parent('section').parent('article').parent('div');
		var liefParentDivTop = $(liefParent).offset().top;
		var windowScrollTop = $(window).scrollTop() + $("#floating_banner_left").outerHeight();
		var windowScrollTopRight = $(window).scrollTop() + $("#floating_banner_right").outerHeight();
		var liefParentAnimateTop = liefParentDivTop - $("#floating_banner_left").outerHeight() - $('#user-container').offset().top;
		var liefParentAnimateTopRight = liefParentDivTop - $("#floating_banner_right").outerHeight() - $('#user-container').offset().top;
		if(windowScrollTop >= liefParentDivTop) {
			$("#floating_banner_left").stop().animate();
			$("#floating_banner_left").animate({top: liefParentAnimateTop+'px'});

			$("#floating_banner_right").stop().animate();
			$("#floating_banner_right").animate({top: liefParentAnimateTop+'px'});
		} else {
			$("#floating_banner_left").animate();

			$("#floating_banner_right").animate();
		}
	}
})
</script>
