<script>
    $(function () {
        //20220905
        //isShowMegaMenu = 1 => 內頁, isShowMegaMenu = 0 => 首頁
        //內頁menu(勾選show on megamenu時)要取消hover時展開選單的效果，修改為click時展開
        var isShowMegaMenu = '' || '0';
        if (isShowMegaMenu == '1') {

            $('.sub-menu-close').addClass('hide');

            //click展開選單後，在menu字樣上hover時也會展開選單
            $('a.menu-list-title', '.menu-list').hover(
                function () {
                    let $this = $(this);
                    let $parent = $this.parent('.menu-list');
                    //判斷選單是否在任何地方被展開過，如果展開過則hover到其他menu字樣時就能展開選單，不需再click
                    if ($('.menu-list').hasClass('active')) {
                        $parent.addClass('active').siblings().removeClass('active');
                        $parent.find('.sub-menu').css('display', 'flex');
                        $parent.siblings().find('.sub-menu').css('display', 'none');
                        //展開選單時不滑動底下原本頁面
                        $('body').css('overflow-y', 'hidden');
                        if ($parent.find('.sub-menu').length == 0) {
                            $('.menu-list').removeClass('active');
                            $('.sub-menu-close').addClass('hide');
                        }
                        return;
                    }
                    //將展開的選單隱藏
                    $parent.find('.sub-menu').css('display', 'none');
                    //關閉選單時取消overflow
                    $('body').css('overflow-y' ,'');
                }
            );
            //綁定menu字樣，點擊menu選單時選單不會消失，再度點擊menu字樣就會收起選單
            $('a.menu-list-title', '.menu-list').on('click', function () {

                let $parent = $(this).parent('.menu-list');
                if ($parent.hasClass('active')) {
                    $parent.find('.sub-menu').css('display', 'none');
                    //關閉選單時取消overflow
                    $('body').css('overflow-y', '');
                    $parent.removeClass('active');
                    $('.sub-menu-close').addClass('hide');
                    $('.fixed-block').show();//CR665 FixArea蓋住關閉選單
                } else {
                    $parent.siblings().find('.sub-menu').css('display', 'none');
                    $parent.find('.sub-menu').css('display', 'flex');
                    //展開選單時不滑動底下原本頁面
                    $('body').css('overflow-y', 'hidden');
                    $parent.addClass('active').siblings().removeClass('active');
                    $('.sub-menu-close').removeClass('hide');
                    if ($parent.find('.sub-menu').length == 0) {
                        $('.menu-list').removeClass('active');
                        $('.sub-menu-close').addClass('hide');
                    }
                    $('.fixed-block').hide();//CR665 FixArea蓋住關閉選單
                }
            });
            $('.sub-menu-close a').click(function () {
                $('.sub-menu-close').addClass('hide');
                $('.menu-list').removeClass('active');
                $('.sub-menu').css('display', 'none');
                //關閉選單時取消overflow
                $('body').css('overflow-y', '');
                $('.fixed-block').show();//CR665 FixArea蓋住關閉選單
            });
        }
        else {
            $('a.menu-list-title', '.menu-list').hover(
                function () {
                    $(this).parent('.menu-list').addClass('active').siblings().removeClass('active');
                    $('.menu-ham-button').addClass('active');
                    $('.sub-menu-close').removeClass('hide');
                    //展開選單時不滑動底下原本頁面
                    $('body').css('overflow-y', 'hidden');
                },
                function () {

                    // $(this).removeClass('active');
                }
            );

            //只有首頁會有漢堡選單
            $('.menu-ham-button').click(function () {
                $('.menu-section, .menu-ham-button').toggleClass('active');
                if ($('.menu-ham-button').hasClass('active')) {
                    $('.menu-list:first-child').addClass('active');
                    //展開選單時不滑動底下原本頁面
                    $('body').css('overflow-y', 'hidden');
                    $('.fixed-block').hide();   //CR665 FixArea蓋住關閉選單
                } else {
                    $('.menu-list').removeClass('active');
                    //關閉選單時取消overflow
                    $('body').css('overflow-y', '');
                    $('.fixed-block').show();   //CR665 FixArea蓋住關閉選單
                }
            });

            $('.sub-menu-close a').click(function () {
                $('.menu-section, .menu-ham-button, .drop-down-menu .menu-list:first-child').removeClass('active');
                $('.menu-list').removeClass('active');
                //關閉選單時取消overflow
                $('body').css('overflow-y', '');
                $('.fixed-block').show();   //CR665 FixArea蓋住關閉選單
            });
        }
    });
</script>

