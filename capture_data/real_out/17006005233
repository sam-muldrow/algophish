        $(function () {
            $('a[data-service-link="index-service-link"]').each(function () {
                var serviceItem = $(this).data('serviceguideid');
                var linkId = $(this).data('linkid');

                $('a[data-serviceguideid="' + serviceItem + '"]').on('click', function () {
                    var menuLen = $('[data-menu-list="' + linkId + '"]').length;
                    $('.menu-ham-button').trigger('click');
                    if (menuLen > 0) {
                        $('[data-menu-list="' + linkId + '"]').trigger('mouseover');
                    };
                });
            });
        });
    </script>





