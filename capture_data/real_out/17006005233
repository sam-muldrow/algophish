<script type="text/javascript">
    $(function () {
        $('.btnCHTLogin').on('click', function () {
            var $this = $(this);
            var data = { returnUrl: $this.data('returnUrl') || location.href };

            var url = $this.attr('href');
            if (url) {
                $this.data('curl', url);
            } else {
                url = $this.data('curl');
            }

            data.curl = url;

            $this.removeAttr('href');

            ckickLogIn(data);
        });

        $('.lnkLogut').on("click", function () {
            var $this = $(this);
            var data = { returnUrl: $this.data('returnUrl') ?? location.href };

            var url = $this.attr('href');
            if (url) {
                $this.data('curl', url);
            } else {
                url = $this.data('curl');
            }

            data.curl = url;

            $this.removeAttr('href');

            ckickLogOut(data);
        });

        function ckickLogIn(data) {
            $.ajax({
                type: 'POST',
                url: '/home/eShop/Services/Login/LogInUser',
                data: data,
                async: false,
                success: function (response) {
                    console.log({ 'success': response, data });
                    if (response != null && data != null) {
                        window.location.href = data.curl;
                        showLoading();
                    }
                },
                error: function (jqXHR) {
                    console.log('fail', jqXHR);
                },
                dataType: 'json'
            });
        }

        function ckickLogOut(data) {
            $.ajax({
                type: 'POST',
                url: '/home/eShop/Services/Login/LogOutUser',
                data: data,
                async: false,
                success: function (response) {
                    console.log({ 'success': response, data });

                    if (response != null && data != null) {

                        var urlparts = data.returnUrl.split('?');
                        var returnUrl = '';
                        if (urlparts.length >= 2) {
                            returnUrl = response.logoutMemberUrl || urlparts[0];
                        } else {
                            returnUrl = removeURLParameter(data.returnUrl, 'flowID');
                        }
                        response.returnURL = updateQueryStringParameter(data.curl, 'ReturnURL', returnUrl.replace(/=/g, 'DengYu').replace(/&/g, 'YiJi'));
                        console.log(response.returnURL);
                        window.location.href = response.returnURL;
                        showLoading();
                    }
                },
                error: function (jqXHR) {
                    console.log(jqXHR);
                },
                dataType: 'json'
            });
        }
    });

    function updateQueryStringParameter(uri, key, value) {
        var re = new RegExp("([?&])" + key + "=.*?(&|$)", "i");
        var separator = uri.indexOf('?') !== -1 ? "&" : "?";
        if (uri.match(re)) {
            return uri.replace(re, '$1' + key + "=" + value + '$2');
        }
        else {
            return uri + separator + key + "=" + value;
        }
    }

    function removeURLParameter(url, parameter) {
        //prefer to use l.search if you have a location/link object
        var urlparts = url.split('?');
        if (urlparts.length >= 2) {

            var prefix = encodeURIComponent(parameter) + '=';
            var pars = urlparts[1].split(/[&;]/g);

            //reverse iteration as may be destructive
            for (var i = pars.length; i-- > 0;) {
                //idiom for string.startsWith
                if (pars[i].lastIndexOf(prefix, 0) !== -1) {
                    pars.splice(i, 1);
                }
            }

            url = urlparts[0] + (pars.length > 0 ? '?' + pars.join('&') : "");
            return url;
        } else {
            return url;
        }
    }
</script>

<script>
    $.extend({
        MegaMenu: new MegeMenuConfigurations()
    });

    // Header 基礎設定
    function MegeMenuConfigurations() {
        var scrollOptions = {
            BannerSelector: '.index-mega-banner',
            TabScrollTop_limit: 0,
        };

        function ScrollSetting() {
            return scrollOptions;
        }

        return {
            SetScrollOption: function (opt) {
                var option = new ScrollSetting();
                if (!opt)
                    return option
                return $.extend(option, opt)
            },
            ScrollOptions: scrollOptions
        }
    }
</script>


<!-- 221101 修改 issue 145 捲動到特定位置，header & tab 跑版 (圖2568 2587) begin -->
<script type="text/javascript">
    $(function () {
        
        var header = $('.header-spacer');
        var divtab = $('div.corporate-switcher.desktop-only');
        if (divtab.length == 0) {
            header.height(header.height() - 28);
        }
        
        if (window.MegeMenu != undefined) { 
            $.MegaMenu.SetScrollOption(window.MegeMenu.ScrollSetting);
        }

        $(window).scroll(function () {
            let $banner = $($.MegaMenu.ScrollOptions.BannerSelector);
            let aTop = $('#header').height();
            let aBanner = $banner.height() == undefined ? 0 : $banner.height();
            let aTab = $(this).scrollTop() + $.MegaMenu.ScrollOptions.TabScrollTop_limit;
            
            if (divtab.length > 0) {
                if ($(this).scrollTop() >= aTop) {
                    $('.nav-global-header').addClass('scrolling-down');
                }
            } else {
                $('header.scrolling-down').css('margin-top', '0');
            }
            

            if (window.MegeMenu == undefined) {
                if (document.tabSticky == true) {
                    if (aTab >= aTop + aBanner) {
                        $('.tab-sticky.is_stuck').css({ 'transform': 'translateY(0)', 'transition': 'transform 0.2s', 'opacity': '1', 'z-index': '300' });
                        $('#tab-anchor').css({ 'opacity': '0', 'transition': 'transform 0.2s' });
                        $('#header').css({ 'transform': 'translateY(-87px)', 'transition': 'transform 0.2s' });
                    } else {
                        $('.tab-sticky.is_stuck').css({ 'transform': 'translateY(110px)', 'transition': 'transform 0.2s', 'opacity': '0', 'z-index': '-1' });
                        $('#tab-anchor').css({ 'opacity': '1', 'transition': 'transform 0.2s' });
                        $('#header').css({ 'transform': 'translateY(0)', 'transition': 'transform 0.2s' });
                        $('#header').removeAttr("style");
                    }
                }
            } else {
                if (aTab >= aTop + aBanner) {
                    $('.tab-sticky.is_stuck').css({ 'transform': 'translateY(0)', 'transition': 'transform 0.2s', 'opacity': '1', 'z-index': '300' });
                    $('#tab-anchor').css({ 'opacity': '0', 'transition': 'transform 0.2s' });
                    if (window.screen.width > 768) {
                        $('#header').css({ 'transform': 'translateY(-87px)', 'transition': 'transform 0.2s' });
                    }
                } else {
                    $('.tab-sticky.is_stuck').css({ 'transform': 'translateY(110px)', 'transition': 'transform 0.2s', 'opacity': '0', 'z-index': '-1' });
                    $('#tab-anchor').css({ 'opacity': '1', 'transition': 'transform 0.2s' });
                    $('#header').css({ 'transform': 'translateY(0)', 'transition': 'transform 0.2s' });
                    $('#header').removeAttr("style");
                }
            }
        });
    });
</script>
<!--221101 修改 issue 145 捲動到特定位置，header & tab 跑版(圖2568 2587) end -->
</section>
