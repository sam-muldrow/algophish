<script type="text/javascript">
    $('div.search.searchbar a.search-button').on('click', function () {
        if (window.sessionStorage["local"] != undefined)
            $('div.search.searchbar #theKey').val(window.sessionStorage["local"]);
    });
    //(function ($) {
    var acGroup = $('a[data-autocomplete-group]').data('autocompleteGroup');
    var $srarchbar = $('.search-field .input-search');
    var key;
    var favoriteTags = new Array();

    var favoriteTitle = '推薦關鍵字';
    var JSONfavoriteTags;
    var jsonkword = '[{&quot;Word&quot;:&quot;iPhone 15&quot;},{&quot;Word&quot;:&quot;線上繳費&quot;},{&quot;Word&quot;:&quot;熱門推薦優惠&quot;},{&quot;Word&quot;:&quot;行動優惠方案&quot;},{&quot;Word&quot;:&quot;光世代優惠&quot;},{&quot;Word&quot;:&quot;國際漫遊&quot;}]';
    var currentitemid = '{1CE026E5-CCA7-4CE5-8274-6B860B61AD62}';

    if (jsonkword != '') {
        JSONfavoriteTags = JSON.parse((jsonkword).replace(/&quot;/g, '"'));
        $.each(JSONfavoriteTags, function (key, value) {
            favoriteTags.push(value["Word"]);
        });
    }

    var searchStorage = window.sessionStorage["local"];
    if (searchStorage != undefined)
        $('div.search.searchbar #theKey').val(searchStorage);

    $srarchbar.on('keypress', function (event) {
        if (event.which == 13) {
            goSearch();
        }
    });

    $(document).on('mouseup', 'div.search.searchbar div.search-go', function () {
        goSearch();
    });

    function clickSearch(Value) {
        getValue(Value);
        goSearch();
    }

    function getValue(Value) {
        $srarchbar.val(Value);
    }

    function goSearch() {
        var user;
        var searchurl = 'https://www.cht.com.tw/home/consumer/searchresult';
        var query = $srarchbar.val().trim();
        var homeurl = searchurl.split('/');

        for (i = 0; i < homeurl.length; i++) {
            if (homeurl[i] == 'consumer' || homeurl[i] == 'enterprise') {
                user = homeurl[i];
                break;
            }
        }

        let correctSearchResultId;
        switch (user)
        {
            case 'consumer':
            default:
                correctSearchResultId = '{19778477-E7C6-412D-8A14-A7B16927F414}';
                break;
            case 'enterprise':
                correctSearchResultId = '{066AEB23-23EE-4CA5-8563-76AA56FA65D3}';
                break;
        }

        let isRepeatedQuery = checkKeyWordStorage(query);

        saveStorage(query);
        window.location.assign(searchurl + "?text=" + query + "&pagecurrentitem=" + correctSearchResultId + "&repeatedquery=" + isRepeatedQuery);
        showLoading();
    }

    function saveStorage(query) {
        window.sessionStorage["local"] = query;
    }

    $(document).ready(function () {
        if (searchStorage != null) {
            document.getElementById('theKey').value = searchStorage;
        }
    });

    $srarchbar.on('input', function () {
        if ($srarchbar.val() != '' && $srarchbar.val().length > 0 && $srarchbar.val() != undefined) {
            clearTimeout(key);
            key = setTimeout(function () { autocom($srarchbar.val()) }, 500);
        }
    });

    $srarchbar.on('keydown', function (event) {
        if (event.keyCode == 8) {
            var ele = document.getElementById("recommend-results")
            while (ele.firstChild) {
                ele.removeChild(ele.firstChild);
                ele.firstChild = ele.firstChild;
            }

            if (favoriteTags != null && favoriteTags.length > 0) {
                var li2 = document.createElement("li");
                li2.setAttribute("class", "search-seperator");
                var small = document.createElement("small");
                small.innerHTML = favoriteTitle;
                li2.appendChild(small);
                ele.appendChild(li2);

                favoriteTags.forEach(function (value) {
                    var li = document.createElement("li");
                    var a = document.createElement("a");
                    a.innerHTML = value;
                    a.onclick = function () {
                        clickSearch(value);
                    }
                    li.appendChild(a);
                    ele.appendChild(li);
                })
            }

        }
    });

    function autocom(Value) {
        var data = {
            queryText: Value,
            API: "suggest",
            acGroup: acGroup
        };

        $.ajax({
            type: "POST",
            url: '/home/eShop/Services/SearchResult/GetSuggest/',
            data: data,
            success: function (data) {
                var ele = document.getElementById('recommend-results');
                while (ele.firstChild) {
                    ele.removeChild(ele.firstChild);
                    ele.firstChild = ele.firstChild;
                }
                if (data != null && data != '') {

                    var tags = new Array();

                    $.each(JSON.parse(data), function (key, value) {
                        var d = value['Query'];
                        tags[tags.length] = d;
                    })

                    if (tags.length > 0) {
                        tags.forEach(function (value) {
                            var li = document.createElement('li');
                            var a = document.createElement('a');
                            a.innerHTML = value;
                            a.onclick = function () {
                                clickSearch(value);
                            }
                            li.appendChild(a);
                            ele.appendChild(li);
                        });

                    }

                    if (favoriteTags != null && favoriteTags.length > 0) {
                        var li2 = document.createElement('li');
                        li2.setAttribute('class', 'search-seperator');
                        var small = document.createElement('small');
                        small.innerHTML = favoriteTitle;
                        li2.appendChild(small);
                        ele.appendChild(li2);
                        favoriteTags.forEach(function (value) {
                            var li = document.createElement('li');
                            var a = document.createElement('a');
                            a.innerHTML = value;
                            a.onclick = function () {
                                clickSearch(value);
                            }
                            li.appendChild(a);
                            ele.appendChild(li);
                        });
                    }

                }
            },
            beforeSend: function () { }
        });
    }
    //})(jQuery);
</script>

