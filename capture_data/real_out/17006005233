<script>

    var $kv_category = $('.kv-category [data-target-swiper-kv]');
    var swiperArr = [];

    $kv_category.each(function (index, element) {
        let swiperCategory = {
            tab_id: $(this).prop('id'),
            kv_target: $(this).data('target-swiper-kv'),
            swiper: null,
        };

        let swiper_str = '.swiper-container' + '.' + swiperCategory.kv_target;
        let swiper_el_str = '.' + swiperCategory.kv_target + ' .swiper-pagination';
        let next_tab_id = '';

        if (index !== $kv_category.length - 1) {
            next_tab_id = '#' + $kv_category.eq(index + 1).prop('id');
        } else {
            next_tab_id = '#' + $kv_category.eq(0).prop('id');
        }

        var swiper = new Swiper(swiper_str, {
            pagination: {
                el: swiper_el_str,
                type: 'bullets',
                bulletActiveClass: 'my-bullet-active',
                clickable: true,
            },
            observer: true,
            observeParents: true,
            initialSlide: 0,
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
            on: {
                reachEnd: function () {
                    $(next_tab_id).trigger('click');
                }
            },
            effect: 'fade',
            navigation: {
                nextEl: '.' + swiperCategory.kv_target + ' .swiper-button-next',
                prevEl: '.' + swiperCategory.kv_target + ' .swiper-button-prev',
            },
        });
        swiper.el.onmouseover = function () {
            swiper.autoplay.stop();
            $('.my-bullet-active').addClass('ani-pause').siblings().removeClass('ani-pause');
        }
        swiper.el.onmouseout = function () {
            swiper.autoplay.start();
            $('.my-bullet-active').removeClass('ani-pause');
        }

        swiperCategory.swiper = swiper;
        swiperArr.push(swiperCategory);
    });
</script>

<!-- 210817 kv 分類切換 js -->
<script>
    function resetAnimation() {
        $('.mySwiper-kv .swiper-pagination-bullet').removeClass('my-bullet-active');
        $('.mySwiper-kv .swiper-pagination-bullet').width();
    }

    function autoplayAllStop() {
        $.each(swiperArr, function (index, obj) {
            obj.swiper.autoplay.stop();
        });

    }

    $(function () {
        $('.kv-tab-title li a').click(function () {
            $(this).parent().addClass("active").siblings().removeClass('active');
            var idx = $(this).parent().index();
            // $('.kv-tab-inner').eq(idx).fadeIn().addClass('active').siblings('.kv-tab-inner').removeClass('active').fadeOut();
            $('.kv-tab-inner').eq(idx).addClass('active').siblings('.kv-tab-inner').removeClass('active');
            autoplayAllStop();
            resetAnimation();
            var pagIdx = '.swiper-kv-0' + (idx + 1);
            // var swiperIdx = 'swiper' + (idx+1);
            $(pagIdx + ' .swiper-pagination-bullets .swiper-pagination-bullet:first').addClass('my-bullet-active').siblings().removeClass('my-bullet-active');
            // swiperIdx.slideTo(0, 0, true);
            // swiperIdx.autoplay.start();
        });

        $.each(swiperArr, function (index, obj) {
            $('#' + obj.tab_id).on('click', function () {
                obj.swiper.slideTo(0, 0, true);
                obj.swiper.autoplay.start();
            });
        });

        $('#kv-tab-01').trigger('click'); 
    });
</script>

