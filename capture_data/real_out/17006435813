        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.videosection__list-item').forEach(el => {
                el.addEventListener('click', (e) => {
                    e.preventDefault();
                    var url = e.currentTarget.dataset.url;
                    var iframe = document.querySelector('.videosection__iframe-wrapper iframe');

                    const videoItem = metadata.find((video) => video.url === url);
                    const videoSrc = videoItem.html.match(/src="([^"]*)/)[1];
                    if(videoSrc !== iframe.src) {
                        iframe.src = videoSrc;
                    }


                    document.querySelectorAll('.videosection__list-item').forEach(el => {
                        el.classList.remove('active');
                    })
                    e.currentTarget.classList.add('active');
                })
            })
        })

