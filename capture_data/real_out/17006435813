	jQuery(function($) {
		$('.stories-item > a, .webstories_a').on('click', function(e) {
			e.preventDefault();
			const href = $(this).attr('href');
			$('.webstories__iframe').attr('src',href);
			$('.webstories__modal').addClass('webstories__modal--open');
			$('.ad-sticky-slot').css('z-index','unset');
		});

		$('.webstories__close-button').on('click', function(e) {
			e.preventDefault();
			$('.webstories__modal').removeClass('webstories__modal--open');
