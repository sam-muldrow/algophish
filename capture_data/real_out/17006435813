<script type="rocketlazyloadscript">
		window.addEventListener('DOMContentLoaded', function() {
		  var activationWidth = 990;
			var myDiv = document.querySelector('.single-container>section aside');
			var stickyPosition = myDiv.offsetTop;
			myDiv.style.left = myDiv.getBoundingClientRect().left.toFixed(0) + 'px';
			window.addEventListener('scroll', stickDiv)

			function stickDiv() {
				if(window.innerWidth > activationWidth) {
					if (window.pageYOffset > stickyPosition) {
						myDiv.style.position = 'fixed';
						myDiv.style.top = '0';
						myDiv.style.zIndex = '9999';
						myDiv.style.right = '0';
						myDiv.querySelector('.widget_widget_forum').style.display = 'none';
					} else {
						myDiv.style.position = 'static';
						myDiv.style.zIndex = 'auto';
						myDiv.style.right = 'auto';
						myDiv.querySelector('.widget_widget_forum').style.display = 'block';
					}
				} else {
					myDiv.style.position = 'static';
					myDiv.style.zIndex = 'auto';
					myDiv.style.right = 'auto';
					myDiv.querySelector('.widget_widget_forum').style.display = 'block';
				}
			}
		});
	</script>
