<script type="rocketlazyloadscript">window.addEventListener('DOMContentLoaded', function() {
		jQuery(function($) {
			$(window).scroll(function fix_element() {
				if(window.innerWith > 1000) return;

				$scrollValue = $(window).scrollTop();
				$adMobileEl = $('.hd-ad--background');

				if($scrollValue > 70) {
					$adMobileEl.addClass('enabled');
				} else {
					$adMobileEl.removeClass('enabled');
				}

				return fix_element;
			}());
		});
	});</script>
