       <script type="text/javascript">
        (function($) {
                            $.fn.equalHeights = function() {
                                var maxHeight = 0;
                                var $this = $(this);

                                $this.each(function() {
                                    var height = $(this).innerHeight();

                                    if (height > maxHeight) {
                                        maxHeight = height;
                                    }
                                });

                                return $this.css('height', maxHeight);
                            };

                            $('.equal-col .content-mid').equalHeights();
                        })(jQuery);
       </script>
