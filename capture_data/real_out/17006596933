<script>
    $(function () {

        $('#txt_search-in-qamus').keydown(function(e) {
            if (e.keyCode == 13) {
                e.stopPropagation();
                e.preventDefault();
                return false;
            }
            return true;
        })

        $('#txt_search-in-qamus').keyup(function (e) {
            if (e.keyCode == 13) {
                e.stopPropagation();
                e.preventDefault();
                $('#txt_search-in-qamus + .search-icon').trigger('click');
                return false;
            }
            return true;
        });

        $('#txt_search-in-qamus + .search-icon').on('click',
            function () {
                var text = $('#txt_search-in-qamus').val();
                var language = $('#search-in-qamus-modal .nav-tabs li.active').data('lang');
                resetModal();
                searchInQamus(text, language, '');
            });


        $("#search-in-qamus-modal").on('show.bs.modal',
            function () {
                resetModal();
            });

        $("#search-in-qamus-modal .nav-tabs li").on('click', function(e) {
            if ($(this).hasClass('active') || $(this).hasClass('disabled')) {
                e.stopPropagation();
                e.preventDefault();
                return;
            }
            setTimeout(function() {
                    $('#txt_search-in-qamus + .search-icon').trigger('click');
                },
                100);

        })
    });

    selectDidYouMin = function (text) {
        $('#txt_search-in-qamus').val(text);
        $('#txt_search-in-qamus + .search-icon').trigger('click');
    }

    searchInQamus = function (text, language, textForLanguage) {

        $('#search-in-qamus-modal').addClass('loading');
        $('#search-in-qamus-modal #txt_search-in-qamus').val(text);
        var $notFoundTag = $('#search-in-qamus-modal .notFoundTag').clone(true, true).removeClass('hidden');/* '<div class="text-center">' +
            '<h4 class="text-muted">موردی یافت نشد</h4>' +
            'نمایش نتایج برای : ' +
            '[items]' +
            '</div>';*/
        $.ajax({
            url: '/api/view/SearchInQamus',
            method: 'get',
            data: {
                text: text,
                language: language == null ? "fa" : language,
                textForLanguage: textForLanguage,
                version: 1
            },
            contentType: 'application/json; charset=utf-8',
            success: function (result) {
                $('#search-in-qamus-modal').removeClass('loading');
                debugger;
                activeContentSelector = '';
                if ($('#search-in-qamus-modal .nav-tabs li.active').length == 0) {
                    if (result.data.detectedLang != undefined && language == null) {
                        $('#search-in-qamus-modal .nav-tabs li[data-lang="' + result.data.detectedLang + '"]').addClass('active');
                    }
                    else {
                        $('#search-in-qamus-modal .nav-tabs li[data-lang="' + language + '"]').addClass('active');
                    }

                    activeContentSelector = $('#search-in-qamus-modal .nav-tabs li.active a').attr('href');
                    $('#search-in-qamus-modal ' + activeContentSelector).addClass('in active');
                }



                if (result.data.count == 0) {
                    var didYouMean = '';
                    var currentLanguage = $('#search-in-qamus-modal .nav-tabs li.active').data('lang');
                    if (result.data.didYouMean.length > 0) {
                        for (var i = 0; i < result.data.didYouMean.length; i++) {
                            $notFoundTag.append('&emsp;<span class="btn btn-sm btn-default" onclick="selectDidYouMin(\'' + result.data.didYouMean[i] + '\')">' + result.data.didYouMean[i] + '</span>');
                        }
                        $(activeContentSelector).append($notFoundTag);
                    }
                }
                else {
                    var $activeTab = $('#search-in-qamus-modal .nav-tabs li.active');
                    var $notActiveTab = $('#search-in-qamus-modal .nav-tabs li:not(.active)');
                    debugger
                    if (result.data.detectedLang == $activeTab.data('lang')) {
                        if (result.data.countChild == 0)
                            $activeTab.addClass('disabled');
                        else
                            $activeTab.children('a').append('<span class="item-count">&emsp;(' + result.data.countChild + ')</span>');

                        if (result.data.countOtherLanguage == 0)
                            $notActiveTab.addClass('disabled');
                        else
                            $notActiveTab.children('a').append('<span class="item-count">&emsp;(' + result.data.countOtherLanguage + ')</span>');
                    } else {
                        if (result.data.countChild == 0)
                            $notActiveTab.addClass('disabled');
                        else
                            $notActiveTab.children('a').append('<span class="item-count">&emsp;(' + result.data.countChild + ')</span>');

                        if (result.data.countOtherLanguage == 0)
                            $activeTab.addClass('disabled');
                        else
                            $activeTab.children('a').append('<span class="item-count">&emsp;(' + result.data.countOtherLanguage + ')</span>');
                    }

                    
                    


                    for (var i = 0; i < result.data.resultList.length; i++) {
                        appentClonedTags(result.data.resultList[i], activeContentSelector);
                    }
                }
            }
        });
    }


    appentClonedTags = function (resultItem, container) {
        var $clonedTemplate = $(".search-qamus-result-template.hidden").clone(true, true).removeClass('hidden');

        $wordTitle = $clonedTemplate.find('.word-title');
        $wordTitle.attr('href', $wordTitle.attr('href').replace('[wordId]', resultItem.wordId));
        $wordTitle.html(resultItem.word);

        $rootTitle = $clonedTemplate.find('.root-title');
        if (resultItem.rootWordList == null || resultItem.rootWordList.length == 0)
            $rootTitle.remove();
        else {
            $rootTitle.attr('href', $rootTitle.attr('href').replace('[rootId]', resultItem.rootWordList[0].rootId));
            $rootTitle.html('[' + resultItem.rootWordList[0].title + ']');
        }

        $typeList = $clonedTemplate.find('.type-list');

        if (resultItem.entryList != null && resultItem.entryList.length > 0) {
            $type = $typeList.children('.hidden').clone().removeClass('hidden');
            for (var i = 0; i < resultItem.entryList.length && i < 3; i++) {
                $typeList.append($type.html(resultItem.entryList[i].typeOfEntry));
            }
        }

        $typeList.find('.hidden').remove();

        $resultItemList = $clonedTemplate.find('.result-item-list');
        if (resultItem.entryList != null && resultItem.entryList.length > 0) {
            for (var i = 0; i < resultItem.entryList.length; i++) {
                $resultItem = $clonedTemplate.find('.result-item.hidden').clone().removeClass('hidden');
                $resultItem.find('.result-title').html(resultItem.entryList[i].parent);
                for (var j = 0; j < resultItem.entryList[i].entryItemsList[0].bookList[0].discriptionList.length; j++) {
                    $resultItemTitle = $resultItem.find('.result-title.hidden').clone().removeClass('hidden');
                    $resultItemText = $resultItem.find('.result-text.hidden').clone().removeClass('hidden');

                    $resultItemTitle.children('a').html(resultItem.entryList[i].entryItemsList[0].parent);
                    var href = $resultItemTitle.children('a').attr('href').replace('[Id]', resultItem.entryList[i].entryItemsList[0].bookList[0].discriptionList[j].wordList[0].wordId);
                    $resultItemTitle.children('a').attr('href', href);
                    $resultItemText.html(resultItem.entryList[i].entryItemsList[0].bookList[0].discriptionList[j].wordList[0].discription);
                    $resultItem.append($resultItemTitle);
                    $resultItem.append($resultItemText);
                }
                $resultItemReference = $resultItem.find('.result-reference.hidden').clone().removeClass('hidden');
                $resultItemReference.html('(' + resultItem.entryList[i].entryItemsList[0].bookList[0].bookTitle + ')');
                $resultItem.append($resultItemReference);
                $resultItemList.append($resultItem);
            }
            $resultItemList.find('.hidden').remove();
        }

        $(container).append($clonedTemplate);

    }

   

    resetModal = function () {
        $('#search-in-qamus-modal #txt_search-in-qamus').val('');
        $('#search-in-qamus-modal .item-count').remove();
        $('#search-in-qamus-modal .nav-tabs li').removeClass('active');
        $('#search-in-qamus-modal .nav-tabs li').removeClass('disabled');
        $('#search-in-qamus-modal .tab-pane').removeClass('in active');
        $('#search-in-qamus-modal .tab-pane').html('');
        $('#search-in-qamus-modal #qamus-modal-footer').addClass('hidden');
    }
</script>

