<script type="text/javascript" src="/CMS_Noor_Files/Script/jssor.slider-28.0.0.min.js"></script>

    <script type="text/javascript">

        var appSliderContent = new function () {
            var slider;
            var lastLoadedType = 'desktop';
            var isLoadOnDesktop = true;
            var clonedSlideHtml;
            var MAX_WIDTH = 980;

            var reInitLoadType = function () {
                isLoadOnDesktop = window.outerWidth > 767;
            }

            var slider_SlideshowTransitions = [
                { $Duration: 800, x: -0.3, $During: { $Left: [0.3, 0.7] }, $Easing: { $Left: $Jease$.$InCubic, $Opacity: $Jease$.$Linear }, $Opacity: 2 },
                { $Duration: 800, x: 0.3, $SlideOut: true, $Easing: { $Left: $Jease$.$InCubic, $Opacity: $Jease$.$Linear }, $Opacity: 2 }
            ];

            var slider_options = {
                $AutoPlay: 1,
                $SlideshowOptions: {
                    $Class: $JssorSlideshowRunner$,
                    $Transitions: slider_SlideshowTransitions,
                    $TransitionsOrder: 1
                },
                $ArrowNavigatorOptions: {
                    $Class: $JssorArrowNavigator$
                },
                $ThumbnailNavigatorOptions: {
                    $Class: $JssorThumbnailNavigator$,
                    $Orientation: 2,
                    $NoDrag: true
                },
                $BulletNavigatorOptions: {
                    $Class: $JssorBulletNavigator$
                }
            };

            var setSlider = function () {
                reInitLoadType();
                if (isLoadOnDesktop)
                    lastLoadedType = 'desktop';
                else
                    lastLoadedType = 'mobile';
                slider = new $JssorSlider$((isLoadOnDesktop ? "jssor_bigPic" : "jssor_smallPic") + "_cloned", slider_options);
            }

            var cloneContainer = function () {
                reInitLoadType();
                clonedSlideHtml = isLoadOnDesktop ? $("#jssor_bigPic").clone() : $("#jssor_smallPic").clone();
            }

            var scaleSlider = function () {
                var containerElement = slider.$Elmt.parentNode;
                var containerWidth = containerElement.clientWidth;

                if (containerWidth) {

                    var expectedWidth = Math.min(MAX_WIDTH || containerWidth, containerWidth);

                    slider.$ScaleWidth(expectedWidth);
                }
                else {
                    window.setTimeout(scaleSlider, 30);
                }
            }

            var addEvents = function () {
                $Jssor$.$AddEvent(window, "load", scaleSlider);
                $Jssor$.$AddEvent(window, "resize", scaleSlider);
                $Jssor$.$AddEvent(window, "orientationchange", scaleSlider);
            }

            var initializeSlider = function () {
                $("#sliderContainer").html("");
                cloneContainer();
                $(clonedSlideHtml).removeClass('hidden');
                $(clonedSlideHtml).attr("id", $(clonedSlideHtml).prop('id') + "_cloned");
                $("#sliderContainer").append(clonedSlideHtml);
                jssor_slider_init();
            }

            var reInitializeSlider = function () {
                reInitLoadType();
                if ((isLoadOnDesktop && lastLoadedType == 'desktop') || (!isLoadOnDesktop && lastLoadedType == 'mobile'))
                    return;
                destroyJssorSlider();
                initializeSlider();
            }

            var jssor_slider_init = function () {
                setSlider();
                scaleSlider();
                addEvents();
            }

            function destroyJssorSlider() {
                slider.$Destroy();
                slider = null;
            }

            var motoonHeight = function () {
                setTimeout(function () {
                    var width = $(window).width();
                    var height = $("[id$='Pic_cloned']").children('div').outerHeight();

                    if (width > 991 && height > 0) {
                        $('.motoon-col').css('height', height);
                    }
                }, 0);
        }

        return {
            init: initializeSlider,
            reInit: reInitializeSlider,
            motoonHeight: motoonHeight,
            resetOnResize: function () {
                console.log('resized');
                reInitializeSlider();
                motoonHeight();
            }
        }
        }();

        $(function () {
            appSliderContent.init();
            appSliderContent.motoonHeight();
        });

        $(window).resize(appSliderContent.resetOnResize);

        /*
         ======= Old Code ========
