<script>
    var cookieName = 'fixBottomAdvertise-eita-hawzah';
    //var cookieName = 'fixBottomAdvertise-vije-ramezan';
    $("#fixBottomAdvertiseLink").on('click',function(e){
        if($(e.target).prop('id') == 'fixBottomAdvertiseLink'){
            e.preventDefault();
            $("#fixBottomAdvertiseLink").remove();
            setCookie(cookieName, "true", 2);
        }
    })

    $(function () {
        if (getCookie(cookieName) === 'true') {
            $("#fixBottomAdvertiseLink").remove()
        }
    })

    function closeModal(name) {
        $("#" + name).modal('hide');
    }

    function setCookie(name, value, days) {
        if (days) {
            var date = new Date();
            date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
            var expires = "; expires=" + date.toGMTString();
        }
        else var expires = "";

        document.cookie = name + "=" + value + expires + "; path=/";
    }

    function getCookie(name) {
        var dc = document.cookie;
        var prefix = name + "=";
        var begin = dc.indexOf("; " + prefix);
        if (begin == -1) {
            begin = dc.indexOf(prefix);
            if (begin != 0) return null;
        }
        else {
            begin += 2;
            var end = document.cookie.indexOf(";", begin);
            if (end == -1) {
                end = dc.length;
            }
        }
        return decodeURI(dc.substring(begin + prefix.length, end));
    } 

</script>


    
