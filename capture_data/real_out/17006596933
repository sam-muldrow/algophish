<div id="fontManager" class="visible-xs">
    <div id="toggleSlider" class="expand" onclick="toggleSlider()" style="position:fixed;text-align:center;bottom:10px;cursor:pointer;background-color:#fd718e !important; left:5px; z-index:9999 ;border-radius:.75rem; border-top-left-radius:.75rem; border-bottom-left-radius:.75rem; width:30px; height:30px; background:inherit; display:inline-block">
        <span class="glyphicon glyphicon-cog" style="font-family: 'Glyphicons Halflings' !important; color:white; font-size:16pt;margin-top:3px;"></span>
    </div>
    <div style="float:left;position:fixed; bottom:10px; left:40px; z-index:9999; display:inline-block;width:100%;" class="k-rtl" id="sliderPanel">
        <input id="slider" value="0" style="width: 70%; max-width:300px!important; float:left" />
    </div>
</div>
<script>
    var fontMangerWidth=0;
    $(function () {
        initSlider();
        fontMangerWidth = $("#sliderPanel").width();
        $("#sliderPanel").css({ 'width': '0px' });
        $("#sliderPanel").toggle();
    })

    function initSlider() {
        $("#slider").kendoSlider({
            increaseButtonTitle: 'افزایش اندازه قلم',
            decreaseButtonTitle: 'کاهش اندازه قلم',
            change: SliderChange,
            value: 14,
            min: 14,
            max: 24,
            smallStep: 1,
            largeStep: 2,
            tickPlacement: "none",
        }).data("kendoSlider");
        $("span.k-i-arrow-e[title]").addClass("k-i-plus").removeClass("k-i-arrow-e");
        $("span.k-i-arrow-w[title]").addClass("k-si-minus").removeClass("k-i-arrow-w");
    }
    

    function SliderChange(e) {
        $('body').css({
            'cssText': 'font-size: ' + e.value + 'pt !important'
        })
    }

    function toggleSlider() {
        if ($("#toggleSlider").hasClass("expand")) {
            $("#sliderPanel").animate({ width: fontMangerWidth + "px" }, 500);//fontMangerWidth
            $("#sliderPanel").toggle();
            
        }
        else {
            $("#sliderPanel").animate({ width: "0px" }, 500);
            $("#sliderPanel").toggle(500);
            
        }
        $("#toggleSlider").toggleClass('expand');
    }
</script>


    <script type='text/javascript'>
                            $(function(){$.MessageBox.message('','',true);    });
