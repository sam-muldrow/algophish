<script>
    if (!isNotAllowAds) {
        loadJsDefer('https://apis.google.com/js/platform.js?onload=onLoadGapi');
    }
    function onLoadGapi() {
        gapi.load('auth2', function () {
            gapi.load('auth2', function () {
                gapi.auth2.init({
                    client_id: '678720187862-08lendtdt5h3nr4j2he534p15b13aieg.apps.googleusercontent.com',
                    scope: 'email profile',
                    fetch_basic_profile: true
                });
            });
        });
    }
    (runinit = window.runinit || []).push(function () {
        $('.btn-refresh').click(function () {
            fnCaptcha();
        });
        $('.iconew-eye').click(function () {
            $(this).toggleClass('closed');
            var x = $(this).siblings('input')[0];
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        });
        function stripHtml(html) {
            var temporalDivElement = document.createElement("div");
            temporalDivElement.innerHTML = html;
            return temporalDivElement.textContent || temporalDivElement.innerText || "";
        }
        // --------------------- User account
        // 1. Hide login/logout button -> in case API doesn't available, login/logout will not show + Init OAuth_v2
        //$("#top-link-account").hide();
        if (typeof gapi != "undefined") {
            //window._cnnd.oauth.init();
            console.log("login not available");
        }
        // 2. Remove excessive login/register form -> only 1 form available // no need
        // 3. Callback functions
        var fnPopupAction = function (id, alert, loginData) {
            id = id.toLowerCase();
            if (id == "close") {
                $("#cmt-account-header .close").click();
                return;
            }
            if (id == "info" && !window._isShowingInfo) {
                $("#cmt-account-header .close").click();
                return;
            }
            window._isShowingInfo = false;
            if (loginData) {
                $("#cmt-account-header [data-target]").hide();
                $("#cmt-account-header [data-target].logged-in").show().first().click();
                $("#cmt-account-header [data-info-name]").html(loginData.name || "Quý vị");
                $("#cmt-account-header [data-info-email]").html(loginData.email || "&lt;không xác định&gt;");
            } else {
                $("#cmt-account-header [data-target]").hide();
                $("#cmt-account-header [data-target].not-login").show().first().click();
                $("#cmt-account-social").show();
            }
            setTimeout(function () {
                $("#cmt-account-header > .wrapper").css("animation", "none");
            }, 200);
            $("#cmt-account-header").show();
            $("#cmt-account-header input[type='password']").val("");
            $("#cmt-account-header [data-target='" + id + "']").click();
            $("body").css("overflow", "hidden");
            $("#nav").removeClass("active");
            $("#cmt_alert").html(alert || "Vui lòng đăng nhập hoặc đăng ký để gửi bình luận");
        };
        var accountMessageProcess = function (data) {
            if (data.isLogged) {
                fnPopupAction("info", "Vui lòng đăng nhập hoặc đăng ký để gửi bình luận", { name: data.name, email: data.email });
            }
            else {
                fnPopupAction(data.act, data.alert || "Vui lòng đăng nhập hoặc đăng ký");
                if (data.act == "close" && data.raw.Data && data.raw.Data.Approved) {
                    //window.alert("Đăng nhập thành công");
                    fnPopupAction("info", "Đăng nhập thành công", { name: data.raw.Data.Name, email: $("#_login_email").val() || $("#_sign_email").val() });
                }
            }
        };
        // 4. Register listener to message
        window.addEventListener("message", function (evt) {
            var origin = evt.origin || evt.originalEvent.origin;
            if (origin != appSettings.domain && origin != appSettings.ajaxDomain) {
                return;
            }
            //this.console.log(evt.data);
            if (evt.data && (evt.data.act == "popup" || evt.data.act == "cnnd_home_popup")) {
                if (evt.data.act == "popup") {
                    evt.data.act = evt.data.id;
                }
                accountMessageProcess(evt.data);
            }
            else if (evt.data.act == "resize") {
                $('#comment-frame').css("height", (evt.data.height + 25) + "px");
            }
            else if (evt.data.act == "cnnd_home_signal") {
                $("#top-link-account").show();
                var d = evt.data;
                if (d.isLogged) {
                    var el = $("#top-link-account");
                    var uname = '';
                    if (d.name.length && d.name.length > 20)
                        uname = jQuery.trim(d.name).substring(0, 20).split(" ").slice(0, -1).join(" ");
                    else
                        uname = d.name;
                    //el.find("a.first").html("<i class=\"icon icon-user\"></i> " + (d.name || d.email || "Người dùng"));
                    el.find("a.first").hide();
                    el.find("a.second").html((uname || d.email || "Người dùng") + "\t|\tĐăng xuất");
                    $("#top-link-account .second").attr("data-out", "1");
                    // Close form
                    $("#cmt-account-header .close").click();
                    $("#cmt-account-social").hide();
                    $("#cmt-account-header input, #cmt-account input").val('');
                }
                else {
                    $("#top-link-account .second").removeAttr("data-out");
                    var el = $("#top-link-account");
                    //el.find("a.first").html("<img src='https://static.mediacdn.vn/danviet/mob_images/icon_user.svg' alt='Account'>")
                    //    .removeAttr("style");
                    el.find("a.second").html("");
                    $("#cmt-account-social").show();
                }
            }
        }, false);
        // 5. Action functions -> bind event to form elements
        var fnCaptcha = function () {
            $("#_img_captcha").attr("src", appSettings.ajaxDomain + "/captcha.htm?" + new Date().getTime());
        };
        var fnPopupBindAction = function () {
            // Tab
            $("#cmt-account-header [data-target]").on('click', function () {
                $("#cmt-account-header [data-target], #cmt-account-header [data-tab]").removeClass("active");
                $(this).addClass("active");
                var tab = $("#cmt-account-header [data-tab='" + $(this).attr("data-target") + "']");
                tab.addClass("active")
                    .find("input[type='text'], input[type='email']").first().focus();
                tab.find("input").keyup(function (event) {
                    if (event.keyCode === 13) {
                        tab.find(".btn.clickable").click();
                    }
                });
                fnCaptcha();
                $("#cmt_alert").html("Vui lòng đăng nhập hoặc đăng ký để gửi bình luận");
            });
            $("#cmt-account-header .close").on('click', function () {
                $("#cmt-account-header").hide();
                $("#cmt-account-header > .wrap").removeAttr("style");
                $("body").css("overflow", "unset");
                fnCaptcha();
                $("#cmt_alert").html("Vui lòng đăng nhập hoặc đăng ký để gửi bình luận");
            });
            // Reload Captcha
            $("#_reload_captcha").on('click', function () {
                fnCaptcha();
            });
            // Btn Login
            $("#_btn_login").on('click', function () {
                $("#cmt_alert").html("Vui lòng đăng nhập hoặc đăng ký để gửi bình luận");
                var email, password;
                email = $("#_login_email").val();
                password = $("#_login_password").val();
                if (!/^[a-z0-9-_\.]+[@][0-9a-z-]+(\.[0-9a-z-]+)+$/ig.test(email) || password.length < 8) {
                    $("#cmt_alert").html("Email hoặc mật khẩu không đúng!");
                    return;
                }

                $("#comment-frame-header")[0].contentWindow.postMessage({ 'act': 'cmlogin', info: { email: email, password: password } }, '*');
                setTimeout(function () {
                    try {
                        $("#comment-frame")[0].src += "&ts=" + new Date().getTime();
                    } catch (e) {
                        // ignore
                    }
                }, 500);
            });
            // Btn Signup
            $("#_btn_sign").on('click', function () {
                $("#cmt_alert").html("Vui lòng đăng nhập hoặc đăng ký để gửi bình luận");
                var email, name, password, repassword, captcha;
                email = $("#_sign_email").val();
                name = $("#_sign_name").val();
                password = $("#_sign_password").val();
                //repassword = $("#_sign_repassword").val();
                captcha = $("#_sign_captcha").val();
                var format = /[!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]/g;
                if (!/^[a-z0-9-_\.]+[@][0-9a-z-]+(\.[0-9a-z-]+)+$/ig.test(email)) {
                    $("#cmt_alert").html("Email không hợp lệ");
                    return;
                }
                //if (name.length <= 0) {
                //    $("#cmt_alert").html("Vui lòng nhập họ tên của bạn!");
                //    return;
                //}
                //if (name.length > 20) {
                //    $("#cmt_alert").html("Họ tên không được quá 20 ký tự (Có thể để nickname thay thế)!");
                //    return;
                //}
                //if (format.test(name)) {
                //    $("#cmt_alert").html("Tên không được chứa ký tự đặc biệt!");
                //    return;
                //}
                if (password.length < 8) {
                    $("#cmt_alert").html("Mật khẩu phải có ít nhất 8 ký tự, chứa ít nhất 1 chữ số và 1 chữ cái");
                    return;
                }
                //if (password != repassword) {
                //    $("#cmt_alert").html("Mật khẩu xác nhận lại không khớp!");
                //    return;
                //}
                if (!(/[a-z]/ig.test(password) && /[0-9]/ig.test(password))) {
                    $("#cmt_alert").html("Mật khẩu phải chứa ít nhất 1 chữ số và 1 chữ cái");
                    return;
                }
                if (captcha.length <= 0) {
                    $("#cmt_alert").html("Vui lòng điền mã xác nhận trong ảnh!");
                    return;
                }
                //window.alert("Đăng kí thành công");

                $("#comment-frame-header")[0].contentWindow.postMessage({ 'act': 'cmsignup', info: { email: email, password: password, name: name, captcha: captcha } }, '*');
                setTimeout(function () {
                    try {
                        $("#comment-frame")[0].src += "&ts=" + new Date().getTime();
                    } catch (e) {
                        // ignore
                    }
                }, 500);
            });
            // Btn logout
            $("#_btn_logout").on('click', function () {
                $("#cmt_alert").html("Vui lòng đăng nhập hoặc đăng ký để gửi bình luận");
                $("#cmt-account-header .close").click();
                fnPopupAction("login", "Bạn đã đăng xuất thành công");
                $("#comment-frame-header")[0].contentWindow.postMessage({ 'act': 'cmlogout', info: {} }, '*');
                try {
                    $("#comment-frame")[0].contentWindow.postMessage({ 'act': 'cmlogout', info: {} }, '*');
                } catch (e) {
                    // ignore
                }
                var el = $("#top-link-account");
                //el.find("a.first").html("<img src='https://static.mediacdn.vn/danviet/mob_images/icon_user.svg' alt='Account'>")
                //    .removeAttr("style");
                el.find("a.first").show();
                el.find("a.second").html("");
                $("#cmt-account-social").show();
            });
            // Header login/account_info
            $("#top-link-account .first").on('click', function () {
                if ($("#top-link-account .second").attr("data-out")) {
                    window._isShowingInfo = true;
                    $("#comment-frame-header")[0].contentWindow.postMessage({ 'act': 'cminfo', info: {} }, '*');
                    $("#top-link-account .second").toggleClass("show");
                } else {
                    fnPopupAction("login");
                }
            });
            // Btn register/log_out
            $("#top-link-account .second").on('click', function () {
                if ($("#top-link-account .second").attr("data-out")) {
                    //$("#_btn_logout").click();
                    if (window.confirm("Bạn muốn đăng xuất?")) {
                        $("#_btn_logout").click();
                        var el = $("#top-link-account");
                        //            //el.find("a.first").html("<img src='https://static.mediacdn.vn/danviet/mob_images/icon_user.svg' alt='Account'>")
                        //            //    .removeAttr("style");
                        el.find("a.second").html("");
                        el.find("a.second").attr("data-out", "0");
                    }
                } else {
                    fnPopupAction('signup');
                }

                //var el = $("#top-link-account");
                //el.find("a.first").html("<img src='https://static.mediacdn.vn/danviet/mob_images/icon_user.svg' alt='Account'>")
                //    .removeAttr("style");
                //el.find("a.second").html("");
            });
        };
        fnPopupBindAction();

        //login Facebook
        var otherLogin = {
            init: function () {
                var me = this;
                //gapi.load('auth2', function () {
                //    gapi.auth2.init({
                //        client_id: '678720187862-08lendtdt5h3nr4j2he534p15b13aieg.apps.googleusercontent.com',
                //        scope: 'email profile',
                //        fetch_basic_profile: true
                //    });
                //});
                $("#cmt-account-social button[data-type]").on('click', function () {
                    me[$(this).attr("data-type")](function (response) {
                        if (response.Success) {
                            if ($("#comment-frame-header").length) {
                                $("#comment-frame-header")[0].src += ($("#comment-frame-header")[0].src.indexOf('?') >= 0 ? "&" : "?") + "social-login=1";
                            }
                            if ($("#comment-frame").length) {
                                $("#comment-frame")[0].src += ($("#comment-frame")[0].src.indexOf('?') >= 0 ? "&" : "?") + "social-login=1";
                            }

                            $("#cmt-account-header .tabs .close, #cmt-account .tabs .close").click();
                        } else {
                            $("#cmt_alert").html(response.Message || "Có lỗi xảy ra, vui lòng thử lại sau ít phút!");
                        }
                    });
                });
                try {
                    fbClient.appId = '2018911871614891';//'211029740744825';
                    fbClient.version = "v14.0";
                    fbClient.init();
                    setTimeout(FB.AppEvents.logPageView, 5000);
                } catch (e) {
                    // ignore
                }
            },
            loginFacebook: function (cb) {
                var me = this;
                function reloginFacebook(callback) {
                    FB.api('/me', { fields: 'id, name, email' }, function (profile) {
                        //console.debug(profile);
                        if (typeof callback === "function") callback(profile);
                    });
                };
                FB.login(function (response) {
                    if (response.authResponse) {
                        reloginFacebook(function (info) {
                            console.log(info);
                            info.social = "facebook";
                            info.accessToken = response.authResponse.accessToken;

                            $.ajax({
                                url: appSettings.ajaxDomain + "/api/social.api",
                                xhrFields: {
                                    withCredentials: true
                                },
                                data: info,
                                type: "post",
                                dataType: "json",
                                beforeSend: function (xhr) {
                                    if (typeof (_OTK) !== "undefined")
                                        xhr.setRequestHeader('OTK', _OTK);
                                },
                                success: function (res) {
                                    //console.log("after login facebook=>", res);
                                    cb(res);
                                }
                            });
                        });
                    } else {
                        $("#cmt_alert").html("Bạn đã từ chối cấp quyền truy cập tài khoản Facebook");
                    }
                }, { scope: 'public_profile,email' });
            },
            loginGoogle: function (callback) {
                var me = this;

                function callSocialApi(data, cb) {
                    data.social = "google";
                    $.ajax({
                        url: appSettings.ajaxDomain + "/api/social.api",
                        xhrFields: {
                            withCredentials: true
                        },
                        data: data,
                        type: "post",
                        dataType: "json",
                        beforeSend: function (xhr) {
                            if (typeof (_OTK) !== "undefined")
                                xhr.setRequestHeader('OTK', _OTK);

                        },
                        success: function (res) {
                            if (typeof cb == "function")
                                cb(res);
                        }
                    });

                }

                // API call for Google login
                if (gapi.auth2.getAuthInstance().isSignedIn.get()) {
                    //console.debug('[VCC] GAPI Process');
                    var profile = gapi.auth2.getAuthInstance().currentUser.get().getBasicProfile();

                    //var id_token = gapi.auth2.getAuthInstance().currentUser.get().getAuthResponse().id_token;
                    var access_token = gapi.auth2.getAuthInstance().currentUser.get().getAuthResponse().access_token;

                    var params = {
                        id: profile.getId(),
                        name: profile.getName(),
                        email: profile.getEmail(),
                        accessToken: access_token
                    }
                    //console.log('params: ', params);
                    callSocialApi(params, callback);
                } else {
                    //console.debug('[VCC] GAPI Login');
                    gapi.auth2.getAuthInstance().signIn().then(
                        function (success) {
                            var profile = gapi.auth2.getAuthInstance().currentUser.get().getBasicProfile();
                            //var id_token = gapi.auth2.getAuthInstance().currentUser.get().getAuthResponse().id_token;
                            var access_token = gapi.auth2.getAuthInstance().currentUser.get().getAuthResponse().access_token;

                            var params = {
                                id: profile.getId(),
                                name: profile.getName(),
                                email: profile.getEmail(),
                                accessToken: access_token
                            }
                            //console.log('params: ', params);
                            callSocialApi(params, callback);
                        },
                        function (error) {
                            $("#cmt_alert").html("Bạn đã từ chối cấp quyền cho Báo Dân Việt truy cập tài khoản Google");
                        }
                    );
                }
            }
        }
        otherLogin.init();
    });
</script>


