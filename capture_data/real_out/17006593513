<script>
    (runinit = window.runinit || []).push(function () {
        function loadAdsDelay() {
            $('.adscode.notad').each(function () {
                var adsId = $(this).find('zone').attr('id');
                arfAsync.push(adsId);
                $(this).removeClass('notad');
            });
        }

        $(document).ready(function () {
            if (!isNotAllowAds) {
                loadAdsDelay();
                console.log('loadadsd');
            }

            $('.headerother .back-home').click(function () {
                sessionStorage.setItem("is_scroll", "1");
            });
        });
        $(window).load(function () {
            if (!isNotAllowAds) {
                loadAdsDelay();
                console.log('loadadsw');
            }
        });
        $(document).ajaxComplete(function () {
            if (!isNotAllowAds) {
                loadAdsDelay();
                console.log('loadadsa');
            }
        });

        //var sticky = {
        //    ele: '.sticky-ele',
        //    eleStart: '.sticky-start',
        //    eleEnd: '.sticky-end',
        //    init: function () {
        //        var me = this;
        //        if ($(me.ele).length && $(me.eleStart).length && $(me.eleEnd).length) {
        //            $(window).scroll(function () {
        //                //console.log(`${$(me.eleEnd).offset().top} > ${$(window).scrollTop()} > ${$(me.eleStart).offset().top}`)
        //                if ($(me.eleEnd).offset().top > $(window).scrollTop() + $(me.ele).height() && $(window).scrollTop() > $(me.eleStart).offset().top) {
        //                    $(me.ele).addClass('sticking').removeClass('abs');
        //                } else {
        //                    if ($(window).scrollTop() < $(me.eleStart).offset().top) {
        //                        $(me.ele).removeClass('sticking').removeClass('abs');
        //                    } else
        //                        $(me.ele).removeClass('sticking').addClass('abs');
        //                }
        //            });
        //        }
        //    }
        //}
        function sticky(ele, eleStart, eleEnd) {
            if ($(ele).length && $(eleStart).length && $(eleEnd).length) {
                $(window).scroll(function () {
                    //console.log(`${$(eleEnd).offset().top} > ${$(window).scrollTop()} > ${$(eleStart).offset().top}`)
                    if ($(eleEnd).offset().top > $(window).scrollTop() + $(ele).height() && $(window).scrollTop() > $(eleStart).offset().top) {
                        $(ele).addClass('sticking').removeClass('abs');
                    } else {
                        if ($(window).scrollTop() < $(eleStart).offset().top) {
                            $(ele).removeClass('sticking').removeClass('abs');
                        } else
                            $(ele).removeClass('sticking').addClass('abs');
                    }
                });
            }
        }
        sticky('.sticky-ele', '.sticky-start', '.sticky-end');
        sticky('.fix-ele', '.fix-start', '.fix-end');

        function getIconLive() {
            var $dataIconType = $('[data-icontype=10],[data-icontype=11]').not('[data-live-status]');

            var arrLiveNews = [];
            $dataIconType.each(function () {
                var $this = $(this);
                let id = $this.attr("data-newsid");
                if (id != null) {
                    if (arrLiveNews.indexOf(id) === -1) {
                        arrLiveNews.push(id + '');
                    };
                    $this.attr('data-live-status', id);
                }
            });

            if (arrLiveNews.length > 0) {
                let arrNews = arrLiveNews.join(',');
                let keyCache = 'danviet_LiveNews_' + arrNews;
                let dataLiveStatus = getStorage(keyCache);
                if (dataLiveStatus != null) {
                    SetIconLiveNews(dataLiveStatus);
                } else {
                    $.ajax({
                        url: appSettings.ajaxDomain + '/Handlers/LiveNews.ashx',
                        data: { id: arrNews, action: 4 },
                        type: 'POST',
                        success: function (msg) {
                            try {
                                setStorage(keyCache, msg, 300);
                                SetIconLiveNews(msg);
                            }
                            catch (e) { }
                        },
                        error: function (e) {
                            console.error(e);
                        }
                    });
                }
            };
        }

        function SetIconLiveNews(msg) {
            try {
                if (msg != null && msg.length > 0) {
                    var response = JSON.parse(msg);
                    var data = JSON.parse(response.Data);
                    for (var i = 0; i < data.length; i++) {
                        $("[data-live-status='" + data[i].NewsId + "']").attr('data-live-status', data[i].Status);
                    }
                }
            } catch (e) {
                console.error('SetIconLiveNews', e);
            }
        }

        getIconLive();

        $(document).ajaxComplete(function () {
            setTimeout(function () {
                console.log('getIconLive');
                getIconLive();
            }, 2000);
        });
    });
</script>

        
