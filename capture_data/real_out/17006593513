        var loadDeferredStyles = function () {
            var addStylesNode = document.getElementById("deferred-styles");
            var replacement = document.createElement("div");
            if (addStylesNode != null) {
                replacement.innerHTML = addStylesNode.textContent;
                document.head.appendChild(replacement)
                addStylesNode.parentElement.removeChild(addStylesNode);
            }
        };
        var raf = window.requestAnimationFrame || window.mozRequestAnimationFrame ||
            window.webkitRequestAnimationFrame || window.msRequestAnimationFrame;
        if (raf) raf(function () { window.setTimeout(loadDeferredStyles, 500); });
        else window.addEventListener('load', loadDeferredStyles);

        (runinit = window.runinit || []).push(function () {
            timeline.pageIndex = 4;
            timeline.url = "https://news-stream.aiservice.vn/danviet/block?s={0}";
            timeline.inithome();

            getComment.objId = $('.widget-hometop .item').data('newsid');
            getComment.objZoneId = $('.widget-hometop .item').data('zoneid');
            getComment.init();

            //Check visit
            function CheckVisit() {
                try {
                    if (typeof (Storage) !== "undefined") {
                        var session = sessionStorage.getItem("VisitSession");
                        if (session == null) {
                            console.log('first');
                            sessionStorage.setItem("VisitSession", "1");
                            homeajax.init();
                        } else {
                            var htmlpageF = sessionStorage.getItem("html_pagefirst");
                            var htmlpageS = sessionStorage.getItem("html_pagesecond");
                            var isScroll = sessionStorage.getItem("is_scroll");
                            var htmlScroll = sessionStorage.getItem("html_scroll");
                            if (htmlpageS != null) {
                                console.log('page2');
                                var codeAds = $('.sbhomeajax', htmlpageS).data('adscode');
                                console.log(codeAds);
                                var $htmlpageS = $(htmlpageS).find('.adscode').html('').end();
                                if (htmlpageF != null)
                                    $('.main-contain').append(htmlpageF);
                                $('.mainhome').append($htmlpageS);
                                $('.sbhomeajax .adscode').html('<zone id="' + codeAds + '"></zone>');
                                arfAsync.push(codeAds);
                            } else {
                                if (htmlpageF != null) {
                                    console.log('page1');
                                    $('.main-contain').append(htmlpageF);
                                    $('.loadhome').appendTo('.mainhome');
                                    $('.loadhome').addClass('wrapper');
                                    homeajax.pageIndex = 2;
                                }
                                homeajax.init();
                            }
                            if (htmlScroll != null) {
                                setTimeout(function () {
                                    console.log('scrll' + htmlScroll);
                                    if (isScroll != null && isScroll == "1")
                                        $(window).scrollTop(htmlScroll);
                                }, 200);
                            }
                            sessionStorage.removeItem("html_pagefirst");
                            sessionStorage.removeItem("html_pagesecond");
                            sessionStorage.removeItem("html_scroll");
                            sessionStorage.removeItem("is_scroll");
                        }
                    }
                } catch (e) {
                    console.log(e);
                }
            }
            $('.mainhome').on('click', 'a', function () {
                if ($('.homepageajax.pagefirst').length)
                    sessionStorage.setItem("html_pagefirst", '<div class="homepageajax pagefirst">' + $('.homepageajax.pagefirst').html() + '</div>');
                if ($('.homepageajax.pagesecond').length)
                    sessionStorage.setItem("html_pagesecond", '<div class="homepageajax pagesecond">' + $('.homepageajax.pagesecond').html() + '</div>');

                sessionStorage.setItem("html_scroll", $(window).scrollTop());
            });
            CheckVisit();

            var swiper = new Swiper('.homehl-big', {
                spaceBetween: 0,
                speed: 500,
                slidesPerView: 1,
                autoplay: {
                    delay: 5000,
                },
                pagination: {
                    el: '.swiperhome-pagination',
                    clickable: true,
                }
            });
        });
    </script>

