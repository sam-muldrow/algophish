var t_onload = window.onload;
window.onload = function() {
if (t_onload)
t_onload();
$('a.maintain-hashonly').each(function(){
var href = $(this).attr('href');
var hash = href.substring(href.indexOf('#'));
$(this).attr('href', hash);
});
var x = screen.width;
if( x <= 520 ){
$('.optanon-alert-box-close, .accept-cookies-button').on('click', function () {
$('.helpdotcom-livechat.helpdotcom-bottom-left').addClass('bottom');
});
}
}
</script>
