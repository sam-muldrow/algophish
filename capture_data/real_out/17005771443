$(document).ready(function() {
	$('.select-and-go').on('click', function(e) {
		var form = $(this).parents('form:first');
		var selectElement = form.find('select:first');
		
		if (selectElement[0].value) {
			window.location = selectElement[0].value;
		}
		return false;
    });
});
