		function isMobile() {
			var iCheckFromM =0;
			var userAgentInfo = navigator.userAgent;
			var Agents = new Array("Android", "iPhone", "SymbianOS", "Windows Phone", "iPad");
			var flag = false;
			for (var v = 0; v < Agents.length; v++) {
				if (userAgentInfo.indexOf(Agents[v]) > 0) { flag = true; break; }
			}
			if (flag && !iCheckFromM) {
				window.location.href = "http://m.cgbchina.com.cn";
			}
		}
		isMobile(); 

		function isNotIE11(){
			var UA = window.navigator.userAgent;
			var isIE = UA.indexOf('MSIE');
			var VS;
			if(isIE >= 0) {VS = Number(UA.split("; ")[1].split(" ")[1])};
			if (isIE >= 0 && VS < 11){
				var flag = confirm('´ËÒ³Ãæ²»ÔÚ¶ÔµÍ°æ±¾IEä¯ÀÀÆ÷Î¬»¤£¬Çë½«IEä¯ÀÀÆ÷Éý¼¶µ½11.0°æ±¾»òÓÃÆäËüä¯ÀÀÆ÷´ò¿ª¡£Ð»Ð»£¡£¡');
				if(!flag){
					window.location.href="http://card.cgbchina.com.cn";
				}
			}
		}  
