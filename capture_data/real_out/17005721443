<script>
  // ÎªÄúÍÆ¼öÂÖ²¥
  var number = $('.content-box .col').length;
  if(number > 4) {
    var dis = $('.content-box .col')[0].clientWidth + 20;
    // var dis = 240;
    // ¸´ÖÆÇ°4¸ö·Åµ½×îºóÃæ
    var arrPre = [];
    $('.content-box .col').each(function(i, e){
      if (i < 4) {
        arrPre.push($(e).clone());
      }
    });
    for(var i = 0; i < 4; i++){
      $('.content-box').append(arrPre[i]);
    }
    var col_index = 0;
    number = $('.content-box .col').length;
    // ÏÂÒ»Ò³
    $('.next_btn').click(function () {
      btnClick();
    });
    function btnClick(){
      // Èç¹ûÔÚµ¹ÊýµÚËÄµÄÎ»ÖÃ£¬ÔòÌøµ½µÚ1µÄÎ»ÖÃ
      if (col_index === number - 4) {
        col_index = 0;
        $('.content-box').stop().animate({
          'left': (-dis * col_index) +'px',
        }, 0);
      }
      col_index++;
      $('.content-box').stop().animate({
        'left': (-dis * col_index) +'px',
      }, 300);
    }
    // ÉèÖÃ¶¨Ê±Æ÷
    var timerId = setInterval(function(){
      btnClick();
    }, 5000);
    $('.content-box').mouseenter(function(){
      clearInterval(timerId);
    });
    $('.content-box').mouseleave(function(){
      timerId = setInterval(function(){
        btnClick();
      }, 5000);
    });
  }

</script>

