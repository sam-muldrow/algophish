<script src="/static/pchome/lib/swiper-2.7.6.min.js"></script>
<script>
  $('.side_bar .mobile').on('mouseover', function(){
    $('.mobile').addClass('hover');
  }).on('mouseout', function(){
    $('.mobile').removeClass('hover');
  });
  $('.side_bar .wechact').on('mouseover', function(){
    $('.wechact').addClass('hover');
  }).on('mouseout', function(){
    $('.wechact').removeClass('hover');
  });
  $('.side_bar .yundian').on('mouseover', function(){
    $('.yundian').addClass('hover');
  }).on('mouseout', function(){
    $('.yundian').removeClass('hover');
  });
  $('.side_bar .service').on('mouseover', function(){
    $('.service_inner').addClass('service_hover');
  }).on('mouseout', function(){
    $('.service_inner').removeClass('service_hover');
  });
  $('.side_bar .online').on('mouseover', function(){
    $('.online').addClass('link_hover');
  }).on('mouseout', function(){
    $('.online').removeClass('link_hover');
  });
  // ÔÚÏß¿ì½Ý·þÎñÂÖ²¥ÅäÖÃ
  var serviceSwiper = new Swiper('#side_bar .swiper-container', {
    autoplayDisableOnInteraction: false,
    speed: 600,
    onSlideChangeStart: function(){
      $('.swiper-next').unbind('click.next');
      $('.swiper-prev').unbind('click.prev');
    },
    onSlideChangeEnd: function(){
      $('.swiper-next').bind('click.next', swiperNext);
      $('.swiper-prev').bind('click.prev', swiperPrev);
    }
  });
  // ÔÚÏß¿ì½Ý·þÎñ×óÓÒ°´Å¥ÑùÊ½
  var serviceNum = $('.service_inner .service_list').length;
  var aNum = $('.service_inner a').length;
  $('.controller-pagination .total').text(serviceNum);
  var serviceCur = 0;
  $('.swiper-next').bind('click.next', swiperNext);
  if(aNum <= 5) $('.controller .swiper-next i').css({ borderLeft: '9px solid #aaa' });
  
  // ÏÂÒ»Ò³
  function swiperNext(){
    if(aNum <= 5) return;
    serviceCur = +$('.controller-pagination .now').text()-1;
    serviceCur++;
    $('.controller .swiper-prev i').css({ borderLeft: '9px solid #333' });
    if (serviceCur > serviceNum - 1) {
      serviceCur = serviceNum - 1;
      $('.controller-pagination .now').text(serviceNum);
      return;
    }
    $('.controller-pagination .now').text(serviceCur + 1);
    if (serviceCur === serviceNum - 1) {
      $('.controller .swiper-next i').css({ borderLeft: '9px solid #aaa' });
    }
    serviceSwiper.swipeNext();
  }
  $('.swiper-prev').bind('click.prev', swiperPrev);
  // ÉÏÒ»Ò³
  function swiperPrev(){
    serviceCur = +$('.controller-pagination .now').text()-1;
    serviceCur--;
    $('.controller .swiper-next i').css({ borderLeft: '9px solid #333' });
    if (serviceCur < 0) {
      serviceCur = 0;
      $('.controller-pagination .now').text(1);
      return;
    }
    $('.controller-pagination .now').text(serviceCur + 1);
    if (serviceCur === 0) {
      $('.controller .swiper-prev i').css({ borderLeft: '9px solid #aaa' });
    }
    serviceSwiper.swipePrev();
  }

  // ¼æÈÝIEÀÏÄê°æ
  var UA = window.navigator.userAgent;
  var isIE = UA.indexOf('MSIE');
  var isOld = +sessionStorage.getItem('oldman');
  if (isIE > -1){
    if (isOld === 1) {
      $('.side_bar').addClass('oldside');
    } else {
      $('.side_bar').removeClass('oldside');
    }
  }
  // ¼æÈÝIE9
  // $(window).scroll(function(e){
  //   var scrollTop = +$(window).scrollTop();
  //   window.console && console.log(scrollTop);
  //   $('.side_bar').css('top', (scrollTop + 140) + 'px');
  // });
</script>

