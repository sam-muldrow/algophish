<script src="/static/CN2/js/jquery_gf.js"></script>
<script src="/static/pchome/lib/swiper-2.7.6.min.js"></script>
<script  language="javascript" type="text/javascript">

  var UA = window.navigator.userAgent;
	var isIE = UA.indexOf('MSIE');
	var VS;
	if(isIE >= 0) {VS = Number(UA.split("; ")[1].split(" ")[1])};
	if (isIE >= 0 && VS < 10){
    // bannerÂÖ²¥Í¼ÅäÖÃ
		var bannerSwiper = new Swiper('.banner .swiper-container',{
      autoplay: 5000,
      loop: true,
      speed: 700,
      autoplayDisableOnInteraction: false,
      pagination: '.pagination',
      paginationElement: 'li',
      paginationClickable: true,
    });
	}else{
    // bannerÂÖ²¥Í¼ÅäÖÃ
    var bannerSwiper = new Swiper('.banner .swiper-container',{
      autoplay: 5000,
      loop: true,
      speed: 700,
      autoplayDisableOnInteraction: false,
      pagination: '.pagination',
      paginationElement: 'li',
      paginationClickable: true,
    });
  }
 
  $('.banner').mouseover(function(){
    bannerSwiper.stopAutoplay();
  });
  $('.banner').mouseout(function(){
    bannerSwiper.startAutoplay();
  });



  // ¹«¸æÀ¸ÂÖ²¥Í¼ÅäÖÃ
  var advNumber = $('.adv_item').length;
  var advDis = 54;
  // ¸´ÖÆÇ°1¸ö·Åµ½×îºóÃæ
  $('.adv_inner').append($('.adv_item').first().clone());
  var adv_index = 0;
  advNumber = $('.adv_item').length;
  // ÏÂÒ»Ò³
  $('.adv_next').click(function () {
    advClick();
  });
  function advClick(){
    // Èç¹ûÔÚµ¹ÊýµÚËÄµÄÎ»ÖÃ£¬ÔòÌøµ½µÚ1µÄÎ»ÖÃ
    if (adv_index === advNumber - 1) {
      adv_index = 0;
      $('.adv_inner').stop().animate({
        'top': (-advDis * adv_index) +'px',
      }, 0);
    }
    adv_index++;
    $('.adv_inner').stop().animate({
      'top': (-advDis * adv_index) +'px',
    }, 700);
  }
  // ÉèÖÃ¶¨Ê±Æ÷
  var advTimerId = setInterval(function(){
    advClick();
  }, 5000);
  $('.adv_inner').mouseenter(function(){
    clearInterval(advTimerId);
  });
  $('.adv_inner').mouseleave(function(){
    advTimerId = setInterval(function(){
      advClick();
    }, 5000);
  });



  // µÇÂ¼Ä£¿éÇÐ»»
  $('.login .person').mouseover(function () {
    clearSelect();
    $(this).addClass('active').siblings('.enterprise').removeClass('active');
    $('.p-login').css({ display: 'block' });
    $('.e-login').css({ display: 'none' });
  });
  $('.login .enterprise').mouseover(function () {
    clearSelect();
    $(this).addClass('active').siblings('.person').removeClass('active');
    $('.e-login').css({ display: 'block' });
    $('.p-login').css({ display: 'none' });
  });

  // ÐÂÎÅ×ÊÑ¶ÇÐ»»
  $('.gz_news').css({ display: 'block' }).siblings().css({ display: 'none' });
  $('.news .gz_news_title').mouseover(function () {
    clearSelect();
    $(this).addClass('active').siblings('.col').removeClass('active');
    $('.gz_news').css({ display: 'block' }).siblings().css({ display: 'none' });
    $('.more_list .more a').attr('href', '/Channel/11625977');
  });
  $('.news .activity_title').mouseover(function () {
    clearSelect();
    $(this).addClass('active').siblings('.col').removeClass('active');
    $('.activity').css({ display: 'block' }).siblings().css({ display: 'none' });
    $('.more_list .more a').attr('href', '/Channel/23358864');
  });
  $('.news .announce_title').mouseover(function () {
    clearSelect();
    $(this).addClass('active').siblings('.col').removeClass('active');
    $('.announce').css({ display: 'block' }).siblings().css({ display: 'none' });
    $('.more_list .more a').attr('href', '/Channel/13260778');
  });
  function clearSelect(){
    var ief = window.navigator.userAgent.indexOf('MSIE');
    if(ief){
      try {
        document.selection.empty();
      } catch (error) {}
    }
  }
</script>

