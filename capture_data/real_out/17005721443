<script src="/static/CN2/js/jquery_gf.js"></script>
<script>
	// »ñÈ¡²úÆ·¹ÜÀíÈËÁÐ±í
	getCompanyInit();
	var totalNum = 0;
	function getCompanyInit(){
		var data = {
			trancode: 'FundCompany',
			beginNum: 0,
			fetchNum: 3
		}
		$.ajax({
			url: '/jsp/getFundTrade.jsp',
			data: data,
			dataType: 'json',
			type: 'POST',
			success: function (res) {
				getCompanyOther(Number(res.totalNum));
				var html = '<button type="button" data-id="" class="fund_item active" onclick="corpClick()">²»ÏÞ</button>';
				$.each(res.list, function(ind, ele){
					html += '<button type="button" data-id="'+ele.TACode+'" class="fund_item" onclick="corpClick()">'+ele.TAName+'</button>';
				});
				$('.fundCorp').html(html);
			},
		});
	}
	function getCompanyOther(num){
		var data = {
			trancode: 'FundCompany',
			beginNum: 3,
			fetchNum: num - 3
		}
		$.ajax({
			url: '/jsp/getFundTrade.jsp',
			data: data,
			dataType: 'json',
			type: 'POST',
			success: function (res) {
				var html = '<div class="filter_item">'+
									'<div class="filters fund_select">'+
										'<div class="field" id="company">'+
											'<div class="select" onclick="toggleSelect()">'+
												'<span id="fundCompany">---ÇëÑ¡ÔñÆäËû²úÆ·¹ÜÀíÈË---</span>'+
												'<i class="arrow-down"></i>'+
											'</div>'+
											'<ul class="select_list hide" onmouseleave="leaveUl()">'+
												'<li class="weight">---ÇëÑ¡ÔñÆäËû²úÆ·¹ÜÀíÈË---</li>';
				$.each(res.list, function(ind, ele){
					html += '<li data-id="'+ele.TACode+'" onclick="changeSelect()">'+ele.TAName+'</li>';
				});
				html += '</ul></div></div></div>';
				$('.fundCorp').append(html);
			},
		});
	}

	// ½ðÈÚ³¬ÊÐtabÇÐ»»
	$('.market .fund').css({ display: 'block' }).siblings().css({ display: 'none' });
	$('.fund_title').hover(function () {
		clearSelect();
		$(this).addClass('active').siblings('span').removeClass('active');
		$('.market .fund').css({ display: 'block' }).siblings().css({ display: 'none' });
	});
	$('.metal_title').hover(function () {
		clearSelect();
		$(this).addClass('active').siblings('span').removeClass('active');
		$('.market .metal').css({ display: 'block' }).siblings().css({ display: 'none' });
	});
	function clearSelect(){
		var ief = window.navigator.userAgent.indexOf('MSIE');
		if(ief){
			try {
				document.selection.empty();
			} catch (error) {}
		}
	}


	$('.fund_list .fund_item').not('.fundCorp .fund_item').click(function () {
		toggleClick(this);
	});
	function corpClick(target) {
		target = target || event.target;
		toggleClick(target);
		$('#fundCompany').text('---ÇëÑ¡ÔñÆäËû²úÆ·¹ÜÀíÈË---');
		$('.fund .field ul li').eq(0).addClass('weight').siblings('li').removeClass('weight');
	}
	function toggleClick(target){
		$(target).addClass('active').siblings('button.fund_item').removeClass('active');
		$(target).parents('.fund_list').siblings('input').val($(target).attr('data-id'));
	}
	
	// ½ðÈÚ³¬ÊÐ--»ù½ðÑ¡Ïî
	function toggleSelect(){
		$('.select').toggleClass('selecting').next().toggleClass('hide');
		$('.select').parents('.fund_select').siblings().find('.select').removeClass('selecting');
		$('.select').parents('.fund_select').siblings().find('ul').addClass('hide');
	}
	function leaveUl(){
		$('.select_list').addClass('hide').siblings('.selecting').removeClass('selecting');
	}
	function changeSelect(target){
		var ele = target || event.target;
		var id = $(ele).attr('data-id');
		var text = $(ele).html();
		$(ele).addClass('weight').siblings().removeClass('weight');
		$(ele).parents('.fund_select').find('span').html(text);
		$(ele).parents('.field').find('ul').addClass('hide');
		$(ele).parents('.field').find('.selecting').removeClass('selecting');
		$('.fundCorp').siblings('input').val(id);
		$('.fundCorp .fund_item').removeClass('active');
	}

	// ¹ó½ðÊôÑùÊ½
	$('.metal_service_list a').each(function(i, e){
		var number = $(e).text().length;
		if (number < 8){
			$(e).css('line-height', '28px');
		}else{
			$(e).css('line-height', '14px');
		}
	});
	
	// Çå¿ÕÑ¡Ïî
	function filterReset(){
		window.console && console.log('reset');
		$('.fund_list .fund_item').removeClass('active');
		$('.fundType .fund_item').eq(0).addClass('active');
		$('.fundSubType .fund_item').eq(0).addClass('active');
		$('.fundCorp .fund_item').eq(0).addClass('active');
		$('.fundRist .fund_item').eq(0).addClass('active');
		$('.fundType, .fundSubType, .fundCorp, .fundRist').siblings('input').val('');
		$('#fundCompany').text('---ÇëÑ¡ÔñÆäËû²úÆ·¹ÜÀíÈË---');
		$('.fund .field ul li').eq(0).addClass('weight').siblings('li').removeClass('weight');
	}
	// Ìø×ª»ù½ðÖÐÐÄ
	function jumpToFilterResult() {
		var query = $('#fundForm').serialize();
		var url = '/Channel/3589371?';
		window.open(url+query);
	}

	var textC="";
	var bgC="";
	// ËÑË÷¿òÑùÊ½
	$('.fund_search').on('focus', function () {
		var text = $.trim($(this).val());
		if (text === '²úÆ·Ãû³Æ»ò´úÂë') {$(this).val('').css('color', '#000');}
		getColor();
		if (textC !== "") {$(this).css('color', textC);}
		$(this).css({ border: '1px solid #BE0018' });
		$('.color_btn').length > 0 && Barrier.colorSet(colorArr[PARAMETER.colorNum].color, PARAMETER.colorNum);
	});
	$('.fund_search').on('blur', function () {
		$(this).css({ border: '1px solid #D0D0D0' });
		var $this = $(this);
		setTimeout(function() {
			var text = $.trim($this.val());
			if (text === '') {$this.val('²úÆ·Ãû³Æ»ò´úÂë').css('color', '#777');}
			if (textC !== "") {$this.css('color', textC);}
			PARAMETER.colorNum !== 4 && Barrier.colorSet(colorArr[PARAMETER.colorNum].color, PARAMETER.colorNum);
		}, 200);
	});
	// »ñÈ¡ÎÞÕÏ°­ÅäÉ«
	function getColor(){  
		var isFree = localStorage.getItem('freeFlag') ? JSON.parse(localStorage.getItem('freeFlag')) : null;
		if (isFree) {
			$('.color_list li span').each(function(i, e){
				if($(e).hasClass('active')){
					var colors = $(e).parents('li').data('color');
					if (colors !== 'default'){
						textC = colors.split('_')[1];
						bgC = colors.split('_')[0];
						$('.search_history li').css({
							color: textC,
							background: bgC
						});
					} else {
						textC="";
						bgC="";
					}
				}
			});
		}
	}

	// °´enter¼üÌá½»±íµ¥
	$('.fund_search').on('keydown', function(e){
		e = e || event;
		if (e.keyCode === 13) {
		fundSubmit(true);
			e.preventDefault ? e.preventDefault() : (e.returnValue = false);
		} 
	});
	// µã»÷ËÑË÷Ìá½»±íµ¥
	function fundSubmit(flag){
		var objRe = new RegExp(
				".*;*(%|#|'|&|use|exec|insert|select|delete|update|prompt|declare|eval|drop|alert|confirm|mid|or|and|SCRIPT|FORM|#).*", "i");
		var text = $.trim($('.fund_search').val()).replace(/[<>?\\\/~!(),:'"@#$%&^*;]/g,'');
		$('.fund_search').val(text);
		if (objRe.test(text)) {
			$('.fund_search').val('²úÆ·Ãû³Æ»ò´úÂë').css('color', '#777');
			if (textC !== "") {$('.fund_search').css('color', textC);}
			alert("ÓÐ·Ç·¨±êÊ¶ÇëÖØÐÂÊäÈë£¡")
			return;
		}
		if (text === '' || text === '²úÆ·Ãû³Æ»ò´úÂë') {
			$('.fund_search').val('²úÆ·Ãû³Æ»ò´úÂë').css('color', '#777');
			if (textC !== "") {$('.fund_search').css('color', textC);}
			alert('ÇëÊäÈëËÑË÷Ìõ¼þ');
		} else {
			// Ìá½»Ìø×ªÒ³Ãæ
			var url = '/Channel/3589371?fundCodeOrName=' + text;
			window.open(url);
			setTimeout(function () {
				$('.fund_search').val('²úÆ·Ãû³Æ»ò´úÂë').css('color', '#777').blur();
				if (textC !== "") {$('.fund_search').css('color', textC);}
				flag ? Barrier.changeAllText($('.fund_search'), $('#market')) : Barrier.changeAllText($('.fund_btn'), $('#market'));
			}, 10);
		}
	}

</script>

