            <script type="text/javascript">
                var chks = 0;

                var chkc = 0

                var chkin = document.querySelectorAll(".chks")

                var chkra = document.querySelectorAll(".chkr")

                for (i = 0; i < chkin.length; i++) {

                    chkin[i].addEventListener('click', function () {

                        chks += this.checked ? 1 : -1;

                        if (chks <= 0) {

                            document.getElementById('caterror').innerHTML = "Select at least one category"
                            document.getElementById('caterror').style.display = "block"
                        } else {

                            document.getElementById('caterror').innerHTML = ""
                            document.getElementById('caterror').style.display = "none"

                        }

                        console.log(chks);

                    });
                }


                for (i = 0; i < chkra.length; i++) {

                    chkra[i].addEventListener('click', function () {

                        chkc = this.checked ? 1 : -1;
                        alert("ok")

                        if (chkc <= 0) {

                            document.getElementById('occ_error').innerHTML = "Select at least one category"
                            document.getElementById('occ_error').style.display = "block"
                        } else {

                            document.getElementById('occ_error').innerHTML = ""
                            document.getElementById('occ_error').style.display = "none"

                        }

                        console.log(chkc);

                    });
                }


                function validatemsisdn() {

                    var msisdn = document.getElementById('msisdn')
                    msisdnv = String(msisdn.value)
                    var nLength = msisdnv.length

                    if ((nLength < 9) || (nLength > 13)) {

                        document.getElementById('msisdn_error').innerHTML = "You entered a wrong number"
                        document.getElementById('msisdn_error').style.display = "block"
                        msisdn.focus();
                        msisdn.select();

                        return false;

                    } else if (((msisdnv / 1) <= 0) || ((msisdnv / 1) == "NULL") || ((msisdnv / 1) == "undefiend")) {


                        document.getElementById('msisdn_error').innerHTML = "You entered a wrong number"
                        document.getElementById('msisdn_error').style.display = "block"
                        msisdn.focus();
                        msisdn.select();

                        return false;

                        // msisdnv = Number(msisdnv);

                    } else {

                        document.getElementById('msisdn_error').style.display = "none"
                        return true;
                    }
                }

                function validatecategory() {

                    if (chks <= 0) {
                        document.getElementById('caterror').innerHTML = "Select at least one category";
                        document.getElementById('caterror').style.display = "block"
                        return false;
                    } else {
                        document.getElementById('caterror').innerHTML = "";
                        document.getElementById('caterror').style.display = "none"
                        return true;

                    }
                }


                function validatefreq() {

                    if (chkc <= 0) {
                        document.getElementById('occ_error').innerHTML = "Don't forget to choose. ):";
                        document.getElementById('occ_error').style.display = "block"
                        return false;
                    } else {

                        document.getElementById('occ_error').style.display = "none"
                        return true;

                    }
                }


                function check_data() {
                    // body...
                    vd = validatemsisdn();
                    vd = validatecategory();
                    //vd = validatefreq();

                    if (vd) {

                        clswindow('subwindow')
                    }

                    return vd

                }
            </script>


            
