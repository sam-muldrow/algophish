<script>
    ( function ()
    {
        var headerPanel = function ( selector, activeClass )
        {
            var pageHtml = document.getElementsByTagName( "HTML" )[ 0 ];
            try {
                document.addEventListener( 'click', function ( e )
                {
                    if ( e.target && e.target.matches( selector ) ) {
                        pageHtml.classList.toggle( activeClass );
                    }
                } );
                document.onkeydown = function ( evt )
                {
                    evt = evt || window.event;
                    if ( evt.keyCode == 27 ) {
                        pageHtml.classList.remove( activeClass );
                    }
                };
            } catch ( e ) { }
        };
        var searchPanel = function ( selector, activeClass )
        {
            var pageHtml = document.getElementsByTagName( "HTML" )[ 0 ];
            try {
                document.addEventListener( 'click', function ( e )
                {
                    if ( e.target && e.target.matches( selector ) ) {
                        pageHtml.classList.toggle( activeClass );
                    }
                } );
            } catch ( e ) { }
        };
        var tracking = function()
        { //tracciamento tasto abbonati nelle liste, sezioni e media-hub
            if(pageType=='homepage') return;
            if(typeof pageType != 'undefined' &&  typeof term != 'undefined'){ 
                document.querySelector(".hpi-slim-header__subscription").addEventListener('click', (e) => {
                  let param;
                  let url = e.target.getAttribute('href');
                  if (term.match(/audio/) || term.match(/video/)) {
                    param = 'huff-mh-abb';
                  }else{
                    switch (true) {
                        case pageType =='dettaglio_articolo' : 
                             param = 'huff-da-abb';
                        break;
                        case pageType =='homepage_sezione':
                             param = 'huff-ls-abb';
                        break;
                    }
                  };
                  url = url + '?ref=' + param;
                  e.target.setAttribute('href',url);
               })
            }
        }
        /**
         * Page Header Panel
         * @param {string} selector - Page Header Panel classess selector
         * @param {string} activeclass - Page Header Panel active class
         */
        headerPanel( '.hpi-megamenu__toggle', 'is-menu-open' );
        console.log( '%c Megamenu Panel â', 'background: #f6f6f6; color: #000; padding: 4px 6px 4px 0;' );
        /**
         * Page Search Panel
         * @param {string} selector - Page Search Panel classess selector
         * @param {string} activeclass - Page Search Panel active class
         */
        searchPanel( '.hpi-search__toggle', 'is-search-open' );
        console.log( '%c Search Panel â', 'background: #f6f6f6; color: #000; padding: 4px 6px 4px 0;' );
        /**
         * Search Main Nav
         * @param {string} selector - Page Search Panel classess selector
         * @param {string} activeclass - Page Search Panel active class
         */
        searchPanel( '#mainNavSearchButton', 'is-main-nav-search-open' );
        console.log( '%c Search Main Nav â', 'background: #f6f6f6; color: #000; padding: 4px 6px 4px 0;' );
         /**
         * Tracking tasto abbonati
         */
         tracking();
    })();
</script>
