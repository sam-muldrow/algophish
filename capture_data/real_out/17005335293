	<script>
		window.nmt = window.nmt || {};
		(window.nmt.setColorScheme = function(docEl) {
			try {
				docEl = docEl || document.documentElement;
				const docElClassList = docEl.classList;
				const storedScheme = window.localStorage.getItem('nmt_color_scheme');
				const forceDarkMode = docElClassList.contains('force-dark-mode');

				if ((forceDarkMode == false && storedScheme == 'light')
					|| (forceDarkMode == false && window.matchMedia('(prefers-color-scheme: light)').matches && storedScheme != 'dark')
				) {
					return;
				}

				if (forceDarkMode == true
					|| storedScheme == 'dark'
					|| window.matchMedia('(prefers-color-scheme: dark)').matches) {
					docElClassList.add('dark-mode');
				}
			} catch (err) {
				console.log(err);
			}
		})();
	</script>


