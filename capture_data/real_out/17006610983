<!-- End menu + search Mobile--><script>
   
   /* This script check if the third party cookies are enable (in our case just youtube),
    * if they aren't, it'll add the string "-nocookie" to all youtube's iframes */ 
    
    
   if(getCookie("thirdPartyCookiesEnable") === ""){ 
        $(document).ready(function() {
        var urlYoutube = "youtube.com";
        var nocookie = "-nocookie";

        $("iframe").each(function() {
        var src = $(this).attr('src');

        if (src.includes(urlYoutube)){
            //console.log("before: " + src);
            var indexPosition = src.indexOf(".com");

            $(this).attr('src', [src.slice(0, indexPosition), nocookie, src.slice(indexPosition)].join('')); 
            //console.log("after: " + $(this).attr('src'));
          }
        });
    });
    }

    function getCookie(cname) {
        var name = cname + "=";
        var ca = document.cookie.split(';');
        for(var i = 0; i < ca.length; i++) {
          var c = ca[i];
          while (c.charAt(0) == ' ') {
            c = c.substring(1);
          }
          if (c.indexOf(name) == 0) {
            //console.log("cookie found");
            return c.substring(name.length, c.length);
            
          }
        }
        //console.log("cookie not found");
        return "";
      }

</script></body>
</html>