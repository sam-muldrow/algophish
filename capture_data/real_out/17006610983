<link rel="stylesheet" href="/cmsresources/static/css/cookie.css">

<script>
    jQuery(document).ready(function ($) {
    controllo_cookie();

    function controllo_cookie()
    {
    var consent = getControllo_cookie("acconsenti-cookie");
    if (consent == null || consent == "" || consent == undefined)
    {
    // show notification bar
    $('#cookie-container').show();
    }
    }

    function setControllo_cookie(c_name, value, exdays)
    {
    var exdate = new Date();
    exdate.setDate(exdate.getDate() + exdays);
    var c_value = escape(value) + ((exdays == null) ? "" : "; expires=" + exdate.toUTCString());
    document.cookie = c_name + "=" + c_value + "; path=/";
    $('#cookie-container').hide('slow');
    }

    function getControllo_cookie(c_name)
    {
    var i, x, y, ARRcookies = document.cookie.split(";");
    for (i = 0; i < ARRcookies.length; i++)
    {
    x = ARRcookies[i].substr(0, ARRcookies[i].indexOf("="));
    y = ARRcookies[i].substr(ARRcookies[i].indexOf("=") + 1);
    x = x.replace(/^\s+|\s+$/g, "");
    if (x == c_name)
    {
    return unescape(y);
    }
    }
    }

    $("#accetta-cookie .accept").click(function () {
    setControllo_cookie("acconsenti-cookie", 1, 30);

    // if (document.querySelector("#analyticsCookies").checked) {

    //Enable tracking & cookies of Matomo 
    let optionallyExpireConsentInHours = 720;   //30 days
    window._paq.push(['rememberConsentGiven', optionallyExpireConsentInHours])
   
    // }

    if (document.querySelector("#thirdPartyCookies").checked) {
    setControllo_cookie("thirdPartyCookiesEnable", 1, 30);
    //Enable tracking & cookies of     } else {
    //Disable tracking & cookies of Matomo 
    window._paq.push(['forgetConsentGiven']);
    }
    });
    });
</script>

