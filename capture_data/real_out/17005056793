        aria-labelledby="staticBackdropLabel" aria-hidden="true" style="display:none;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h5 class="modal-title">Manage Threads</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="emailShareBody">
                <p class="text-secondary fw-bold">Select Directory to move your thread.</p>
                
                <div class="library-main-wrapper subscription-main">
                  <div class="participation-wrapper" id="folderlist">
                    
                  </div>
                </div>
                <div class="input-group mb-3" id="addNewDirectory">
                    <input type="hidden" id="movableThreadPrefix" name="movableThreadPrefix" class="form-control rounded-0" value="">
                    <input type="hidden" id="movableThreadId" name="movableThreadId" class="form-control rounded-0" value="">
                    <input type="text" id="createNewDirectory" name="createNewDirectory" class="form-control rounded-0" placeholder="Directory Name">
                    <button type="button" id="saveinfo" class="btn btn-primary" onclick="createNewDirectory()">Create New</button>
                </div>
            </div>
            <div class="modal-body mb-3" id="directoryCreatedSuccessMsgBody" style="display: none;">
                <p class="text-success text-center fw-bold">Directory created successfully.</p>
            </div>
            <div class="modal-body mb-3" id="threadMovedSuccessMsgBody" style="display: none;">
                <p class="text-success text-center fw-bold">Thread moved successfully.</p>
                <p class="text-success text-center fw-bold">Thank you.</p>
            </div>
            <div class="modal-footer">
                <button type="button" id="saveinfo" class="btn btn-primary" onclick="moveToDirectory()">Move Thread</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" tabindex="-1" id="shareViaEmailModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true" style="display:none;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h5 class="modal-title">Share via Email</h5>
