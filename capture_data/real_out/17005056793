    function searchme() {
       if ($('.search-input').val()) {
         $("#search_query").submit();
         $('.search-input').val('');
       }
    }
    function playaudio() {
       document.getElementById('notification').muted = false;
       document.getElementById('notification').play();
    }
    $(".main-wrap").on("scroll", function () {
        if ($(".main-wrap").scrollTop() > 300) {
            $("#backToTopBtn").removeClass("d-none");
            $("#backToTopBtn").addClass("d-flex");
            setTimeout(function() {
              if($(".unread-feed")) {
                  $(".feed").removeClass("unread-feed");
              }
              if($(".unread-feed-reply")) {
                  $(".unread-feed-reply").removeClass("unread-feed-reply");
              }
            }, 10000);
        } else {
            $("#backToTopBtn").removeClass("d-flex");
            $("#backToTopBtn").addClass("d-none");
        }
    });
    $(document).ready(function () {
        $("#backToTopBtn").click(function () {
            $(".main-wrap").animate({ scrollTop: 0 }, 500)
        })
    });
    $(document).ready(function () {
        $("#mobileSearchBtn").click(function () {
            $("#mobileSearchForm").toggleClass("d-block");
        });
    });

    function showLibraryAction(id) {
        if ( $('#participation-options-wrapper-'+id)) {
           $('#participation-options-wrapper-'+id).toggleClass('active');
        }
    }
    function shareviaemail(threadId) {
       $('#shareViaEmailModal').modal('show');
       $("#sharableThreadId").val(threadId);
       $("#shareRequestFrom").val('thread');
    }
    function prepareDirectoryList(data, prefix) {  
      var directories = $.parseJSON(data);
      var directoriesKeys = Object.keys(directories);
      var folderHtml = '';
      $.each(directoriesKeys, function( index, value ) {
        var dirname = directories[value];
        folderHtml += '<div class="participation-box dirlist" id="'+prefix+'folder_id_'+value+'" onclick="selectForMove('+value+', \''+prefix+'\')">'+
          '<div class="participation-upper">'+
             '<div class="participation-text">'+
                '<p> '+
	          '<span class="participation-box-text"><a href="javascript:void(0)">'+dirname+'</a></span> '+ 
                '</p>'+
             '</div>'+
              '<a href="javascript:void(0)" onclick="removeDirectory('+value+', \''+prefix+'\')"><img src="./assets/img/icon/delete-icon.svg"  alt="Delete" width="20px" height="20px"></a>'+
           '</div>'+
        '</div>'; 
      });
      return folderHtml;
    }

    function selectForMove(id, prefix) {
       $(".participation-box").not($('#'+prefix+'folder_id_'+id)).removeClass('active');
       $('#'+prefix+'folder_id_'+id).toggleClass('active');
       $('#movableFolderId').val(id);
    }

    function filterThreads(id, prefix) {
       $(".dirlist").not($('#'+prefix+'folder_id_'+id)).removeClass('active');
       $('#'+prefix+'folder_id_'+id).toggleClass('active');
       $("div.threadfilter > div.participation-box").each(function(){
           if($('#'+prefix+'folder_id_'+id).hasClass('active')) {
              $(this).toggle($(this).data('folderid') === id);
           } else {
              $(this).show();
           }
       });
    }

    function moveToDirectory() {
       var movableThreadId = $("#movableThreadId").val();
       var movableFolderId = $("#movableFolderId").val();
       $.post({
            url:"/authyfi.php", 
            data:{ action: 'moveThreadToFolder', threadId: movableThreadId, folderId: movableFolderId },
            dataType: 'text'
        }).done(function( data ) {
          toastr.success('Thread moved successfully.');
          $("#movableThreadId").val('');
          $("#movableFolderId").val('');

          if ( $('#participation-options-wrapper-'+movableThreadId)) {
              $('#participation-options-wrapper-'+movableThreadId).toggleClass('active');
          }
          $('#mangeThreadModal').modal('hide');
        });
    }

    function openThreadManageDailog(threadId, prefix) {
       $('#mangeThreadModal').modal('show');
       $("#movableThreadId").val(threadId);
       $("#movableThreadPrefix").val(prefix);
       $.post({
            url:"/authyfi.php", 
            data:{ action: 'getUserSubFolders'},
            dataType: 'text'
        }).done(function( data ) {
          $("#folderlist").html(prepareDirectoryList(data, prefix));
        });
    }

    function createNewDirectory() {
      var newDirectoryValue = $("#createNewDirectory").val();
      var newDirectoryPrefix = $("#movableThreadPrefix").val();
      $.post({
        url:"/authyfi.php", 
        data:{ action: 'addUserSubFolders', newDirectoryValue: newDirectoryValue},
        dataType: 'text'
      }).done(function( data ) { 
        if (data) {
          $("#createNewDirectory").val('');
          toastr.success('New directory created successfully.');
          $("#folderlist").html(prepareDirectoryList(data, newDirectoryPrefix));
        }
      });
    }

    function removeDirectory(id, prefix) {
      $.post({
        url:"/authyfi.php", 
        data:{ action: 'removeUserSubFolders', did: id},
        dataType: 'text'
      }).done(function( data ) { 
        if (data) {
          toastr.success('Directory removed successfully.');
          $("#folderlist").html(prepareDirectoryList(data, prefix));
        }
      });
    }


    function openUnsubscribeDailog(threadId, prefix) {
       $('#mangeThreadModal').modal('show');
       $("#movableThreadId").val(threadId);
       $("#movableThreadPrefix").val(prefix);
       $.post({
            url:"/authyfi.php", 
            data:{ action: 'getUserSubFolders'},
            dataType: 'text'
       }).done(function( data ) {
          $("#folderlist").html(prepareDirectoryList(data, prefix));
       });
    }

    function validateEmail(email){
        return String(email)
            .toLowerCase()
            .match(
            /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|.(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
            );
    }
    
    function shareLinkOnEmail() {
        var sharableThreadIdValue = $("#sharableThreadId").val();
        var shareRequestFromValue = $("#shareRequestFrom").val();
        var sharableEmailValue = $("#emailShare").val();
        var isValidEmail = validateEmail(sharableEmailValue);
        if (isValidEmail && sharableThreadIdValue && sharableEmailValue) {
            $.post({
                url:"/authyfi.php", 
                data:{ action: 'shareViaEmail', email: sharableEmailValue, thread_id:sharableThreadIdValue, shareVia:shareRequestFromValue },
                dataType: 'text'
            })
            .done(function( data ) {
                toastr.success('Linked shared on email successfully.');
                setTimeout(function(){
                    $('#shareViaEmailModal').modal('hide');
                    if(shareRequestFromValue != 'search') {
                        if ( $('#participation-options-wrapper-'+sharableThreadIdValue)) {
                            $('#participation-options-wrapper-'+sharableThreadIdValue).toggleClass('active');
                        }
                    }
                }, 1000);
            });
        } else {
            alert('invalid email address');
        }
    }
    function copyThreadLink(id) {
        navigator.clipboard.writeText(window.location.protocol + '//' + window.location.host + '/showthread.php?t='+id);
        toastr.success('Linked copied successfully.');
        if ( $('#participation-options-wrapper-'+id)) {
            $('#participation-options-wrapper-'+id).toggleClass('active');
        }      
    }

    function myFilterFunction() {										 
        document.getElementById('myFilter').classList.toggle('show');									
    }

    function myLeadersFilterFunction() {										 
        document.getElementById('myLeadersFilter').classList.toggle('show');									
    }

    function loadMoreLeaders() {
       $("#load-more-button-leader").hide();
       $("#spinner-leaders").show();
       $.post({
            url:"/authyfi.php", 
            data:{ action: 'getLeaders', filter:$('#currentLeaderPostLike').val(), page: $('#leaderCurrentPage').val()},
            dataType: 'text'
       }).done(function( data ) {
          //add code here
          $("#leader-list").append(data);
          $("#spinner-leaders").hide();
          $("#load-more-button-leader").show();
          $('#leaderCurrentPage').val(parseInt($('#leaderCurrentPage').val()) + 1);
       });
    }

     function getLeaderPostLikes() {
	   var countryPostLikes = document.getElementById('post-like-leaders-select2');
	   var data = [		{ title: 'Posts', value: 'filter_by_post' },
		{ title: 'Likes', value: 'filter_by_like' },
	   ];

           data.forEach( function (item) {
	        var option = document.createElement('option');
	        option.text = item.title;
		option.value = item.value;
		countryPostLikes.appendChild(option);
	   });
    }

    function formatLeaderPostLike(post) {
		if (!post.id) {
			return post.text;
		}
        var post = $('<span>' + post.text + '</span>');
		return post;
	}
    
    function onClickLeadersApply() {
	    var selectedLeaderPostLike = document.getElementById('post-like-leaders-select2').value;
	    $('#currentLeaderPostLike').val(selectedLeaderPostLike);
        $("#leader-list").empty();
        $('#leaderCurrentPage').val(1);
        loadMoreLeaders();
    }

	function onClickLeadersReset() {
        $('#post-like-leaders-select2').val('');
        $('#post-like-leaders-select2').trigger('change');
        $('#currentLeaderPostLike').val('');
        $("#leader-list").empty();
        $('#leaderCurrentPage').val(1);
        loadMoreLeaders();
	}

    function loadMoreMembers() {
       $("#load-more-button-week-members").hide();
       $("#spinner-member").show();
       $.post({
            url:"/authyfi.php", 
            data:{ action: 'getMemberList', page: $('#mamweekCurrentPage').val()},
            dataType: 'text'
       }).done(function( data ) {
          //add code here
          $("#member-week-list").append(data);
          $("#spinner-member").hide();
          $("#load-more-button-week-members").show();
          $('#mamweekCurrentPage').val(parseInt($('#mamweekCurrentPage').val()) + 1);
       });
    }

    function loadMoreLatestMembers() {
       $("#load-more-button-latest-reg").hide();
       $("#spinner-member-latest").show();
       $.post({
            url:"/authyfi.php", 
            data:{ action: 'getLatestMemberList', page: $('#latestRegCurrentPage').val()},
            dataType: 'text'
       }).done(function( data ) {
          //add code here
