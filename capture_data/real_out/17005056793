<script src="https://cdn.socket.io/4.6.0/socket.io.min.js" integrity="sha384-c79GN5VsunZvi+Q/WObgk2in0CbZsHnjEqvFxC5DxHn9lTfNce2WW6h2pH6u/kF+" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script type="text/javascript" defer="defer">
    $(document).ready(function () {
        var socket = io.connect('https://www.citehr.com:1337', { transports: ['websocket', 'polling'],secure : true });
        socket.on('connect', function() {
        socket.emit("leave", 'general');
        socket.emit("join", 'general');
        });
        socket.on('disconnect', function() {
            socket.emit("leave", 'general');
        });
        
        socket.on('update-new-post', function (msg) {
        $("#feeds").prepend(msg.html);
        if ($( "#postid_"+msg.id )) {
            $( "#postid_"+msg.id ).addClass( "unread-feed" );playaudio();
        }
        });
        socket.on('update-new-reply', function (msg) {
        if ($( "#postid_"+msg.id )) {
            $( "#postid_"+msg.id ).remove();
        }
        $("#feeds").prepend(msg.html);
        playaudio();
        if ($( "#postid_"+msg.id )) {
            $( "div#postid_"+msg.id+" > div#replyBlock > div.replay-wrap:last" ).addClass('unread-feed-reply');
            $( "#postid_"+msg.id ).addClass( "unread-feed" );
        }
        });
        socket.on('delete-post', function (msg) {
        var deletedposts = msg.id ? msg.id.split(',') : [];
        for(var p=0; p < deletedposts.length; p++) {
            if ($( "#postid_"+deletedposts[p] )) {
            $( "#postid_"+deletedposts[p] ).remove();
            }
        }
        });
        socket.on('delete-reply', function (msg) {
        if ($( "#postid_"+msg.id )) {
            $( "#postid_"+msg.id ).replaceWith(msg.html);
            $( "#postid_"+msg.id ).addClass( "unread-feed" );
            playaudio();
        }
        });

        $("#main-feeds").show();
        $("#main-tags").hide();
        $("#menuIcon").click(function () {
            if (document.querySelector('.openMenu') !== null) {
                $("#membersExpand").removeClass("openMenu");
                $("#tagsExpand").removeClass("openMenu");
                $("#libraryExpand").removeClass("openMenu");
            } else {
                $("#tagsExpand").addClass("openMenu");
            }
        });
        $("#mobileMenuIcon").click(function () {
            $("#membersExpand").removeClass("openMenu");
            $("#tagsExpand").removeClass("openMenu")
            $("#sidebarWrap").toggleClass("d-block");
        });
        $("#tagsMenu").click(function () {
            $("#membersExpand").removeClass("openMenu");
            $("#libraryExpand").removeClass("openMenu");
            $("#tagsExpand").addClass("openMenu");
        });
        //$("#libraryMenu").click(function () {
        //    $("#tagsExpand").removeClass("openMenu");
        //    $("#membersExpand").removeClass("openMenu");
        //    $("#libraryExpand").addClass("openMenu");
        //});
    });
    function showSection(section) {
        if (section == 'appreciated_member') {
            $("#feeds").hide();
            $("#main-feeds").hide();
            $("#main-tags").show();
            $("#appreciated_member").show();
            $("#new_member").hide();
            $("#trending").hide();
        } else if(section == 'new_member') {
            $("#feeds").hide();
            $("#main-feeds").hide();
            $("#main-tags").show();
            $("#appreciated_member").hide();
            $("#new_member").show();
            $("#trending").hide();
        } else if(section == 'trending') {
            $("#feeds").hide();
            $("#main-feeds").hide();
            $("#main-tags").show();
            $("#appreciated_member").hide();
            $("#new_member").hide();
            $("#trending").show();
        } else {
            $("#main-feeds").show();
            $("#feeds").show();
            $("#main-tags").hide();
            $("#appreciated_member").hide();
            $("#new_member").hide();
            $("#trending").hide();
        }
    }
