<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script language="javascript" type="text/javascript">
    var ajaxworking = 0;
    var countdown = 0;
    var $container = $('main');
    var nextpage = "#/0/2/0";

    if ( window.location != window.parent.location ) {
        $("body").width(window.screen.width);
    }

    ajaxScroll(1);
    resetscroll();

    var foundUrls = {};
    $(".item a").each(function(){
        var hash = $(this).attr("data-destination-hash");
        if ( hash ) {
            foundUrls[hash] = 1;
        }
    });

    $("#nav-trigger").click(function(){
      $("nav ul").toggleClass("visible");
    });

    function ajaxScroll(first) {
        if (ajaxworking < 1) {
            ajaxworking = 1;
            var runTest = false;

            if (nextpage != "none"){

                $.ajax({
                    url: '/ajax/load_results.php',
                    dataType: 'jsonp',
                    data: {
                        queryString: nextpage,
                        runTest: runTest
                    },
                    success: function(data) {
                        ajaxworking = 0;
                        nextpage = data.nexturl;
                        var $boxes = data.boxes;
                        var $finalBoxes = [];
	                    for ( var b = 0; b < $boxes.length; b++ ) {
		                    var match = $boxes[b].match(/data-destination-hash="[^\"]+"/)
		                    if (match) {
			                    var url = match[0].replace('data-destination-hash=', '').replace(/"/g, '')
			                    if (typeof( foundUrls[url] ) === "undefined") {
				                    foundUrls[url] = 1;
				                    var els = $.parseHTML($boxes[b]);
				                    for ( var i = 0; i < els.length; i++ ) {
					                    if ( els[i].nodeType == 1 ) {
						                    $finalBoxes.push(els[1]);
					                    }
				                    }
			                    }
		                    }
	                    }

            if ( countdown > 0 ) {
              for ( var i = 0; i < $finalBoxes.length; i++ ) {
                if ( countdown > 0 ) {
                  $($finalBoxes[i]).addClass("countdown");
                  $("a", $finalBoxes[i]).append("<div class='counter'>"+countdown+"</div>");
                  countdown--;
                }
              }
              $container.append($finalBoxes);

              $(".countdown").last().after("<div class='divider'>You May Also Like</div>");
            } else {
              $container.append($finalBoxes);
            }


                        var docHeight = $(document).height();
                        var docScroll = $(window).height() + $(window).scrollTop();
                        if (docHeight == docScroll) {
                            ajaxScroll(0);
                        }
                    }
                });
            }
        }
    }

    function getbottom(){
        var el = $('#bottomdiv');
        if (!el.length) return 0;
        var bottom = el.offset().top + (el.height());
        return bottom-1200;
    }


    function resetscroll(){
        $(window).scroll(scroll_handler);
    }


    function scroll_handler(){
        if (($(window).scrollTop() + $(window).height()) >= getbottom()) {
            ajaxScroll(0);
        }
    }
</script>

