<script>

    $(document).ready(function () {
        $('#chatIcon').click(function () {
            $('#chatBox').fadeIn();
        });

        $('#closeChatBtn').click(function () {
            $('#chatBox').fadeOut();
        });

        $('#emailForm').submit(function () {

            var url='/Funnel?page=sendMailToAdmin';

            if( document.getElementById('name') != null)
                url=url+'&name='+document.getElementById('name').value;

            if( document.getElementById('email1') != null)
                url=url+'&email1='+document.getElementById('email1').value;

            if( document.getElementById('subject') != null)
                url=url+'&subject='+document.getElementById('subject').value;

            if( document.getElementById('interestedArea') != null)
                url=url+'&interestedArea='+document.getElementById('interestedArea').value;

            $.ajax({
                type: 'POST',
                url: url,
                error: function (error) {
                    alert('Error sending email');
                },

                success: function (response) {
                    $('#chatBox').fadeOut();
                    if( document.getElementById('name') != null)
                        document.getElementById('name').value = "";

                    if( document.getElementById('email1') != null)
                        document.getElementById('email1').value = "";

                    if( document.getElementById('subject') != null)
                        document.getElementById('subject').value = "";

                    if( document.getElementById('interestedArea') != null)
                        document.getElementById('interestedArea').value = "";

                    alert('Hello! Your response has been recorded. We will get back to you soon.');
                }

            });
        });
    });

</script>
