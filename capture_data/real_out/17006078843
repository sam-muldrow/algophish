<script src="/r/js/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $('#homeSearchBox').keydown(function (e) {
            debugger;
            var k = e.which;

            var ok = k >= 65 && k <= 90 || // A-Z
                    k >= 96 && k <= 105 || // a-z
                    k >= 35 && k <= 40 || // arrows
                    k == 8 ||// Backspaces
                    k == 32 ||// space
                    k == 17 || // ctrl
                    k == 46 || //delete
                    k == 13 || //Enter
                    k >= 48 && k <= 57; // 0-9

            if (!ok){
                alert('Only Alphanumeric Allowed');
                e.preventDefault();
            }
        });
    });
</script>


	
