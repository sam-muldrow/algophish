width: ${bannerWidth}px;
height: ${bannerStickyHeight}px;
transform: translateY(${bannerTopHeight}px);
background-image: url(https://s.lubimyczytac.pl/upload/topbanner/24/1098221.jpg);
background-position: 50% ${bannerStickyHeight}px;
`;
setTimeout(() => {
adsContainerSticky.style.opacity = 1;
}, 1000);
adsLinkContainer.setAttribute("href", bannerLink);
}
if (typeof ga != 'undefined'){ga('send', 'event', 'expendablebanner', 'view_sponsoring', 'alerty_cenowe_lc_09_2023');
}
if (typeof gtag != 'undefined'){gtag('event', 'ceView', {'event_action': 'sponsoring', 'event_category': 'view', 'event_label': 'alerty_cenowe_lc_09_2023'});
}
}
setProp(browserWidth);
window.addEventListener('scroll', () => {
if (isCollapsed !== 0){bannerCollapse('isScroll');
isCollapsed = 0;
}
if (window.pageYOffset > 0){body.classList.add('isTopAdsFixed');
adsContainerHld.classList.add('isStickySmall');
adsContainer.style.cssText += `
height: ${bannerStickyHeight}px;
background-position: center -${bannerStickyHeight}px;
transition: height 450ms linear, background-position 450ms cubic-bezier(0.55, 0.06, 0.68, 0.19),transform 450ms linear;
`;
if (window.pageYOffset < bannerTopHeight - bannerStickyHeight){body.style.paddingTop = `${bannerTopHeight - bannerStickyHeight}px;`;
}
bannerExpendableAction = 'click_sticky';
}
else {
body.classList.remove('isTopAdsFixed');
adsContainerHld.classList.remove('isStickySmall');
adsContainer.style.cssText += `
height: ${bannerTopHeight}px;
background-position: center 0;
transition: height 450ms linear, background-position 450ms cubic-bezier(0.55, 0.06, 0.68, 0.19),transform 450ms linear;
`;
if (isMobile){body.style.paddingTop = `${bannerTopHeight + 50}px;`;
}
else {
body.style.paddingTop = `${bannerTopHeight}px;`;
}
bannerExpendableAction = 'click_start';
}
});
function bannerExpand(){let bannerNoStickyHeight = parseInt(bannerTopHeight) + parseInt(bannerCenterHeight);
adsContainer.style.cssText += `
width: ${bannerWidth}px;
height: ${bannerCenterHeight}px;
transition: background-position 370ms cubic-bezier(0.55, 0.06, 0.68, 0.19),height 450ms linear;
background-position: center -${bannerTopHeight}px;
`;
adsContainerSticky.style.cssText += `
opacity: 0;
transform: translateY(${bannerNoStickyHeight}px);
`;
if (isMobile){body.classList.add('isOpenAds');
}
body.style.paddingTop = `${bannerCenterHeight}px`;
document.querySelector("#js-lcadexpand").style.top = `-${bannerTopHeight}px`;
document.querySelector("#js-lcadcollapse").style.top = 0;
isCollapsed = 1;
if (typeof ga != 'undefined'){ga('send', 'event', 'expendablebanner', 'expand', 'alerty_cenowe_lc_09_2023');
}
bannerExpendableAction = 'click_expand';
}
function bannerCollapse(settings){adsContainer.style.cssText += `
width: ${bannerWidth}px;
height: ${bannerTopHeight}px;
transition: background-position 370ms cubic-bezier(0.55, 0.06, 0.68, 0.19),height 450ms linear;
background-position: 50% 0;
`;
adsContainerSticky.style.cssText += `
opacity: 1;
transform: translateY(${bannerTopHeight}px);
`;
