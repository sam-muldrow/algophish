}</style><script> document.addEventListener('DOMContentLoaded', function(){let adsContainerHld = document.querySelector('#js-AdsTopCollContainer');
let adsContainer = document.querySelector("#js-adsColl");
let adsContainerSticky = document.querySelector("#js-adsCollSticky");
let adsLinkContainer = document.querySelector("#js-adsLinkContainer");
let body = document.body;
let browserWidth = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth;
var bannerBottomHeight,
bannerCenterHeight,
bannerTopHeight,
bannerWidth;
var bannerExpendableAction = 'click_start';
let isCollapsed = 0;
let isMobile = browserWidth < 768;
function setProp(browserWidth){if (isMobile){bannerTopHeight = 120;
bannerCenterHeight = 300;
bannerStickyHeight = 60;
bannerWidth = 767;
bannerLink = "https://lubimyczytac.pl/alerty";
adsContainer.style.cssText += `
width: ${bannerWidth}px;
height: ${bannerTopHeight}px;
background-image: url(https://s.lubimyczytac.pl/upload/topbanner/24/1098222.jpg);
`;
