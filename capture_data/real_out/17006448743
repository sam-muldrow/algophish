width: ${bannerWidth}px;
height: ${bannerStickyHeight}px;
transform: translateY(${bannerTopHeight}px);
background-image: url(https://s.lubimyczytac.pl/upload/topbanner/24/1098222.jpg);
background-position: 50% ${bannerStickyHeight}px;
`;
setTimeout(() => {
adsContainerSticky.style.opacity = 1;
}, 1000);
adsLinkContainer.setAttribute("href", bannerLink);
}
else {
bannerTopHeight = 120;
bannerCenterHeight = 300;
bannerStickyHeight = 60;
bannerWidth = 1920;
bannerLink = "https://lubimyczytac.pl/alerty";
adsContainer.style.cssText += `
width: ${bannerWidth}px;
height: ${bannerTopHeight}px;
background-image: url(https://s.lubimyczytac.pl/upload/topbanner/24/1098221.jpg);
`;
