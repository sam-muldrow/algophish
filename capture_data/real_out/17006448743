document.querySelector("#js-lcadexpand").style.top = 0;
document.querySelector("#js-lcadcollapse").style.top = `-${bannerTopHeight}px`;
if(settings !== 'isScroll'){if (typeof ga != 'undefined'){ga('send', 'event', 'expendablebanner', 'collapse', 'alerty_cenowe_lc_09_2023');
}
}
bannerExpendableAction = 'click_start';
}
document.querySelector('#js-lcadexpand').addEventListener('click', () => {
bannerExpand();
})
document.querySelector('#js-lcadcollapse').addEventListener('click', () => {
