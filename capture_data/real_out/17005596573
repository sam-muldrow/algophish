    window.dataLayer = dataLayer || [];
    function gtag(){window.dataLayer.push(arguments);}
    window.pricingExperiment = false;

    function implementExperimentA() {
        window.pricingExperiment = true;
        if(location.href.match(/pricing/)){
            window.location = '/prices';
        }
    }

    if(window.location.href.indexOf("prices") != -1){
        setTimeout(()=>{
            if(window.pricingExperiment === false){
                window.location = '/pricing';
            }
        }, 100);
    }

    const experiments = JSON.parse('["gDASTAbbS3qc8fVipn3kpA"]');
    for (const key in experiments) {
        gtag('event', 'optimize.callback', {
            name: experiments[key],
            callback: implementExperimentA
        });
    }
</script>


