    <script type='text/javascript' async>
    const xhr = new XMLHttpRequest();
    const endpointUrl = 'https://cookie-handler.creatopy.com/uuid/get-uuid';

    xhr.withCredentials = true;

    xhr.open('GET', endpointUrl, true);

    xhr.onload = function () {
        if (xhr.status === 200) {
            const response = JSON.parse(xhr.response);
            if (window.dataLayer) {
                window.dataLayer.push({ uuid: response.UUID, event: 'uuid' });
            }

            if (window.analytics) {
                window.analytics.setAnonymousId(response.UUID);
                window.analytics.page();
            }

        } else {
            console.error('Request failed with status:', xhr.status);
        }
    };

    xhr.send();

</script>

