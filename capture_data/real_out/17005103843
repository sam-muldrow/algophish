	<section class="main_item_wrap news_item">
		<div class="main_item_innerwrap">
			<div class="main_caption_wrap">
				<h2><span>ニュース</span></h2>
			</div>
			<ul class="newsrelease_wrap"></ul>
			<script>
			window.addEventListener("DOMContentLoaded",function(){
				//初期値
				var pageNum = 1;
				var pagesort = "new";
				ResponseData(pageNum,pagesort);
			});

			function ResponseData(pageNumber,pageSort){
				var newsrelease_wrap = document.getElementsByClassName("newsrelease_wrap")[0];	//ニュース表示ヶ所

				var sortParam = "&sort="+pageSort;
				//リクエスト投げる
				var httpRequest;
				httpRequest = new XMLHttpRequest();
				httpRequest.open('GET', "/corp_site/sc/get_feed_data.php?page="+pageNumber+sortParam+"&count=3" , true);
				httpRequest.setRequestHeader('X-Requested-With','XMLHttpRequest');
				httpRequest.send(null);
				httpRequest.onreadystatechange = function(){
					if(httpRequest.readyState === 3 && httpRequest.status === 200 ){
						//通信中ローディング(重ければローディング処理入れるかも…)
					}else if(httpRequest.readyState == 4 && httpRequest.status == 200) {
						var response = JSON.parse(httpRequest.responseText);
						if(response.status == "success"){
							var news_data = response["data"];
							for(key in news_data){
								var news_date = news_data[key]["date"];
								var news_type = news_data[key]["type"];
								var news_msg = news_data[key]["msg"];
								var news_img_url = news_data[key]["img_url"];
								var news_link_url = news_data[key]["link_url"];
								newsrelease_wrap.innerHTML += '<li class="newsrelease_item"><a href="/news/sc/index/article/'+news_link_url+'"><img src="'+news_img_url+'"><p>ニュースリリース</p><h3>'+news_msg+'</h3><div class="clock_wrap"><div class="clock"></div><div class="delivery_date">'+news_date+'</div></div></a></li>'
							}
						}else{
							alert("再読み込みしてください。");
						}
					}
				}
			}
			</script>
			<div class="TransitionBtn_wrap arrow_blue">
				<a href="/news/sc/index/news_top.html">ニュース一覧を見る</a>
			</div>
		</div>
	</section>

