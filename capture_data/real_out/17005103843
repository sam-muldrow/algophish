<script>
var header_wrap = document.getElementById("header_wrap");
var result_wrap = document.getElementsByClassName("result_wrap");
var guideid;
function menu(guide,mouse) {
	if(guide == "publicNotice"){
		for(var i=0; i<result_wrap.length; i++){
			result_wrap[i].style.display = "none";
		}
	}else{
		for(var i=0; i<result_wrap.length; i++){
			result_wrap[i].style.display = "none";
		}
		guideid = document.getElementById(guide);
		guideid.style.display = "block";
		header_wrap.addEventListener("mouseleave",function(){
			guideid.style.display = "none";
			wid=0;
		},false);
	}
}


</script>

