<script>
      function parseTrace(url) {
        let trace = [];
        jQuery.ajax(url, {
          success: function(response) {
            let lines = response.split('\n');
            let keyValue;

            lines.forEach(function(line) {
              // console.log(line);
              keyValue = line.split('=');
              trace[keyValue[0]] = decodeURIComponent(keyValue[1] || '');

              if (keyValue[0] === 'loc' && trace['loc'] !== 'XX') {
                var date = new Date();
                date.setTime(date.getTime() + 365 * 24 * 60 * 60 * 1000);
                var expires = "; expires=" + date.toGMTString();
                document.cookie = "countryCookie3" + "=" + trace['loc'] + expires + "; path=/";
              }

            });

            return trace;
          },
          error: function() {
            return trace;
          }
        });
      };
      jQuery(document).ready(function($) {
        let cfTrace = parseTrace('/cdn-cgi/trace');
      });
    </script>
<script>
    function parseTraceDedupe(url) {
      let deDupeData = [];
      let deDupeStr = '';
      jQuery.ajax(url, {
        success: function(response) {
          let lines = response.split('\n');
          let keyValue;
          // console.log(lines);

          lines.forEach(function(line) {
            // console.log(line);
            keyValue = line.split('=');
            deDupeData[keyValue[0]] = decodeURIComponent(keyValue[1] || '');
            if (keyValue[0] === 'ip' || keyValue[0] === 'uag') {
              deDupeStr += keyValue[1];
            }

          });
          localStorage.setItem("jlDeDupeData", deDupeStr);
          localStorage.setItem("jlDeDupeData_stored_date", new Date());
        },
        error: function() {
          return deDupeData;
        }
      });
    };
    // jQuery(document).ready(function($) {

    // Check if localStorage is supported
    if (typeof(Storage) !== "undefined") {
      // Check if the data is expired
      var expirationDate = new Date();
      expirationDate.setHours(expirationDate.getHours() + 24); // Set expiration to 24 hours from now
      var jlDeDupeData_stored_date = localStorage.getItem("jlDeDupeData_stored_date");
      if (jlDeDupeData_stored_date == null || new Date(jlDeDupeData_stored_date) < expirationDate) {
        // Create the data and store it in localStorage
        var jlDeDupeData = parseTraceDedupe('/cdn-cgi/trace');

      } else {
        // Retrieve the data from localStorage
        var jlDeDupeData = localStorage.getItem("jlDeDupeData");
      }
    }


    // });
  </script>
