// Функция инициализации слайдера с тарифами
function Carousel() {
  let $carousel = $('#js-plans-carousel');

  return {
    init: function () {
      if (window.innerWidth < 1200) {
        $carousel.owlCarousel({
          loop: false,
          nav: true,
          navClass: ['owl-prev f-icon--left-open', 'owl-next f-icon--right-open'],
          navText: ['', ''],
          margin: 0,
          items: 1,
          startPosition: 0,
          responsive: {
            0: {
              items: 1
            },
            800: {
              items: 2
            },
            1400: {
              items: 4
            }
          }
        });
      } else {
        $carousel.trigger('destroy.owl.carousel');
      }
    }
  };
}

// Переключение скриншотов админ панели на главной в соответствии с темой (темные/светлые)
function switchPanelScreenshots() {
  let screenshotRows = $('.admpanel-screen'),
      isDark = (document.body.classList.toString().indexOf('dark') !== -1);
  if (screenshotRows.length === 0) {
    return;
  }

  // Заменяем часть пути к изображению в зависимости от темы
  screenshotRows.each((index, row) => {
    let img = row.querySelector('img'),
        href = row.href;
    // Скипаем невалидные и те, у которых путь правильный
    if (
        img.length === 0 ||
        (isDark && href.indexOf('-dark') !== -1) ||
        (!isDark && href.indexOf('-dark') === -1)
    ) {
      return true;
    }

    let src = img.src;

    if (isDark) {
      // Добавляем часть -dark к пути скриншота
      row.href = href.replace(/-[a-z]{2}\./i, function (match) {
        return '-dark' + match;
      });
      img.src = src.replace(/-[a-z]{2}\./i, function (match) {
        return '-dark' + match;
      });
    } else {
      // Удаляем часть -dark у пути скриншота
      row.href = href.replace('-dark', '');
      img.src = src.replace('-dark', '');
    }
  });

  // Перезагружаем галерею для применения новых скриншотов
  Modal.init('.umodal');
}

const domainFront = {
  goWhois: function () {
    let domain = document.querySelector('.domain-register input[name="domain"]');
    if (undefined !== domain && undefined !== domain.value && domain.value !== '') {
      window.open('/domains/whois-service/?domain=' + domain.value, '_blank');
    } else {
      window.open('/domains/whois-service/', '_blank');
    }
    return false;
  }
};

$(function () {
  let carousel = Carousel();
  carousel.init();

  $(window).on('resize', function () {
    carousel.init();
  });

  let initial_image = document.querySelectorAll('.slider-initial-image');
  for (let img_id in initial_image){
    if(typeof initial_image[img_id] === 'object') {
      initial_image[img_id].src = initial_image[img_id].dataset.src;
    }
  }

  $('.visual-side.mobile').slick({
    adaptiveHeight: true,
  });
  const photo = document.querySelector('.admpanel-screen img'),
    photoFa = document.querySelector('.admpanel-screen'),
    menuSideUl = document.querySelector('.menu-side--ul');
  if (menuSideUl) {
    menuSideUl.addEventListener('click', function () {
      if (event.target.nodeName === 'LI') {
        photo.src = `/img/admtools/${event.target.id}.png?screenshot=1`;
        photo.alt = event.target.innerText;
        photoFa.href = `/img/admtools/${event.target.id}.png?screenshot=1`;
        photoFa.dataset.group = event.target.id;
        switchPanelScreenshots();
      }
    });
  }

  let menusLi = document.querySelectorAll('.menu-side--ul li');
  let prevNode = menusLi[0];
  menusLi.forEach(item => {
    item.addEventListener('click', (e) => {
      let eTarget = e.target;
      eTarget.classList.add('active');
      prevNode.removeAttribute('class');
      prevNode = eTarget;
    });
  });

  $('.show-add').on('click', function () {
    $('.only-desktop').slideDown();
    $('.additional.info').remove();
    setTimeout(changeSizeLabel, 500);
  });

  Modal.init('.umodal');
});
</script>			</main>

