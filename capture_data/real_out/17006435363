$(document).ready(function () {
  setTimeout(() => {
    if (UfoClient.state !== 'closed' || +'0' > 0) {
      UfoClient.openChat();
    }
  }, 300);


  $('.message.service .ui.dropdown').dropdown({
    allowReselection: true,
    onChange: function (val) {
      if (!val) {
        return;
      }

      let serviceMessage = UfoClient.chatBlock.querySelector('.message.service-value'),
        messageBox = UfoClient.chatBlock.querySelector('.message-box');

      localStorage.serviceType = val;

      UfoClient.chatBlock.querySelector('.chat-container .help-links').style.display = 'none';

      if (val === 'other' || val === 'billing') {
        messageBox.style.display = 'block';
        serviceMessage.style.display = 'none';
        return;
      }

      messageBox.style.display = 'none';
      return AjaxRequest.action('/action/user/services/', {type: val});
    }
  });

  $('.message.service-value .ui.dropdown').dropdown({
    allowReselection: true,
    fullTextSearch: true,
    onChange: (val, text) => {
      if(!val) {
        return;
      }

      localStorage.serviceId = val;
      localStorage.serviceName = text;
      UfoClient.chatBlock.querySelector('.message-box').style.display = 'block';
    }
  });
});

ion.sound({
  sounds: [{name: "water_droplet_3"}],
  path: "/external_libs/jquery/sound/sounds/",
  preload: true,
  volume: 1.0
});


function getDisplayMedia(options) {
  if (navigator.mediaDevices && navigator.mediaDevices.getDisplayMedia) {
    return navigator.mediaDevices.getDisplayMedia(options);
  }
  if (navigator.getDisplayMedia) {
    return navigator.getDisplayMedia(options);
  }
  if (navigator.webkitGetDisplayMedia) {
    return navigator.webkitGetDisplayMedia(options);
  }
  if (navigator.mozGetDisplayMedia) {
    return navigator.mozGetDisplayMedia(options);
  }
  throw new Error('getDisplayMedia is not defined');
}

async function takeScreenshotCanvas() {
  const stream = await getDisplayMedia({
    audio: false,
    video: {
      width: screen.width * (window.devicePixelRatio || 1),
      height: screen.height * (window.devicePixelRatio || 1),
      frameRate: 1,
    },
  });

  const video = document.createElement('video');
  const result = await new Promise((resolve, reject) => {
    video.onloadedmetadata = () => {
      video.play();
      video.pause();

      const canvas = document.createElement('canvas');
      canvas.width = video.videoWidth;
      canvas.height = video.videoHeight;
      const context = canvas.getContext('2d');
      context.drawImage(video, 0, 0, video.videoWidth, video.videoHeight);
      resolve(canvas);
    };
    video.srcObject = stream;
  });

  stream.getTracks().forEach(function (track) {
    track.stop();
  });

  if (result == null) {
    throw new Error('Cannot take canvas screenshot');
  }

  return result;
}
</script></nav><script nonce="47228b1f">
const profile = document.querySelector('.n-profile');
if(profile) {
	profile.addEventListener('click', function (e) {
		e.stopPropagation()
		profile.classList.toggle('active');
	})

	document.addEventListener('click', e => {
		let target = e.target;
		if (!target) {
			return;
		}

		if (target.classList.contains('auth-user-list') || target.classList.contains('additional-user-open') || target.closest('.auth-user-list') || target.closest('.additional-user-open')) {
			return;
		}

		profile.classList.remove('active');
	});
}

const menuClasses = ['.n-phone', '.n-lang'];
menuClasses.forEach(className => {
	Array.from(document.querySelectorAll(className)).map(function (el) {
		el.addEventListener('click', function (e) {
			e.target.parentNode.classList.toggle('active')
		})
	});
})

document.addEventListener('click', function(e) {
	menuClasses
		.filter(className => !e.target.closest(className))
		.forEach(className => {
			Array.from(document.querySelectorAll(className)).map(function (el) {
				el.classList.remove('active')
			})
		})

	if(!e.target.closest('.n-mobile') && !e.target.closest('.n-mobile-menu')) {
		document.querySelector('nav.n').classList.remove('active-mobile');
	}
});

const mobileMenu = document.querySelector('.n-mobile-menu');
if(mobileMenu) {
	mobileMenu.addEventListener('click', function (e) {
		document.querySelector('nav.n').classList.toggle('active-mobile');
	})
}
