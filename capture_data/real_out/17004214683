    //你可能有興趣-換一批
    function divChangeNewItem4() {
        var curpage = $("#articleCurPage").val();
        $.ajax({
            url: "/Home/ArticleChange4",
            type: "post",
            async: true,
            data: {
                curPage: curpage
            },
            success: function (result) {
                if (result.trim().length != 0) {
                    $("#hideSearchResult").html(result);
                    $("#hideSearchResult .ext").remove();
                    var newContent = $("#hideSearchResult")[0].innerHTML;

                    //更新结果
                    $("#articleContent4").empty();
                    $("#articleContent4").html(newContent);
                }
            }
        });
    }

    //頻道最新文章-更多
    $('.go').click(function () {
        var $this = $(this);
        var code = $this.attr("n");
        var url = "https://www.businessweekly.com.tw/channel/index/";
        window.location.href = url + code;
        return false;
    });


