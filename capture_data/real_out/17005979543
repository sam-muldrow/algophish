jQuery(function($) {

	var storage = supports_session_storage();
	if (storage)
	{	
		var scrollto = storage.getItem('littleone.scrollto');
		if (scrollto !== null && $('#'+scrollto).length)
		{
			$('html, body').animate({scrollTop: $('#'+scrollto).position().top}, 100);
			storage.removeItem('littleone.scrollto');
		}
		else
		{
			var top = storage.getItem('littleone.top');	
			if (top !== null)
			{
				$("body, html").animate(
				{
				  scrollTop: top-200
				}, 100);

				storage.removeItem('littleone.top');
			}
		}
	}

	$("#header").on('click', '#bt_cabinet', function()
	{
		window.location.href = '/cabinet';
	});

	$.fn.escape = function (callback)
	{
		return this.each(function ()
		{
			$(document).on("keypress", this, function (e)
			{
				var keycode = (e.keyCode ? e.keyCode : e.which);
				if (keycode === 27)
				{
					callback.call(this, e);
				};
			});
		});
	};

