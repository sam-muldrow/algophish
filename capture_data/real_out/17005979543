	jssor_slider_starter = function(container_id, options, max_width, block_id)
	{
		let jssor_slider = new $JssorSlider$(container_id, options);
		const container_h = $('#'+container_id).height();
		
		function ScaleSlider()
		{
			let refWidth = jssor_slider.$Elmt.parentNode.clientWidth;
			if (refWidth)
			{
				refWidth = Math.min(refWidth, max_width);
				jssor_slider.$ScaleWidth(refWidth);
			}
			else
			{
				window.setTimeout(ScaleSlider, 30);
			}
	
			recalc_caption(jssor_slider.$CurrentIndex());
		}

		function recalc_caption(slideIndex)
		{
			if (block_id == 0 || slideIndex < 0) return;
			let scale_height = jssor_slider.$ScaleHeight();
			let scale_factor = scale_height/container_h;
   
			let slide_id = "slide_" + block_id + "_" + slideIndex;
			let caption_h = $('#' + slide_id).find(".carousel_slider_caption").height();
			let h = (container_h+caption_h)*scale_factor;
			$('#'+container_id).css('height', h+"px");
			$('#'+container_id+' .carousel_slides').css('height', h+"px");
			$('#'+slide_id).css('height', h+"px");
		}

		ScaleSlider();
		$(window).bind("load", ScaleSlider);
		$(window).bind("resize", ScaleSlider);
		$(window).bind("orientationchange", ScaleSlider);

		if (block_id != 0)
        {
			jssor_slider.$On($JssorSlider$.$EVT_PARK, recalc_caption);
        }
	};

	for (let slider_block_id in carousel_block)
	{
		let container_id = 'slideshow_'+carousel_block[slider_block_id];
		jssor_slider_starter(container_id, carousel_options, 840, carousel_block[slider_block_id]);
	}

	for (let slider_block_id in slider_block)
	{
		let container_id = 'slider_block_'+slider_block[slider_block_id];
		jssor_slider_starter(container_id, slider_options, 840, 0);
	}

	for (let slider_block_id in band_catalog_block)
	{
		let container_id = 'band_catalog_slider';
		jssor_slider_starter(container_id, jssor_options, 1140, 0);
	}
</script>

