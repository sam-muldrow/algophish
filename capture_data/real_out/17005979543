	let carousel_options =
    {
        $AutoPlay: 0,
        $SlideWidth: 720,
        $FillMode: 4,
        $SlideSpacing: 60,
        $SlideDuration:250,
        $MinDragOffsetToSlide: 100,
        $DragRatio:.5,
        $HWA: false,
        $ArrowNavigatorOptions:
        {
            $Class: $JssorArrowNavigator$,
            $Steps: 1,
            $ChanceToShow: 2
