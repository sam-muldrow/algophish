for(var i=value.length-1, h=0; i >= 0; --i) h+=value.toLowerCase().charCodeAt(i);
if(h != hash) {
	messages.push("\u041d\u0435\u043f\u0440\u0430\u0432\u0438\u043b\u044c\u043d\u044b\u0439 \u041a\u043e\u0434");
}

}

}},{'id':'RegForm_legal','inputID':'RegForm_legal','errorID':'RegForm_legal_em_','model':'RegForm','name':'legal','enableAjaxValidation':true,'clientValidation':function(value, messages, attribute) {

