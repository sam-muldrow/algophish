    <script type="text/javascript">
    var altxEventListScripts = ["keydown", "mousemove", "wheel", "touchmove", "touchstart", "touchend"];
    var altxAutoLoadTimeout = setTimeout(runAltxScripts, 10e3);

    function triggerAltxScripts() {
        runAltxScripts();
        clearTimeout(altxAutoLoadTimeout);
        for (var scriptIdx = 0; scriptIdx < altxEventListScripts.length; scriptIdx++) {
            var eventType = altxEventListScripts[scriptIdx];
            window.removeEventListener(eventType, triggerAltxScripts, { passive: !0 });
        }
    }

    function runAltxScripts() {
        if (window.altxScriptsDidInit) {
            return false;
        }
        window.altxScriptsDidInit = true;

//        initAltxGTM('GTM-PX83VG');
//       initAltxGTM('GTM-M83RVP', callbackEvents);
        initAltxTags();

        var delayScripts = Array.from(document.querySelectorAll("script[delay]"));

        for (var delayScriptIdx = 0; delayScriptIdx < delayScripts.length; delayScriptIdx++) {
            var delayScript = delayScripts[delayScriptIdx];
            delayScript.setAttribute("src", delayScript.getAttribute("delay"));
        }
        setTimeout(function () { document.dispatchEvent(new Event('delayGtmEvent')); }, 10e2);
        
    }

    function initAltxGTM(id) {
        var script = document.createElement('script');
        script.type = 'text/javascript';
        script.onload = () => {
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());
            gtag('config', id);
        }
        script.src = 'https://www.googletagmanager.com/gtag/js?id=' + id;
        script.defer = true;
        document.getElementsByTagName('body')[0].appendChild(script);
    }


    function initAltxTags() {
        window.googletag = window.googletag || {};
        window.googletag.cmd = window.googletag.cmd || [];

        var altxLeaderboardHP = document.getElementById('altx-tag-leaderboard-hp');
        var altxLeaderboardNotHP = document.getElementById('altx-tag-leaderboard');
        var altx300x600HP = document.getElementById('altx-tag-sidebar-hp');
        var altx300x600NotHP = document.getElementById('altx-tag-sidebar');

        var gads = document.createElement('script');
        gads.type = 'text/javascript';
        var useSSL = 'https:' == document.location.protocol;
        gads.src = (useSSL ? 'https:' : 'http:') +
            '//securepubads.g.doubleclick.net/tag/js/gpt.js';
        var node = document.getElementsByTagName('script')[0];
        node.parentNode.insertBefore(gads, node);

        gads.onload = () => {
            googletag.cmd.push(function () {
                if (altxLeaderboardHP) {
                    googletag.defineSlot('/1045923/__NEW_Altalex_Leaderboard_HomePage', [[970, 90], [970, 250], [728, 90]], 'altx-tag-leaderboard-hp').addService(googletag.pubads());
                }
                if (altxLeaderboardNotHP) {
                    googletag.defineSlot('/1045923/__NEW_Altalex_Leaderboard_NOTHomePage', [[970, 90], [970, 250], [728, 90]], 'altx-tag-leaderboard').addService(googletag.pubads());
                }
                if (altx300x600HP) {
                    googletag.defineSlot('/1045923/__NEW_Altalex_300x600Sup_HomePage', [[300, 600], [300, 250]], 'altx-tag-sidebar-hp').addService(googletag.pubads());
                }
                if (altx300x600NotHP) {
                    googletag.defineSlot('/1045923/__NEW_Altalex_300x600Sup_NOTHomePage', [[300, 600], [300, 250]], 'altx-tag-sidebar').addService(googletag.pubads());
                }
                //googletag.pubads().enableSingleRequest();
                googletag.enableServices();

                if (altxLeaderboardHP) {
                    googletag.cmd.push(function () { googletag.display('altx-tag-leaderboard-hp'); });
                }
                if (altxLeaderboardNotHP) {
                    googletag.cmd.push(function () { googletag.display('altx-tag-leaderboard'); });
                }
                if (altx300x600HP) {
                    googletag.cmd.push(function () { googletag.display('altx-tag-sidebar-hp'); });
                }
                if (altx300x600NotHP) {
                    googletag.cmd.push(function () { googletag.display('altx-tag-sidebar'); });
                }
            });
        }
    }

