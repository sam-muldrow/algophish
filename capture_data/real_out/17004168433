	function getCurrLocationByCookie() {
		var rv = null;
		
        var strCookie = document.cookie;
        var arrCookie = strCookie.split("; ");
        for (var i = 0; i < arrCookie.length; i++) {
            var arr = arrCookie[i].split("=");
            if (2 <= arr.length && "CmLocation" == arr[0]) {
				rv = arr[1];
                break;
            }
        }
		
		return rv;
	}


	function getCurrLocationByIp() {
		var rv = null;

		var ajaxurlCity = location.protocol + "//www.10086.cn/web-Center/commonservice/ipLocation.do";
		
		sendAjax({
			async : false,
			url: ajaxurlCity, 
			dataType: "json",
			success:
				function (jsonobj) {
                	var prov_id = jsonobj.province_id;
    				var city_id = jsonobj.city_id;
    				
    				rv = prov_id + "|" + city_id;
				}
			,
			error:
				function(XMLHttpRequest, textStatus, errorThrown) {
					var prov_id = 0;
					var city_id = 0;
					
					rv = null;
				}
		});

		return rv;
	}


	function sendAjax(objJson) {
		//æ§è¡Ajax
		var majax = false;
		if (window.XMLHttpRequest) {
			majax = new XMLHttpRequest();
		} else if (window.ActiveXObject) {
			majax = new ActiveXObject("Microsoft.XMLHTTP");
		}
		if (majax) {
			try{
				majax.open("POST",objJson.url,objJson.async);
				majax.onreadystatechange = function() {
					if (majax.readyState == 4) {
						if(majax.status == 200) {
							objJson.success(eval('(' + majax.responseText + ')'));
						}
						else{
							objJson.error(majax,"E1",null);
						}
					}
				}
				majax.send(null);
			}
			catch(E) {
				objJson.error(majax,"E2",null);
			}
		} else {
			objJson.error(null,"E3",null);
		}
					
					
	}


	// è·å¾å¼æµcookie
	function findCmChannelID() {
	    var cookies =  document.cookie.split("; ");
	    var cmChannelID = null;
	    for (var i = 0; i < cookies.length; i++) {
	        var arr = cookies[i].split("=");
	        if ("CmChannelID" == arr[0]) {
	            cmChannelID = arr[1];
	            break;
	        }
	    }
	    return cmChannelID;
	}
	
