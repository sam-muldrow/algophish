    if (s.indexOf('www') == -1 || s.indexOf('ero-advertising.com') > -1) {
        if (s.indexOf('dev') == -1) {
            var s = top.location.href;
            s = s.replace("ero-advertising.com", "eroadvertising.com");
            s = s.replace("www.", "");
            s = s.replace("eroadvertising.com", "www.eroadvertising.com");
            top.location.href = s;
        }
    }
