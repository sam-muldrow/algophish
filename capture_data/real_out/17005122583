      <p>
        Psst! Explore our new "For you" section and get personalised recommendations about what to read.
      </p>
      <button class="button">
        Explore &#34;For you&#34;
      </button>
    </div>
    <script>
    function clickForYouPromo() {
        document.querySelector('button.tabbed_button[data-slug="for-you"]').click();
        window._paq = window._paq || [];
        window._paq.push([
          'trackEvent',
          'navigation',
          'personalization',
          'for you promo view'
        ]);
    }
    document.querySelector('.for-you-homepage-promo > button').addEventListener('click', clickForYouPromo);
    </script>
  </div>

  <div class="tabbed_items hidden" data-items="for-you">
    <span id="for-you-loading-spinner" class="loading spinner inverted large"></span>
    <div class="for-you-content-wrapper" id="for-you">
    </div>
  </div>

      <script>
      (function(){
        document.addEventListener('DOMContentLoaded', () => {
          const clickTab = (e) => {
            e.preventDefault();
            const button = e.target.closest('.tabbed_button');
            document.querySelectorAll('.tabbed_nav button').forEach(el => { el.classList.remove('active'); });
            document.querySelectorAll('.tabbed_items').forEach(el => { el.classList.add('hidden'); });

            button.classList.add('active');
            const currentArticles = document.querySelector(`.tabbed_items[data-items="${button.dataset.slug}"]`);
            currentArticles.classList.remove('hidden');

            if ("paqName" in button.dataset && "paqAction" in button.dataset && e.x != 0 && e.y != 0) {
              window._paq = window._paq || [];
              window._paq.push([
                'trackEvent',
                'navigation',
                button.dataset.paqAction,
                button.dataset.paqName,
              ]);
            }
        };

          document.querySelectorAll('.tabbed_nav button').forEach(button => button.addEventListener('click', clickTab));
          const hash = window.location.hash.substring(1);
          if (hash) {
            document.getElementById(hash).click();
          }
        });
      })();
    </script>

  <script>
    function clickHome() {
      document.querySelector('div#content_below').classList.remove('hidden');
      document.querySelector('.tabbed_wrapper.homepage').scrollIntoView(true);
    }
    function clickForYou() {
      document.querySelector('div#content_below').classList.add('hidden');
      document.querySelector('.tabbed_wrapper.homepage').scrollIntoView(true);
    }
    document.querySelector('button.tabbed_button[data-slug="home"]').addEventListener('click', clickHome);
    document.querySelector('button.tabbed_button[data-slug="for-you"]').addEventListener('click', clickForYou);
  </script>
</div>      </div>


