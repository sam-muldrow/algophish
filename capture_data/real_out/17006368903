<script>


  let announcement = document.querySelector(".tmp-announcement");
  let announcementClose = document.querySelector(".tmp-announcement > div > button")

  announcementClose?.addEventListener("click", function () {
    announcement.classList.add('d-none');
  })

  var currentUrl = window.location.href;

  if (currentUrl.includes(".in")) {

    document.querySelector('.carousel-item.active').classList.remove('active')

    document.querySelectorAll('.carousel-item').forEach((item, index) => {

      if (index == 2) {
        item.classList.add('active')
      }

    })
  }



</script>
<script>

  $('#videoModal').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget)
    var embedurl = button.attr("data-url")
    if ($('#ytbiframe').attr('src') != embedurl) {
      var modal = $(this)
      modal.find('.video-container iframe').attr("src", embedurl);
    }
  })
  $('#videoModal').on('hidden.bs.modal', function (event) {
    $(event.target).find('iframe').each(function () {
      this.contentWindow.postMessage('{"event":"command","func":"pauseVideo","args":""}', '*')
    });
  });
  $(document).ready(function () {
    var videoPath;
    $("#videoModal").click(function () {
      videoPath = $(this).data("src");
    });
    $("#videoModal").on("shown.bs.modal", function (e) {
      $("#ytbiframe").attr("src", videoPath);
    });
    $("#videoModal").on("hide.bs.modal", function (e) {
      $("#ytbiframe").attr("src", "");
    });
  });





 $(document).ready(function() {

            $('#videoModal').on('show.bs.modal', function (e) {
        // Enable the ESC key for closing the modal
        $(document).on('keydown', function (event) {
            if (event.key === "Escape") {
                $('#videoModal').modal('hide');
            }
        });
    });

    $('#videoModal').on('hidden.bs.modal', function (e) {
        // Remove the keydown event handler when the modal is closed
        $(document).off('keydown');
    });
});


</script>
        </div>

        
