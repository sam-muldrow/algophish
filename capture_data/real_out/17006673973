	<script>
		function hasIabConsent() {
			if (getCookie('CookieControl') !== null) {
				if (JSON.parse(getCookie('CookieControl')).iabConsent !== undefined && JSON.parse(getCookie('CookieControl')).iabConsent !== "") {
					return true;
				}
			}
		}
	</script>

