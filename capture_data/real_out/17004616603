<script>
function ShowLiveModalDialog(url, width, height, windowpop)
{
	if(!windowpop) windowpop='LiveFatwa';
	
	var left = (screen.width/2)-(width/2);
	var top = (screen.height/2)-(height/2);

	var newWindow;
	var props = 'scrollBars=yes,resizable=yes,toolbar=no,menubar=no,location=no,directories=no,width=' + width + ',height=' + height + ',top=' + top + ',left=' + left;
	
	newWindow = window.open(url, windowpop, props);

}
</script>                    
