    <script type="text/javascript">

        $('body').on('click', 'img.blog-photo', function () {
            var s = $(this).attr('src');
            if(s.match(/thumb/))
            {
                return;
            }
            $.colorbox({ href: $(this).attr('src'), iframe: false });
            //event.preventDefault();
        })

    </script>
</body>
