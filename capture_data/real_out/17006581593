<script type="text/javascript">
    $(document).ready(function () {
        //carousel play/pause
        $('#homeCarousel #playButton').click(function () {
            $('#homeCarousel').carousel('cycle');
            $('#homeCarousel .icon-pause').css({'display': 'inline-block'});
            $('#homeCarousel .icon-play').hide();
        });
        $('#homeCarousel #pauseButton').click(function () {
            $('#homeCarousel').carousel('pause');
            $('#homeCarousel .icon-play').css({'display': 'inline-block'});
            $('#homeCarousel .icon-pause').hide();
        });

        $('#homeCarousel').swiperight(function () {
            $(this).carousel('prev');
        });
        $('#homeCarousel').swipeleft(function () {
            $(this).carousel('next');
        });
    });
</script>
