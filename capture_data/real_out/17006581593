        var bcLoadVid = true;
        $(document).ready(function () {
            if(bcLoadVid){
                bcLoadVid = false;
				addModal();

                var trigger = $("body").find('[data-intent="initiate-video"]');
      			trigger.click(function (){
        			videoModal($(this));
      			});
            }
		});
 </script></div>

