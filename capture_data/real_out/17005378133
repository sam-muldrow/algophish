       if (!$(this).children().length && !$(this).text().match(/\S/)) {
              $(this).css("margin","0");
       }
	});
	
	//Add Social Share Event Tag in GTM - IDGMPM-17271
	$("a[data-socialsite]").click(function() {
			var dataLayer = window.dataLayer = window.dataLayer || [];
			dataLayer.push({
				'event': 'socialShare', 
			  	'eventCategory': 'Social Share',
