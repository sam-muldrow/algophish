        function set3gNotice(cname, cvalue) {
            document.cookie = cname + "=" + cvalue + ";path=/";
        }
        function get3gNotice(cname) {
            let name = cname + "=";
            let ca = document.cookie.split(';');
            for(let i = 0; i < ca.length; i++) {
                let c = ca[i];
                while (c.charAt(0) == ' ') {
                    c = c.substring(1);
                }
                if (c.indexOf(name) == 0) {
                    return c.substring(name.length, c.length);
                }
            }
            return "";
        }
        function check3gNotice() {
            let threeGNotice = get3gNotice("3gNotice");
            if (threeGNotice != "") {console.log(threeGNotice)};
            if (threeGNotice != "" && threeGNotice == "off") {
                $('.top_3g_notice_header_txt') .remove();
            }
            else {
                set3gNotice("3gNotice", "on");
            }
        }

        check3gNotice();

        $('.close_3g_notice_txt') .click( function() {
            $('.top_3g_notice_header_txt') .remove();
            adjust_pg_offset();
            document.cookie = "3gNotice=off; path=/;";
        });

        function adjust_pg_offset() {
            $('body') .css('padding-top', $('.navbar-fixed-top') .outerHeight());
            $(window).resize(function () {
                $('body') .css('padding-top', $('.navbar-fixed-top') .outerHeight());
            });
        }
    </script>
