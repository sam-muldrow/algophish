function getCartNum(){
jQuery.ajax({
    url: "/shop/get-cart-num",
    type: "POST",
    data:{},
    dataType: 'json',
    beforeSend:function(data){
    },
    success: function(data){
	 if(data.return_code=1){
	    $('#shopping_cart').html('<i class="fa fa-shopping-cart"></i> Cart (' + data.return_data.num +')');
	    $('#shopping_cart1').html('<i class="fa fa-shopping-cart"></i> Cart (' + data.return_data.num +')');
	};
    },
    error:function(data){
    }
});
};
//display_div_id is the div id to display product list
//area _ids is the array of id for ex. display_product_list('test_div',[1,2,3])
function display_product_list(display_div_id,area_ids)
{
    jQuery.ajax({
        url: "/shop/display-random-product",
        type: "POST",
        data:{areas:area_ids},
        beforeSend: function (data) {},
        success: function (data) {
            $("#"+display_div_id).empty();
            $("#"+display_div_id).html(data);
        },
        error: function (data) {}
    });

}
function display_product_list_row(display_div_id,area_ids)
{
    jQuery.ajax({
        url: "/shop/display-random-product-row",
        type: "POST",
        data:{areas:area_ids},
        beforeSend: function (data) {},
        success: function (data) {
            $("#"+display_div_id).empty();
            $("#"+display_div_id).html(data);
        },
        error: function (data) {}
    });

}


function display_free_expired_lines_with_view(display_div_id)
{
    jQuery.ajax({
        url: "/account/get-free-expired-lines-with-view",
        type: "GET",
        beforeSend: function (data) {},
        success: function (data) {
            $("#"+display_div_id).empty();
            $("#"+display_div_id).html(data);
        },
        error: function (data) {}
    });

}

function display_fp_migration_mdn_list(display_div_id)
{
    jQuery.ajax({
        url: "/upgrade/get-fp-mdn-migration-list",
        type: "get",
        beforeSend: function (data) {},
        success: function (data) {
            $("#"+display_div_id).empty();
            $("#"+display_div_id).html(data);
        },
        error: function (data) {}
    });

}


