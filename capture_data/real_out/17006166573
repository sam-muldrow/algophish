<script>
    $(document).on('click', '.select_state_start_btn', function (event) {
        var state =$("#state").val();
        $("#state_val").val(state);
        $("#googleCaptcha").modal('show');

    });
    $(document).on('click', '.select_state_start_btn2', function (event) {
        var state =$(".cst_state_select_dd2").val();
        $("#state_val").val(state);
        $("#googleCaptcha").modal('show');

    });
    $(document).on('click', '.check_state_eligible_link', function (event) {
        var state =$("#state_val").val();
        var g_recaptcha_response=$('#g-recaptcha-response').val();
        if(g_recaptcha_response ==''){
            $('#captcha_message').html('Please check captcha');
            return false;
        }
        $("#googleCaptcha").modal('hide');

        jQuery.ajax({
            url: "/assist/ajax-check-assist-state",
            type: "POST",
            data:{state:state,g_recaptcha_response:g_recaptcha_response},
            beforeSend: function (data) {
                document.getElementById('alertbox-waiting-text').hidden = false;

                var div = document.getElementById('alertbox-waiting-text');
                div.innerHTML = '<div class="progress"><img src="/images/loader.gif"><h2>Processing. Please wait...<h2></div>';
            },
            success: function (data) {
                document.getElementById('alertbox-waiting-text').hidden = true;
                grecaptcha.reset();
                if(data.return_code == 5)
                {
                    $("#other_state_select_popup").modal('show');
                }else{
                    location.href='https://freedompop-web.telgoo5.com/';
                }

            },
            error: function (data) {
                var div = document.getElementById('alertbox-waiting-text');
                div.innerHTML = '<div class="error"><h2>Error!</h2></div>';
                document.getElementById('alertbox-waiting-text').hidden = true;
            }
        });

    });
</script>
