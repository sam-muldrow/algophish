<script type="text/javascript">
    $(".region10").on("click", "li", function () {
        var that = $(this)
        if (that.hasClass("select")) {
            return;
        }
        that.parents("ul").find("li").removeClass("select");
        that.addClass("select");
        $(".region12").hide();
        $(".region14").hide();
        $(".region15").hide();
        $(".region16").hide();
        var txt = that.text();
        if (txt.indexOf("品牌特色") > -1) {
            $(".region12").show();
        } else if (txt.indexOf("发展历程") > -1) {
            $(".region14").show();
        } else if (txt.indexOf("品牌口号") > -1) {
            $(".region15").show();
        } else if (txt.indexOf("品牌理念") > -1) {
            $(".region16").show();

        }
    })
    function _scrollTo(id) {

        var _id = document.getElementById(id);
        window.scrollTo(0, _id.offsetTop);
    }

    function Search() {

        var key = document.getElementById("key").value;
        if (key == "" || key == "undefined") {
            document.location = "//b.faloo.com";
        }
        else {
            document.location = "//b.faloo.com/l/0/1.html?t=1&k=" + document.getElementById("key").value;
        }

    }
</script>
