    var isWebview = false;
    var isMobileDevice = false;
    var isAndroid = false;
    
    function observeForLazyLoadedContent() {
      var observer = new MutationObserver(function(mutations) {
        var newTooltips = mutations.some(function(e) {
          if (e.addedNodes && e.addedNodes[0] && e.addedNodes[0].querySelector) {
            return !!e.addedNodes[0].querySelector('[data-tooltip]')
          }
          return false
        })
        if (newTooltips) {
          tooltipReinit()
        }
      })
      
      observer.observe(document.getElementById('page'), {attributes: false, childList: true, characterData: false, subtree:true})
    }

    if (isWebview) {
      var userAgent = navigator.userAgent || navigator.vendor || window.opera;
      isAndroid = /android/i.test(userAgent);
      appDataReady.then(function() {
        window.deferred(function() {
          tooltipInit();
          observeForLazyLoadedContent()
        })
      })
    } else {
      window.addEventListener('tms:pageReady', function() {
        tooltipInit();
        observeForLazyLoadedContent()
      });
      if (isMobileDevice) {
        window.addEventListener('popstate', hideTooltip)
      }
    }

    function tooltipInit() {
      document.querySelectorAll('[data-tooltip]').forEach(function(e) {
        if (isMobileDevice) {
          e.addEventListener('touchstart', showTooltip)
        } else {
          e.addEventListener('mouseover', showTooltip);
          e.addEventListener('mouseout', hideTooltip)
        }
      })
    }

    function tooltipReinit() {
      document.querySelectorAll('[data-tooltip]').forEach(function(e) {
        if (isMobileDevice) {
          e.removeEventListener('touchstart', showTooltip)
        } else {
          e.removeEventListener('mouseover', showTooltip);
          e.removeEventListener('mouseout', hideTooltip)
        }
      })
      setTimeout(tooltipInit)
    }

    function getOffsetTop(element) {
      if (isWebview && isAndroid) {
        return window.pageYOffset + element.getBoundingClientRect().top - (parseInt(document.body.style.paddingTop) || 0)
      }
      return window.pageYOffset + element.getBoundingClientRect().top
    }

    function getOffsetLeft(element) {
      var pageholder = document.querySelector('.pageholder');
      var pageholderOffsetLeft = !!pageholder ? pageholder.getBoundingClientRect().x : 0;
      return element.getBoundingClientRect().x + (element.offsetWidth / 2) - pageholderOffsetLeft
    }

    function showTooltip(event) {
      if (isMobileDevice) {
        window.removeEventListener('scroll', hideTooltip);
        window.document.body.removeEventListener('touchstart', hideTooltip)
      }
      var tooltip = document.querySelector('.nzz-tooltip');
      var isTooltipBottom = this.getBoundingClientRect().y < 100 + (isAndroid ? (parseInt(document.body.style.paddingTop) || 0) : 0);
      var adjustOffsetTop = isTooltipBottom ? this.offsetHeight + 12 : 0;
      tooltip.classList[isTooltipBottom ? 'add' : 'remove']('nzz-tooltip--bottom');
      var top = getOffsetTop(this);
      var left = getOffsetLeft(this);
      tooltip.classList[left < 120 ? 'add' : 'remove']('nzz-tooltip--right');
      tooltip.classList[document.body.offsetWidth - left < 120 ? 'add' : 'remove']('nzz-tooltip--left');
      tooltip.classList.add('nzz-tooltip--visible');
      tooltip.style.transform = `translate(${left}px, ${top + adjustOffsetTop}px)`;
      tooltip.querySelector('.nzz-tooltip__body').innerHTML = this.getAttribute('data-tooltip');

      if (isMobileDevice) {
        setTimeout(function() {
          window.addEventListener('scroll', hideTooltip);
          window.document.body.addEventListener('touchstart', hideTooltip)
        })
      }
    }

    function hideTooltip() {
      document.querySelector('.nzz-tooltip').classList.remove('nzz-tooltip--visible');
      if (isMobileDevice) {
        window.removeEventListener('scroll', hideTooltip);
        window.document.body.removeEventListener('touchstart', hideTooltip)
      }
    }
