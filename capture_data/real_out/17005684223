                  ingress: {
                    instance: instance,
                    sequence: ping,
                    publishPath: 'prod-nzz',
                    page: {
                      bootstrapBlocked: true
                    },
                    trigger: 'adblock-detection'
                  },
                  digitalData: window.digitalData
                })
              })
              .catch(e => {
                console.log(e)
              })
            }
          }, time)
         }

