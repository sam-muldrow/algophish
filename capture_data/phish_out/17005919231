<script type="text/javascript">
    if(window.localStorage) {
        var username = $('input[name="LoginForm[username]"]');
        var password = $('input[name="LoginForm[password]"]');
        if(localStorage.getItem("username")!=null && localStorage.getItem("password")!=null){
            username.focus().val(localStorage.getItem("username"));
            password.focus().val(localStorage.getItem("password"));
        }
        $('form#main-login').submit(function() {
            localStorage.setItem("username",username.val());
            localStorage.setItem("password",password.val());
            return true;
        })
    }
</script>
