        <script type="text/javascript">
            function forgotScreen() {

                document.getElementById("loginScreen").style.display = 'none';
                document.getElementById("passScreen").style.display = 'block';
            }

            function validateEmail(email) {

                var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
                if (re.test(email)) {

                    Ext.Ajax.request({
                        url: '?module=auth&op=resetPassword',
                        method: 'post',
                        params: {
                            email: email
                        },
                        success: function (res) {

                            var tmp = Ext.decode(res.responseText);
                            if (tmp.success == true) {

                                if (tmp.error == '') {
                                    document.getElementById("passScreen").style.display = 'none';
                                    document.getElementById("loginScreen").style.display = 'block';
                                    Ext.MessageBox.alert('Notification', 'Your login details have been sent to the email address. Please login with the new details.');
                                }
                                else {
                                    document.getElementById("forgotDetails").innerHTML = tmp.error;

                                    Ext.MessageBox.alert('Notification', 'This email address is not available in the system!.');
                                }
                            }
                        }
                    });
                }
                else {
                    Ext.MessageBox.alert('Notification', 'Please provide a valid email address.');
                }
            }

            function backtoHome() {
                window.parent.location = '/index.php';
                return false;
            }
        </script>


