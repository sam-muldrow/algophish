        <script>
            $(".slideBox_p1").slide({
                titCell: ".hd ul li",
                mainCell: ".bd ul",
                effect: "leftLoop",
                vis: "auto",
                scroll: 1,
                autoPlay: false,
                trigger: "click",
                endFun: function (index) {
                    console.log(index);
                    var c = $('.part1 .slideBox_p1 .content2 .title');
                    if (index == 0) {
                        document.getElementById('movie2').pause();
                        c.css('margin-bottom', '100px');
                        c.css('height', '10px');
                    } else if (index == 1) {
                        document.getElementById('movie2').play();
                        c.css('margin-bottom', '100px');
                        c.css('height', '120px');
                    } else if (index == 2)  {
                        document.getElementById('movie2').pause();
                        c.css('margin-bottom', '0px');
                        c.css('height', '10px');
                    } else {

                    }

