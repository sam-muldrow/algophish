    <script>
        function muted() {
            document.getElementById('bgvid').muted = !document.getElementById('bgvid').muted;
            var dom = $('.mute img');
            var src = dom.attr('src');
            if (src == 'img/sy1.png') {
                dom.attr('src', 'img/sy2.png');
            } else {
                dom.attr('src', 'img/sy1.png');
            }
        }
    </script>

