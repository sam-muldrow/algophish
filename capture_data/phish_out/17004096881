j('.leggiti2').click(function(){
    var rel = j(this).attr('rel');
    if(!j(this).hasClass('aperto')){
        j(this).addClass('aperto');
        j(this).find('.ti-angle-double-right').hide();
        j(this).find('.ti-angle-double-down').fadeIn();
        j('.'+rel).stop(true,false).slideDown(300,'swing',function(){
            j("html, body").animate({ scrollTop: j('.'+rel).offset().top-200 }, 500);
        });
    }else{
        j(this).removeClass('aperto');
        j(this).find('.ti-angle-double-down').hide();
        j(this).find('.ti-angle-double-right').fadeIn();
        j('.'+rel).stop(true,false).slideUp(300,'swing');
    }
});
</script> 
