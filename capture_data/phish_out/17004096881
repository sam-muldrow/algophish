<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script type="text/javascript" charset="utf-8">
	

jQuery(document).ready(function ($) {
	var images = [];
	var tipologia = '';
	var i = 0;
	$( ".beebox" ).each(function( index ) {	
		var tipo = $(this).attr('tipo');
		if(tipologia != tipo){
			tipologia = tipo;
			i = 0;
		}
		var title = $(this).attr('title');
		images.push($(this).attr('rel'));
		$(this).addClass(tipo+'_'+i);
		$(this).addClass(tipo);
		$(this).attr('data-id',i);
		$(this).attr('data-tipo',tipo);
		i= i+1;
    });
	
	//Function to open LightBox
	$(document).on('click','.beebox',function(){
		open_lb($(this).attr('data-id'), $(this).attr('data-tipo'),$(this).attr('title'));
	});
	
	function next(){
		var dataid = $('#AI_lightbox img.aaa').attr('data-id');
		var datatipo = $('#AI_lightbox img.aaa').attr('data-tipo');
		var title;
		if(parseInt(dataid) < ($('.'+datatipo).length-1)){
			if($('.'+datatipo+'_'+(parseInt(dataid)+1)).length > 0){
				title = $('.'+datatipo+'_'+(parseInt(dataid)+1)).attr('title');
			}
			open_lb(parseInt(dataid)+1, datatipo,title);
		}else{
			if($('.'+datatipo+'_0').length > 0){
				title = $('.'+datatipo+'_0').attr('title');
			}
			open_lb(0,datatipo,title);
		}
	}	
	$(document).on('click','#AI_lightbox .AI_next',function(){
		next();
	});
	
	jQuery(window).bind('keydown', function(event) {
		if($('#AI_lightbox').length > 0){
			var keycode = (event.keyCode ? event.keyCode : event.which);
		    if(keycode == '39'){ //NEXT
		    	next();
		    	/*var dataid = $('#AI_lightbox img.aaa').attr('data-id');
				var datatipo = $('#AI_lightbox img.aaa').attr('data-tipo');
				//alert(dataid); 0 
				//alert(datatipo) bee_1
				//alert($('#AI_lightbox img.aaa').attr('data-id')); 0
				//alert($('.'+datatipo).length-1); 1
				if(parseInt(dataid) < ($('.'+datatipo).length-1)){
					open_lb(parseInt(dataid)+1, datatipo);
				}else{
					open_lb(0,datatipo);
				}*/
		    }
		    if(keycode == '37'){ //PREV
		    	prev();
		    	/*var dataid = $('#AI_lightbox img.aaa').attr('data-id');
				var datatipo = $('#AI_lightbox img.aaa').attr('data-tipo');
				if(parseInt(dataid) > 0){
					open_lb(parseInt(dataid)-1, datatipo);
				}else{
					open_lb(parseInt($('.'+datatipo).length-1),datatipo);
				}*/
		    }
	    }
	});
	function prev(){
		var dataid = $('#AI_lightbox img.aaa').attr('data-id');
		var datatipo = $('#AI_lightbox img.aaa').attr('data-tipo');
		var title;
		if(parseInt(dataid) > 0){
			if($('.'+datatipo+'_'+(parseInt(dataid)-1)).length > 0){
				title = $('.'+datatipo+'_'+(parseInt(dataid)-1)).attr('title');
			}
			open_lb(parseInt(dataid)-1, datatipo,title);
		}else{
			var cont = parseInt($('.'+datatipo).length)-1;
			if($('.'+datatipo+'_'+parseInt(cont)).length > 0){
				title = $('.'+datatipo+'_'+parseInt(cont)).attr('title');
			}
			open_lb(parseInt($('.'+datatipo).length-1),datatipo,title);
		}
	}	
	$(document).on('click','#AI_lightbox .AI_prev',function(){
		prev();
	});
	function open_lb(id,tipo,title){ //0,bee_1
		var titolo = '';
		if(title != undefined){
			titolo = title;
		}
		if($('#AI_lightbox').length == 0 || $('#AI_lightbox').length == undefined){
		$('body').append('<div id="AI_lightbox"><div class="AI_overlay"></div><span class="AI_close"></span><div class="relativeaaa"><img class="aaa" src="" alt="" /><div class="descrizione_bee"></div><div class="copri_imm"></div></div><span class="AI_prev"></span><span class="AI_next"></span></div>');
	   	}
	    $('#AI_lightbox').css('display','block');
	    $('#AI_lightbox img.aaa').attr('data-id',id);
		$('#AI_lightbox img.aaa').attr('data-tipo',tipo);
	    $('#AI_lightbox img.aaa').attr('src',$('.'+tipo+'_'+id).attr('rel'));
	   	$('#AI_lightbox .descrizione_bee').html(titolo);
	    if($('.'+tipo).length < 2){
			$('.AI_prev').hide();
			$('.AI_next').hide();
		}
	    
	    $('#AI_lightbox').animate({opacity: 1});
	};
	//Function to close LightBox
	$(document).on('click','.AI_overlay',function(){
		$('#AI_lightbox').stop(true,false).animate({opacity: 0}, 200, function() {
			$('#AI_lightbox').css('display','none');
			$('#AI_lightbox').remove();
		});
	});
	$(document).on('click','#AI_lightbox .AI_close',function(){
		$('#AI_lightbox').stop(true,false).animate({opacity: 0}, 200, function() {
			$('#AI_lightbox').css('display','none');
			$('#AI_lightbox').remove();
		});
	});
});
</script>


