  <script>
    var demo_form_url = 'https://app.replyify.com/request-demo-form';
    $(function() {
      $('.learn-more').click(function() {
        get_demo_form();
        $('#demo-modal').modal();
      });
      $('#demo-form').submit(function() {
          $('#demo-form button[type="submit"]').addClass('is-loading').prop('disabled', true);
          return true;
      });
      $('#demo-form').preventDoubleSubmission();
    });
    function get_demo_form() {
      $.get(demo_form_url).done(function(resp) {
        $('#demo-content').html(resp.markup);
      }).fail(function(resp) {
        alert('Sorry we had a problem getting the form please email us at team@replyify.com!');
      });
    }
  </script>
  


