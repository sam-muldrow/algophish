<script>
    $(document).ready(function(){
          $('#newsletter').submit(function(e){
          e.preventDefault();
          $.ajax({
              url: "https://armesmaini.com/newsletter-subscribe",
              headers: {'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')},
              method: 'POST',
              data: $('#newsletter').serialize(),
              beforeSend: function(){
                          $('#send_form').html('Submiting...');
                          $("#send_form"). attr("disabled", true);
                      },
              success: function(response){
                  // console.log();
                  $('#send_form').html('Submit');
                  $("#send_form"). attr("disabled", false);
                  $('#suc1').html(response.msg)
                  $('#newsletter')[0].reset();
                  $('#suc1').css('display','block');
                  $('#suc1').text('Thank You. Newsletter Subscribe successfully.');
                  $('#suc1').fadeIn();
                  setTimeout(() => {
                      $('#suc1').fadeOut();
                  }, 2000);
              },
              error: function(xhr) {
                        var errors = xhr.responseJSON.errors;
                        $.each(errors, function(key, value) {
                            var errorElementClass = '.' + key + '-error';
                            $(errorElementClass).html(value[0]);
                            $(errorElementClass).fadeIn(500).delay(2000).fadeOut(500);
                            $('#send_form').html('Submit');
                            $("#send_form"). attr("disabled", false);
                        });
                    }
                  });
              });
          });
</script>
<script>
  $(document).ready(function(){
        $('#enquiryFooterForm').submit(function(e){
        e.preventDefault();
        $.ajax({
            url: "https://armesmaini.com/footer/form/submit",
            headers: {'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')},
            method: 'POST',
            data: $('#enquiryFooterForm').serialize(),
            beforeSend: function(){
                        $('#sbtn').html('Please Wait...');
                        $("#sbtn"). attr("disabled", true);
                    },
            success: function(response){
                // console.log();
                $('#sbtn').html('Submit');
                $("#sbtn"). attr("disabled", false);
                $('#succ-msg').html(response.msg)
                $('#enquiryFooterForm')[0].reset();
                $('#succ-msg').css('display','block');
                $('#succ-msg').text('Thank you. We will get back to you soon');
                $('#succ-msg').fadeIn();
                setTimeout(() => {
                    $('#succ-msg').fadeOut();
                    $('#exampleModal').modal('hide');
                }, 2000);
            },
            error: function(xhr) {
                        var errors = xhr.responseJSON.errors;
                        $.each(errors, function(key, value) {
                            var errorElementClass = '.' + key + '-error';
                            $(errorElementClass).html(value[0]);
                            $(errorElementClass).fadeIn(500).delay(2000).fadeOut(500);
                            $('#sbtn').html('Submit');
                            $("#sbtn"). attr("disabled", false);
                        });
                    }
                });
            });
        });
</script>
