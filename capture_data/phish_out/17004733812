  <script>
    function getCourse(url) {
      $.ajax({
        url: url,
        type: 'GET',
        dataType: 'json',
        success: function(result) {
          $('#card-list-course').html('');

          let countData = result.length;
          if (countData > 0) {
            $.each(result, function(i, data) {
              $('#card-list-course').append(`
                                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                                    <div class="course-item shadow">
                                        <div class="position-relative overflow-hidden cursor-pointer thumbnail" data-id="` + data.course_id + `">
                                            <img class="img-fluid" src="https://beecons.co.id/assets/img/course/online-course.png" />
                                            <div class="w-100 d-flex position-absolute bottom-0 mb-2" style="justify-content: right">
                                                <label class="flex-shrink-0 px-3 py-1">
                                                    <div class="old-price formatPrice">Rp ` + formatRupiah(data.old_price) + `</div>
                                                    <span class="new-price formatPrice">Rp ` + formatRupiah(data.new_price) + `</span>
                                                </label>
                                            </div>
                                        </div>
                                        <div style="padding: 18px;">
                                            <span class="category">` + data.category + `</span>
                                            <h5 class="mt-2 mb-3 cursor-pointer title" data-id="` + data.course_id + `">` + data.title + `</h5>
                                            <button class="btn btn-warning" id="btn-buy" style="width: 81%; color: #000">Buy Course</button>
                                            <button class="btn btn-outline-warning" id="btn-cart"><i class="bi bi-cart-plus-fill" style="color:#000"></i></button>
                                        </div>
                                    </div>
                                </div>
                            `);
            });
          } else {
            $('#card-list-course').append(`
                            <div class="d-flex justify-content-center">   
                                <div class="alert alert-warning w-50 text-center br-20" role="alert">
                                    Sorry, keyword you are looking for the course was not found.<br>
                                    Please try using another keyword.
                                </div>
                            </div> 
                        `);
          }

          $('#course .course-item .thumbnail, #course .course-item .title').click(function() {
            let id = $(this).data('id');

            window.location.href = "https://beecons.co.id/learning/detail_course/" + id;
          })

          $('#btn-buy, #btn-cart').click(function() {
            window.location.href = "https://beecons.co.id/signin";
          })
        },
        error: function(result, ajaxOptions, thrownError) {
          $('#card-list-course').html('');

          $('#card-list-course').append(`
                        <div class="d-flex justify-content-center">   
                            <div class="alert alert-warning w-50 text-center br-20" role="alert">
                                Sorry, the course is not available at this time.<br>
                                Please try again in a few moments.
                            </div>
                        </div> 
                    `);
        }
      })
    }

    $(document).ready(function() {
      getCourse('https://stufast.id/api/course/latest/author/3?limit=4');
    })

    var formatRupiah = function(num) {
      var str = num.toString().replace("", ""),
        parts = false,
        output = [],
        i = 1,
        formatted = null;
      if (str.indexOf(".") > 0) {
        parts = str.split(".");
        str = parts[0];
      }
      str = str.split("").reverse();
      for (var j = 0, len = str.length; j < len; j++) {
        if (str[j] != ",") {
          output.push(str[j]);
          if (i % 3 == 0 && j < len - 1) {
            output.push(".");
          }
          i++;
        }
      }
      formatted = output.reverse().join("");
      return "" + formatted + (parts ? "." + parts[1].substr(0, 2) : "");
    };
  </script>



