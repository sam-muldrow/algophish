<script type="text/javascript">
		localStorage.removeItem('startd');
		localStorage.removeItem('endd');
		localStorage.removeItem('guest');

		$('#basic').daterangepicker({
			locale: {
	            format: 'MMMM D, YYYY'
	        }
		});
		$('.check_avi').click(function(){
			var ck = $('#basic').val();
			var guest = $('.guest').val();
			var end_date = ck.substring(ck.indexOf("-") + 1);
			var start_date = ck.substr(0, ck.indexOf('-')); 
			localStorage.setItem('startd', start_date);
			localStorage.setItem('endd', end_date);
			localStorage.setItem('guest', guest);
			window.location.href="booking"
		});
</script>
