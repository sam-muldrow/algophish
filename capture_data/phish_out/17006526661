{
    var d = new Date();
    d.setTime(d.getTime() + (30*24*60*60*1000));
    var expires = "expires="+ d.toUTCString();
    document.cookie = "cbatest7=blablabla;" + expires + ";path=/";
    window.location.reload();
}

function getDomain()
{
