    <script type="text/javascript">

        $('#txtKnowledgebaseSearchBig').keyup(function (e) {
            if (e.keyCode == 13) {
                openSearch($(this).val(), 'all');
            }
        });

        function changeCategorySelect(newType) {
            if (newType == "new") {
                $('#divCategoriesAdd').css('display', '');
                $('#divExistingCategories').css('display', 'none');
            }
            else {
                if ($('#categoryTable tr').length <= 1) {
                    $('#rdoNewCategory').click();
                    changeCategorySelect('new');
                    return;
                }

                $('#divExistingCategories').css('display', '');
                $('#divCategoriesAdd').css('display', 'none');
            }
        }

        function addCategory() {
            var newCat = $('#txtCategoryAddNew').val();
            if ($.trim(newCat).length > 0) {
                $.post('/AJAX/Custom/AddCategory.php', {name: newCat}, function (data) {
                    $('#categoryTable > tbody:last').append("<tr><td style='width:16px;'> <input type='checkbox' checked id='chkArticleCategories" + data + "' name='chkArticleCategories' value='" + data + "' /></td><td style='text-align:left;'>" + newCat + "</td></tr>");
                    changeCategorySelect('existing');
                    $('#rdoExistingCategory').click();

                });
            }
            else {
                alert('Please enter a category name.');
            }
        }


