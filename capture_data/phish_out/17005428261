<script type="text/javascript">

                        var internalSearch = "0";

                        $('#txtKnowledgebaseSearch').keyup(function(e) {
                            if (e.keyCode == 13)
                            {
                                openSearch($(this).val(), 'all');
                            }
                        });

                        function openSearch(searchText, searchType)
                        {
                            displaySearchLoadingBar(true);
                            $.post("/AJAX/Custom/KnowledgebaseSearch.php", {search: searchText, searchType: searchType, internal: internalSearch}, function(data) {
                                $('#linkOpenSearchModal').click();
                                $("#searchModalContent").html(data);
                                displaySearchLoadingBar(false);
                            });
                        }

                        function displaySearchLoadingBar(val)
                        {
                            if (val)
                            {
                                $('#txtKnowledgebaseSearch').css('display', 'none');
                                $('#imgSearchLoading').css('display', '');
                            }
                            else
                            {
                                $('#txtKnowledgebaseSearch').css('display', '');
                                $('#imgSearchLoading').css('display', 'none');
                            }
                        }

                        function getEmailTicketHistory(id)
                        {
                            $.post("/AJAX/Custom/GetSearchEmailUserTicketHistory.php", {id: id}, function(data) {
                                $(".divSearchUserHistory").slideUp();
                                $("#divSearchUserHistory" + id).html(data);
                                $("#divSearchUserHistory" + id).slideDown();
                            });
                        }

                        function updateNavigation()
                        {
                            var url = '%2Fhelpdesk.htm';

                            if (url.indexOf('type=trash') != -1 || url.indexOf('type%3Dtrash') != -1)
                            {
                                $('#nav-menu li').removeClass('active');
                            }
                            else if (url.indexOf('tickets-pending.htm') != -1)
                            {
                                $('#nav-menu li').removeClass('active');
                                $('#liTicketsPending').addClass('active');
                            }
                            else if (url.indexOf('tickets-closed.htm') != -1)
                            {
                                $('#nav-menu li').removeClass('active');
                                $('#liTicketsClosed').addClass('active');
                            }
                            else if (url.indexOf('create.htm') != -1)
                            {
                                $('#nav-menu li').removeClass('active');
                                $('#liTicketsNew').addClass('active');
                            }
                            else if (url.indexOf('single.htm') != -1)
                            {
                                $('#nav-menu li').removeClass('active');
                            }
                            else if (url.indexOf('profile.htm') != -1)
                            {
                                $('#nav-menu li').removeClass('active');
                            }
                            else if (url.indexOf('settings.htm') != -1)
                            {
                                $('#nav-menu li').removeClass('active');
                            }
                            else if (url.indexOf('account.htm') != -1)
                            {
                                $('#nav-menu li').removeClass('active');
                            }
                            else if (url.indexOf('reports.htm') != -1)
                            {
                                $('#nav-menu li').removeClass('active');
                            }
                        }

                        updateNavigation();
</script>
<!-- END NAVIGATION MENU -->


