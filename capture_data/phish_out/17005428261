        function showBigArticle(id) {
            $.post('/AJAX/Custom/GetArticleContent.php', {id: id}, function (data) {
                $('#divFullArticleContent').html(data);
                $('#divFullArticleModal').trigger('reveal:close');
                $("#divFullArticleModal").reveal({ "closed": function () {
                    $('#divFullArticleModal').html($('#divFullArticleModal').html());
                } });
            });
        }

        function makePanelSmall() {
            //$('.articleTitle').unbind('mouseover');
            $('#divPanelDisplayArticle').css('display', 'none');

            tinyMCE.execCommand('mceRemoveControl', false, 'txtEditArticle');

            //$('a').bind("click.myDisable", function() { return false; });

            $('#divPanelDisplayArticle').animate({
                width: '600px',
                marginLeft: 410,
                height: previousHeight
