                $('#divPanelArticleList').animate({
                    height: previousListHeight
                }, 100);

                $(this).height('auto');
                $('#divShowPanelX').css('display', 'none');
                //$('#divPanelDisplayArticle').css('position', 'fixed');
                //$('a').unbind("click.myDisable");
            });
        }

