<script type="text/javascript">
    $(document).ready(function(e) {
    //alert
    $('a#alert').click(function() {
    modal({
    type: 'alert',
            title: 'Alert',
            text: "Simple Message!"
    });
    });
            //confirm
            $('a#confirm').click(function() {
    modal({
    type: 'confirm',
            title: 'Confirm',
            text: 'Are you sure you want to delete your brain?',
            callback: function(result) {
            alert(result);
            }
    });
    });
            //prompt
            $('a#prompt').click(function() {
    modal({
    type: 'prompt',
            title: 'Prompt',
            text: 'Type your name:',
            callback: function(result) {
            alert(result);
            }
    });
    });
            //success
            $('a#success').click(function() {
    modal({
    type: 'success',
            title: 'Success',
            text: 'A simple success message!',
    });
    });
            //warning
            $('a#warning').click(function() {
    modal({
    type: 'warning',
            title: 'Warning',
            text: 'A simple warning message!',
            center: false,
    });
    });
            //info
            $('a#info').click(function() {
    modal({
    type: 'info',
            title: 'Info',
            text: 'A simple info message!',
            autoclose: true,
    });
    });
            //error
            $('a#error').click(function() {
    modal({
    type: 'error',
            title: 'Error',
            text: 'A simple error message!',
    });
    });
            //inverted
            $('a#inverted').click(function() {
    modal({
    type: 'inverted',
            title: 'Inverted',
            text: 'A simple inverted message!',
    });
    });
            //primary
            $('a#primary').click(function() {
    modal({
    type: 'primary',
            title: 'Primary',
            text: 'A simple primary message!',
    });
    });
</script></head>

