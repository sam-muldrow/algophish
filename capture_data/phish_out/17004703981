<div class="modal" id="modal_passreset" tabindex="-1" role="dialog" aria-labeledby="" data-backdrop="static">
    <div class="modal-dialog modal-sm" role="document" >
        <div class="modal-content">
            <div class="modal-header"></div>
            <div class="modal-body">
                <form class="form" role="form" method="post" action="javascript:void()" accept-charset="UTF-8" name="reset_form" id="reset_form">
                    <div class="form-group">
                        <input type="hidden" name="txt_quser" id="txt_quser" class="form-control" required autocomplete="off"/>
                        <label for="txt_newpass1" class="control-label">New Password</label>
                        <input type="password" class="form-control" name="txt_newpass1" id="txt_newpass1" required autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="txt_newpass2" class="control-label">Confirm Password</label>
                        <input type="password" class="form-control" name="txt_newpass2" id="txt_newpass2" required autocomplete="off">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success btn-block" id="btn_passreset">Submit</button>
            </div>
