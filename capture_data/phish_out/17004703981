<script type="text/javascript"> 
    $(document).ready(function(){  
        $('.notification').hide();
        
        /* pass the username to reset modal for reference */
        $('#modal_passreset').on('show.bs.modal', function (event) {    
            $(this).find('#txt_quser').val($('#qusername').val());            
        })
                
        
        var check=0;
        $('#btn_login').click(function(){
            check=0;
            if($('#qusername').val()===""){
                $('#qusername').css('border', '2px solid #FF9980');
                check=1;
            }
            else{
                $('#qusername').css('border', '1px solid #BBBBBB');
            }

            if($('#qpassword').val()===""){
                $('#qpassword').css('border', '2px solid #FF9980');
                check=1;
            }
            else{
                $('#qpassword').css('border', '1px solid #BBBBBB');
            }

            if(check === 0){
                $.ajax({
                    url:  "modules/login/try_login.php",type: "POST",
                    data: $('#login_form').serialize(),
                    statusCode: {404: function() {alert('page not found');}
                    },
                    success: function(data){
                        if(data==="Success"){
                            setTimeout(function(){
                                clear_form();
                            },1000);
                        }
                        else if(data==="Reset"){
                            //window.location.href=window.location.href+"?act=setpass&user="+$("#qusername").val();
                            $('#modal_passreset').modal('show');
                        }
                        else{
                            $('#qusername').css('border', '2px solid #FF9980');
                            $('#qusername').css('background', '#FF9999');
                            alert(data);
                        }
                    }
                });
            }

        });
    });
    
    $('#btn_passreset').click(function(){
    
        //alert("Clicked");
    
        var check2=0;
        if($('#txt_quser').val()===""){
            alert("username not found!!");
            check2++;
        }

        if($('#txt_newpass1').val()===""){
            $('#txt_newpass1').css('border', '2px solid #FF9980');
            check2++;
        }
        else{
            $('#txt_newpass1').css('border', '1px solid #BBBBBB');
        }
        
        if($("#txt_newpass1").val()!== $("#txt_newpass2").val()){
            check2++;
            alert("Passwords do not match!");
        }
        else if($("#txt_newpass2").val().length <6){
            check2++;
            alert("Password length must be 6 or more");
        }
        else{
            
        }

        if(check2 === 0){
            $.ajax({
                url:  "modules/login/first_login.php",type: "POST",
                data: $('#reset_form').serialize(),
                statusCode: {404: function() {alert('page not found');}
                },
                success: function(data){
                    if(data==="Success"){
                        setTimeout(function(){
                            clear_form();
                        },1000);
                    }
                    else{                        
                        alert(data);
                    }
                }
            });
        }
  
    });
    
    function clear_form(){
        window.location.href=window.location.href;
    }

</script>            </div>
