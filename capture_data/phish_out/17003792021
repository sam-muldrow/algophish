            <script>
            var countrylangcode = document.documentElement.lang;
               
               if(countrylangcode=='en'){
                   countrylangcode='en_us';
               }
               console.log("countrylangcode="+countrylangcode);
            var doc_title = document.title.split('|')[0].trim();
            var enpointUrl = 'https://api.converseapps.com/cognitive/search/get-similar-articles';
            var siteID = '7250aa109075cf41';
            var racount = '10';
            var applicationId = '42DA21E7';
            $.ajax({
                url: enpointUrl,
                type: 'POST',
                dataType: 'json',
                contentType: 'application/json',
                processData: false,
                
                data: '{"query": "How can I avoid Arlo support scams?", "start": 0,"count": '+racount+',"locale": "'+countrylangcode+'","applicationId": "'+applicationId+'","siteId": "'+siteID+'","filters":[{"field":"raw.internal_only__c", "value": "false"},{"field": "raw.is_visible_in_pkb", "value": "true"}],"fields": ["raw.id","raw.full_url__c","raw.title"]}',
                success: function (data) {
                    //alert(JSON.stringify(data));
                    
                    var arr = [],  
                        unique = [];
                    
                    $.each(data.hits, function (index, value) {
                        
                        if ($.inArray(value.title, arr) == -1) { 
                            arr.push(value.title);
                            unique.push(value);
                        }
                    });
                    var unique_length = unique.length;
                    if(unique_length>0){                       
                        var i = 0;
                        var html = '';
                        var related_title='';
                        var tag_rem_title='';
                        var list = $("<ul />");
                        var relatedArticle = []
                        $.each(unique, function(){
                            related_title = unique[i].title.split('|')[0].trim();                            
                            tag_rem_title = $('<p>'+related_title+'</p>').text();
                            
                            if(doc_title != tag_rem_title){                                
                                relatedArticle.push({
                                    title: tag_rem_title,
                                    full_url__c: unique[i].full_url__c
                                });
                            }
                            i++;
                        });                        
                        if (relatedArticle.length<=5) {
                            //relatedArticle.shift();
                        }
                        
                        var k =0;
                        
                        $.each(relatedArticle, function(){
                            
                            var element = $("<li />");
                            var link = $("<a />");
                            link.attr("href",relatedArticle[k].full_url__c);
                            link.text(relatedArticle[k].title);
                            element.append(link);
                            list.append(element);
                            k++;
                        });
                        
                        if (relatedArticle.length > 0) {                            
                            // This comes from the source page (from a custom label)
                            relatedArticlesTitle = relatedArticlesTitle || "Related Articles";
                            $("#RelatedAnswers").empty().append("<h4>"+relatedArticlesTitle+"</h4>").append(list);
                        }
                        
                    }
                    
                },
                error: function(){
                    alert("Cannot get data");
                }
                
            });
            
            </script>
            
            
          
            
            
            
