            Visualforce.remoting.Manager.invokeAction(
                'NG_ArticleDetailController.getSupportModels',
                function(result, event) {
                    
                    if (event.status) {
                        
                        var source = source || [];
                        var sourceModels= JSON.parse(result);
                        $.each(sourceModels, function (i, item) {
                            if (jQuery.trim(item.title).length>3){
                                label = item.title + " / " + item.model.toUpperCase() + " " + item.version.toUpperCase();
                            }else{
                                label = item.model;
                            }
                            
                            if(item.url==="https://www.arlo.com/en-us/support/"){
                                source.push({
                                    url:  item.url,
                                    label: label,
                                    model: item.model,
                                    version : item.version
                                });
                            }
                            else{
                                source.push({
                                    url: "https://www.arlo.com" + item.url,
                                    label: label,
                                    model: item.model,
                                    version : item.version
                                });
                            }
                        });
                    }
                }, 
                {escape: false}
            ); 
