                    e.stopPropagation();
                });
                
                counter = function() {
                    $('.popup').show();
                    var value = $('#word_count').val();
                    
                    if (value.length == 0) {
                        $('#word_left').html(500);
                        return;
                    }
                    
                    var regex = /\s+/gi;
                    var words = value.length;
                    if (words <= 500) {
                        $('#display_count').text(words);
                        $('#word_left').html(500 - words)
                    } else {
                        if (e.which !== 8)
                            e.preventDefault();
                    }
                };
                
