	<script>
		jQuery(document).ready(function($) {
			$(document).off('click', '.forgot_password');
			$(document).on('click', '.forgot_password', function(event) {
				event.preventDefault();
				if ($(".username").val().trim() == "") {
					alert("Veuillez inscrire votre nom d'utilisateur ou votre courriel");
					return false;
				}
				sendPasswordReminder();
			});

			var tries_reminder;

			function sendPasswordReminder() {

				var method = "password_reminder";

				console.log("Here2");
				$.post("/ajax-handler.php?method=" + method, $(".login_values").serialize(),
					function(data) {
						console.log("Data is: " + data);
						tries_reminder = 0;
						if (data == 1) {
							alert("Un lien pour réinitialiser votre mot de passe vous a été envoyé par courriel.");
							return false;
						} else {
							alert(data);
						}
					}).fail(function() {
					tries_reminder++;
					if (tries_reminder < 5) {
						console.log("Failed to send password reminder. Trying again...");
						sendPasswordReminder();
					}
				});
			}

		});
	</script>
