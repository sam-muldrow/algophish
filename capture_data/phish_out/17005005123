<script>
$(document).ready(function(){
        setTimeout(function(){
            $('.sendLead').append('<input type="hidden" class="client_id" name="client_id" value="">');
            
            var name = "_ga"
            var matches = document.cookie.match(new RegExp(
                name.replace(/([\.$?*|{}\(\)\[\]\\\/\+^])/g, '\\$1') + "=([^;]*)"
              ));
              matches = decodeURIComponent(matches);
              var tmp = matches.split('.');
              var cid = tmp[2] + '.' + tmp[3];
              cid = cid.split(',');
              cid = cid[0];
              if (cid == "undefined.undefined") {
              console.log("GA undefined");
              var tracker = ga.getAll()[0];
              cid = tracker.get('clientId');
                    
              } else {
                console.log("GA is work");
              }
              $('.client_id').val(cid);
        }, 4000);
        
        /* JIVOSITE */
        setTimeout(function() {
            var widget_id = 'V9sPBMkgkT';
            var d=document;
            var w=window;
            function l() {
                var s = document.createElement('script'); 
                s.type = 'text/javascript'; 
                s.async = true; 
                s.src = '//code-ya.jivosite.com/widget/'+widget_id; 
                var ss = document.getElementsByTagName('script')[0]; 
                ss.parentNode.insertBefore(s, ss);
            }
            
            if (d.readyState=='complete') {
                l();
            } else {
                if (w.attachEvent) {
                    w.attachEvent('onload',l);
                } else {
                    w.addEventListener('load',l,false);
                }
            }
        }, 4000);
        /* END JIVOSITE */
    });
    
    
	$(window).on("scroll",function(){
	    
	    var wrapper = $('body').width();
	    
		if($('body').hasClass('blog-page') && wrapper > 1000){
			var scrollTop = $(window).scrollTop();
			var form = $('.blog-form-over').offset().top -10;
			var formHeight = $('.blog-form-over').height();
			var footer = $('footer').offset().top;
			var scrollBottom = scrollTop + formHeight + 900;
			
			if(scrollTop > form){
				$('.blog-form-wrapper').addClass('fixed');
			}else{
				$('.blog-form-wrapper').removeClass('fixed');
			}
			
			if(scrollBottom > footer){
			    $('.blog-form-wrapper').addClass('abs').css({
			        'top': footer - formHeight - 860
			    });
			}else{
			    $('.blog-form-wrapper').removeClass('abs').removeAttr('style');
			}
		}
	});  
	
        function mask(event) {
            var matrix = "+7 (___) ___-__-__",
                i = 0,
                def = matrix.replace(/\D/g, ""),
                val = this.value.replace(/\D/g, "");
            if (def.length >= val.length){
                val = def;
            }
            this.value = matrix.replace(/./g, function(a) {
                return /[_\d]/.test(a) && i < val.length ? val.charAt(i++) : i >= val.length ? "" : a
            });
        };
        
        var phones = document.querySelectorAll("[name='phone']");
        
        phones.forEach(function(phone) {
            phone.addEventListener("input", mask, false);
            phone.addEventListener("focus", mask, false);
            phone.addEventListener("blur", mask, false);             
        });    
</script>

        </div>
    </body>
</html>