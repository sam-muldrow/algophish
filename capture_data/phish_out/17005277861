<script>
    $(document).ready(function() {
        $(".lazyload").lazyload();
    });

    $(document).on('click','.btn-open-video',function(){
        var type = $(this).data("type");
        console.log(type);
        var id = $(this).data("id");
        var response = $("#video-container");
        $.ajax({
            type: "GET",
            url: "https://joypet.com.tr/tr/video?type="+type+"&id="+id,
            cache: false,
            dataType: 'html',
            success: function(view) {
                response.addClass('video-container-active').html(view).fadeIn("fast");
            }
        });
    });

    $(document).on('click','.video-container',function(){
        $("#video-container").fadeOut("fast").removeClass("video-container-active").html("");
    });

    function onSubscribe() {
        var btn = $(this);
        btn.prop('disabled', true).html('Lütfen bekleyiniz...');
        $.ajax({
            type: "POST",
            url: "https://joypet.com.tr/tr/api/subscribe",
            cache: false,
            dataType: 'json',
            data: $("#form-subscribe").serialize(),
            success: function(view) {
                var r = JSON.stringify(view);
                var p = JSON.parse(r);

                Swal.fire(p.title, p.message, p.status);

                if(p.status === 'success') {
                    //dataLayer.push({'event': 'formOkSubscribe', 'form': 'E-Bülten'});
                }
                btn.prop('disabled', false).html("<i class=\"fal fa-user-plus\"></i> Kaydet");
                $('input[name=csrf_ccm]').val(p.token);

            },
            error: function(xhr, ajaxOptions, thrownError) {
                console.log(xhr.responseText);
            }
        });

        grecaptcha.reset();
    }
