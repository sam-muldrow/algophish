    <script type="text/javascript">
		$(document).ready(function () {
			$("#cep").keyup(function (e) {
				$("#rua").val("Buscando...");
				$("#bairro").val("Buscando...");
				$("#cidade").val("Buscando...");
				$("#uf").val("Buscando...");
				$("#enderecoCompleto").html('Buscando...');

				if (this.value.length >= 8 && $.trim($("#cep").val()) != "") {
					var cepInformado = $("#cep").val().replace('-', '');
					//$.getScript("http://www.ctasoftware.com.br/webservice/clienteWebService.php?cep=" + cepInformado + "&formato=javascript", function () {
                    //$.getJSON("https://viacep.com.br/ws/"+ cep +"/json/?callback=?", function(dados) {
                    $.getJSON("https://www.encontrarcep.com.br/api/" + cepInformado, function (resultadoCEP) {

						if (resultadoCEP.logradouro != "") {
							rua = unescape(resultadoCEP.logradouro);
							bairro = unescape(resultadoCEP.bairro);
							cidade = unescape(resultadoCEP.localidade);
							uf = unescape(resultadoCEP.uf);
                            ibge = unescape(resultadoCEP.ibge) ? unescape(resultadoCEP.ibge) : '';

							// preenche os campos
							$("#rua").val(rua);
							$("#bairro").val(bairro);
							$("#cidade").val(cidade);
							$("#uf").val(uf);
							$("#enderecoCompleto").html(
								rua + " - " + bairro + "<br />" + cidade + "/" + uf
								+ "<br />" + "CEP: " + resultadoCEP.cep
                                + "<br />" + "Código IBGE: " + ibge
							);
						} else {
							// preenche os campos
							$("#rua").val("");
							$("#bairro").val("");
							$("#cidade").val("");
							$("#uf").val("");
							$("#enderecoCompleto").html("Endereço não encontrado.");
							// alert("Não foi possivel encontrar o endereço");
						}

					});
				}
			})
		});

    </script>
    
    <script type="text/javascript">
		$(document).ready(function () {
            var encontrado = false;
			$("#cidade").keyup(function (e) {
				$("#pesquisaIBGE").html('Buscando...');

				if (this.value.length >= 2 && $.trim($("#cidade").val()) != "" && !encontrado) {
					var cidade = $("#cidade").val().replace('-', '');
                    $.getJSON("https://www.encontrarcep.com.br/api/" + cidade + "/ibge", function (resultadoCEP) {

						if (!resultadoCEP.mensagem) {
							nm_mun = unescape(resultadoCEP.nm_mun) ? unescape(resultadoCEP.nm_mun) : '';
							estado = unescape(resultadoCEP.nm_uf);
							uf = unescape(resultadoCEP.nm_uf_sigla);
							cd_ibge = unescape(resultadoCEP.cd_ibge);
							cd_gcuf = unescape(resultadoCEP.cd_gcuf);
                            idcidade = unescape(resultadoCEP.id_cidade) ? unescape(resultadoCEP.id_cidade) : '';

							// preenche os campos
							$("#pesquisaIBGE").html(
                                "Cidade: " + nm_mun + "<br />" + 
                                "Estado: " + estado + "<br />" + 
                                "UF: " + uf + "<br />" + 
                                "Código IBGE: " + cd_ibge + "<br />" + 
                                "Código UF: " + cd_gcuf + "<br />" + 
                                "Código Cidade: " + idcidade
							);
						} else {
							// preenche os campos
							$("#pesquisaIBGE").html(resultadoCEP.mensagem);
							// alert("Não foi possivel encontrar o endereço");
						}

					});
				}
			});
		});

    </script>
    
