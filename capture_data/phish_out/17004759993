    <!-- JS Plugins Init. -->
    <script>
	  
      $(document).on('ready', function () {
		//hide spinner
		$(".loader").hide();

        // initialization of header
        $.HSCore.components.HSHeader.init($('#js-header'));
        $.HSCore.helpers.HSHamburgers.init('.hamburger');

        // initialization of scroll animation
        $.HSCore.components.HSOnScrollAnimation.init('[data-animation]');

        // initialization of go to section
        $.HSCore.components.HSGoTo.init('.js-go-to');
		
		// initialization of forms
		$.HSCore.helpers.HSFocusState.init();
		
		// initialization of HSMegaMenu component
		$('.js-mega-menu').HSMegaMenu({
			event: 'hover',
			pageContainer: $('.container-fluid'),
			breakpoint: 991
			});

		$('.requestdemo-btn').off("click").click(function(){
			$('#demoModal').show();
		});

		$('.closemodal-btn').off("click").click(function(){
			$('#demoModal').hide();
		});

		$('.contactnum-field').on('keypress', function (event) {
		    var regex = new RegExp("^[a-zA-Z0-9]+$");
		    var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
		    if (!regex.test(key)) {
		       event.preventDefault();
		       return false;
		    }
		});

		$('.event-closebtn').off("click").click(function(){
			$('.event-container').addClass('hide');
		});

		$('.eventregister-btn').off("click").click(function(){
			window.location.href = "event";
		});

		$('#requestform').off("submit").submit(function(e){

			var getcontactnumber = $('.contactnum-field').val();
			var contactnum = false;
			if(getcontactnumber.charAt(0) == "0" && getcontactnumber.charAt(1) == "9"){
				if(getcontactnumber.length == 11){
					contactnum = true;
					$('.errormessg').addClass('hide');
				}else{
					contactnum = false;
					$('.errormessg').html('Mobile number should not be more than or less than 11 digits.')
					$('.errormessg').removeClass('hide');
				}
			}else if(getcontactnumber.charAt(0) == "7" || getcontactnumber.charAt(0) == "3" || getcontactnumber.charAt(0) == "8"){
				if(getcontactnumber.length == 8){
					contactnum = true;
					$('.errormessg').addClass('hide');
				}else{
					contactnum = false;
					$('.errormessg').html('Telephone number should not be more than or less than 8 digits.')
					$('.errormessg').removeClass('hide');
				}
			}else{
				contactnum = false;
				$('.errormessg').html('Invalid contact number')
				$('.errormessg').removeClass('hide');
			}
			e.preventDefault();
			var obj = $('#requestform');

			if(contactnum == true && obj.parsley().isValid()){
				var receiveremail = ["jon.bustos@beschatbot.com", "rhona.bagarinao@beschatbot.com", "annika.fernandez@beschatbot.com"];
				var receivername = ["Jon Bustos", "Rhona Bagarinao", "Annika Fernandez"];
				for(var cnt=0, cntsuccess=1; cnt<receiveremail.length;cnt++){
					$(".loader").show();
					var getemailcontent = {
						"email" 		: receiveremail[cnt],
						"name"			: receivername[cnt],
						"companyname"	: $('.company-field').val(),
						"timetocall" 	: $('.timetocall-field').val(),
						"firstname" 	: $('.firstname-field').val(),
						"lastname" 		: $('.lastname-field').val(),
						"emailadd" 		: $('.email-field').val(),
						"contactnum" 	: $('.contactnum-field').val()
					};
					SITE.sendContract(
						getemailcontent,
						function(result){
							if(result['data']['success'] == 1){
								cntsuccess++;
								if(cntsuccess == receiveremail.length){
									$(".loader").hide();
									window.location.href = "sentrequest";
								}
								
							}
						},
						function(error){
							$(".loader").hide();
							console.log(error);
						}
					);
				}

				
			}
		});
      });
		
    </script>
  </body>

