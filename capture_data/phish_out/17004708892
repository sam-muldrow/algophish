    <script>
        $(".subscribe-button").click(function(e){
            e.preventDefault();
            var email = $(".subscribe-input").find("input[name='subscribe_email']").val();
        
            $.ajax({
                type:'POST',
                url:"https://bcl.ind.in/subscribe",
                data:{"_token" : "GMlwrlJu4qPDhKq1SgjF6z4qoPLu4aLx1RJzRXMj", email:email},
                success:function(data){
                    console.log(data);
                    
                    if($.isEmptyObject(data.error)){
                        $(".subscribe-input").find('.thanks_msg').text('Thank you for subscribing').removeClass('hidden');
                    }else{
                        $(".subscribe-input").find('.thanks_msg').text(data.error).removeClass('hidden');
                    }
                }
            });
        });
    </script>
