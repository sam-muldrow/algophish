<script>
        $(document).ready(function (){
            $("#forward").click(function (){
                alert('he');
                $('.step').animate({ scrollTop: 0}, 1000);
				$("html, body").animate({ 
					scrollTop: 0 
				}, "1000");
				return false;
			});
			$("#backward").click(function (){
				$('.step').animate({ scrollTop: 0}, 1000);
				$("html, body").animate({ 
					scrollTop: 0 
				}, "1000");
				return false;
            });
        });
