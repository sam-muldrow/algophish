<script>
    // loading 讀取時
    $(window).on('load', function() {
        setTimeout(function() {
            $(".page_loader").addClass('hidding');
        }, 1000)
        setTimeout(function() {
            $(".page_loader").addClass('hide');
        }, 1500)
    });
    // wow動畫
    new WOW().init();


    $(document).ready(function() {
        $("#search-input").click(function(e) {
            e.preventDefault();
            $("#search-form").submit();
        });


        var showSkill = false;
        //視窗滾動觸發效果
        $(window).scroll(function() {
            var scrollPos = $(window).scrollTop();
            var windowHeight = $(window).height();
            // console.log(scrollPos, windowHeight);

            // header
            // if (scrollPos > 100) {
            //     $('.header').addClass('down');
            //     $('.logo_det').addClass('down');
            //     $('.logo_det_group').addClass('down');
            // } else {
            //     $('.header').removeClass('down');
            //     $('.logo_det').removeClass('down');
            //     $('.logo_det_group').removeClass('down');
            // }

            //fixed_btn 右下浮動top
            // if (scrollPos > 450) {
            //     $('.fixed_btn').show(200);
            // } else {
            //     $('.fixed_btn').hide(200);
            // }
            // if (scrollPos > 1000 ) {
            //   $('.fixed_tag').show(200);
            // } else {
            //   $('.fixed_tag').hide(200);
            // }

            // about頁 animated 淡入效果
            $('.scroll').each(function() {
                var thisPos = $(this).offset().top;

                if ((windowHeight + scrollPos) >= thisPos) {
                    // $(this).removeClass('fadeOutDown');
                    $(this).addClass('fadeInUp animated');
                } else {
                    // $(this).removeClass('fadeInUp');
                    // $(this).addClass('fadeOutDown');
                }
            });

            $('.scroll-in').each(function() {
                var thisPos = $(this).offset().top;

                if ((windowHeight + scrollPos) >= thisPos) {
                    // $(this).removeClass('fadeOut');
                    $(this).addClass('fadeIn animated');
                } else {
                    // $(this).removeClass('fadeIn');
                    // $(this).addClass('fadeOut');
                }
            });



        });
        //menu滑動效果
        $('.scrollTop').click(function(e) {
            e.preventDefault();
            let target = $(this).attr('href');
            let targetPos = $(target).offset().top;
            $('html, body').animate({
                scrollTop: targetPos - 0
            }, 800);
            //  targetPos-70 是因為要刪除最上面fixed的header高度
        });

        $('.topBtn').click(function(e) {
            e.preventDefault();
            // let target = $(this).attr('href');
            // let targetPos = $(target).offset().top;
            $('html, body').animate({
                scrollTop: 0
            }, 800);
        });


        //menu 左側icon特效
        // $('.menu li').hover(function () {
        //     // over
        //     $(this).find('i').addClass('fa-spin');
        //   }, function () {
        //     // out
        //     $(this).find('i').removeClass('fa-spin');
        //   }
        // );


        //top-menu 漢堡選單展開
        $('.menu-toggle').click(function(e) {
            e.preventDefault();
            // let $this = $(this).hasClass('open');
            // if (!$this) {
            // $('.menu-group').toggleClass('menu');
            // $(this).find('.fa-bars').fadeOut(200);
            // $(this).find('.fa-times').delay(200).fadeIn(200);
            //     $(this).addClass('open');
            // } else {
            // $(this).find('.fa-times').fadeOut(200);
            // $(this).find('.fa-bars').delay(200).fadeIn(200);
            //     $('.menu-group').removeClass('active');
            //     $(this).removeClass('open');
            // }
            $(this).toggleClass('open');
            $('.menu-group').toggleClass('open');
        });


        //menu active
        $('.menu li a').click(function(e) {
            // e.preventDefault();
            $(this).addClass('active').parents().siblings().find('a').removeClass('active');
            // $('.menu-toggle').find('.fa-times').fadeOut(200);
            // $('.menu-toggle').find('.fa-bars').delay(200).fadeIn(200);
            // $('.menu-group').removeClass('open');
            // $('.menu-toggle').removeClass('open');
        });

        $('.menu li ').hover(function() {
            // over
            let target = $(this).find('a').data('hover');
            let subTarget = `subMenu-${target}`;
            $('#' + subTarget).addClass('d-flex').siblings().removeClass('d-flex');
            if (target == 'roomType') {

                $('.forOther').removeClass('active');
                $('.forRoom').addClass('active');
            } else if (target == null) {
                $('.forOther').removeClass('active');
                $('.forRoom').removeClass('active');
            } else {
                $('.forRoom').removeClass('active');
                $('.forOther').addClass('active');
            }

        }, function() {
            // out
            // $('.sub-menu-group').removeClass('active');
        });

        $('.sub-menu-group').hover(function() {
            // over
        }, function() {
            // out
            $('.sub-menu-group').removeClass('active');
        });


        $('body').click(function(evt) {
            if ($(evt.target).parents(".header").length == 0 &&
                evt.target.id != "aaa" && evt.target.id != "header") {
                $('.menu').removeClass('open');
                $('.menu-toggle').removeClass('open');
            }
        });



        // img可直接使用svg
        $(function() {
            jQuery('img.svg').each(function() {
                var $img = jQuery(this);
                var imgID = $img.attr('id');
                var imgClass = $img.attr('class');
                var imgURL = $img.attr('src');

                jQuery.get(imgURL, function(data) {
                    // Get the SVG tag, ignore the rest
                    var $svg = jQuery(data).find('svg');

                    // Add replaced image's ID to the new SVG
                    if (typeof imgID !== 'undefined') {
                        $svg = $svg.attr('id', imgID);
                    }
                    // Add replaced image's classes to the new SVG
                    if (typeof imgClass !== 'undefined') {
                        $svg = $svg.attr('class', imgClass + ' replaced-svg');
                    }

                    // Remove any invalid XML tags as per http://validator.w3.org
                    $svg = $svg.removeAttr('xmlns:a');

                    // Check if the viewport is set, else we gonna set it if we can.
                    if (!$svg.attr('viewBox') && $svg.attr('height') && $svg.attr('width')) {
                        $svg.attr('viewBox', '0 0 ' + $svg.attr('height') + ' ' + $svg.attr('width'))
                    }

                    // Replace image with new SVG
                    $img.replaceWith($svg);

                }, 'xml');

            });


            // $(window).on('load', function() {
            //     var $win = $(window),
            //         $ad = $('.fixed_tag').css('opacity', 0).show(), // 讓廣告區塊變透明且顯示出來
            //         _width = $ad.width(),
            //         _height = $ad.height(),
            //         _diffY = 670,
            //         _diffX = 25, // 距離右及下方邊距
            //         _moveSpeed = 800; // 移動的速度

            //     // 先把 #abgne_float_ad 移動到定點
            //     $ad.css({
            //         top: $(document).height(),
            //         left: $win.width() - _width - _diffX,
            //         opacity: 1
            //     });

            //     // 幫網頁加上 scroll 及 resize 事件
