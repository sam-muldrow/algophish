<script>
    $('#booking_with_date').click(function(){
        let start_date = $('#booking_start_date').val();
        let end_date = $('#booking_end_date').val();
        if(start_date || end_date){
            window.location = `booking?start_date=${start_date}&end_date=${end_date}`;
        }
    })
</script>
