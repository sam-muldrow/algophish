	<script type="text/javascript">
        function updateSearch() {
            var arrival     = $('#arrival-date').val();
            var departure   = $('#departure-date').val();
            var nbr_adult   = $('#jhotelreservation_guest_adult').val();
            var nbr_child   = $('#jhotelreservation_guest_child').val();
            window.location.hash = "!/Rooms/date_from:"+arrival+"/date_to:"+departure+"/adults:"+nbr_adult+"/children:"+nbr_child;
        }

        function getPosition() {
        	if(geoPosition.init()){
        		swal("Acceptez de partager votre position pour continuer...")
        		geoPosition.getCurrentPosition(
        			function(p) {
        				var latitude = parseFloat( p.coords.latitude );
						var longitude = parseFloat( p.coords.longitude );
        				var newForm = jQuery('<form>', {
							'action': '/index.php?option=com_jhotelreservation&amp;view=hotels',
							'target': '_top',
							'method':'post',
							'name':'searchForm'
						}).append(jQuery('<input>', {
							'name': 'orderBy',
							'value': 'distance asc',
							'type': 'hidden'
						})).append(jQuery('<input>', {
							'name': 'latitude',
							'value': latitude,
							'type': 'hidden'
						})).append(jQuery('<input>', {
							'name': 'longitude',
							'value': longitude,
							'type': 'hidden'
						})).appendTo('body').submit();
        			},
        			function(){
        				swal("Couldn't get location")
        			},
        			{
        				enableHighAccuracy:true
        			}
        		);
        	}else{
        		swal("Functionality not available");
        	}
        }

		$(function() {
			"use strict";

			$(document).delegate(".callHotelLink", "click", preCall);

            var el = $("#arrival-date, #departure-date");
			var el = $("#arrival-date, #departure-date");
            if(el.lenght != 0){
                var today = new Date();
                var todayDate = today.format("dd-mm-yyyy");

                $("#arrival-date").datepicker({
                    dateFormat:"dd-mm-yy",
                    minDate: todayDate
                });

                $("#departure-date").datepicker({
                    dateFormat:"dd-mm-yy",
                    minDate: todayDate
                });

                try{


                    var tomorrow = new Date();
                    tomorrow.setDate(tomorrow.getDate() + 1);
                    var tomorrowDate = tomorrow.format("dd-mm-yyyy");

                    $('#arrival-date').val(todayDate);
                    var newDate = $('#arrival-date').datepicker('getDate');
                    $('#departure-date').val(tomorrowDate);
                    updateSearch();
                }catch(e){

                console.log(e);

                }
            }



            
			/* attach a submit handler to the form */
			$(".contact_form").submit(function(event) {

				/* stop form from submitting normally */
				event.preventDefault();

				/* get some values from elements on the page: */
				var $form = $(this),
				url = $form.attr('action');

				var tmp = $("#contact_submit_btn").html();
				$form.find("#contact_submit_btn").prop("disabled",true);
				$form.find("#contact_submit_btn").html("Please wait...");

				var posting =  $.post(url, $form.serialize());

				/* Put the results in a div */
				posting.done(function(data) {
					$form.find("#contact_submit_btn").prop("disabled",false);
					$form.find("#contact_submit_btn").html(tmp);

					if(parseInt(data) == 1) {
						$form.find("#send_result").html("<div class='thanks'><span style='color:green'>&#10004;</span> Thank you. We will contact you shortly.</div>");
						$form[0].reset();
					}else{
						$form.find("#send_result").html(data);
					}
				});
			});

		});

        function showListing() {
            $('html, body').animate({
                scrollTop: $(".md-body-wrapper").offset().top
            }, 1000);
        }
	</script>
