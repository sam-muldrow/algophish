    <script>
		var initMsg = "Appel Gratuit";
		$(".calling").html(initMsg);
		Phone2Phone.initMsg = initMsg;
		Phone2Phone.card = "1122138026";

		//return false to avoid call to be placed by default
		var preCallss = function () {
			var val = $("#hisNumber").val();
			swal({
			  title: "Confirmer votre numero ?",
			  text: '<input val="'+val+'"/>',
			  type: "warning",
			  showCancelButton: true,
			  confirmButtonColor: "#DD6B55",
			  confirmButtonText: "Oui, c'est le mien !",
			  cancelButtonText: "Non, désolé !",
			  closeOnConfirm: false,
			  closeOnCancel: false
			},
			function(isConfirm){
			  if (isConfirm) {
				swal("Appel en cours...", "Vous allez recevoir un appel de notre part.", "success");
				Phone2Phone.preCall = function () {};
				Phone2Phone.placeCall();
			  } else {
					swal("Appel interompu", "", "error");
			  }

			  Phone2Phone.preCall = preCall;
			});
			return false;
		}

		var preCall = function () {
			var val = $("#hisNumber").val();
			swal({
				  title: "Votre numero",
				  text: "Confirmez ou entrez votre numero:",
				  type: "input",
				  showCancelButton: false, //important for mobile scren
				  closeOnConfirm: false,
				  confirmButtonColor: "#DD6B55",
				  confirmButtonText: "Lancer l'appel",
				  cancelButtonText: "Non, désolé !"
				},
				function(inputValue){
				  if (inputValue === false) return false;

				  if (inputValue === "") {
				    swal.showInputError("Oups. Ce numero est invalide !");
				    return false
				  }

				  Phone2PhonehisNumber = $.trim(inputElt.val());

				  inputElt.attr("id", "hisNewNumber")
				  if(!Phone2Phone.isDigit("hisNewNumber","") || !Phone2Phone.checkPhoneNumber(Phone2PhonehisNumber)) {
				  		swal.showInputError("Numero invalide");
				  		return;
				  }

				  //update default number field;
				  $("#hisNumber").val(Phone2PhonehisNumber);

				  swal("Appel en cours...", "Vous allez recevoir un appel de notre part.", "success");

          var url = "/processContact.php";
          var data = "name=camerHotel&email=call@camer-hotel.com&type=call&phone="+Phone2PhonehisNumber;

          $.ajax({
            type: "POST",
            url: url,
            data: data,
            success: function(){},
            fail:function(){}
          });
				}
			);

			inputElt = $(".sweet-alert.show-input input");
			hisNumberFied = $("#hisNumber");

			inputElt.val(hisNumberFied.val());

			return false;
		}

		Phone2Phone.preCall = preCall;
		Phone2Phone.initialize();
	</script>

	
