<script>
function InvalidMsgFirst(textbox) 
{
    if (textbox.value == '') {
        textbox.setCustomValidity('Please fill in Name');
    }
    else if (textbox.validity.patternMismatch){
        textbox.setCustomValidity('Please enter valid Name');
    }
    else {
       textbox.setCustomValidity('');
    }
    return true;
}

function InvalidMsgEmail(textbox) 
{
    if (textbox.value == '') {
        textbox.setCustomValidity('Please fill in Email');
    }
    else if (textbox.validity.patternMismatch){
        textbox.setCustomValidity('Please enter valid Email');
    }
    else {
       textbox.setCustomValidity('');
    }
    return true;
}
function InvalidPostApplied(textbox) 
{
    if (textbox.value == '') {
        textbox.setCustomValidity('Please fill in Post applied');
    }
    else if (textbox.validity.patternMismatch){
        textbox.setCustomValidity('Please enter valid Post applied');
    }
    else {
       textbox.setCustomValidity('');
    }
    return true;
}
   
    function InvalidMsgMobile(textbox) {
    if (textbox.value == '') {
        textbox.setCustomValidity('Please fill in Mobile');
    }
    else if (textbox.validity.patternMismatch){
        textbox.setCustomValidity('Please enter valid Mobile');
    }
    else {
       textbox.setCustomValidity('');
    }
    return true;
}
    
</script>
