        //    });

        //}

        //$(window).load(function () {
        //    $('.loader').fadeOut();
        //});



        $('#Search_suburb_txt').keypress(function (e) {
            var key = e.which;
            if (key == 13)  // the enter key code
            {

                var query =   $('#Search_suburb_txt').val().toLowerCase();

                $('.search').each(function () {
                    var $this = $(this);
                    if ($this.text().toLowerCase().indexOf(query) === -1)
                        $this.closest('.search').fadeOut();
                    else $this.closest('.search').fadeIn();
                });

            }
        });

        $('#Search_submit_Btn').on('click', function (e) {
            var query = $.trim($(this).prevAll('#Search_suburb_txt').val()).toLowerCase();


            $('.search').each(function () {
                var $this = $(this);
                if ($this.text().toLowerCase().indexOf(query) === -1)
                    $this.closest('.search').fadeOut();
                else $this.closest('.search').fadeIn();
            });
        });

    </script>




