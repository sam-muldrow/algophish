    <script>
        //------------------------------------------------------------------------
        //navbar*~~This is final. This code is good. 10/11/2023; 12:31am, est -LR
        const hamburger = document.querySelector(".hamburger");
        const navMenu = document.querySelector(".nav-menu");

        hamburger.addEventListener("click", () => {
            hamburger.classList.toggle("active");
            navMenu.classList.toggle("active");
        });
        // New code to handle navbar link clicks
        const navLinks = document.querySelectorAll(".nav-link");

        navLinks.forEach(link => {
            link.addEventListener("click", () => {
                hamburger.classList.remove("active");
                navMenu.classList.remove("active");
            });
        });
        //----------end of navbar-------------------------------------------------

        //email subscription*~~Good! DO NOT TOUCH!!!!<!--!important-->
        $(document).ready(function () {
            $('.subscribeForm').submit(function (e) {
                e.preventDefault();  // Prevents the default form submission action
                var $form = $(this);  // Store the form element

                // Client-side validation
                var isEmpty = $form.find('input').filter(function () {
                    return $.trim(this.value).length === 0;
                }).length === $form.find('input').length;  // Checks if all input fields are empty

                if (isEmpty) {
                    alert('Please fill out at least one field.');
                    return;
                }

                var $header = $form.prev('.joinUsHeader');  // Get the header element before the form

                $.ajax({
                    url: '/php/subscribe.php',
                    type: 'POST',
                    data: $form.serialize(),  // Serializes the form data for submission
                    success: function (response) {
                        $header.after('<p>' + response + '</p>');  // Inserts the response message below the header
                        $form[0].reset();  // Clears the form fields
                    },
                    error: function () {
                        alert('An error occurred. Please try again.');
                    }
                });
            });
        });

        //--------------end of email subscription~~~-----------------------------------------------------
        //continue reading button
        function toggleText(cardNumber) {
            var textElement = document.getElementById('text-' + cardNumber);
            var isExpanded = textElement.classList.toggle('expanded');
            var continueReadingLink = textElement.parentElement.querySelector('.continue-reading');
            continueReadingLink.textContent = isExpanded ? 'Show Less' : 'Continue Reading';
        }

    </script>


