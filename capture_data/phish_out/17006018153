        color: '#f2f2f2',
    });
    $(".modalCertificate").animatedModal({
        modalTarget: 'modal-02',
        animatedIn: 'bounceInLeft',
        animatedOut: 'bounceOutRight',
        color: '#f2f2f2',
    });
    </script>
    <script>
    $(".card-block, .img-s, iframe").hover(function(e) {
        $(this).css("transform", e.type === "mouseenter" ? "scale(1.03)" : "transparent");
        $(this).css("transition", e.type === "mouseenter" ? "transform 0.4s" : "transparent");
        $(this).css("filter", "opacity(.8)");

    });
    $(".card-block, .img-s, iframe").mouseleave(function() {
        $(this).css("transform", "scale(1)");
        $(this).css("transition", "transform 0.4s");
        $(this).css("filter", "opacity(1)");

    });
    $(".img-modal").hover(function(e) {
        $(this).css("transform", e.type === "mouseenter" ? "scale(1.5)" : "transparent");
        $(this).css("transition", e.type === "mouseenter" ? "transform 0.4s" : "transparent");

    });
    $(".img-modal").mouseleave(function() {
        $(this).css("transform", "scale(1)");
        $(this).css("transition", "transform 0.4s");
        $(this).css("filter", "opacity(1)");

    });
    $(".btn-close-modal, .btn-close-modal, .btn-close-modal").hover(function(e) {
        $(this).toggleClass('rotated');
        $(this).css("transition", e.type === "mouseenter" ? "transform 0.5s" : "transparent");
    });
    $(".btn-close-modal, .btn-close-modal, .btn-close-modal").mouseleave(function() {
        $(this).toggleClass('rotated-out');
        $(this).css("transition", "transform 0.5s");
    });
    </script>
    <script type="text/javascript">
    $('#myModal').on('shown.bs.modal', function() {
        $('#myInput').focus()
    })
    </script>
    <script>
    $(document).ready(function() {
        $("a").on('click', function(event) {
            if (this.hash !== "") {
                event.preventDefault();
                var hash = this.hash;
                $('html, body').animate({
                    scrollTop: $(hash).offset().top
                }, 1700, function() {
                    window.location.hash = hash;
                });
             }
        });
    });
    </script>
    <script>
    var $animation_elements = $('.animation-element');
    var $window = $(window);

    function check_if_in_view() {
        var window_height = $window.height();
        var window_top_position = $window.scrollTop();
        var window_bottom_position = (window_top_position + window_height);

        $.each($animation_elements, function() {
            var $element = $(this);
            var element_height = $element.outerHeight();
            var element_top_position = $element.offset().top;
            var element_bottom_position = (element_top_position + element_height);

            if ((element_bottom_position >= window_top_position) &&
                (element_top_position <= window_bottom_position)) {
                $element.addClass('in-view');
            } else {
                $element.removeClass('in-view');
            }
        });
    }
    $window.on('scroll resize', check_if_in_view);
    $window.trigger('scroll');
    </script>
