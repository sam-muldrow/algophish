	<script type="text/javascript">
	 var timer;
	 var interval = 1000;
		$(function(){
			if (self.location.href == top.location.href){
				$("body").css({font:""});
				var logo=$("");
				$("body").prepend(logo);
				$("#logo").fadeIn();
			}
			
			$(".bw").toggle(
					function(){
						var el=$("body").get(0);
						el.opt.grayScale=true;
						$(this).addClass("sel");
						el.opt.gallery.find("img:first").greyScale();
					},
					function(){
						var el=$("body").get(0);
						el.opt.grayScale=false;
						$(this).removeClass("sel");
						el.opt.gallery.find("img:first").attr("src",el.opt.images[el.opt.imageCounter]);
					}
			)
		});
		//-------------------menu ibnu--------------------
		
	$(".dropdwn").live('mouseover', function(){
		if ($(".header_drop").is(":hidden")){
			$(".header_drop_mark").hide("slow");
			$(".header_drop").show("slow");
		}
			clearTimeout(timer);
	});

	$(".dropdwn_mark").live('mouseover', function(){
		if ($(".header_drop_mark").is(":hidden")){
			$(".header_drop").hide("slow");
			$(".header_drop_mark").show("slow");
		}
			clearTimeout(timer);
	});
    
	$(".backdwn").live('mouseover', function(){
		$(".header_drop").hide("slow");
		$(".header_drop_mark").hide("slow");
		clearTimeout(timer);
	});
	function tutup(){
		$(".header_drop").hide("slow");
		$(".header_drop_mark").hide("slow");
		clearTimeout(timer);
	}
	$(".header_drop, .header_drop_mark, .dropdwn_mark, .dropdwn").live('mouseout', function(){
		clearTimeout(timer);
		timer = setTimeout("tutup()",interval);
	});
	$(".header_drop, .header_drop_mark").live('mouseover', function(){
		clearTimeout(timer);
	});
	 //-------------------menu ibnu--------------------

	$(document).ready(function() {
		$("a.fancy").fancybox({
			'transitionIn'	:	'elastic',
			'transitionOut'	:	'elastic',
			'speedIn'		:	600, 
			'speedOut'		:	200, 
			'overlayShow'	:	true,
		});
	});

	</script>
	
	
