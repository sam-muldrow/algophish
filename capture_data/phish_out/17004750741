      strings: ["^300this will NOT^350","end in","3 cycles^400"],
	    typeSpeed: 80,
  	  backSpeed: 40,
      startDelay: 4500,
      showCursor: false,
    	loop: true,
      loopCount: Infinity,
      });
      /* String Six 06 - Without Loop */
