    	loop: true,
      });
      /* String Four 04 - Loop with Count 3 */
      $(".typedwithloop3").typed({
      strings: ["^300this will^350","end in","3 cycles^400"],
	    typeSpeed: 80,
  	  backSpeed: 40,
      startDelay: 4500,
      showCursor: false,
    	loop: true,
      loopCount: 3,
      });
      /* String Five 05 - Loop With Count Infinity */
