  <!-- SCRIPTS -->
  <!-- JQuery -->
  <script type="text/javascript" src="js/jquery-3.4.1.min.js"></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript" src="js/popper.min.js"></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript" src="js/bootstrap.min.js"></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript" src="js/mdb.min.js"></script>
  <!-- Initializations -->
  <script type="text/javascript">
    // Animations initialization
    new WOW().init();
    var options = {
      html: true,
      placement: 'auto',
      template: '<div class="tooltip" role="tooltip"><div class="arrow custom-class"></div><div class="tooltip-inner bg-error rounded-pill shadow"></div></div>'
    };

    $(document).ready(function(){
        $('#contact-name').on('click', () => {
          $('#contact-name').tooltip('dispose');
        });  

        $('#contact-email').on('click', () => {
          $('#contact-email').tooltip('dispose');
        }); 

        $('#contact-subject').on('click', () => {
          $('#contact-subject').tooltip('dispose');
        }); 

        $('#contact-message').on('click', () => {
          $('#contact-message').tooltip('dispose');
        }); 

        $("#btn-send").on('click', ()=>{
          var name = $("#contact-name").val();
          var email = $('#contact-email').val();
          var subject = $('#contact-subject').val();
          var message = $('#contact-message').val()
          
          if(name == '') {
            $('#contact-name').attr('data-original-title', 'Please do let us know how to address you.').tooltip('update').tooltip('show');
            return;
          } else if (email == '' || !is_email(email)){
            $('#contact-email').attr('data-original-title', 'We need your email so we can contact you.').tooltip('update').tooltip('show');
            return;
          } else if (subject == ''){
            $('#contact-subject').attr('data-original-title', 'You missed your subject.').tooltip('update').tooltip('show');
            return;
          } else if (message == ''){
            $('#contact-message').attr('data-original-title', 'Please do fill in your message.').tooltip('update').tooltip('show');
            return;
          }

          $('#btn-send').html('<span class="spinner-border spinner-border-sm mr-2" role="status" aria-hidden="true"></span>Loading...').attr('disabled', true);
          $.post('send-email.php', $('#form-contact').serialize(), function(resp){  
            if(resp.status == 0) {
              $('#'+resp.error.obj).attr('data-original-title', resp.error.msg).tooltip('update').tooltip('show');
            } else if(resp.status == 1) {
              $('#form-contact')[0].reset();
              $('#form-msg').removeClass('d-none');
                setTimeout(function(){$('#form-msg').addClass('d-none');}, 2000);
            }
            $('#btn-send').html('Send').removeAttr('disabled');
          }, 'json');
        });

      });

      function is_email(emailAddress){
        var pattern = /^([a-z\d!#$%&'*+\-\/=?^_`{|}~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]+(\.[a-z\d!#$%&'*+\-\/=?^_`{|}~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]+)*|"((([ \t]*\r\n)?[ \t]+)?([\x01-\x08\x0b\x0c\x0e-\x1f\x7f\x21\x23-\x5b\x5d-\x7e\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]|\\[\x01-\x09\x0b\x0c\x0d-\x7f\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]))*(([ \t]*\r\n)?[ \t]+)?")@(([a-z\d\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]|[a-z\d\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF][a-z\d\-._~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]*[a-z\d\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])\.)+([a-z\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]|[a-z\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF][a-z\d\-._~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]*[a-z\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])\.?$/i;
        return pattern.test(emailAddress);
      }
  </script>
</body>

