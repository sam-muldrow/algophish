<script type="text/javascript" src="https://www.capsulink.com/assets/js/jquery-3.4.1.min.js"></script>
<script type="text/javascript" src="https://www.capsulink.com/assets/js/velocity.min.js"></script>
<script type="text/javascript" src="https://www.capsulink.com/assets/js/jquery.formstyler.min.js"></script>
<script type="text/javascript" src="https://www.capsulink.com/assets/js/script-518fa1f9b3.js"></script>
<script type="text/javascript" src="https://www.capsulink.com/assets/js/landing-510caf9f55.js"></script>

<script>
$(function() {
    if (!$('#checkout-dropin-container').length) {
        return;
    }

    var form = $('#checkout-form');
    var xss_token = form.find('input[name=_token]').val();

    braintree.dropin.create(
        {
            authorization: bt_client_token,
            container: '#checkout-dropin-container',
            threeDSecure: true,
            vaultManager: true,
            paypal: {
                flow: 'vault'
            }
        },
        function (createErr, instance) {
            if (createErr) {
                $.post(
                    '/3ds-error-log',
                    {
                        _token: xss_token,
                        type: 'dropin_create_failed',
                        error: createErr.message
                    },
                    function(response) {
                        console.log(response)
                    },
                    'json'
                );

                return;
            }

            form.on('click', '#checkout-submit-button', function(e) {
                e.preventDefault();

                var btn = $(this);
                btn.attr('disabled', true);

                var threeDSecureParameters = {
                    amount: bt_price,
                    email: bt_client_email
                };

                instance.requestPaymentMethod(
                    {
                        threeDSecure: threeDSecureParameters
                    },
                    function (err, payload) {
                        if (err) {
                            btn.attr('disabled', false);

                            $.post(
                                '/3ds-error-log',
                                {
                                    _token: xss_token,
                                    type: 'dropin_request_payment_method_failed',
                                    error: err.message
                                },
                                function(response) {},
                                'json'
                            );

                            return;
                        }

                        form.find('[name=nonce]').val(payload.nonce);
                        form.submit();
                    }
                );
            });
    });
});
</script>

